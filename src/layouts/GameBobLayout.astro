---
import "../styles/global.css";
import SEO from "../components/SEO.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "@fontsource/inter/300.css";
import "@fontsource/inter/400.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/900.css";
import "@fontsource/fredoka-one";

import GameBobSubmenu from "../components/gamebob/GameBobSubmenu.astro";

interface Props {
    title: string;
    description?: string;
    image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
    <head>
        <SEO title={title} description={description} image={image} />

        <style>
            :root {
                --color-gamebob-primary: #1ddabc;
                --color-gamebob-text: #f9f9f9;
                --color-gamebob-bg: #000000;

                --color-bg: var(--color-gamebob-bg);
                --color-text: var(--color-gamebob-text);
                --color-accent: var(--color-gamebob-primary);
            }

            body {
                background-color: var(--color-gamebob-bg);
                color: var(--color-gamebob-text);
            }

            :global(nav#main-nav) {
                border-bottom-color: rgba(29, 218, 188, 0.1) !important;
                background-color: transparent !important;
                backdrop-filter: blur(120px) !important;
            }

            :global(nav#main-nav > div > div > a) {
                color: var(--color-gamebob-text) !important;
            }
            :global(nav#main-nav > div > div > a:hover) {
                color: var(--color-gamebob-primary) !important;
            }
            :global(nav#main-nav > div > div > a.nav-active) {
                color: var(--color-gamebob-primary) !important;
            }

            :global(#theme-toggle) {
                display: none !important;
            }

            :global(#mobile-menu-overlay > div.absolute) {
                background-color: rgba(0, 0, 0, 0.95) !important;
            }
            :global(.menu-link) {
                color: var(--color-gamebob-text) !important;
            }
            :global(.link-number) {
                color: var(--color-gamebob-primary) !important;
            }
        </style>
    </head>
    <body
        class="min-h-screen flex flex-col antialiased selection:bg-[#1ddabc] selection:text-white bg-black"
    >
        <div class="fixed inset-0 pointer-events-none overflow-hidden z-0">
            <div
                class="absolute -top-[10%] -left-[10%] w-[40%] h-[40%] bg-[var(--color-gamebob-primary)]/10 rounded-full blur-[120px] animate-pulse"
            >
            </div>
            <div
                class="absolute top-[20%] -right-[5%] w-[30%] h-[30%] bg-purple-500/10 rounded-full blur-[100px] animate-pulse"
                style="animation-delay: 2s;"
            >
            </div>
            <div
                class="absolute -bottom-[10%] left-[20%] w-[50%] h-[50%] bg-blue-500/5 rounded-full blur-[150px] animate-pulse"
                style="animation-delay: 4s;"
            >
            </div>
            <div
                class="absolute inset-0 opacity-[0.03]"
                style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"
            >
            </div>
        </div>

        <Header />

        <main class="flex-grow pt-24 relative z-10">
            <GameBobSubmenu />
            <slot />
        </main>

        <Footer />
    </body>
</html>
