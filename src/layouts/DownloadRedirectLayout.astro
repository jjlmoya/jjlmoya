---
interface Props {
    title: string;
    appleStoreUrl?: string;
    googlePlayUrl?: string;
    fallbackUrl: string;
}

const { title, appleStoreUrl, googlePlayUrl, fallbackUrl } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <meta name="robots" content="noindex, nofollow" />
        <meta property="og:title" content={title} />
        <meta property="og:image" content="/assets/apps/pizzametrics/icon.webp" />
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:image" content="/assets/apps/pizzametrics/icon.webp" />
        <meta property="twitter:image" content="/assets/apps/pizzametrics/icon.webp" />
        <style>
            body {
                background: #050505;
                color: white;
                font-family:
                    system-ui,
                    -apple-system,
                    sans-serif;
                display: flex;
                align-items: center;
                justify-content: center;
                height: 100vh;
                margin: 0;
                text-align: center;
            }
            .loader {
                border: 4px solid rgba(255, 255, 255, 0.1);
                border-left-color: #ffffff;
                border-radius: 50%;
                width: 40px;
                height: 40px;
                animation: spin 1s linear infinite;
                margin: 0 auto 20px;
            }
            @keyframes spin {
                to {
                    transform: rotate(360deg);
                }
            }
            .branding {
                position: fixed;
                bottom: 2rem;
                left: 0;
                right: 0;
                font-size: 0.8rem;
                font-weight: 700;
                letter-spacing: 0.2em;
                text-transform: uppercase;
                opacity: 0.2;
                pointer-events: none;
            }
        </style>
    </head>
    <body>
        <div class="main-content">
            <div class="loader"></div>
            <p>Redirigiendo a la tienda...</p>
            <div class="branding">jjlmoya</div>
        </div>

        <script define:vars={{ appleStoreUrl, googlePlayUrl, fallbackUrl }}>
            function redirect() {
                const userAgent = navigator.userAgent || navigator.vendor || window.opera;

                if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
                    if (appleStoreUrl) {
                        window.location.href = appleStoreUrl;
                        return;
                    }
                }

                if (/android/i.test(userAgent)) {
                    if (googlePlayUrl) {
                        window.location.href = googlePlayUrl;
                        return;
                    }
                }

                window.location.href = fallbackUrl;
            }

            redirect();
        </script>
    </body>
</html>
