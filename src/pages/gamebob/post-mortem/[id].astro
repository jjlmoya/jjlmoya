---
import GameBobLayout from "../../../layouts/GameBobLayout.astro";
import { postMortemEntries } from "../../../data/gamebob/post-mortem/entries";
import { Icon } from "astro-icon/components";

export function getStaticPaths() {
    return postMortemEntries.map((entry) => ({
        params: { id: entry.id },
        props: { entry },
    }));
}

const { entry } = Astro.props;


const imagePath = entry.image ? `/images/gamebob/post-mortem/${entry.image}` : null;
const ogImage = imagePath || "/images/gamebob/post-mortem/og-post-mortem.png";
---

<GameBobLayout
    title={`${entry.title} | Post Mortem`}
    description={`Mis errores y aprendizajes: ${entry.title}`}
    image={ogImage}
>
    <div class="min-h-screen flex flex-col items-center justify-center py-12 px-4 relative">
        
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-red-500/5 rounded-full blur-3xl">
            </div>
            <div
                class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-emerald-500/5 rounded-full blur-3xl"
            >
            </div>
        </div>

        <div class="z-10 w-full max-w-3xl">
            
            <a
                href="/gamebob/post-mortem/"
                class="inline-flex items-center gap-2 text-gray-500 hover:text-white mb-8 transition-colors group"
            >
                <Icon
                    name="mdi:arrow-left"
                    class="w-5 h-5 group-hover:-translate-x-1 transition-transform"
                />
                Volver al muro de la vergüenza
            </a>

            <article
                id="post-mortem-card"
                class="bg-slate-900/80 backdrop-blur-xl border border-white/10 rounded-2xl p-8 md:p-12 shadow-2xl relative overflow-hidden"
            >
                
                <div class="absolute top-4 right-4 opacity-10 rotate-12 pointer-events-none z-20">
                    <div
                        class="border-4 border-red-500 text-red-500 font-black text-4xl px-4 py-2 uppercase tracking-widest rounded-lg"
                    >
                        Fallo
                    </div>
                </div>

                <header class="mb-10 relative z-10">
                    <div class="flex items-center gap-3 text-sm text-gray-500 font-mono mb-4">
                        <time datetime={entry.date}>{entry.date}</time>
                        <span>•</span>
                        <span class="text-red-400">ID: {entry.id}</span>
                    </div>
                    <h1 class="text-3xl md:text-5xl font-bold text-white mb-6 leading-tight">
                        {entry.title}
                    </h1>

                    {
                        entry.tags && (
                            <div class="flex flex-wrap gap-2 mb-8">
                                {entry.tags.map((tag) => (
                                    <span class="px-3 py-1 rounded-full bg-white/5 text-gray-400 text-xs font-mono border border-white/5">
                                        #{tag}
                                    </span>
                                ))}
                            </div>
                        )
                    }

                    {
                        imagePath && (
                            <div class="w-full rounded-xl overflow-hidden border border-white/10 shadow-lg mb-8">
                                <img
                                    src={imagePath}
                                    alt={`Imagen del error: ${entry.title}`}
                                    class="w-full h-auto object-cover max-h-[300px]"
                                />
                            </div>
                        )
                    }
                </header>

                <div class="space-y-10">
                    
                    <section class="relative pl-6 border-l-2 border-red-500/30">
                        <div
                            class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-slate-900 border-2 border-red-500"
                        >
                        </div>
                        <h2
                            class="text-red-400 font-mono text-sm uppercase tracking-widest mb-3 flex items-center gap-2"
                        >
                            <Icon name="mdi:alert-circle-outline" class="w-5 h-5" />
                            Lo que hice mal (El Drama)
                        </h2>
                        <p class="text-xl text-gray-200 leading-relaxed font-light">
                            {entry.error}
                        </p>
                    </section>

                    
                    <section class="relative pl-6 border-l-2 border-emerald-500/30">
                        <div
                            class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-slate-900 border-2 border-emerald-500"
                        >
                        </div>
                        <h2
                            class="text-emerald-400 font-mono text-sm uppercase tracking-widest mb-3 flex items-center gap-2"
                        >
                            <Icon name="mdi:lightbulb-on-outline" class="w-5 h-5" />
                            Lo que aprendí (La Redención)
                        </h2>
                        <p class="text-xl text-gray-200 leading-relaxed font-light">
                            {entry.lesson}
                        </p>
                    </section>
                </div>

                
                <div class="mt-12 pt-8 border-t border-white/5 flex justify-between items-center">
                    <button
                        data-share-btn
                        data-share-title={`Post Mortem: ${entry.title}`}
                        data-share-target-id="post-mortem-card"
                        data-share-filename={`post-mortem-${entry.id}.png`}
                        class="flex items-center gap-2 px-6 py-3 bg-white text-black rounded-full font-bold hover:bg-[var(--color-gamebob-primary)] transition-colors"
                    >
                        <Icon name="mdi:share-variant" class="w-5 h-5" />
                        Compartir mi desgracia
                    </button>
                </div>
            </article>
        </div>
    </div>
</GameBobLayout>

<script>
    import "../../../utils/share";
</script>
