                ></path>
            </svg>
            <span>Código</span>
        </a>
        <a
            href="https://github.com/jjlmoya/jjlmoya/blob/main/src/lib/mechanics/hold-jump/README.md"
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-black/20 hover:bg-black/40 text-white rounded-lg text-sm font-mono flex items-center gap-2 transition-all hover:scale-105 backdrop-blur-sm border border-white/10 pointer-events-auto"
            title="Ver documentación"
        >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
            </svg>
            <span>Docs</span>
        </a>
    </div>
</Layout>

<script>
    import { HoldJumpMechanic } from "../../../lib/mechanics/hold-jump/HoldJumpMechanic";

    const canvas = document.getElementById("game-canvas") as HTMLCanvasElement;
    const ctx = canvas.getContext("2d")!;
    const container = document.getElementById("game-container")!;

    let width = window.innerWidth;
    let height = window.innerHeight;

    canvas.width = width;
    canvas.height = height;

    const mechanic = new HoldJumpMechanic(width, height);

    function resize() {
        width = window.innerWidth;
        height = window.innerHeight;
        canvas.width = width;
        canvas.height = height;
        mechanic.updateBounds(width, height);
    }

    window.addEventListener("resize", resize);

    function onDown(e: Event) {
        e.preventDefault();
        mechanic.startCharge();
    }

    function onUp(e: Event) {
        e.preventDefault();
        mechanic.releaseCharge();
    }

    container.addEventListener("mousedown", onDown);
    container.addEventListener("mouseup", onUp);
    container.addEventListener("touchstart", onDown, { passive: false });
    container.addEventListener("touchend", onUp);

    window.addEventListener("keydown", (e) => {
        if (e.code === "Space") {
            mechanic.startCharge();
        }
    });
    window.addEventListener("keyup", (e) => {
        if (e.code === "Space") {
            mechanic.releaseCharge();
        }
    });

    // Animation Loop
    function loop() {
        mechanic.update();
        const state = mechanic.getState();

        // Render Background
        ctx.fillStyle = "#2c3e50";
        ctx.fillRect(0, 0, width, height);

        // Render Platforms
        ctx.fillStyle = "#95a5a6";
        for (const plat of state.platforms) {
            ctx.fillRect(plat.x, plat.y, plat.width, plat.height);
        }

        // Render Player
        ctx.save();
        ctx.translate(state.player.pos.x, state.player.pos.y);

        // Squash effect based on charge
        const scaleY = 1 - state.player.charge * 0.3;
        const scaleX = 1 + state.player.charge * 0.3;
        ctx.scale(scaleX, scaleY);

        ctx.fillStyle = "#e74c3c";
        ctx.beginPath();
        ctx.arc(0, 0, state.player.radius, 0, Math.PI * 2);
        ctx.fill();

        // Charge glow
        if (state.player.charging) {
            ctx.strokeStyle = `rgba(255, 255, 255, ${state.player.charge})`;
            ctx.lineWidth = 4;
            ctx.stroke();
        }

        ctx.restore();

        // UI
        ctx.fillStyle = "white";
        ctx.font = "bold 24px monospace";
        ctx.textAlign = "center";
        ctx.textBaseline = "middle";
        ctx.shadowColor = "black";
        ctx.shadowBlur = 4;

        if (!state.player.charging && state.player.grounded) {
            ctx.fillText("MANTÉN PARA CARGAR", state.player.pos.x, state.player.pos.y - 50);
        } else if (state.player.charging) {
            // Power bar
            const barWidth = 100;
            const barHeight = 10;
            const x = state.player.pos.x - barWidth / 2;
            const y = state.player.pos.y - 50;

            ctx.fillStyle = "rgba(0,0,0,0.5)";
            ctx.fillRect(x, y, barWidth, barHeight);

            ctx.fillStyle = "#2ecc71";
            ctx.fillRect(x, y, barWidth * state.player.charge, barHeight);

            ctx.fillStyle = "white";
            ctx.fillText("SOLTAR PARA SALTAR", state.player.pos.x, y - 20);
        }

        ctx.shadowBlur = 0;

        requestAnimationFrame(loop);
    }

    loop();
</script>
