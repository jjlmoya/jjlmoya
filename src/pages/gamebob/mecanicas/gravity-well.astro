---
import Layout from "../../../layouts/Layout.astro";
---

<Layout
    title="Gravity Well Mechanic"
    description="Dobla el espacio-tiempo. Atrae partículas y crea caos orbital con la punta de tus dedos."
    bodyClass="bg-neutral-900 text-white overflow-hidden touch-none"
    showBackground={false}
    mainClass="p-0"
    headerClass="relative z-50 bg-black/40 backdrop-blur-md text-white"
    footerClass="relative z-50 bg-black/40 backdrop-blur-md text-white"
>
    <!-- Game Container -->
    <div
        id="game-container"
        class="fixed inset-0 w-full h-full overflow-hidden bg-black cursor-crosshair touch-none select-none z-0"
    >
        <canvas id="game-canvas" class="block w-full h-full"></canvas>

        <!-- Simple Hint -->
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-white/10 font-black text-4xl font-mono pointer-events-none select-none text-center"
        >
            CLIC PARA AÑADIR<br />GRAVEDAD
        </div>

        <!-- Info Overlay -->
        <div
            class="absolute bottom-20 left-6 right-6 z-[100] flex gap-2 pointer-events-none"
        >
            <a
                href="https://github.com/jjlmoya/jjlmoya/blob/main/src/lib/mechanics/gravity-well/GravityWellMechanic.ts"
                target="_blank"
                rel="noopener noreferrer"
                class="px-4 py-2 bg-white/10 hover:bg-white/20 text-white rounded-lg text-sm font-mono flex items-center gap-2 transition-all hover:scale-105 backdrop-blur-sm border border-white/10 pointer-events-auto"
                title="Ver código fuente"
            >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
