---
import Layout from "../../../layouts/Layout.astro";
---

<Layout
    title="Swipe Gesture | GameBob"
    bodyClass="bg-neutral-900 text-white overflow-hidden touch-none"
    showBackground={false}
    mainClass="p-0"
    headerClass="relative z-50"
    footerClass="relative z-50"
>
    <div
        id="swipe-container"
        class="fixed inset-0 w-full h-full overflow-hidden bg-gradient-to-br from-indigo-400 via-purple-400 to-pink-400 touch-none select-none"
    >
        <div
            class="absolute bottom-20 left-6 right-6 z-[100] flex gap-2 pointer-events-none"
        >
            <a
                href="https://github.com/jjlmoya/jjlmoya/blob/main/src/lib/mechanics/swipe/SwipeGesture.ts"
                target="_blank"
                rel="noopener noreferrer"
                class="px-4 py-2 bg-black/80 hover:bg-black text-white rounded-lg text-sm font-mono flex items-center gap-2 transition-all hover:scale-105 backdrop-blur-sm border border-white/10 pointer-events-auto"
                title="ver código fuente"
            >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path
                        d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                    ></path>
                </svg>
                <span>código</span>
            </a>
            <a
                href="https://github.com/jjlmoya/jjlmoya/blob/main/src/lib/mechanics/swipe/README.md"
                target="_blank"
                rel="noopener noreferrer"
                class="px-4 py-2 bg-black/80 hover:bg-black text-white rounded-lg text-sm font-mono flex items-center gap-2 transition-all hover:scale-105 backdrop-blur-sm border border-white/10 pointer-events-auto"
                title="ver documentación"
            >
                <svg
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    ></path>
                </svg>
                <span>docs</span>
            </a>
        </div>

        <div
            id="swipe-area"
            class="absolute inset-0 flex flex-col items-center justify-center pt-32 gap-8"
        >
            <div class="text-center pointer-events-none select-none">
                <div class="text-6xl font-black mb-4 text-white/30">
                    DESLIZA
                </div>
                <div class="text-sm font-mono text-white/50">8 direcciones</div>
            </div>

            <div
                class="relative w-48 h-48 bg-white/10 backdrop-blur-sm rounded-3xl border-4 border-white/20 pointer-events-none flex items-center justify-center"
            >
                <div
                    id="arrow-up"
                    class="absolute opacity-0 transition-all duration-300"
                >
                    <svg
                        class="w-12 h-12 text-cyan-400 drop-shadow-[0_0_12px_rgba(34,211,238,0.9)]"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
                    </svg>
                </div>
                <div
                    id="arrow-down"
                    class="absolute opacity-0 transition-all duration-300"
                >
                    <svg
                        class="w-12 h-12 text-pink-400 rotate-180 drop-shadow-[0_0_12px_rgba(244,114,182,0.9)]"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
                    </svg>
                </div>
                <div
                    id="arrow-left"
                    class="absolute opacity-0 transition-all duration-300"
                >
                    <svg
                        class="w-12 h-12 text-green-400 -rotate-90 drop-shadow-[0_0_12px_rgba(74,222,128,0.9)]"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
                    </svg>
                </div>
                <div
                    id="arrow-right"
                    class="absolute opacity-0 transition-all duration-300"
                >
                    <svg
                        class="w-12 h-12 text-yellow-400 rotate-90 drop-shadow-[0_0_12px_rgba(250,204,21,0.9)]"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
                    </svg>
                </div>

                <div
                    id="arrow-up-left"
                    class="absolute opacity-0 transition-all duration-300"
                >
                    <svg
                        class="w-10 h-10 text-purple-400 -rotate-45 drop-shadow-[0_0_10px_rgba(192,132,252,0.9)]"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
                    </svg>
                </div>
                <div
                    id="arrow-up-right"
                    class="absolute opacity-0 transition-all duration-300"
                >
                    <svg
                        class="w-10 h-10 text-orange-400 rotate-45 drop-shadow-[0_0_10px_rgba(251,146,60,0.9)]"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
                    </svg>
                </div>
                <div
                    id="arrow-down-left"
                    class="absolute opacity-0 transition-all duration-300"
                >
                    <svg
                        class="w-10 h-10 text-teal-400 -rotate-[135deg] drop-shadow-[0_0_10px_rgba(45,212,191,0.9)]"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
                    </svg>
                </div>
                <div
                    id="arrow-down-right"
                    class="absolute opacity-0 transition-all duration-300"
                >
                    <svg
                        class="w-10 h-10 text-rose-400 rotate-[135deg] drop-shadow-[0_0_10px_rgba(251,113,133,0.9)]"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path d="M12 4l-8 8h5v8h6v-8h5z"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div
            class="absolute top-24 left-6 right-6 flex justify-between items-start pointer-events-none z-50"
        >
            <div
                class="font-mono text-white/90 bg-black/20 backdrop-blur-sm rounded-lg p-4 border border-white/20"
            >
                <div class="text-xs mb-3 text-white/70 font-bold">
                    DESLIZAMIENTOS
                </div>
                <div class="grid grid-cols-4 gap-3 text-xs">
                    <div class="text-center">
                        <div class="text-cyan-300">↑</div>
                        <span id="count-up" class="font-bold">0</span>
                    </div>
                    <div class="text-center">
                        <div class="text-pink-300">↓</div>
                        <span id="count-down" class="font-bold">0</span>
                    </div>
                    <div class="text-center">
                        <div class="text-green-300">←</div>
                        <span id="count-left" class="font-bold">0</span>
                    </div>
                    <div class="text-center">
                        <div class="text-yellow-300">→</div>
                        <span id="count-right" class="font-bold">0</span>
                    </div>
                    <div class="text-center">
                        <div class="text-purple-300">↖</div>
                        <span id="count-up-left" class="font-bold">0</span>
                    </div>
                    <div class="text-center">
                        <div class="text-orange-300">↗</div>
                        <span id="count-up-right" class="font-bold">0</span>
                    </div>
                    <div class="text-center">
                        <div class="text-teal-300">↙</div>
                        <span id="count-down-left" class="font-bold">0</span>
                    </div>
                    <div class="text-center">
                        <div class="text-rose-300">↘</div>
                        <span id="count-down-right" class="font-bold">0</span>
                    </div>
                </div>
            </div>
            <div
                class="font-mono text-right text-white/90 bg-black/20 backdrop-blur-sm rounded-lg p-4 border border-white/20"
            >
                <div class="text-xs mb-2 text-white/70 font-bold">ÚLTIMO</div>
                <div id="last-direction" class="text-2xl font-black">-</div>
                <div id="velocity-display" class="text-xs text-white/70 mt-1">
                    0 px/ms
                </div>
            </div>
        </div>

        <canvas id="trail-canvas" class="absolute inset-0 pointer-events-none"
        ></canvas>
    </div>
</Layout>

<style>
    :global(html),
    :global(body) {
        overflow: hidden;
        overscroll-behavior: none;
        touch-action: none;
    }

    @keyframes pulse-arrow {
        0%,
        100% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.3);
            opacity: 0.7;
        }
    }

    .arrow-active {
        animation: pulse-arrow 0.3s ease-out;
    }
</style>

<script>
    import { SwipeGesture } from "../../../lib/mechanics/swipe/SwipeGesture";

    const swipeArea = document.getElementById("swipe-area")!;
    const canvas = document.getElementById("trail-canvas") as HTMLCanvasElement;
    const ctx = canvas.getContext("2d")!;

    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const arrows = {
        up: document.getElementById("arrow-up")!,
        down: document.getElementById("arrow-down")!,
        left: document.getElementById("arrow-left")!,
        right: document.getElementById("arrow-right")!,
        "up-left": document.getElementById("arrow-up-left")!,
        "up-right": document.getElementById("arrow-up-right")!,
        "down-left": document.getElementById("arrow-down-left")!,
        "down-right": document.getElementById("arrow-down-right")!,
    };

    const counts = {
        up: document.getElementById("count-up")!,
        down: document.getElementById("count-down")!,
        left: document.getElementById("count-left")!,
        right: document.getElementById("count-right")!,
        "up-left": document.getElementById("count-up-left")!,
        "up-right": document.getElementById("count-up-right")!,
        "down-left": document.getElementById("count-down-left")!,
        "down-right": document.getElementById("count-down-right")!,
    };

    const lastDirection = document.getElementById("last-direction")!;
    const velocityDisplay = document.getElementById("velocity-display")!;

    const swipeCounts = {
        up: 0,
        down: 0,
        left: 0,
        right: 0,
        "up-left": 0,
        "up-right": 0,
        "down-left": 0,
        "down-right": 0,
    };
    let trailPoints: { x: number; y: number; alpha: number }[] = [];

    const swipe = new SwipeGesture(
        swipeArea,
        {
            minDistance: 50,
            maxDuration: 500,
            preventScroll: true,
            enableDiagonals: true,
        },
        {
            onSwipeStart: (x, y) => {
                trailPoints = [{ x, y, alpha: 1 }];
            },
            onSwipeMove: (x, y) => {
                if (trailPoints.length > 0) {
                    trailPoints.push({ x, y, alpha: 1 });
                }
            },
            onSwipe: (direction, velocity, distance) => {
                if (direction in swipeCounts) {
                    swipeCounts[direction as keyof typeof swipeCounts]++;
                    counts[direction as keyof typeof counts].textContent =
                        swipeCounts[
                            direction as keyof typeof swipeCounts
                        ].toString();
                }

                if (direction in arrows) {
                    const arrow = arrows[direction as keyof typeof arrows];
                    arrow.style.opacity = "1";
                    arrow.classList.add("arrow-active");
                    setTimeout(() => {
                        arrow.style.opacity = "0";
                        arrow.classList.remove("arrow-active");
                    }, 300);
                }

                lastDirection.textContent = direction.toUpperCase();
                velocityDisplay.textContent = `${velocity.toFixed(2)} px/ms`;

                const colors: Record<string, string> = {
                    up: "#22d3ee",
                    down: "#f472b6",
                    left: "#4ade80",
                    right: "#facc15",
                    "up-left": "#c084fc",
                    "up-right": "#fb923c",
                    "down-left": "#2dd4bf",
                    "down-right": "#fb7185",
                };
                lastDirection.style.color = colors[direction] || "#ffffff";
                setTimeout(() => {
                    lastDirection.style.color = "";
                }, 500);
            },
            onSwipeEnd: () => {
                setTimeout(() => {
                    trailPoints = [];
                }, 500);
            },
        },
    );

    function animate() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        if (trailPoints.length > 1) {
            const gradient = ctx.createLinearGradient(
                trailPoints[0].x,
                trailPoints[0].y,
                trailPoints[trailPoints.length - 1].x,
                trailPoints[trailPoints.length - 1].y,
            );
            gradient.addColorStop(0, "rgba(139, 92, 246, 0.8)");
            gradient.addColorStop(0.5, "rgba(59, 130, 246, 0.8)");
            gradient.addColorStop(1, "rgba(236, 72, 153, 0.8)");

            ctx.shadowBlur = 20;
            ctx.shadowColor = "rgba(139, 92, 246, 0.5)";
            ctx.strokeStyle = gradient;
            ctx.lineWidth = 8;
            ctx.lineCap = "round";
            ctx.lineJoin = "round";

            ctx.beginPath();
            trailPoints.forEach((point, i) => {
                if (i === 0) {
                    ctx.moveTo(point.x, point.y);
                } else {
                    ctx.lineTo(point.x, point.y);
                }
            });
            ctx.stroke();

            ctx.shadowBlur = 0;
            ctx.strokeStyle = "rgba(255, 255, 255, 0.6)";
            ctx.lineWidth = 3;
            ctx.beginPath();
            trailPoints.forEach((point, i) => {
                if (i === 0) {
                    ctx.moveTo(point.x, point.y);
                } else {
                    ctx.lineTo(point.x, point.y);
                }
            });
            ctx.stroke();

            trailPoints = trailPoints
                .map((p) => ({ ...p, alpha: p.alpha * 0.95 }))
                .filter((p) => p.alpha > 0.01);
        }

        requestAnimationFrame(animate);
    }

    window.addEventListener("resize", () => {
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
    });

    animate();
</script>
