            <span>Docs</span>
        </a>
    </div>
</Layout>

<script>
    import { TapFlyMechanic } from "../../../lib/mechanics/tap-fly/TapFlyMechanic";

    const canvas = document.getElementById("game-canvas") as HTMLCanvasElement;
    const ctx = canvas.getContext("2d")!;
    const container = document.getElementById("game-container")!;

    let width = window.innerWidth;
    let height = window.innerHeight;

    canvas.width = width;
    canvas.height = height;

    const mechanic = new TapFlyMechanic(width, height);

    function resize() {
        width = window.innerWidth;
        height = window.innerHeight;
        canvas.width = width;
        canvas.height = height;
        mechanic.updateBounds(width, height);
    }

    window.addEventListener("resize", resize);

    function onTap(e: Event) {
        e.preventDefault();
        mechanic.tap();
    }

    container.addEventListener("mousedown", onTap);
    container.addEventListener("touchstart", onTap, { passive: false });
    window.addEventListener("keydown", (e) => {
        if (e.code === "Space") {
            mechanic.tap();
        }
    });

    // Animation Loop
    function loop() {
        mechanic.update();
        const state = mechanic.getState();

        // Render Background
        ctx.fillStyle = "#4ec0ca";
        ctx.fillRect(0, 0, width, height);

        // Render Obstacles
        ctx.fillStyle = "#73bf2e";
        ctx.strokeStyle = "#558c22";
        ctx.lineWidth = 4;
        for (const obs of state.obstacles) {
            // Top pipe
            ctx.fillRect(obs.x, 0, obs.width, obs.gapY);
            ctx.strokeRect(obs.x, 0, obs.width, obs.gapY);

            // Bottom pipe
            const bottomY = obs.gapY + obs.gapHeight;
            ctx.fillRect(obs.x, bottomY, obs.width, height - bottomY);
            ctx.strokeRect(obs.x, bottomY, obs.width, height - bottomY);
        }

        // Render Player
        ctx.save();
        ctx.translate(state.player.pos.x, state.player.pos.y);
        ctx.rotate(state.player.angle);

        ctx.fillStyle = "#f4ce42";
        ctx.beginPath();
        ctx.arc(0, 0, state.player.radius, 0, Math.PI * 2);
        ctx.fill();
        ctx.stroke();

        // Eye
        ctx.fillStyle = "white";
        ctx.beginPath();
        ctx.arc(6, -6, 6, 0, Math.PI * 2);
        ctx.fill();
        ctx.fillStyle = "black";
        ctx.beginPath();
        ctx.arc(8, -6, 2, 0, Math.PI * 2);
        ctx.fill();

        ctx.restore();

        // UI
        ctx.fillStyle = "white";
        ctx.font = "bold 48px monospace";
        ctx.textAlign = "center";
        ctx.textBaseline = "middle";
        ctx.shadowColor = "black";
        ctx.shadowBlur = 4;

        if (state.state === "start") {
            ctx.fillText("TOCA PARA VOLAR", width / 2, height / 2);
        } else if (state.state === "playing") {
            ctx.fillText(state.score.toString(), width / 2, 100);
        } else if (state.state === "gameover") {
            ctx.fillText("GAME OVER", width / 2, height / 2 - 40);
            ctx.font = "bold 24px monospace";
            ctx.fillText("TOCA PARA REINICIAR", width / 2, height / 2 + 40);
            ctx.fillText(
                `PUNTUACIÓN: ${state.score}`,
                width / 2,
                height / 2 + 80,
            );
        }

        ctx.shadowBlur = 0;

        requestAnimationFrame(loop);
    }

    loop();
</script>
