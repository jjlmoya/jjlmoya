---
import Layout from "../../../layouts/Layout.astro";
---

<Layout
    title="Tap & Fly Mechanic"
    description="Desafía la gravedad con un toque. Mantente en el aire y esquiva el peligro."
    bodyClass="bg-neutral-900 text-white overflow-hidden touch-none"
    showBackground={false}
    mainClass="p-0"
    headerClass="relative z-50 bg-black/40 backdrop-blur-md text-white"
    footerClass="relative z-50 bg-black/40 backdrop-blur-md text-white"
>
    <!-- Game Container -->
    <div
        id="game-container"
        class="fixed inset-0 w-full h-full overflow-hidden bg-[#4ec0ca] cursor-pointer touch-none select-none z-0"
    >
        <canvas id="game-canvas" class="block w-full h-full"></canvas>
    </div>

    <!-- Info Overlay -->
    <div
        class="absolute bottom-20 left-6 right-6 z-[100] flex gap-2 pointer-events-none"
    >
        <a
            href="https://github.com/jjlmoya/jjlmoya/blob/main/src/lib/mechanics/tap-fly/TapFlyMechanic.ts"
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-black/20 hover:bg-black/40 text-white rounded-lg text-sm font-mono flex items-center gap-2 transition-all hover:scale-105 backdrop-blur-sm border border-white/10 pointer-events-auto"
            title="Ver código fuente"
        >
