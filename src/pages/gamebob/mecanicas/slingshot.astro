        </div>

        <!-- The World -->
        <div id="world" class="absolute top-0 left-0 w-full h-full">
            <!-- Drag Line Indicator -->
            <div
                id="drag-indicator"
                class="absolute top-0 left-0 h-1 bg-black rounded-full opacity-0 pointer-events-none origin-left"
            >
            </div>

            <!-- The Pet -->
            <div
                id="pet"
                class="absolute top-0 left-0 w-16 h-16 z-30 will-change-transform"
            >
                <div
                    class="w-full h-full bg-yellow-400 border-[4px] border-black rounded-full flex items-center justify-center shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] relative"
                >
                    <div
                        class="face font-black text-xl select-none text-black"
                        id="pet-face"
                    >
                        -_-
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    :global(html),
    :global(body) {
        overflow: hidden;
        overscroll-behavior: none;
        touch-action: none;
    }
</style>

<script>
    import { SlingshotMechanic } from "../../../lib/mechanics/slingshot/SlingshotMechanic";

    const els = {
        container: document.getElementById("game-container")!,
        pet: document.getElementById("pet")!,
        petFace: document.getElementById("pet-face")!,
        dragIndicator: document.getElementById("drag-indicator")!,
    };

    const audio = {
        ctx: null as AudioContext | null,
        init: () => {
            if (!audio.ctx) {
                audio.ctx = new (window.AudioContext ||
                    (window as any).webkitAudioContext)();
            }
        },
        playBounce: (speed: number) => {
            if (!audio.ctx) return;
            const vol = Math.min(speed / 20, 1);
            if (vol < 0.1) return;

            const osc = audio.ctx.createOscillator();
            const gain = audio.ctx.createGain();

            osc.type = "sine";
            const freq = 200 + Math.min(speed * 5, 400);

            osc.frequency.setValueAtTime(freq, audio.ctx.currentTime);
            osc.frequency.exponentialRampToValueAtTime(
                freq * 0.5,
                audio.ctx.currentTime + 0.1,
            );

            gain.gain.setValueAtTime(vol * 0.5, audio.ctx.currentTime);
            gain.gain.exponentialRampToValueAtTime(
                0.01,
                audio.ctx.currentTime + 0.1,
            );

            osc.connect(gain);
            gain.connect(audio.ctx.destination);
            osc.start();
            osc.stop(audio.ctx.currentTime + 0.1);
        },
    };

    const slingshot = new SlingshotMechanic(
        {
            x: window.innerWidth / 2,
            y: window.innerHeight / 2,
            radius: 32,
        },
        {
            gravity: 0.4,
            friction: 0.995,
            bounceDamping: 0.8,
            dragPower: 0.15,
            maxDragDistance: 300,
            padding: {
                top: 120,
                bottom: 120,
                x: 20,
            },
        },
        {
            onBounce: (speed) => audio.playBounce(speed),
            onDragStart: () => {
                audio.init();
                els.pet.style.cursor = "grabbing";
            },
            onDragEnd: () => {
                els.pet.style.cursor = "grab";
            },
        },
    );

    function onPointerDown(e: MouseEvent | Touch) {
        slingshot.startDrag(e.clientX, e.clientY);
    }

    function onPointerMove(e: MouseEvent | Touch) {
        slingshot.updateDrag(e.clientX, e.clientY);
    }

    function onPointerUp() {
        slingshot.endDrag();
    }

    els.container.addEventListener("mousedown", onPointerDown);
    window.addEventListener("mousemove", onPointerMove);
    window.addEventListener("mouseup", onPointerUp);

    els.container.addEventListener(
        "touchstart",
        (e) => onPointerDown(e.touches[0]),
        { passive: false },
    );
    window.addEventListener("touchmove", (e) => onPointerMove(e.touches[0]), {
        passive: false,
    });
    window.addEventListener("touchend", onPointerUp);

    window.addEventListener("resize", () => {
        slingshot.updateBounds(window.innerWidth, window.innerHeight);
    });

    let lastTime = 0;

    function loop(time: number) {
        const dt = Math.min((time - lastTime) / 16, 2);
        lastTime = time;

        slingshot.update(dt);
        render();

        requestAnimationFrame(loop);
    }

    function render() {
        const state = slingshot.getState();
        const speed = slingshot.getSpeed();
        const timeSinceBounce = slingshot.getTimeSinceBounce();

        const stretch = Math.min(speed * 0.02, 0.5);
        const angle = Math.atan2(state.vy, state.vx);

        els.pet.style.transform = `translate(${state.x - 32}px, ${state.y - 32}px) rotate(${angle}rad) scale(${1 + stretch}, ${1 - stretch * 0.5})`;

        if (slingshot.isDragging()) {
            els.petFace.innerText = "O_O";
        } else if (timeSinceBounce < 400) {
            els.petFace.innerText = "Ò_Ó";
        } else if (speed > 15) {
            els.petFace.innerText = ">_<";
        } else {
            els.petFace.innerText = "-_-";
        }

        const dragInfo = slingshot.getDragInfo();
        if (dragInfo) {
            const dx = state.x - dragInfo.anchor.x;
            const dy = state.y - dragInfo.anchor.y;
            const dist = Math.sqrt(dx * dx + dy * dy);

            els.dragIndicator.style.opacity = "1";
            els.dragIndicator.style.width = `${dist}px`;
            els.dragIndicator.style.transform = `translate(${dragInfo.anchor.x}px, ${dragInfo.anchor.y}px) rotate(${Math.atan2(dy, dx)}rad)`;
            els.dragIndicator.style.height = `4px`;
        } else {
            els.dragIndicator.style.opacity = "0";
        }
    }

    requestAnimationFrame(loop);
</script>
