---
import Layout from "../../../layouts/Layout.astro";
---

<Layout
    title="Slingshot Mechanic | GameBob"
    bodyClass="bg-neutral-900 text-white overflow-hidden touch-none"
    showBackground={false}
    mainClass="p-0"
    headerClass="relative z-50"
    footerClass="relative z-50"
>
    <!-- Game Container -->
    <div
        id="game-container"
        class="fixed inset-0 w-full h-full overflow-hidden bg-neutral-100 cursor-grab active:cursor-grabbing touch-none select-none z-0"
    >
