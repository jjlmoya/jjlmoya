---
import GameBobLayout from "../layouts/GameBobLayout.astro";
import { Icon } from "astro-icon/components";
import GameBobLogo from "../components/GameBobLogo.astro";
---

<GameBobLayout
    title="GameBob"
    description="Explora GameBob, mi laboratorio de mecánicas de juego. Prototipos interactivos, experimentos de física y diversión pura en la web."
>
    <div class="min-h-screen flex flex-col items-center justify-start py-12 px-4">
        <div class="z-10 mb-12 animate-in fade-in zoom-in duration-1000 flex flex-col items-center">
            <div class="w-48 md:w-64">
                <GameBobLogo />
            </div>
            <h1
                class="text-5xl md:text-7xl font-['Fredoka_One'] text-white -mt-4 z-20 relative tracking-wider drop-shadow-lg select-none"
            >
                Game<span class="text-[#1ddabc]">Bob</span>
            </h1>
        </div>

        <p
            class="z-10 text-xl md:text-2xl text-gray-400 max-w-xl mx-auto font-light lowercase text-center mb-24"
        >
            pequeño estudio de desarrollo de juegos casuales indies.
        </p>

        <!-- Games Grid -->
        <div class="z-10 w-full max-w-5xl mx-auto">
            <h2
                class="text-3xl font-bold mb-12 border-l-4 border-[var(--color-gamebob-primary)] pl-4 lowercase text-[var(--color-gamebob-text)]"
            >
                juegos
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <!-- Color Beat Image -->
                <div
                    class="relative group rounded-2xl overflow-hidden shadow-2xl shadow-[var(--color-gamebob-primary)]/20 border border-white/10"
                >
                    <img
                        src="/assets/gamebob/games/color-beat.png"
                        alt="Color Beat Gameplay"
                        class="w-full h-auto transition-transform duration-700 group-hover:scale-105"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60"
                    >
                    </div>
                </div>

                <!-- Color Beat Info -->
                <div class="space-y-6">
                    <h3
                        class="text-5xl font-black tracking-tighter text-[var(--color-gamebob-text)]"
                    >
                        COLOR<span class="text-[var(--color-gamebob-primary)]">BEAT</span>
                    </h3>
                    <p class="text-gray-400 text-lg leading-relaxed lowercase">
                        un desafío de ritmo y color. pon a prueba tus reflejos en este arcade
                        frenético donde la música dicta el camino.
                    </p>

                    <div class="flex items-center gap-4 pt-4">
                        <div
                            class="px-4 py-2 bg-[var(--color-gamebob-primary)]/10 border border-[var(--color-gamebob-primary)]/30 rounded-lg text-[var(--color-gamebob-primary)] text-sm font-medium animate-pulse"
                        >
                            coming soon
                        </div>
                    </div>

                    <!-- Store Badges (Visual Only) -->
                    <div
                        class="flex gap-4 pt-4 opacity-50 grayscale hover:grayscale-0 transition-all duration-500"
                    >
                        <button
                            class="h-12 px-6 bg-white/10 rounded-lg flex items-center gap-3 cursor-not-allowed text-white"
                            title="Próximamente en App Store"
                        >
                            <Icon name="mdi:apple" class="w-6 h-6" />
                            <div class="text-left">
                                <div class="text-[10px] leading-none">Download on the</div>
                                <div class="text-sm font-bold leading-none">App Store</div>
                            </div>
                        </button>
                        <button
                            class="h-12 px-6 bg-white/10 rounded-lg flex items-center gap-3 cursor-not-allowed text-white"
                            title="Próximamente en Google Play"
                        >
                            <Icon name="mdi:google-play" class="w-6 h-6" />
                            <div class="text-left">
                                <div class="text-[10px] leading-none">GET IT ON</div>
                                <div class="text-sm font-bold leading-none">Google Play</div>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mechanics Section -->
        <div class="z-10 w-full max-w-5xl mt-32">
            <h2
                class="text-3xl font-bold mb-12 border-l-4 border-[var(--color-gamebob-accent)] pl-4 lowercase text-[var(--color-gamebob-text)]"
            >
                mecánicas
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Slingshot Mechanic Card -->
                <a
                    href="/gamebob/mecanicas/slingshot"
                    class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-[var(--color-gamebob-accent)]/50 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-gamebob-accent)]/20"
                >
                    <div class="p-6 space-y-4">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-12 h-12 rounded-lg bg-[var(--color-gamebob-accent)]/10 flex items-center justify-center"
                            >
                                <Icon
                                    name="mdi:gesture-swipe"
                                    class="w-6 h-6 text-[var(--color-gamebob-accent)]"
                                />
                            </div>
                            <h3
                                class="text-xl font-bold text-[var(--color-gamebob-text)] group-hover:text-[var(--color-gamebob-accent)] transition-colors"
                            >
                                Slingshot
                            </h3>
                        </div>
                        <p class="text-gray-400 text-sm leading-relaxed lowercase">
                            arrastra, estira y lanza. física de tirachinas con rebotes dinámicos y
                            control táctil preciso.
                        </p>
                        <div
                            class="flex items-center gap-2 text-xs text-[var(--color-gamebob-accent)]/70"
                        >
                            <Icon name="mdi:play-circle-outline" class="w-4 h-4" />
                            <span>demo interactiva</span>
                        </div>
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-[var(--color-gamebob-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
                    >
                    </div>
                </a>

                <!-- Swipe Gesture Mechanic Card -->
                <a
                    href="/gamebob/mecanicas/swipe"
                    class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-[var(--color-gamebob-accent)]/50 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-gamebob-accent)]/20"
                >
                    <div class="p-6 space-y-4">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-12 h-12 rounded-lg bg-[var(--color-gamebob-accent)]/10 flex items-center justify-center"
                            >
                                <Icon
                                    name="mdi:gesture-swipe-horizontal"
                                    class="w-6 h-6 text-[var(--color-gamebob-accent)]"
                                />
                            </div>
                            <h3
                                class="text-xl font-bold text-[var(--color-gamebob-text)] group-hover:text-[var(--color-gamebob-accent)] transition-colors"
                            >
                                Swipe Gesture
                            </h3>
                        </div>
                        <p class="text-gray-400 text-sm leading-relaxed lowercase">
                            detecta gestos de deslizamiento en 4 u 8 direcciones con seguimiento de
                            velocidad y sensibilidad configurable.
                        </p>
                        <div
                            class="flex items-center gap-2 text-xs text-[var(--color-gamebob-accent)]/70"
                        >
                            <Icon name="mdi:play-circle-outline" class="w-4 h-4" />
                            <span>demo interactiva</span>
                        </div>
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-[var(--color-gamebob-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
                    >
                    </div>
                </a>

                <!-- Gravity Well Mechanic Card -->
                <a
                    href="/gamebob/mecanicas/gravity-well"
                    class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-[var(--color-gamebob-accent)]/50 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-gamebob-accent)]/20"
                >
                    <div class="p-6 space-y-4">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-12 h-12 rounded-lg bg-[var(--color-gamebob-accent)]/10 flex items-center justify-center"
                            >
                                <Icon
                                    name="mdi:magnet"
                                    class="w-6 h-6 text-[var(--color-gamebob-accent)]"
                                />
                            </div>
                            <h3
                                class="text-xl font-bold text-[var(--color-gamebob-text)] group-hover:text-[var(--color-gamebob-accent)] transition-colors"
                            >
                                Gravity Well
                            </h3>
                        </div>
                        <p class="text-gray-400 text-sm leading-relaxed lowercase">
                            simulación de partículas con pozos de gravedad interactivos. crea campos
                            de fuerza y observa el caos.
                        </p>
                        <div
                            class="flex items-center gap-2 text-xs text-[var(--color-gamebob-accent)]/70"
                        >
                            <Icon name="mdi:play-circle-outline" class="w-4 h-4" />
                            <span>demo interactiva</span>
                        </div>
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-[var(--color-gamebob-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
                    >
                    </div>
                </a>

                <!-- Flocking Mechanic Card -->
                <a
                    href="/gamebob/mecanicas/flocking"
                    class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-[var(--color-gamebob-accent)]/50 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-gamebob-accent)]/20"
                >
                    <div class="p-6 space-y-4">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-12 h-12 rounded-lg bg-[var(--color-gamebob-accent)]/10 flex items-center justify-center"
                            >
                                <Icon
                                    name="mdi:bird"
                                    class="w-6 h-6 text-[var(--color-gamebob-accent)]"
                                />
                            </div>
                            <h3
                                class="text-xl font-bold text-[var(--color-gamebob-text)] group-hover:text-[var(--color-gamebob-accent)] transition-colors"
                            >
                                Flocking
                            </h3>
                        </div>
                        <p class="text-gray-400 text-sm leading-relaxed lowercase">
                            simulación de comportamiento de bandada. separación, alineación y
                            cohesión en acción.
                        </p>
                        <div
                            class="flex items-center gap-2 text-xs text-[var(--color-gamebob-accent)]/70"
                        >
                            <Icon name="mdi:play-circle-outline" class="w-4 h-4" />
                            <span>demo interactiva</span>
                        </div>
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-[var(--color-gamebob-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
                    >
                    </div>
                </a>

                <!-- Tap & Fly Mechanic Card -->
                <a
                    href="/gamebob/mecanicas/tap-fly"
                    class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-[var(--color-gamebob-accent)]/50 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-gamebob-accent)]/20"
                >
                    <div class="p-6 space-y-4">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-12 h-12 rounded-lg bg-[var(--color-gamebob-accent)]/10 flex items-center justify-center"
                            >
                                <Icon
                                    name="mdi:arrow-up-bold"
                                    class="w-6 h-6 text-[var(--color-gamebob-accent)]"
                                />
                            </div>
                            <h3
                                class="text-xl font-bold text-[var(--color-gamebob-text)] group-hover:text-[var(--color-gamebob-accent)] transition-colors"
                            >
                                Tap & Fly
                            </h3>
                        </div>
                        <p class="text-gray-400 text-sm leading-relaxed lowercase">
                            control de un toque. desafía la gravedad y esquiva obstáculos con
                            precisión.
                        </p>
                        <div
                            class="flex items-center gap-2 text-xs text-[var(--color-gamebob-accent)]/70"
                        >
                            <Icon name="mdi:play-circle-outline" class="w-4 h-4" />
                            <span>demo interactiva</span>
                        </div>
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-[var(--color-gamebob-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
                    >
                    </div>
                </a>

                <!-- Hold to Jump Mechanic Card -->
                <a
                    href="/gamebob/mecanicas/hold-jump"
                    class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-[var(--color-gamebob-accent)]/50 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-gamebob-accent)]/20"
                >
                    <div class="p-6 space-y-4">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-12 h-12 rounded-lg bg-[var(--color-gamebob-accent)]/10 flex items-center justify-center"
                            >
                                <Icon
                                    name="mdi:arrow-collapse-down"
                                    class="w-6 h-6 text-[var(--color-gamebob-accent)]"
                                />
                            </div>
                            <h3
                                class="text-xl font-bold text-[var(--color-gamebob-text)] group-hover:text-[var(--color-gamebob-accent)] transition-colors"
                            >
                                Hold to Jump
                            </h3>
                        </div>
                        <p class="text-gray-400 text-sm leading-relaxed lowercase">
                            carga tu salto. controla la fuerza y la trayectoria para alcanzar nuevas
                            alturas.
                        </p>
                        <div
                            class="flex items-center gap-2 text-xs text-[var(--color-gamebob-accent)]/70"
                        >
                            <Icon name="mdi:play-circle-outline" class="w-4 h-4" />
                            <span>demo interactiva</span>
                        </div>
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-[var(--color-gamebob-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
                    >
                    </div>
                </a>

                <!-- Clicker Mechanic Card -->
                <a
                    href="/gamebob/mecanicas/clicker"
                    class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-[var(--color-gamebob-accent)]/50 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-gamebob-accent)]/20"
                >
                    <div class="p-6 space-y-4">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-12 h-12 rounded-lg bg-[var(--color-gamebob-accent)]/10 flex items-center justify-center"
                            >
                                <Icon
                                    name="mdi:cursor-default-click"
                                    class="w-6 h-6 text-[var(--color-gamebob-accent)]"
                                />
                            </div>
                            <h3
                                class="text-xl font-bold text-[var(--color-gamebob-text)] group-hover:text-[var(--color-gamebob-accent)] transition-colors"
                            >
                                Clicker
                            </h3>
                        </div>
                        <p class="text-gray-400 text-sm leading-relaxed lowercase">
                            mecánica incremental. haz clic, gana recursos y automatiza tu progreso.
                        </p>
                        <div
                            class="flex items-center gap-2 text-xs text-[var(--color-gamebob-accent)]/70"
                        >
                            <Icon name="mdi:play-circle-outline" class="w-4 h-4" />
                            <span>demo interactiva</span>
                        </div>
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-[var(--color-gamebob-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
                    >
                    </div>
                </a>

                <!-- Autorunner Mechanic Card -->
                <a
                    href="/gamebob/mecanicas/autorunner"
                    class="group relative overflow-hidden rounded-xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-[var(--color-gamebob-accent)]/50 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-gamebob-accent)]/20"
                >
                    <div class="p-6 space-y-4">
                        <div class="flex items-center gap-3">
                            <div
                                class="w-12 h-12 rounded-lg bg-[var(--color-gamebob-accent)]/10 flex items-center justify-center"
                            >
                                <Icon
                                    name="mdi:run-fast"
                                    class="w-6 h-6 text-[var(--color-gamebob-accent)]"
                                />
                            </div>
                            <h3
                                class="text-xl font-bold text-[var(--color-gamebob-text)] group-hover:text-[var(--color-gamebob-accent)] transition-colors"
                            >
                                Autorunner
                            </h3>
                        </div>
                        <p class="text-gray-400 text-sm leading-relaxed lowercase">
                            carrera infinita. salta obstáculos y plataformas en este runner
                            procedural.
                        </p>
                        <div
                            class="flex items-center gap-2 text-xs text-[var(--color-gamebob-accent)]/70"
                        >
                            <Icon name="mdi:play-circle-outline" class="w-4 h-4" />
                            <span>demo interactiva</span>
                        </div>
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-[var(--color-gamebob-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
                    >
                    </div>
                </a>
            </div>
        </div>
    </div>
</GameBobLayout>
