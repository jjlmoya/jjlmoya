---
export const prerender = true;
import GameBobLayout from "../layouts/GameBobLayout.astro";
import { Icon } from "astro-icon/components";
import GameBobLogo from "../components/GameBobLogo.astro";
import ProjectHomeCard from "../components/gamebob/ProjectHomeCard.astro";
import { apps } from "../data/apps/index";

const projects = apps.filter((app) =>
    ["colorbeat", "monmons", "galleta-de-la-fortuna", "lexi-crash", "missiopolis"].includes(
        app.slug
    )
);
---

<GameBobLayout
    title="GameBob: El Único Estudio que Documenta el Caos"
    description="Desarrollo Indie: Más arquitectura que diversión. Mecánicas de juego, prototipos y post-mortem para entender por qué cuesta tanto un juego simple."
    image="/images/gamebob/index.webp"
>
    <div class="min-h-screen flex flex-col items-center justify-start py-12 px-4">
        <div class="z-10 mb-12 animate-in fade-in zoom-in duration-1000 flex flex-col items-center">
            <div class="w-48 md:w-64">
                <GameBobLogo />
            </div>
            <h1
                class="text-5xl md:text-7xl font-['Fredoka_One'] text-white -mt-4 z-20 relative tracking-wider drop-shadow-lg select-none"
            >
                Game<span class="text-[#1ddabc]">Bob</span>
            </h1>
        </div>

        <p
            class="z-10 text-xl md:text-2xl text-gray-400 max-w-xl mx-auto font-light lowercase text-center mb-24"
        >
            Pequeño estudio de desarrollo de juegos casuales indies.
        </p>

        <div class="z-10 w-full max-w-5xl mx-auto mb-24">
            <h2
                class="text-3xl font-bold mb-12 border-l-4 border-[var(--color-gamebob-primary)] pl-4 lowercase text-[var(--color-gamebob-text)]"
            >
                juegos
            </h2>

            <div class="space-y-24">
                {
                    projects.map((project, index) => (
                        <ProjectHomeCard project={project} index={index} />
                    ))
                }
            </div>
        </div>

        <div class="z-10 w-full max-w-5xl mx-auto mb-24">
            <h2
                class="text-3xl font-bold mb-12 border-l-4 border-purple-500 pl-4 lowercase text-[var(--color-gamebob-text)]"
            >
                prototipos
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <div class="space-y-6 order-2 md:order-1">
                    <h3
                        class="text-5xl font-black tracking-tighter text-[var(--color-gamebob-text)]"
                    >
                        EVO<span class="text-purple-500">LUCIÓN</span>
                    </h3>
                    <p class="text-gray-400 text-lg leading-relaxed lowercase">
                        alquimia del caos. combina elementos primordiales, crea criaturas únicas y
                        enfréntalas en la arena de combate. un experimento de generación procedural.
                    </p>

                    <div class="flex items-center gap-4 pt-4">
                        <a
                            href="/gamebob/prototipos/"
                            class="px-6 py-3 bg-purple-500/10 border border-purple-500/30 rounded-lg text-purple-400 font-bold hover:bg-purple-500/20 hover:scale-105 transition-all uppercase tracking-widest text-sm flex items-center gap-2"
                        >
                            <Icon name="mdi:flask-empty-outline" class="w-5 h-5" />
                            Explorar Prototipos
                        </a>
                    </div>
                </div>

                <div
                    class="relative group rounded-2xl overflow-hidden shadow-2xl shadow-purple-500/20 border border-white/10 order-1 md:order-2 h-64 md:h-80 bg-slate-900 flex items-center justify-center"
                >
                    <div
                        class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-slate-900 via-[#0B0F19] to-black opacity-80"
                    >
                    </div>

                    <div class="relative z-10 flex gap-8 items-center animate-float">
                        <Icon name="mdi:egg-outline" class="w-24 h-24 text-purple-500/50" />
                        <Icon name="mdi:arrow-right" class="w-8 h-8 text-white/20" />
                        <Icon
                            name="mdi:dna"
                            class="w-24 h-24 text-purple-400 drop-shadow-[0_0_15px_rgba(168,85,247,0.5)]"
                        />
                    </div>
                </div>
            </div>
        </div>

        <div class="z-10 w-full max-w-5xl mx-auto">
            <h2
                class="text-3xl font-bold mb-12 border-l-4 border-blue-500 pl-4 lowercase text-[var(--color-gamebob-text)]"
            >
                mecánicas
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <div
                    class="relative group rounded-2xl overflow-hidden shadow-2xl shadow-blue-500/20 border border-white/10 h-64 md:h-80 bg-slate-900 flex items-center justify-center"
                >
                    <div
                        class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-slate-900 via-[#0B0F19] to-black opacity-80"
                    >
                    </div>

                    <div class="relative z-10 grid grid-cols-2 gap-4 animate-pulse">
                        <Icon name="mdi:gesture-tap" class="w-12 h-12 text-blue-400/80" />
                        <Icon name="mdi:run-fast" class="w-12 h-12 text-blue-400/80" />
                        <Icon name="mdi:target" class="w-12 h-12 text-blue-400/80" />
                        <Icon name="mdi:controller" class="w-12 h-12 text-blue-400/80" />
                    </div>
                </div>

                <div class="space-y-6">
                    <h3
                        class="text-5xl font-black tracking-tighter text-[var(--color-gamebob-text)]"
                    >
                        LAB<span class="text-blue-500">ORATORIO</span>
                    </h3>
                    <p class="text-gray-400 text-lg leading-relaxed lowercase">
                        librería de componentes aislados. mecánicas de movimiento, sistemas de
                        física y controles experimentales listos para testear.
                    </p>

                    <div class="flex items-center gap-4 pt-4">
                        <a
                            href="/gamebob/mecanicas/"
                            class="px-6 py-3 bg-blue-500/10 border border-blue-500/30 rounded-lg text-blue-400 font-bold hover:bg-blue-500/20 hover:scale-105 transition-all uppercase tracking-widest text-sm flex items-center gap-2"
                        >
                            <Icon name="mdi:code-braces" class="w-5 h-5" />
                            Explorar Mecánicas
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="z-10 w-full max-w-5xl mx-auto mt-24">
            <h2
                class="text-3xl font-bold mb-12 border-l-4 border-red-500 pl-4 lowercase text-[var(--color-gamebob-text)]"
            >
                post mortem
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <div class="space-y-6 order-2 md:order-1">
                    <h3
                        class="text-5xl font-black tracking-tighter text-[var(--color-gamebob-text)]"
                    >
                        POST<span class="text-red-500">MORTEM</span>
                    </h3>
                    <p class="text-gray-400 text-lg leading-relaxed lowercase">
                        el cementerio de las buenas intenciones. análisis forense de proyectos
                        fallidos, errores de diseño y lecciones aprendidas a base de golpes.
                    </p>

                    <div class="flex items-center gap-4 pt-4">
                        <a
                            href="/gamebob/post-mortem/"
                            class="px-6 py-3 bg-red-500/10 border border-red-500/30 rounded-lg text-red-400 font-bold hover:bg-red-500/20 hover:scale-105 transition-all uppercase tracking-widest text-sm flex items-center gap-2"
                        >
                            <Icon name="mdi:skull-scan-outline" class="w-5 h-5" />
                            Leer Memorándums
                        </a>
                    </div>
                </div>

                <div
                    class="relative group rounded-2xl overflow-hidden shadow-2xl shadow-red-500/20 border border-white/10 order-1 md:order-2 h-64 md:h-80 bg-slate-900 flex items-center justify-center"
                >
                    <div
                        class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-slate-900 via-[#0B0F19] to-black opacity-80"
                    >
                    </div>

                    <div class="relative z-10 flex gap-6 items-center animate-pulse">
                        <Icon name="mdi:alert-decagram" class="w-20 h-20 text-red-500/50" />
                        <Icon name="mdi:arrow-right" class="w-8 h-8 text-white/20" />
                        <Icon
                            name="mdi:book-open-page-variant"
                            class="w-20 h-20 text-red-400 drop-shadow-[0_0_15px_rgba(239,68,68,0.5)]"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div
        class="z-10 w-full max-w-5xl mx-auto mt-32 mb-12 flex justify-center border-t border-white/5 pt-8"
    >
        <a
            href="/gamebob/privacidad/"
            class="text-gray-500 hover:text-[var(--color-gamebob-primary)] transition-colors text-sm lowercase tracking-widest"
        >
            política de privacidad
        </a>
    </div>
</GameBobLayout>
