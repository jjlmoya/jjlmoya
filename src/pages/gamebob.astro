---
import GameBobLayout from '../layouts/GameBobLayout.astro';
import { Icon } from 'astro-icon/components';
---

<GameBobLayout title="gamebob | jjlmoya">
    
    <!-- Hero / Branding -->
    <div class="min-h-screen flex flex-col items-center pt-32 pb-20 px-4 relative">
        
        <!-- Logo -->
        <div class="z-10 mb-12 animate-in fade-in zoom-in duration-1000">
            <img src="/assets/gamebob/gamebobblue.webp" alt="GameBob Logo" class="w-48 md:w-64 h-auto" />
        </div>

        <h1 class="sr-only">GameBob</h1>
        
        <p class="z-10 text-xl md:text-2xl text-gray-400 max-w-xl mx-auto font-light lowercase text-center mb-24">
            pequeño estudio de desarrollo de juegos casuales indies.
        </p>

        <!-- Games Grid -->
        <div class="z-10 w-full max-w-5xl">
            <h2 class="text-3xl font-bold mb-12 border-l-4 border-[var(--color-gamebob-primary)] pl-4 lowercase text-[var(--color-gamebob-text)]">juegos</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                <!-- Color Beat Image -->
                <div class="relative group rounded-2xl overflow-hidden shadow-2xl shadow-[var(--color-gamebob-primary)]/20 border border-white/10">
                    <img src="/assets/gamebob/games/color-beat.png" alt="Color Beat Gameplay" class="w-full h-auto transition-transform duration-700 group-hover:scale-105" />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-60"></div>
                </div>

                <!-- Color Beat Info -->
                <div class="space-y-6">
                    <h3 class="text-5xl font-black tracking-tighter text-[var(--color-gamebob-text)]">
                        COLOR<span class="text-[var(--color-gamebob-primary)]">BEAT</span>
                    </h3>
                    <p class="text-gray-400 text-lg leading-relaxed lowercase">
                        un desafío de ritmo y color. pon a prueba tus reflejos en este arcade frenético donde la música dicta el camino.
                    </p>
                    
                    <div class="flex items-center gap-4 pt-4">
                        <div class="px-4 py-2 bg-[var(--color-gamebob-primary)]/10 border border-[var(--color-gamebob-primary)]/30 rounded-lg text-[var(--color-gamebob-primary)] text-sm font-medium animate-pulse">
                            coming soon
                        </div>
                    </div>

                    <!-- Store Badges (Visual Only) -->
                    <div class="flex gap-4 pt-4 opacity-50 grayscale hover:grayscale-0 transition-all duration-500">
                        <button class="h-12 px-6 bg-white/10 rounded-lg flex items-center gap-3 cursor-not-allowed text-white" title="Próximamente en App Store">
                            <Icon name="mdi:apple" class="w-6 h-6" />
                            <div class="text-left">
                                <div class="text-[10px] leading-none">Download on the</div>
                                <div class="text-sm font-bold leading-none">App Store</div>
                            </div>
                        </button>
                        <button class="h-12 px-6 bg-white/10 rounded-lg flex items-center gap-3 cursor-not-allowed text-white" title="Próximamente en Google Play">
                            <Icon name="mdi:google-play" class="w-6 h-6" />
                            <div class="text-left">
                                <div class="text-[10px] leading-none">GET IT ON</div>
                                <div class="text-sm font-bold leading-none">Google Play</div>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</GameBobLayout>
