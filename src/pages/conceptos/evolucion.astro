---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import evolutionData from "../../data/evolution-data.json";

const { base_elements, recipes } = evolutionData;
---

<Layout
    title="Evolución Infinita | jjlmoya"
    description="Alquimia del caos. Combina elementos, crea criaturas y enfréntalas en la arena."
    bodyClass="bg-slate-950 text-white overflow-hidden"
    showBackground={false}
    mainClass="p-0"
    headerClass="text-white mix-blend-difference"
>
    <!-- Background: Cosmic Nebula -->
    <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
        <div
            class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-slate-900 via-[#0B0F19] to-black"
        >
        </div>
        <div
            class="absolute top-[-20%] left-[20%] w-[600px] h-[600px] rounded-full bg-indigo-600/20 blur-[120px] mix-blend-screen"
        >
        </div>
        <div
            class="absolute bottom-[-10%] right-[10%] w-[500px] h-[500px] rounded-full bg-fuchsia-600/10 blur-[100px] mix-blend-screen"
        >
        </div>
        <div
            class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_at_center,black_60%,transparent_100%)]"
        >
        </div>
    </div>

    <div class="relative z-10 flex h-screen pt-15 overflow-hidden font-sans">
        <!-- Sidebar: Elegant Elemental Lab -->
        <aside
            class="w-20 md:w-72 bg-gradient-to-b from-slate-900/95 to-slate-950/95 backdrop-blur-xl border-r border-white/5 flex flex-col relative overflow-hidden"
        >
            <!-- Decorative gradient overlay -->
            <div
                class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 via-transparent to-purple-500/5 pointer-events-none"
            >
            </div>

            <!-- Header -->
            <div class="relative p-4 md:p-6 border-b border-white/10">
                <h2 class="hidden md:block text-xl font-black text-white tracking-tight mb-1">
                    Laboratorio
                </h2>
                <p class="hidden md:block text-xs text-slate-400 font-mono">
                    Elementos Primordiales
                </p>
                <div class="md:hidden flex items-center justify-center">
                    <Icon name="mdi:flask" class="w-8 h-8 text-indigo-400" />
                </div>
            </div>

            <!-- Spawn Button -->
            <div class="relative p-3 md:p-4">
                <button
                    id="spawn-egg-btn"
                    class="w-full py-4 md:py-3 rounded-xl bg-gradient-to-br from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 text-white font-bold shadow-xl shadow-indigo-500/30 transition-all active:scale-95 flex items-center justify-center gap-3 group relative overflow-hidden"
                >
                    <div
                        class="absolute inset-0 bg-white/10 translate-y-full group-hover:translate-y-0 transition-transform"
                    >
                    </div>
                    <Icon
                        name="mdi:egg"
                        class="w-7 h-7 md:w-6 md:h-6 group-hover:rotate-12 transition-transform relative z-10"
                    />
                    <span class="hidden md:inline text-sm uppercase tracking-wider relative z-10"
                        >Crear Huevo</span
                    >
                </button>
            </div>

            <!-- Elements Section -->
            <div class="relative px-3 md:px-4 pt-2">
                <div class="flex items-center mb-3">
                    <div
                        class="h-px flex-1 bg-gradient-to-r from-transparent via-white/20 to-transparent"
                    >
                    </div>
                    <span
                        class="text-[10px] md:text-xs font-mono text-slate-500 uppercase tracking-widest"
                    >
                        Elementos
                    </span>
                    <div
                        class="h-px flex-1 bg-gradient-to-r from-transparent via-white/20 to-transparent"
                    >
                    </div>
                </div>
            </div>

            <!-- Inventory Grid -->
            <div
                id="inventory"
                class="relative flex-1 overflow-y-auto px-2 md:px-4 pb-4 space-y-2 scrollbar-thin scrollbar-thumb-white/10 scrollbar-track-transparent"
            >
                <!-- Ingredients injected here -->
            </div>

            <!-- Footer Actions -->
            <div class="relative p-3 md:p-4 border-t border-white/10 bg-slate-950/50 space-y-2">
                <button
                    id="encyclopedia-btn"
                    class="w-full py-3 md:py-2.5 rounded-lg bg-indigo-500/10 hover:bg-indigo-500/20 border border-indigo-500/20 hover:border-indigo-500/30 text-xs md:text-sm font-medium text-indigo-400 hover:text-indigo-300 transition-all flex items-center justify-center gap-2 group"
                >
                    <Icon
                        name="mdi:book-open-page-variant"
                        class="w-5 h-5 md:w-4 md:h-4 group-hover:scale-110 transition-transform"
                    />
                    <span class="hidden md:inline">Enciclopedia</span>
                </button>

                <button
                    id="clear-btn"
                    class="w-full py-3 md:py-2.5 rounded-lg bg-red-500/10 hover:bg-red-500/20 border border-red-500/20 hover:border-red-500/30 text-xs md:text-sm font-medium text-red-400 hover:text-red-300 transition-all flex items-center justify-center gap-2 group"
                >
                    <Icon
                        name="mdi:delete-sweep"
                        class="w-5 h-5 md:w-4 md:h-4 group-hover:scale-110 transition-transform"
                    />
                    <span class="hidden md:inline">Limpiar Todo</span>
                </button>
            </div>
        </aside>

        <!-- Main Playground -->
        <main class="flex-1 relative overflow-hidden cursor-crosshair bg-stone-800" id="playground">
            <!-- Background Texture (Subtle) -->
            <div
                class="absolute inset-0 z-0 pointer-events-none opacity-20 mix-blend-soft-light"
                style="background-image: url('/assets/textures/stone_wall.png'); background-size: cover; background-position: center;"
            >
            </div>

            <!-- Diegetic Tutorial (Carvings) -->
            <div
                id="stone-tutorial"
                class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none z-0 select-none opacity-60"
            >
                <div class="flex flex-col gap-12 items-center">
                    <!-- 1. The Rivals (Egg w/ Fire vs Egg w/ Water) -->
                    <div class="flex gap-32 opacity-80">
                        <!-- Fire Egg -->
                        <div class="relative">
                            <Icon
                                name="mdi:egg-outline"
                                class="w-24 h-24 carved-icon text-stone-900"
                            />
                            <Icon
                                name="mdi:fire"
                                class="w-10 h-10 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 carved-icon text-orange-700/70"
                            />
                        </div>

                        <!-- Water Egg -->
                        <div class="relative">
                            <Icon
                                name="mdi:egg-outline"
                                class="w-24 h-24 carved-icon text-stone-900"
                            />
                            <Icon
                                name="mdi:water"
                                class="w-10 h-10 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 carved-icon text-blue-600/70"
                            />
                        </div>
                    </div>

                    <!-- 2. The Clash (Headbutt) -->
                    <div class="flex items-center justify-center -space-x-8 opacity-90">
                        <!-- Fire Egg (Lunging Right) -->
                        <div class="relative transform rotate-12 z-10">
                            <Icon
                                name="mdi:egg-outline"
                                class="w-24 h-24 carved-icon text-stone-900"
                            />
                            <Icon
                                name="mdi:fire"
                                class="w-10 h-10 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 carved-icon text-orange-700/70"
                            />
                        </div>

                        <!-- Impact Flash -->
                        <Icon
                            name="mdi:flash"
                            class="w-16 h-16 carved-icon text-stone-200 z-30 -mt-8"
                        />

                        <!-- Water Egg (Lunging Left) -->
                        <div class="relative transform -rotate-12 z-20">
                            <Icon
                                name="mdi:egg-outline"
                                class="w-24 h-24 carved-icon text-stone-900"
                            />
                            <Icon
                                name="mdi:water"
                                class="w-10 h-10 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 carved-icon text-blue-600/70"
                            />
                        </div>
                    </div>

                    <!-- 3. The Aftermath (Victor & Loser) -->
                    <div class="flex gap-24 items-end opacity-80">
                        <!-- Loser (Broken Fire Egg) -->
                        <div class="relative transform rotate-45 opacity-60">
                            <Icon
                                name="mdi:egg-off-outline"
                                class="w-20 h-20 carved-icon text-stone-900"
                            />
                            <Icon
                                name="mdi:fire"
                                class="w-8 h-8 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 carved-icon text-orange-700/40"
                            />
                        </div>

                        <!-- Victor (Level 2 Water Egg) -->
                        <div class="relative transform scale-110">
                            <Icon
                                name="mdi:egg-outline"
                                class="w-28 h-28 carved-icon text-stone-900"
                            />
                            <Icon
                                name="mdi:water"
                                class="w-12 h-12 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 carved-icon text-blue-600/80"
                            />
                            <!-- Level 2 Indicator -->
                            <div
                                class="absolute -top-2 -right-2 bg-stone-800 rounded-full p-1 border border-stone-700"
                            >
                                <Icon name="mdi:numeric-2" class="w-6 h-6 text-stone-400" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Entities Container -->
            <div id="entities-layer" class="absolute inset-0 z-10"></div>
        </main>

        <!-- Encyclopedia Modal -->
        <div
            id="encyclopedia-modal"
            class="fixed inset-0 z-50 bg-slate-950/95 backdrop-blur-xl flex items-center justify-center opacity-0 pointer-events-none transition-all duration-300 p-4"
        >
            <div
                class="w-full max-w-4xl bg-slate-900 border border-white/10 rounded-2xl shadow-2xl flex flex-col max-h-[85vh]"
            >
                <!-- Header -->
                <div
                    class="p-6 border-b border-white/10 flex items-center justify-between bg-slate-900/50 rounded-t-2xl"
                >
                    <div class="flex items-center gap-4">
                        <div
                            class="w-12 h-12 rounded-xl bg-indigo-500/10 flex items-center justify-center border border-indigo-500/20"
                        >
                            <Icon name="mdi:book-open-variant" class="w-6 h-6 text-indigo-400" />
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold text-white">Enciclopedia</h2>
                            <p class="text-sm text-slate-400 font-mono" id="encyclopedia-stats">
                                Descubiertos: 0/0
                            </p>
                        </div>
                    </div>
                    <button
                        id="close-encyclopedia"
                        class="p-2 hover:bg-white/10 rounded-lg transition-colors text-slate-400 hover:text-white"
                    >
                        <Icon name="mdi:close" class="w-6 h-6" />
                    </button>
                </div>

                <!-- Grid -->
                <div
                    id="encyclopedia-grid"
                    class="p-6 overflow-y-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 scrollbar-thin scrollbar-thumb-white/10 scrollbar-track-transparent"
                >
                    <!-- Items injected via JS -->
                </div>
            </div>
        </div>

        <!-- Battle Overlay (El Bruto Style) -->
        <div
            id="battle-overlay"
            class="fixed inset-0 z-50 bg-slate-950/95 backdrop-blur-xl flex items-center justify-center opacity-0 pointer-events-none transition-all duration-500 p-4"
        >
            <div class="w-full max-w-6xl flex flex-col items-center justify-center h-full">
                <!-- Battle Header -->
                <div class="mb-3 md:mb-8 text-center">
                    <h2
                        class="text-2xl md:text-4xl font-black italic text-white tracking-tighter drop-shadow-[0_0_15px_rgba(255,255,255,0.5)]"
                    >
                        ARENA DE COMBATE
                    </h2>
                </div>

                <!-- Fighters -->
                <div
                    class="w-full flex flex-col md:flex-row items-center justify-between px-4 md:px-20 gap-4 md:gap-8"
                >
                    <!-- Fighter 1 (Left/Top) -->
                    <div
                        class="flex-1 flex flex-col items-center group w-full md:w-auto"
                        id="fighter-1"
                    >
                        <div class="relative w-20 h-20 md:w-56 md:h-56 mb-2 md:mb-6">
                            <div
                                class="absolute inset-0 bg-indigo-500/20 blur-[50px] rounded-full animate-pulse"
                            >
                            </div>
                            <div
                                id="f1-visual"
                                class="relative z-10 w-full h-full flex items-center justify-center text-indigo-300 transition-transform duration-100"
                            >
                            </div>
                        </div>
                        <h3
                            id="f1-name"
                            class="text-base md:text-2xl font-bold text-white mb-1 md:mb-2"
                        >
                            Creature 1
                        </h3>
                        <div
                            class="w-full max-w-[150px] md:max-w-[200px] h-2 md:h-4 bg-slate-800 rounded-full overflow-hidden border border-white/10"
                        >
                            <div
                                id="f1-hp-bar"
                                class="h-full bg-gradient-to-r from-emerald-500 to-emerald-400 w-full transition-all duration-200"
                            >
                            </div>
                        </div>
                        <p id="f1-hp-text" class="font-mono text-xs text-slate-400 mt-1">100/100</p>
                    </div>

                    <!-- VS -->
                    <div class="flex flex-col items-center justify-center py-2 md:py-0">
                        <div
                            class="text-3xl md:text-8xl font-black text-transparent bg-clip-text bg-gradient-to-b from-red-500 to-orange-600 italic animate-pulse drop-shadow-lg"
                        >
                            VS
                        </div>
                    </div>

                    <!-- Fighter 2 (Right/Bottom) -->
                    <div
                        class="flex-1 flex flex-col items-center group w-full md:w-auto"
                        id="fighter-2"
                    >
                        <div class="relative w-20 h-20 md:w-56 md:h-56 mb-2 md:mb-6">
                            <div
                                class="absolute inset-0 bg-red-500/20 blur-[50px] rounded-full animate-pulse"
                            >
                            </div>
                            <div
                                id="f2-visual"
                                class="relative z-10 w-full h-full flex items-center justify-center text-red-300 transition-transform duration-100"
                            >
                            </div>
                        </div>
                        <h3
                            id="f2-name"
                            class="text-base md:text-2xl font-bold text-white mb-1 md:mb-2"
                        >
                            Creature 2
                        </h3>
                        <div
                            class="w-full max-w-[150px] md:max-w-[200px] h-2 md:h-4 bg-slate-800 rounded-full overflow-hidden border border-white/10"
                        >
                            <div
                                id="f2-hp-bar"
                                class="h-full bg-gradient-to-r from-red-500 to-red-400 w-full transition-all duration-200"
                            >
                            </div>
                        </div>
                        <p id="f2-hp-text" class="font-mono text-xs text-slate-400 mt-1">100/100</p>
                    </div>
                </div>

                <!-- Battle Log / Action Text -->
                <div class="mt-3 md:mt-8 h-12 md:h-20 flex items-center justify-center px-4">
                    <p
                        id="battle-action-text"
                        class="text-sm md:text-2xl font-mono font-bold text-white/80 text-center animate-bounce"
                    >
                    </p>
                </div>

                <button
                    id="close-battle"
                    class="mt-3 md:mt-6 px-6 md:px-12 py-2.5 md:py-4 bg-white text-slate-900 font-black uppercase tracking-widest rounded-full hover:scale-105 active:scale-95 transition-all shadow-[0_0_30px_rgba(255,255,255,0.4)] hidden text-xs md:text-base"
                >
                    Cerrar Arena
                </button>
            </div>
        </div>
    </div>
</Layout>

<style>
    .scrollbar-thin::-webkit-scrollbar {
        width: 4px;
    }
    .scrollbar-thin::-webkit-scrollbar-track {
        background: transparent;
    }
    .scrollbar-thin::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 2px;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
    .animate-float {
        animation: float 4s ease-in-out infinite;
    }

    .hit-shake {
        animation: hit-shake 0.4s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
    }
    @keyframes hit-shake {
        10%,
        90% {
            transform: translate3d(-2px, 0, 0) rotate(-2deg);
        }
        20%,
        80% {
            transform: translate3d(4px, 0, 0) rotate(4deg);
        }
        30%,
        50%,
        70% {
            transform: translate3d(-8px, 0, 0) rotate(-8deg);
        }
        40%,
        60% {
            transform: translate3d(8px, 0, 0) rotate(8deg);
        }
    }

    .attack-lunge-right {
        animation: lunge-right 0.3s ease-in-out;
    }
    @keyframes lunge-right {
        0% {
            transform: translateX(0);
        }
        50% {
            transform: translateX(100px) scale(1.2);
        }
        100% {
            transform: translateX(0);
        }
    }

    .attack-lunge-left {
        animation: lunge-left 0.3s ease-in-out;
    }
    @keyframes lunge-left {
        0% {
            transform: translateX(0);
        }
        50% {
            transform: translateX(-100px) scale(1.2);
        }
        100% {
            transform: translateX(0);
        }
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
    .animate-float {
        animation: float 4s ease-in-out infinite;
    }

    .hit-shake {
        animation: hit-shake 0.4s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
    }
    @keyframes hit-shake {
        10%,
        90% {
            transform: translate3d(-2px, 0, 0) rotate(-2deg);
        }
        20%,
        80% {
            transform: translate3d(4px, 0, 0) rotate(4deg);
        }
        30%,
        50%,
        70% {
            transform: translate3d(-8px, 0, 0) rotate(-8deg);
        }
        40%,
        60% {
            transform: translate3d(8px, 0, 0) rotate(8deg);
        }
    }

    .attack-lunge-right {
        animation: lunge-right 0.3s ease-in-out;
    }
    @keyframes lunge-right {
        0% {
            transform: translateX(0);
        }
        50% {
            transform: translateX(100px) scale(1.2);
        }
        100% {
            transform: translateX(0);
        }
    }

    .attack-lunge-left {
        animation: lunge-left 0.3s ease-in-out;
    }
    @keyframes lunge-left {
        0% {
            transform: translateX(0);
        }
        50% {
            transform: translateX(-100px) scale(1.2);
        }
        100% {
            transform: translateX(0);
        }
    }

    .carved-icon,
    .carved-text {
        filter: drop-shadow(1px 1px 0px rgba(255, 255, 255, 0.3));
    }
</style>

<script>
    import { Game } from "../../scripts/evolution/Game.js";

    // Get data from the server-side rendered script tag below
    const dataScript = document.getElementById("evolution-data");
    if (dataScript && dataScript.textContent) {
        const { base_elements, recipes } = JSON.parse(dataScript.textContent);

        // Initialize Game
        new Game({ base_elements, recipes });
    }

    // Iconify
    const script = document.createElement("script");
    script.src = "https://code.iconify.design/3/3.1.0/iconify.min.js";
    document.head.appendChild(script);
</script>

<!-- Pass data to client-side JS -->
<script
    is:inline
    id="evolution-data"
    type="application/json"
    set:html={JSON.stringify({ base_elements, recipes })}
/>
