---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import evolutionData from "../../data/evolution-data.json";

const { base_elements, recipes } = evolutionData;
---

<Layout
    title="Evolución Infinita | jjlmoya"
    bodyClass="bg-slate-950 text-white overflow-hidden"
    showBackground={false}
    mainClass="p-0"
    headerClass="text-white mix-blend-difference"
>
    <!-- Background: Cosmic Nebula -->
    <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
        <div
            class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-slate-900 via-[#0B0F19] to-black"
        >
        </div>
        <div
            class="absolute top-[-20%] left-[20%] w-[600px] h-[600px] rounded-full bg-indigo-600/20 blur-[120px] mix-blend-screen"
        >
        </div>
        <div
            class="absolute bottom-[-10%] right-[10%] w-[500px] h-[500px] rounded-full bg-fuchsia-600/10 blur-[100px] mix-blend-screen"
        >
        </div>
        <div
            class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:40px_40px] [mask-image:radial-gradient(ellipse_at_center,black_60%,transparent_100%)]"
        >
        </div>
    </div>

    <div class="relative z-10 flex h-screen pt-20 overflow-hidden font-sans">
        <!-- Sidebar: Elegant Elemental Lab -->
        <aside
            class="w-20 md:w-72 bg-gradient-to-b from-slate-900/95 to-slate-950/95 backdrop-blur-xl border-r border-white/5 flex flex-col relative overflow-hidden"
        >
            <!-- Decorative gradient overlay -->
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 via-transparent to-purple-500/5 pointer-events-none"></div>
            
            <!-- Header -->
            <div class="relative p-4 md:p-6 border-b border-white/10">
                <h2 class="hidden md:block text-xl font-black text-white tracking-tight mb-1">
                    Laboratorio
                </h2>
                <p class="hidden md:block text-xs text-slate-400 font-mono">
                    Elementos Primordiales
                </p>
                <div class="md:hidden flex items-center justify-center">
                    <Icon name="mdi:flask" class="w-8 h-8 text-indigo-400" />
                </div>
            </div>

            <!-- Spawn Button -->
            <div class="relative p-3 md:p-4">
                <button
                    id="spawn-egg-btn"
                    class="w-full py-4 md:py-3 rounded-xl bg-gradient-to-br from-indigo-600 to-purple-600 hover:from-indigo-500 hover:to-purple-500 text-white font-bold shadow-xl shadow-indigo-500/30 transition-all active:scale-95 flex items-center justify-center gap-3 group relative overflow-hidden"
                >
                    <div class="absolute inset-0 bg-white/10 translate-y-full group-hover:translate-y-0 transition-transform"></div>
                    <Icon
                        name="mdi:egg"
                        class="w-7 h-7 md:w-6 md:h-6 group-hover:rotate-12 transition-transform relative z-10"
                    />
                    <span
                        class="hidden md:inline text-sm uppercase tracking-wider relative z-10"
                        >Crear Huevo</span
                    >
                </button>
            </div>

            <!-- Elements Section -->
            <div class="relative px-3 md:px-4 pt-2">
                <div class="flex items-center gap-2 mb-3">
                    <div class="h-px flex-1 bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
                    <span class="text-[10px] md:text-xs font-mono text-slate-500 uppercase tracking-widest">
                        Elementos
                    </span>
                    <div class="h-px flex-1 bg-gradient-to-r from-transparent via-white/20 to-transparent"></div>
                </div>
            </div>

            <!-- Inventory Grid -->
            <div
                id="inventory"
                class="relative flex-1 overflow-y-auto px-2 md:px-4 pb-4 space-y-2 scrollbar-thin scrollbar-thumb-white/10 scrollbar-track-transparent"
            >
                <!-- Ingredients injected here -->
            </div>

            <!-- Footer Actions -->
            <div class="relative p-3 md:p-4 border-t border-white/10 bg-slate-950/50">
                <button
                    id="clear-btn"
                    class="w-full py-3 md:py-2.5 rounded-lg bg-red-500/10 hover:bg-red-500/20 border border-red-500/20 hover:border-red-500/30 text-xs md:text-sm font-medium text-red-400 hover:text-red-300 transition-all flex items-center justify-center gap-2 group"
                >
                    <Icon name="mdi:delete-sweep" class="w-5 h-5 md:w-4 md:h-4 group-hover:scale-110 transition-transform" />
                    <span class="hidden md:inline">Limpiar Todo</span>
                </button>
            </div>
        </aside>

        <!-- Main Playground -->
        <main
            class="flex-1 relative overflow-hidden cursor-crosshair"
            id="playground"
        >
            <!-- Instructions Overlay (Fades out) -->
            <div
                id="instructions"
                class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none transition-opacity duration-1000 delay-1000 px-6"
            >
                <h1
                    class="text-3xl md:text-6xl font-black text-white/10 tracking-tighter text-center"
                >
                    EVOLUCIÓN INFINITA
                </h1>
                <p
                    class="text-white/20 font-mono mt-4 text-center max-w-md text-xs md:text-base"
                >
                    1. Crea Huevos<br />
                    2. Arrastra ingredientes para alimentar<br />
                    3. Arrastra criaturas entre sí para pelear
                </p>
            </div>

            <!-- Entities Container -->
            <div id="entities-layer" class="absolute inset-0"></div>
        </main>

        <!-- Battle Overlay (El Bruto Style) -->
        <div
            id="battle-overlay"
            class="fixed inset-0 z-50 bg-slate-950/95 backdrop-blur-xl flex flex-col items-center justify-center opacity-0 pointer-events-none transition-all duration-500 overflow-y-auto"
        >
            <div
                class="w-full max-w-6xl flex flex-col items-center py-8 md:py-0"
            >
                <!-- Battle Header -->
                <div class="mb-8 md:mb-12 text-center">
                    <h2
                        class="text-3xl md:text-4xl font-black italic text-white tracking-tighter drop-shadow-[0_0_15px_rgba(255,255,255,0.5)]"
                    >
                        ARENA DE COMBATE
                    </h2>
                </div>

                <!-- Fighters -->
                <div
                    class="w-full flex flex-col md:flex-row items-center justify-between px-4 md:px-20 gap-8 md:gap-8"
                >
                    <!-- Fighter 1 (Left/Top) -->
                    <div
                        class="flex-1 flex flex-col items-center group w-full md:w-auto"
                        id="fighter-1"
                    >
                        <div
                            class="relative w-24 h-24 md:w-56 md:h-56 mb-4 md:mb-6"
                        >
                            <div
                                class="absolute inset-0 bg-indigo-500/20 blur-[50px] rounded-full animate-pulse"
                            >
                            </div>
                            <div
                                id="f1-visual"
                                class="relative z-10 w-full h-full flex items-center justify-center text-indigo-300 transition-transform duration-100"
                            >
                            </div>
                        </div>
                        <h3
                            id="f1-name"
                            class="text-xl md:text-2xl font-bold text-white mb-2"
                        >
                            Creature 1
                        </h3>
                        <div
                            class="w-full max-w-[200px] h-3 md:h-4 bg-slate-800 rounded-full overflow-hidden border border-white/10"
                        >
                            <div
                                id="f1-hp-bar"
                                class="h-full bg-gradient-to-r from-emerald-500 to-emerald-400 w-full transition-all duration-200"
                            >
                            </div>
                        </div>
                        <p
                            id="f1-hp-text"
                            class="font-mono text-xs text-slate-400 mt-1"
                        >
                            100/100
                        </p>
                    </div>

                    <!-- VS -->
                    <div
                        class="flex flex-col items-center justify-center py-4 md:py-0"
                    >
                        <div
                            class="text-5xl md:text-8xl font-black text-transparent bg-clip-text bg-gradient-to-b from-red-500 to-orange-600 italic animate-pulse drop-shadow-lg pr-4"
                        >
                            VS
                        </div>
                    </div>

                    <!-- Fighter 2 (Right/Bottom) -->
                    <div
                        class="flex-1 flex flex-col items-center group w-full md:w-auto"
                        id="fighter-2"
                    >
                        <div
                            class="relative w-24 h-24 md:w-56 md:h-56 mb-4 md:mb-6"
                        >
                            <div
                                class="absolute inset-0 bg-red-500/20 blur-[50px] rounded-full animate-pulse"
                            >
                            </div>
                            <div
                                id="f2-visual"
                                class="relative z-10 w-full h-full flex items-center justify-center text-red-300 transition-transform duration-100"
                            >
                            </div>
                        </div>
                        <h3
                            id="f2-name"
                            class="text-xl md:text-2xl font-bold text-white mb-2"
                        >
                            Creature 2
                        </h3>
                        <div
                            class="w-full max-w-[200px] h-3 md:h-4 bg-slate-800 rounded-full overflow-hidden border border-white/10"
                        >
                            <div
                                id="f2-hp-bar"
                                class="h-full bg-gradient-to-r from-red-500 to-red-400 w-full transition-all duration-200"
                            >
                            </div>
                        </div>
                        <p
                            id="f2-hp-text"
                            class="font-mono text-xs text-slate-400 mt-1"
                        >
                            100/100
                        </p>
                    </div>
                </div>

                <!-- Battle Log / Action Text -->
                <div
                    class="mt-8 md:mt-12 h-16 md:h-24 flex items-center justify-center px-4"
                >
                    <p
                        id="battle-action-text"
                        class="text-lg md:text-2xl font-mono font-bold text-white/80 text-center animate-bounce"
                    >
                    </p>
                </div>

                <button
                    id="close-battle"
                    class="mt-4 md:mt-8 px-8 md:px-12 py-3 md:py-4 bg-white text-slate-900 font-black uppercase tracking-widest rounded-full hover:scale-105 transition-all shadow-[0_0_30px_rgba(255,255,255,0.4)] hidden text-sm md:text-base"
                >
                    Cerrar Arena
                </button>
            </div>
        </div>
    </div>
</Layout>

