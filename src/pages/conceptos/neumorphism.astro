import SEO from '../../components/SEO.astro';
---

<!doctype html>
<html lang="es">
<head>
    <SEO title="neumorphism | jjlmoya" />
    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #e0e5ec;
            font-family: system-ui, sans-serif;
            color: #4a5568;
        }
        .neu-box {
            border-radius: 50px;
            background: #e0e5ec;
            box-shadow:  20px 20px 60px #bebebe,
                         -20px -20px 60px #ffffff;
            padding: 3rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 2rem;
        }
        .neu-btn {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: #e0e5ec;
            box-shadow:  9px 9px 16px #a3b1c6,
                         -9px -9px 16px #ffffff;
            border: none;
            cursor: pointer;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.5rem;
            color: #4a5568;
            transition: all 0.2s ease;
        }
        .neu-btn:active {
            box-shadow: inset 9px 9px 16px #a3b1c6,
                        inset -9px -9px 16px #ffffff;
        }
        .back-link {
            position: absolute;
            top: 20px;
            left: 20px;
            color: #4a5568;
            text-decoration: none;
            opacity: 0.7;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <a href="/conceptos" class="back-link">&larr; volver</a>

    <div class="neu-box">
        <h2>Neumorphism</h2>
