---
export const prerender = true;
import AppLayout from "../../layouts/AppLayout.astro";
import Hero from "../../components/apps/lexi-crash/Hero.astro";
import GameModes from "../../components/apps/lexi-crash/GameModes.astro";
import SocialProof from "../../components/apps/lexi-crash/SocialProof.astro";
import Roadmap from "../../components/apps/lexi-crash/Roadmap.astro";
import FinalCTA from "../../components/apps/lexi-crash/FinalCTA.astro";
import Background from "../../components/apps/lexi-crash/Background.astro";

const title = "LexiCrash — El puzzle de palabras definitivo.";
const description =
    "Pon a prueba tu agilidad mental en el desafío de palabras definitivo. Combina letras a toda velocidad, supera retos globales y evita que el tablero colapse.";
---

<AppLayout
    title={title}
    description={description}
    image="/assets/apps/lexi-crash/icon.webp"
    color="#00D9FF"
    favicon="/assets/apps/lexi-crash/icon.webp"
    currentSlug="lexi-crash"
>
    <div
        class="min-h-screen text-white selection:bg-[#00D9FF] selection:text-[#050B14] overflow-x-hidden font-sans"
    >
        <Background />
        <Hero />
        <GameModes />
        <SocialProof />
        <Roadmap />
        <FinalCTA />
    </div>
</AppLayout>
