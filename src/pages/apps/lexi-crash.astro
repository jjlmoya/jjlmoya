---
export const prerender = true;
import AppLayout from "../../layouts/AppLayout.astro";
import { lexiCrash as app } from "../../data/apps/lexi-crash";
import { Icon } from "astro-icon/components";
import AppVideos from "../../components/apps/AppVideos.astro";

const title = `${app.title} — ${app.tagline}`;
---

<AppLayout
    title={title}
    description={app.description}
    image={app.media.icon}
    color="#00D9FF"
    favicon={app.media.icon}
    currentSlug={app.slug}
>
    <div
        class="min-h-screen bg-[#0A1628] text-white selection:bg-[#00D9FF] selection:text-[#0A1628] overflow-x-hidden"
        style="--cyan: #00D9FF; --orange: #FF4500; --yellow: #FFD700; --dark: #0A1628; --darker: #050D18;"
    >
        
        <div class="fixed inset-0 pointer-events-none overflow-hidden">
            
            <div
                class="absolute top-[-20%] left-[-10%] w-[60%] h-[60%] bg-[#00D9FF] opacity-[0.08] blur-[150px] rounded-full animate-pulse-slow"
            >
            </div>
            <div
                class="absolute bottom-[-20%] right-[-10%] w-[60%] h-[60%] bg-[#FF4500] opacity-[0.06] blur-[150px] rounded-full animate-pulse-slower"
            >
            </div>

            
            <div class="floating-letters">
                <span style="--delay: 0s; --x: 10%; --y: 20%;">L</span>
                <span style="--delay: 0.5s; --x: 85%; --y: 15%;">E</span>
                <span style="--delay: 1s; --x: 15%; --y: 70%;">X</span>
                <span style="--delay: 1.5s; --x: 75%; --y: 65%;">I</span>
                <span style="--delay: 2s; --x: 50%; --y: 40%;">C</span>
                <span style="--delay: 2.5s; --x: 30%; --y: 85%;">R</span>
                <span style="--delay: 3s; --x: 90%; --y: 80%;">A</span>
                <span style="--delay: 3.5s; --x: 60%; --y: 10%;">S</span>
                <span style="--delay: 4s; --x: 20%; --y: 50%;">H</span>
            </div>

            
            <div
                class="absolute inset-0 opacity-[0.03]"
                style="background-image: linear-gradient(#00D9FF 1px, transparent 1px), linear-gradient(90deg, #00D9FF 1px, transparent 1px); background-size: 50px 50px;"
            >
            </div>
        </div>

        
        <section class="relative pt-12 pb-20 px-6 overflow-hidden">
            <div class="max-w-7xl mx-auto">
                <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
                    
                    <div class="flex-1 text-center lg:text-left">
                        
                        <div class="relative mb-8 group inline-block">
                            <div
                                class="absolute inset-0 bg-[#00D9FF] blur-[60px] opacity-40 group-hover:opacity-70 transition-opacity duration-700 scale-110"
                            >
                            </div>
                            <img
                                src={app.media.icon}
                                alt={app.title}
                                class="w-24 h-24 md:w-28 md:h-28 rounded-[2rem] relative z-10 shadow-2xl border-4 border-[#00D9FF]/30 group-hover:scale-105 transition-transform duration-500"
                            />
                        </div>

                        
                        <h1
                            class="text-5xl sm:text-7xl lg:text-8xl font-black tracking-tighter mb-4 leading-none arcade-title"
                        >
                            LEXI<span class="text-[#00D9FF] glow-text">CRASH</span>
                        </h1>

                        
                        <p
                            class="text-lg md:text-xl font-bold text-[#00D9FF] mb-3 uppercase tracking-wide"
                        >
                            {app.subtitle}
                        </p>

                        <p
                            class="text-base md:text-lg text-white/60 mb-10 max-w-xl mx-auto lg:mx-0"
                        >
                            Puzle de agilidad mental y velocidad
                        </p>

                        
                        <div class="flex flex-wrap justify-center lg:justify-start gap-4">
                            {
                                app.stores.googlePlay ? (
                                    <a
                                        href={app.stores.googlePlay}
                                        target="_blank"
                                        class="arcade-btn-store group"
                                    >
                                        <Icon name="mdi:google-play" class="w-7 h-7 mr-3" />
                                        <div class="text-left">
                                            <span class="block text-[9px] font-bold uppercase tracking-widest opacity-70">
                                                Descarga en
                                            </span>
                                            <span class="text-lg font-black">Google Play</span>
                                        </div>
                                    </a>
                                ) : (
                                    <div class="arcade-btn-store-disabled group">
                                        <Icon
                                            name="mdi:google-play"
                                            class="w-7 h-7 mr-3 opacity-50"
                                        />
                                        <div class="text-left">
                                            <span class="block text-[9px] font-bold uppercase tracking-widest opacity-50">
                                                Próximamente en
                                            </span>
                                            <span class="text-lg font-black opacity-50">
                                                Google Play
                                            </span>
                                        </div>
                                    </div>
                                )
                            }

                            {
                                app.stores.appStore ? (
                                    <a
                                        href={app.stores.appStore}
                                        target="_blank"
                                        class="arcade-btn-store group"
                                    >
                                        <Icon name="mdi:apple" class="w-7 h-7 mr-3" />
                                        <div class="text-left">
                                            <span class="block text-[9px] font-bold uppercase tracking-widest opacity-70">
                                                Descarga en
                                            </span>
                                            <span class="text-lg font-black">App Store</span>
                                        </div>
                                    </a>
                                ) : (
                                    <div class="arcade-btn-store-disabled group">
                                        <Icon name="mdi:apple" class="w-7 h-7 mr-3 opacity-50" />
                                        <div class="text-left">
                                            <span class="block text-[9px] font-bold uppercase tracking-widest opacity-50">
                                                Próximamente en
                                            </span>
                                            <span class="text-lg font-black opacity-50">
                                                App Store
                                            </span>
                                        </div>
                                    </div>
                                )
                            }
                        </div>
                    </div>

                    
                    <div class="flex-1 w-full max-w-md lg:max-w-lg">
                        <div class="relative group">
                            <div
                                class="absolute -inset-6 bg-gradient-to-r from-[#00D9FF] via-[#FF4500] to-[#00D9FF] opacity-20 blur-3xl group-hover:opacity-30 transition-opacity animate-pulse-slow"
                            >
                            </div>
                            <div
                                class="relative rounded-[2rem] overflow-hidden border-4 border-[#00D9FF]/20 shadow-2xl transform group-hover:scale-[1.02] transition-transform duration-700"
                            >
                                <img
                                    src={app.media.hero}
                                    alt="LexiCrash Gameplay"
                                    class="w-full h-auto"
                                />
                                <div
                                    class="absolute inset-0 bg-gradient-to-t from-[#0A1628]/60 via-transparent to-transparent"
                                >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        
        <section
            class="py-20 px-6 border-y border-[#00D9FF]/10 bg-gradient-to-b from-transparent via-[#050D18]/50 to-transparent relative overflow-hidden"
        >
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-px h-20 bg-gradient-to-b from-[#00D9FF] to-transparent"
            >
            </div>

            <div class="max-w-5xl mx-auto text-center">
                <span
                    class="text-[10px] font-black uppercase tracking-[0.5em] text-[#00D9FF] mb-6 block"
                    >{app.concept.label}</span
                >

                <h2 class="text-5xl md:text-7xl font-black mb-8 leading-tight">
                    {app.concept.main}
                    <span class="text-[#00D9FF] glow-text block mt-2"
                        >{app.concept.highlighted}</span
                    >
                </h2>

                <div
                    class="h-1 w-32 bg-gradient-to-r from-transparent via-[#00D9FF] to-transparent mx-auto mb-10"
                >
                </div>

                <p
                    class="text-xl md:text-2xl font-medium leading-relaxed text-white/80 max-w-3xl mx-auto"
                >
                    {app.philosophy}
                </p>
            </div>
        </section>

        
        <section id="modos" class="py-24 px-6">
            <div class="max-w-7xl mx-auto">
                <div class="text-center mb-16">
                    <h2 class="text-5xl md:text-7xl font-black mb-6">
                        MODOS DE <span class="text-[#00D9FF] glow-text">JUEGO</span>
                    </h2>
                    <p class="text-xl text-white/60">
                        Múltiples formas de poner a prueba tu vocabulario
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {
                        app.benefits.map((benefit, i) => (
                            <div class="game-mode-card group">
                                <div class="absolute inset-0 bg-gradient-to-br from-[#00D9FF]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />

                                <div class="relative z-10">
                                    <div class="flex items-start gap-6 mb-4">
                                        <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-[#00D9FF] to-[#0088CC] flex items-center justify-center flex-shrink-0 group-hover:scale-110 group-hover:rotate-6 transition-all duration-500 shadow-lg shadow-[#00D9FF]/50">
                                            <Icon name={benefit.icon} class="w-7 h-7 text-white" />
                                        </div>
                                        <div class="flex-1">
                                            <h3 class="text-2xl md:text-3xl font-black mb-3 text-white uppercase tracking-tight">
                                                {benefit.title}
                                            </h3>
                                            <p class="text-base md:text-lg text-white/70 leading-relaxed group-hover:text-white/90 transition-colors">
                                                {benefit.text}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        
        <section id="features" class="py-24 px-6 overflow-hidden">
            <div class="max-w-7xl mx-auto">
                <div class="flex flex-col lg:flex-row gap-16 items-center">
                    <div class="lg:w-1/2 order-2 lg:order-1">
                        <h2 class="text-5xl md:text-7xl font-black mb-8 leading-none">
                            {app.benefitsTitle.main}<br />
                            <span class="text-[#FF4500] glow-text-orange"
                                >{app.benefitsTitle.highlighted}</span
                            >
                        </h2>
                        <p class="text-xl md:text-2xl text-white/70 leading-relaxed mb-10">
                            {app.description}
                        </p>

                        
                        <div class="space-y-4">
                            {
                                app.features.map((feature) => (
                                    <div class="flex items-start gap-4 p-4 rounded-2xl bg-white/5 border border-white/10 hover:border-[#00D9FF]/30 transition-colors">
                                        <div class="w-2 h-2 rounded-full bg-[#00D9FF] mt-2 flex-shrink-0" />
                                        <div>
                                            <h4 class="font-bold text-lg mb-1">{feature.title}</h4>
                                            <p class="text-white/60 text-sm">{feature.text}</p>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <div
                        class="lg:w-1/2 order-1 lg:order-2 flex justify-center items-center gap-4 lg:gap-6"
                    >
                        {
                            app.media.screenshots.map((screenshot, i) => (
                                <div class="relative group screenshot-container">
                                    <div class="absolute -inset-3 bg-[#00D9FF] opacity-20 blur-2xl group-hover:opacity-40 transition-opacity rounded-[3rem]" />
                                    <img
                                        src={screenshot}
                                        alt={`Screenshot ${i + 1}`}
                                        class="relative w-full max-w-[200px] md:max-w-[240px] rounded-[2rem] md:rounded-[2.5rem] shadow-[0_40px_80px_-20px_rgba(0,0,0,0.9)] border-3 md:border-4 border-[#00D9FF]/20 group-hover:scale-[1.03] group-hover:border-[#00D9FF]/40 transition-all duration-700"
                                        style={
                                            i % 2 === 0
                                                ? "transform: translateY(-30px) rotate(-2deg);"
                                                : "transform: translateY(30px) rotate(2deg);"
                                        }
                                    />
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>

        
        <section class="py-32 px-6 text-center relative">
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-px h-32 bg-gradient-to-b from-white/10 to-transparent"
            >
            </div>

            <div class="max-w-4xl mx-auto relative z-10">
                <h2 class="text-6xl md:text-8xl font-black mb-8 leading-none">
                    ¿LISTO PARA EL
                    <span class="text-[#FFD700] glow-text-yellow block mt-2">DESAFÍO?</span>
                </h2>
                <p class="text-2xl md:text-3xl font-medium mb-16 text-white/60">
                    Demuestra tu capacidad de respuesta y mejora tu agilidad mental en cada sesión.
                </p>

                <div class="flex justify-center flex-wrap gap-6">
                    {
                        app.stores.googlePlay ? (
                            <a
                                href={app.stores.googlePlay}
                                target="_blank"
                                class="arcade-btn-cta group"
                            >
                                <Icon name="mdi:google-play" class="w-8 h-8 mr-4" />
                                <div class="text-left">
                                    <span class="block text-[10px] font-bold uppercase tracking-widest opacity-70">
                                        Descarga en
                                    </span>
                                    <span class="text-2xl font-black">Google Play</span>
                                </div>
                            </a>
                        ) : (
                            <div class="arcade-btn-cta-disabled">
                                <Icon name="mdi:google-play" class="w-8 h-8 mr-4 opacity-40" />
                                <div class="text-left">
                                    <span class="block text-[10px] font-bold uppercase tracking-widest opacity-40">
                                        Próximamente en
                                    </span>
                                    <span class="text-2xl font-black opacity-40">Google Play</span>
                                </div>
                            </div>
                        )
                    }

                    {
                        app.stores.appStore ? (
                            <a
                                href={app.stores.appStore}
                                target="_blank"
                                class="arcade-btn-cta group"
                            >
                                <Icon name="mdi:apple" class="w-8 h-8 mr-4" />
                                <div class="text-left">
                                    <span class="block text-[10px] font-bold uppercase tracking-widest opacity-70">
                                        Descarga en
                                    </span>
                                    <span class="text-2xl font-black">App Store</span>
                                </div>
                            </a>
                        ) : (
                            <div class="arcade-btn-cta-disabled">
                                <Icon name="mdi:apple" class="w-8 h-8 mr-4 opacity-40" />
                                <div class="text-left">
                                    <span class="block text-[10px] font-bold uppercase tracking-widest opacity-40">
                                        Próximamente en
                                    </span>
                                    <span class="text-2xl font-black opacity-40">App Store</span>
                                </div>
                            </div>
                        )
                    }
                </div>
            </div>
        </section>
    </div>

    <style>
        @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap");

        * {
            font-family: "Poppins", sans-serif;
        }

        .arcade-title {
            text-shadow:
                0 0 20px rgba(0, 217, 255, 0.5),
                0 0 40px rgba(0, 217, 255, 0.3),
                0 5px 10px rgba(0, 0, 0, 0.5);
            animation: title-pulse 3s ease-in-out infinite;
        }

        @keyframes title-pulse {
            0%,
            100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.02);
            }
        }

        .glow-text {
            text-shadow:
                0 0 30px rgba(0, 217, 255, 0.8),
                0 0 60px rgba(0, 217, 255, 0.4),
                0 0 90px rgba(0, 217, 255, 0.2);
        }

        .glow-text-orange {
            text-shadow:
                0 0 30px rgba(255, 69, 0, 0.8),
                0 0 60px rgba(255, 69, 0, 0.4),
                0 0 90px rgba(255, 69, 0, 0.2);
        }

        .glow-text-yellow {
            text-shadow:
                0 0 30px rgba(255, 215, 0, 0.8),
                0 0 60px rgba(255, 215, 0, 0.4),
                0 0 90px rgba(255, 215, 0, 0.2);
        }

        .arcade-btn-primary {
            display: inline-flex;
            align-items: center;
            padding: 1.25rem 2.5rem;
            background: linear-gradient(135deg, #ffd700 0%, #ffa500 100%);
            color: #0a1628;
            border-radius: 100px;
            font-weight: 900;
            font-size: 1.125rem;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
            box-shadow:
                0 10px 30px -10px rgba(255, 215, 0, 0.6),
                0 0 0 0 rgba(255, 215, 0, 0.4);
            position: relative;
            overflow: hidden;
        }

        .arcade-btn-primary::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(
                135deg,
                transparent 0%,
                rgba(255, 255, 255, 0.3) 50%,
                transparent 100%
            );
            transform: translateX(-100%);
            transition: transform 0.6s;
        }

        .arcade-btn-primary:hover::before {
            transform: translateX(100%);
        }

        .arcade-btn-primary:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow:
                0 20px 40px -10px rgba(255, 215, 0, 0.8),
                0 0 0 8px rgba(255, 215, 0, 0.2);
        }

        .arcade-btn-secondary {
            display: inline-flex;
            align-items: center;
            padding: 1.25rem 2.5rem;
            background: transparent;
            color: #00d9ff;
            border: 3px solid #00d9ff;
            border-radius: 100px;
            font-weight: 900;
            font-size: 1.125rem;
            text-decoration: none;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            transition: all 0.3s cubic-bezier(0.19, 1, 0.22, 1);
            box-shadow: 0 0 20px rgba(0, 217, 255, 0.3);
        }

        .arcade-btn-secondary:hover {
            background: #00d9ff;
            color: #0a1628;
            transform: translateY(-5px);
            box-shadow:
                0 20px 40px -10px rgba(0, 217, 255, 0.6),
                0 0 30px rgba(0, 217, 255, 0.5);
        }

        .arcade-btn-cta {
            display: inline-flex;
            align-items: center;
            padding: 1.5rem 3rem;
            background: linear-gradient(135deg, #00d9ff 0%, #0088cc 100%);
            color: white;
            border-radius: 2rem;
            text-decoration: none;
            transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
            box-shadow:
                0 20px 50px -15px rgba(0, 217, 255, 0.5),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
        }

        .arcade-btn-cta::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(
                135deg,
                transparent 0%,
                rgba(255, 255, 255, 0.2) 50%,
                transparent 100%
            );
            transform: translateX(-100%);
            transition: transform 0.6s;
        }

        .arcade-btn-cta:hover::before {
            transform: translateX(100%);
        }

        .arcade-btn-cta:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow:
                0 30px 60px -15px rgba(0, 217, 255, 0.7),
                inset 0 1px 0 rgba(255, 255, 255, 0.3);
        }

        .arcade-btn-store {
            display: inline-flex;
            align-items: center;
            padding: 1.25rem 2.5rem;
            background: linear-gradient(135deg, #00d9ff 0%, #0088cc 100%);
            color: white;
            border-radius: 1.5rem;
            text-decoration: none;
            transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
            box-shadow:
                0 15px 40px -10px rgba(0, 217, 255, 0.6),
                inset 0 2px 0 rgba(255, 255, 255, 0.3),
                inset 0 -2px 0 rgba(0, 0, 0, 0.2);
            position: relative;
            overflow: hidden;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        .arcade-btn-store::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(
                135deg,
                transparent 0%,
                rgba(255, 255, 255, 0.3) 50%,
                transparent 100%
            );
            transform: translateX(-100%);
            transition: transform 0.6s;
        }

        .arcade-btn-store:hover::before {
            transform: translateX(100%);
        }

        .arcade-btn-store:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow:
                0 25px 50px -10px rgba(0, 217, 255, 0.8),
                inset 0 2px 0 rgba(255, 255, 255, 0.4),
                inset 0 -2px 0 rgba(0, 0, 0, 0.2);
            border-color: rgba(255, 255, 255, 0.3);
        }

        .arcade-btn-store-disabled {
            display: inline-flex;
            align-items: center;
            padding: 1.25rem 2.5rem;
            background: linear-gradient(
                135deg,
                rgba(0, 217, 255, 0.15) 0%,
                rgba(0, 136, 204, 0.15) 100%
            );
            color: rgba(255, 255, 255, 0.4);
            border: 2px solid rgba(0, 217, 255, 0.25);
            border-radius: 1.5rem;
            cursor: not-allowed;
            box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .arcade-btn-cta-disabled {
            display: inline-flex;
            align-items: center;
            padding: 1.5rem 3rem;
            background: linear-gradient(
                135deg,
                rgba(0, 217, 255, 0.15) 0%,
                rgba(0, 136, 204, 0.15) 100%
            );
            color: rgba(255, 255, 255, 0.4);
            border: 2px solid rgba(0, 217, 255, 0.25);
            border-radius: 2rem;
            cursor: not-allowed;
            box-shadow: inset 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .game-mode-card {
            position: relative;
            padding: 2rem;
            background: linear-gradient(
                135deg,
                rgba(0, 217, 255, 0.05) 0%,
                rgba(0, 136, 204, 0.05) 100%
            );
            border: 2px solid rgba(0, 217, 255, 0.15);
            border-radius: 2rem;
            transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
            overflow: hidden;
        }

        .game-mode-card:hover {
            border-color: rgba(0, 217, 255, 0.4);
            transform: translateY(-8px);
            box-shadow:
                0 30px 60px -15px rgba(0, 217, 255, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
        }

        .floating-letters {
            position: absolute;
            inset: 0;
            pointer-events: none;
        }

        .floating-letters span {
            position: absolute;
            font-size: 4rem;
            font-weight: 900;
            color: rgba(0, 217, 255, 0.08);
            animation: float 8s ease-in-out infinite;
            animation-delay: var(--delay);
            left: var(--x);
            top: var(--y);
        }

        @keyframes float {
            0%,
            100% {
                transform: translateY(0) rotate(0deg);
            }
            25% {
                transform: translateY(-30px) rotate(5deg);
            }
            50% {
                transform: translateY(-60px) rotate(-5deg);
            }
            75% {
                transform: translateY(-30px) rotate(3deg);
            }
        }

        @keyframes pulse-slow {
            0%,
            100% {
                opacity: 0.08;
