---
export const prerender = true;
import AppLayout from "../../layouts/AppLayout.astro";
import { monmons as app } from "../../data/apps/monmons";
import { Icon } from "astro-icon/components";

const title = `${app.title} — ${app.subtitle}`;
---

<AppLayout
    title={title}
    description={app.description}
    image={app.media.icon}
    color={app.theme.primary}
    favicon={app.media.icon}
    currentSlug={app.slug}
>
    <div
        class="min-h-screen bg-[#1a1a1a] text-[#f0f0f0] selection:bg-[#7FB031] selection:text-white overflow-x-hidden font-mono"
        style={`--primary: ${app.theme.primary}; --accent: ${app.theme.accent};`}
    >
        {}
        <div class="fixed inset-0 pointer-events-none z-50 crt-screen"></div>

        {}
        <section
            class="relative min-h-screen flex flex-col items-center justify-center px-6 py-24 overflow-hidden"
        >
            <div class="absolute inset-0 bg-gradient-to-b from-[#2a2a2a] to-[#1a1a1a] opacity-50">
            </div>

            {}
            <div
                class="absolute inset-0 opacity-10 bg-[linear-gradient(to_right,#808080_1px,transparent_1px),linear-gradient(to_bottom,#808080_1px,transparent_1px)] bg-[size:40px_40px]"
            >
            </div>

            <div class="relative z-10 flex flex-col items-center text-center">
                <div class="mb-8 relative group">
                    <div
                        class="absolute -inset-6 bg-[#7FB031] opacity-20 blur-2xl group-hover:opacity-40 transition-opacity"
                    >
                    </div>
                    <img
                        src={app.media.icon}
                        alt={app.title}
                        class="w-40 h-40 md:w-56 md:h-56 rounded-none border-8 border-white pixelate shadow-[12px_12px_0_rgba(0,0,0,0.5)]"
                    />
                </div>

                <h1
                    class="text-7xl md:text-9xl font-black tracking-tighter mb-4 text-[#7FB031] uppercase game-title shadow-glow"
                >
                    {app.title}
                </h1>

                <div
                    class="px-6 py-2 bg-white text-black font-black text-xl md:text-3xl mb-12 uppercase tracking-[0.2em] transform -rotate-1 italic shadow-[6px_6px_0_#7FB031]"
                >
                    {app.subtitle}
                </div>

                <p
                    class="text-xl md:text-2xl font-medium text-white/60 max-w-2xl mb-16 leading-relaxed bg-black/40 backdrop-blur-md p-6 border-l-8 border-[#7FB031]"
                >
                    {app.description}
                </p>

                <div class="flex flex-wrap justify-center gap-8">
                    <div class="pixel-btn-container">
                        <div class="pixel-btn disabled">
                            <Icon name="mdi:google-play" class="w-8 h-8" />
                            <span>Iniciando Aventura...</span>
                        </div>
                    </div>
                </div>
            </div>

            {}
            <div class="mt-12 relative w-full max-w-[280px] mx-auto px-4">
                <div class="game-frame">
                    <img
                        src={app.media.hero}
                        alt="Monmons Gameplay"
                        class="w-full h-auto max-h-[500px] object-cover object-top pixelate"
                    />
                    <div class="scanlines"></div>
                </div>
            </div>
        </section>

        {}
        <section class="py-32 px-6 bg-[#121212] relative">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-24 items-center">
                    <div class="order-2 lg:order-1">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            {
                                app.benefits.map((benefit) => (
                                    <div class="p-8 bg-zinc-900/50 border-2 border-zinc-800 rounded-none hover:border-[#7FB031] transition-all group">
                                        <div class="w-12 h-12 flex items-center justify-center bg-zinc-800 mb-6 group-hover:bg-[#7FB031] transition-colors">
                                            <Icon name={benefit.icon} class="w-6 h-6 text-white" />
                                        </div>
                                        <h3 class="text-xl font-black uppercase mb-4 text-[#7FB031]">
                                            {benefit.title}
                                        </h3>
                                        <p class="text-sm text-zinc-500 leading-relaxed font-mono italic">
                                            {benefit.text}
                                        </p>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <div class="order-1 lg:order-2">
                        <span
                            class="text-[12px] font-black uppercase tracking-[0.6em] text-[#7FB031] mb-6 block"
                            >Manual del Entrenador</span
                        >
                        <h2
                            class="text-6xl md:text-8xl font-black uppercase italic leading-[0.85] mb-12"
                        >
                            {app.concept.main}<br />
                            <span class="text-white/20 select-none">{app.concept.highlighted}</span>
                        </h2>
                        <div class="bg-[#7FB031] p-1 shadow-[8px_8px_0_#fff]">
                            <div class="bg-black p-8 border-4 border-[#1a1a1a]">
                                <p
                                    class="text-lg md:text-xl text-[#7FB031] leading-relaxed font-mono"
                                >
                                    &gt; {app.philosophy}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {}
        <section class="py-32 px-6">
            <div class="max-w-7xl mx-auto">
                <div class="flex flex-col lg:flex-row gap-20 items-center">
                    <div class="lg:w-1/2 flex justify-center">
                        <div class="game-frame-screenshot-phone">
                            <img
                                src={app.media.screenshots[0]}
                                alt="Game Screenshot"
                                class="w-full h-auto pixelate rounded-[2.8rem]"
                            />
                            <div class="scanlines"></div>
                        </div>
                    </div>

                    <div class="lg:w-1/2">
                        <h2
                            class="text-5xl md:text-8xl font-black mb-12 uppercase italic leading-none"
                        >
                            {app.benefitsTitle.main}<br />
                            <span class="text-[#7FB031]">{app.benefitsTitle.highlighted}</span>
                        </h2>
                    </div>
                </div>
            </div>
        </section>

        {}
        <section class="py-32 px-6 bg-[#0a0a0a]">
            <div class="max-w-7xl mx-auto text-center mb-20">
                <h2 class="text-4xl md:text-6xl font-black uppercase italic tracking-tighter">
                    Sistemas de Juego
                </h2>
            </div>
            <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {
                    app.features.map((f) => (
                        <div class="feature-card-game group">
                            <div class="feature-icon-box">
                                <Icon
                                    name={f.icon}
                                    class="w-10 h-10 group-hover:scale-125 transition-transform"
                                />
                            </div>
                            <h4 class="text-xl font-black uppercase mb-4 text-[#7FB031]">
                                {f.title}
                            </h4>
                            <p class="text-xs text-zinc-500 leading-relaxed italic">{f.text}</p>
                        </div>
                    ))
                }
            </div>
        </section>

        {}
        <section class="py-48 px-6 relative bg-gradient-to-b from-black to-[#1a1a1a]">
            <div class="max-w-4xl mx-auto relative px-10 py-16">
                {
                    app.quote && (
                        <div class="dialogue-box">
                            <div class="dialogue-header">
                                <span class="text-[#7FB031]">NPC_MONMON_DEV</span>
                                <div class="flex gap-1">
                                    <div class="w-2 h-2 bg-white/20" />
                                    <div class="w-2 h-2 bg-[#7FB031]" />
                                </div>
                            </div>
                            <div class="dialogue-content">
                                <p class="text-2xl md:text-4xl font-bold italic text-white/90 leading-tight">
                                    "{app.quote.text}"
                                </p>
                            </div>
                            <div class="dialogue-footer">
                                <span>— {app.quote.author}</span>
                                <div class="blink-cursor" />
                            </div>
                        </div>
                    )
                }

                {}
                <div class="mt-40 text-center">
                    <h3
                        class="text-6xl md:text-[12rem] font-black uppercase italic opacity-5 tracking-tighter select-none leading-none mb-20"
                    >
                        MONMONS ARE COMING.
                    </h3>
                    <div class="inline-block relative">
                        <div
                            class="absolute -inset-4 bg-[#7FB031] blur-2xl opacity-10 animate-pulse"
                        >
                        </div>
                        <p
                            class="text-[#7FB031] text-xl md:text-2xl font-black tracking-[0.5em] italic uppercase"
                        >
                            Aventura en preparación
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</AppLayout>

<style>
    .crt-screen {
        background:
            radial-gradient(circle, rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 100%),
            linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.1) 50%),
            linear-gradient(
                90deg,
                rgba(255, 0, 0, 0.06),
                rgba(0, 255, 0, 0.02),
                rgba(0, 0, 255, 0.06)
            );
        background-size:
            100% 100%,
            100% 2px,
            3px 100%;
        pointer-events: none;
    }

    .pixelate {
        image-rendering: pixelated;
        image-rendering: crisp-edges;
    }

    .game-title {
        text-shadow:
            4px 4px 0 #354021,
            -1px -1px 0 #fff;
    }

    .shadow-glow {
        filter: drop-shadow(0 0 10px rgba(127, 176, 49, 0.3));
    }

    .pixel-btn-container {
        position: relative;
        display: inline-block;
    }

    .pixel-btn {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.5rem 3rem;
        background: #333;
        color: rgba(255, 255, 255, 0.2);
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        position: relative;
        border: 4px solid #444;
        box-shadow: 6px 6px 0 #111;
    }

    .pixel-btn.disabled {
        cursor: not-allowed;
        filter: grayscale(1);
    }

    .game-frame {
        position: relative;
        border: 12px solid #222;
        background: #000;
        box-shadow: 0 40px 80px rgba(0, 0, 0, 0.8);
        overflow: hidden;
    }

    .scanlines {
        position: absolute;
        inset: 0;
        background: linear-gradient(to bottom, transparent 50%, rgba(0, 0, 0, 0.2) 50%);
        background-size: 100% 4px;
        pointer-events: none;
    }

    .game-frame-screenshot {
        position: relative;
        padding: 1rem;
        background: #222;
        border: 2px solid #333;
        box-shadow: 20px 20px 0 #000;
    }

    .ui-overlay {
        position: absolute;
        top: 2rem;
        left: 2rem;
        right: 2rem;
        display: flex;
        justify-content: space-between;
    }

    .hp-bar {
        width: 120px;
        height: 12px;
        background: #111;
        border: 2px solid #fff;
        position: relative;
    }
    .hp-bar::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        width: 70%;
        background: #7fb031;
    }

    .status-box {
        background: #7fb031;
        color: white;
        padding: 2px 8px;
        font-size: 10px;
        font-weight: 900;
    }

    .feature-card-game {
        padding: 2.5rem;
        background: #1a1a1a;
        border: 2px solid #222;
        transition: all 0.3s ease;
        position: relative;
    }
    .feature-card-game:hover {
        border-color: #7fb031;
        transform: translateY(-5px);
        background: #222;
    }

    .feature-icon-box {
        width: 60px;
        height: 60px;
        background: #222;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
        color: #7fb031;
    }

    .dialogue-box {
        background: #000;
        border: 6px solid #f0f0f0;
        padding: 2rem;
        position: relative;
        box-shadow: 12px 12px 0 rgba(0, 0, 0, 0.5);
    }
    .dialogue-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        font-size: 0.8rem;
        font-weight: 900;
    }
    .dialogue-footer {
        margin-top: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        font-size: 1rem;
        opacity: 0.5;
    }
    .blink-cursor {
        width: 12px;
        height: 12px;
        background: #7fb031;
        animation: blink 1s infinite steps(2);
    }

    @keyframes blink {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
    }

    .game-frame-screenshot-phone {
        position: relative;
        width: 100%;
        max-width: 260px;
        padding: 0.75rem;
        background: #222;
        border-radius: 3.5rem;
        border: 1px solid #333;
        box-shadow: 0 40px 80px -20px rgba(0, 0, 0, 0.8);
    }

    .ui-overlay-phone {
        position: absolute;
        top: 2.5rem;
        left: 2rem;
        right: 2rem;
        display: flex;
        justify-content: space-between;
        z-index: 10;
    }

    .hp-bar-phone {
        width: 80px;
        height: 8px;
        background: #111;
        border: 1px solid #fff;
        position: relative;
    }
    .hp-bar-phone::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        width: 70%;
        background: #7fb031;
    }

    .status-box-phone {
        background: #7fb031;
        color: white;
        padding: 1px 4px;
        font-size: 8px;
        font-weight: 900;
        z-index: 10;
    }

    @media (max-width: 768px) {
        .game-title {
            font-size: 4rem;
        }
    }
</style>
