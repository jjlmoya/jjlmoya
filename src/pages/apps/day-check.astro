---
import AppLayout from "../../layouts/AppLayout.astro";
import { dayCheck as app } from "../../data/apps/day-check";
import { Icon } from "astro-icon/components";

const title = `${app.title} — ${app.tagline}`;
---

<AppLayout
    title={title}
    description={app.description}
    image={app.media.icon}
    color={app.theme.primary}
    favicon={app.media.icon}
    currentSlug={app.slug}
>
    <div
        class="min-h-screen bg-[#0F0A1E] text-white selection:bg-[#B185FF] selection:text-white overflow-x-hidden pt-20"
        style={`--primary: ${app.theme.primary}; --accent: ${app.theme.accent};`}
    >
        {}
        <div class="fixed inset-0 pointer-events-none">
            <div
                class="absolute top-0 right-0 w-[800px] h-[800px] bg-[#B185FF] opacity-[0.1] blur-[150px] rounded-full"
            >
            </div>
            <div
                class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-[#4ECDC4] opacity-[0.05] blur-[150px] rounded-full"
            >
            </div>
        </div>

        {}
        <section class="relative py-20 lg:py-32 px-6">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
                    <div>
                        <div class="flex items-center gap-4 mb-8">
                            <img
                                src={app.media.icon}
                                alt="Icon"
                                class="w-16 h-16 rounded-[1.5rem] shadow-xl border border-white/10"
                            />
                            <span
                                class="text-xs font-black uppercase tracking-[0.3em] text-[#B185FF]"
                                >{app.category}</span
                            >
                        </div>

                        <h1
                            class="text-6xl md:text-8xl font-black tracking-tight mb-8 leading-[0.9]"
                        >
                            {app.title}<br />
                            <span
                                class="text-transparent bg-clip-text bg-gradient-to-r from-[#B185FF] to-[#4ECDC4]"
                                >Contador Elegante</span
                            >
                        </h1>

                        <p class="text-xl md:text-2xl font-light text-white/60 max-w-lg mb-12">
                            {app.description}
                        </p>

                        <div class="flex flex-wrap gap-4 mb-16">
                            {
                                app.stores.googlePlay && (
                                    <a
                                        href={app.stores.googlePlay}
                                        target="_blank"
                                        class="day-btn group"
                                    >
                                        <Icon name="mdi:google-play" class="w-6 h-6 mr-3" />
                                        <span>Google Play</span>
                                    </a>
                                )
                            }
                        </div>

                        <div class="flex gap-12 border-t border-white/5 pt-12">
                            {
                                app.highlights.map((h) => (
                                    <div>
                                        <span class="block text-[10px] font-black uppercase tracking-widest text-white/30 mb-2">
                                            {h.label}
                                        </span>
                                        <span class="text-2xl font-black text-white">
                                            {h.value}
                                        </span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <div class="relative">
                        <div
                            class="absolute inset-0 bg-gradient-to-tr from-[#B185FF]/20 to-transparent blur-3xl"
                        >
                        </div>
                        <div class="relative glass-card p-4 rounded-[3rem]">
                            <img
                                src={app.media.hero}
                                alt="Day Check App Showcase"
                                class="w-full h-auto rounded-[2.5rem] shadow-2xl"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {}
        <section class="py-32 px-6 bg-white/5 backdrop-blur-3xl border-y border-white/5 relative">
            <div class="max-w-7xl mx-auto">
                <div class="text-center max-w-3xl mx-auto mb-20">
                    <h2 class="text-4xl md:text-6xl font-black mb-8 leading-tight">
                        {app.benefitsTitle.main}
                        <span class="text-[#B185FF]">{app.benefitsTitle.highlighted}</span>
                    </h2>
                    <p class="text-xl text-white/50 font-light">{app.philosophy}</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                    {
                        app.benefits.map((benefit) => (
                            <div class="glass-card p-10 hover:bg-white/10 transition-colors group">
                                <div class="w-12 h-12 rounded-2xl bg-white/5 flex items-center justify-center mb-8 border border-white/10 text-[#B185FF] group-hover:scale-110 transition-transform">
                                    <Icon name={benefit.icon} class="w-6 h-6" />
                                </div>
                                <h3 class="text-xl font-bold mb-4">{benefit.title}</h3>
                                <p class="text-sm text-white/40 leading-relaxed">{benefit.text}</p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        {}
        <section class="py-32 px-6">
            <div class="max-w-7xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                    {
                        app.features.map((f) => (
                            <div class="flex gap-8 p-10 rounded-3xl bg-white/[0.02] border border-white/5 hover:border-white/10 transition-colors">
                                <div class="shrink-0 w-14 h-14 rounded-2xl bg-[#B185FF]/10 flex items-center justify-center text-[#B185FF]">
                                    <Icon name={f.icon} class="w-7 h-7" />
                                </div>
                                <div>
                                    <h4 class="text-xl font-bold mb-4">{f.title}</h4>
                                    <p class="text-white/50 leading-relaxed">{f.text}</p>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        {}
        <section class="py-48 px-6 text-center">
            <div
                class="max-w-4xl mx-auto glass-card py-24 px-12 rounded-[4rem] relative overflow-hidden"
            >
                <div class="absolute inset-0 bg-[#B185FF] opacity-5"></div>

                {
                    app.quote && (
                        <>
                            <blockquote class="text-3xl md:text-5xl font-light italic mb-12 text-white/80 relative z-10 leading-tight">
                                "{app.quote.text}"
                            </blockquote>
                            <cite class="block text-[#B185FF] font-black uppercase tracking-[0.3em] mb-16 not-italic z-10 relative">
                                — {app.quote.author}
                            </cite>
                        </>
                    )
                }

                {
                    app.stores.googlePlay && (
                        <a
                            href={app.stores.googlePlay}
                            target="_blank"
                            class="day-btn-large group z-10 relative"
                        >
                            <span>OBTENER DAY CHECK</span>
                            <Icon
                                name="mdi:arrow-right"
                                class="w-6 h-6 ml-3 group-hover:translate-x-2 transition-transform"
                            />
                        </a>
                    )
                }
            </div>
        </section>
    </div>
</AppLayout>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 2rem;
    }

    .day-btn {
        display: inline-flex;
        align-items: center;
        padding: 1.25rem 2.5rem;
        background: white;
        color: #0f0a1e;
        border-radius: 100px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-size: 0.8rem;
        transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    }
    .day-btn:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.3);
    }

    .day-btn-large {
        display: inline-flex;
        align-items: center;
        padding: 1.5rem 3.5rem;
        background: #b185ff;
        color: white;
        border-radius: 100px;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.2em;
        transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    }
    .day-btn-large:hover {
        transform: scale(1.05);
        box-shadow: 0 30px 60px -15px rgba(177, 133, 255, 0.4);
    }
</style>
