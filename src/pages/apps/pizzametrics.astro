---
export const prerender = true;
import AppLayout from "../../layouts/AppLayout.astro";
import { pizzametrics as app } from "../../data/apps/pizzametrics";

import Hero from "../../components/apps/pizzametrics/Hero.astro";
import ShowCase from "../../components/apps/pizzametrics/ShowCase.astro";
import Empathy from "../../components/apps/pizzametrics/Empathy.astro";
import Pantry from "../../components/apps/pizzametrics/Pantry.astro";
import Gallery from "../../components/apps/pizzametrics/Gallery.astro";
import Shorts from "../../components/apps/pizzametrics/Shorts.astro";
import Transparency from "../../components/apps/pizzametrics/Transparency.astro";
import Footer from "../../components/apps/pizzametrics/Footer.astro";

const title = "Calculadora de Pizza Napolitana: Precisión de Maestro en tu Bolsillo";
---

<AppLayout
    title={title}
    description="Ajusta hidratación, levadura y tiempos de fermentación según la temperatura real de tu cocina. Compatible con Biga, Poolish y masa directa."
    image={app.media.icon}
    color={app.theme.primary}
    favicon={app.media.icon}
    currentSlug={app.slug}
>
    <div
        class="min-h-screen bg-[#FDFBF7] text-[#1A1C2C] selection:bg-[#E63946] selection:text-white font-sans overflow-x-hidden"
    >
        <Hero icon={app.media.icon} stores={app.stores} />
        <ShowCase youtubeId="CgnZaRWkm5Y" />
        <Empathy />
        <Pantry pantryImg="/assets/apps/pizzametrics/pantry.webp" />
        <Gallery
            images={[
                "/assets/apps/pizzametrics/dashboard.webp",
                "/assets/apps/pizzametrics/calculator.webp",
                "/assets/apps/pizzametrics/screenshot-6-list-history.webp",
            ]}
        />
        <Shorts
            shortIds={["CgnZaRWkm5Y", "UF1RNpLSHTo", "DB8vOFI56GU", "wDNPmCBqwm8", "nCYASztgWLw"]}
        />
        <Transparency />
        <Footer stores={app.stores} />
    </div>
</AppLayout>

<style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&display=swap");

    :root {
        font-family: "Inter", sans-serif;
    }
</style>
