---
import AppLayout from "../../layouts/AppLayout.astro";
import { fortuneCookie as app } from "../../data/apps/fortune-cookie";
import { Icon } from "astro-icon/components";

const title = `${app.title} — ${app.tagline}`;
---

<AppLayout
    title={title}
    description={app.description}
    image={app.media.icon}
    color={app.theme.primary}
    favicon={app.media.icon}
    currentSlug={app.slug}
>
    <div
        class="min-h-screen bg-[#050505] text-white selection:bg-[#BF9F5A] selection:text-black overflow-x-hidden"
        style={`--primary: ${app.theme.primary}; --accent: ${app.theme.accent};`}
    >
        {}
        <div class="fixed inset-0 pointer-events-none">
            <div
                class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-[#BF9F5A] opacity-[0.03] blur-[120px] rounded-full"
            >
            </div>
            <div
                class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-[#BF9F5A] opacity-[0.03] blur-[120px] rounded-full"
            >
            </div>
            <div
                class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')] opacity-[0.05]"
            >
            </div>
        </div>

        {}
        <section class="relative pt-32 pb-20 px-6 overflow-hidden">
            <div class="max-w-7xl mx-auto flex flex-col items-center text-center">
                <div class="relative mb-12 group">
                    <div
                        class="absolute inset-0 bg-[#BF9F5A] blur-3xl opacity-20 group-hover:opacity-40 transition-opacity duration-1000"
                    >
                    </div>
                    <img
                        src={app.media.icon}
                        alt={app.title}
                        class="w-32 h-32 md:w-40 md:h-40 rounded-[2.5rem] relative z-10 shadow-2xl border border-white/10"
                    />
                </div>

                <h1
                    class="text-6xl md:text-8xl lg:text-9xl font-serif font-black tracking-tighter mb-6 bg-gradient-to-b from-[#F2E5BD] to-[#BF9F5A] bg-clip-text text-transparent leading-none"
                >
                    {app.title}
                </h1>

                <p class="text-xl md:text-3xl font-light text-[#F2E5BD]/60 max-w-3xl mb-12 italic">
                    "{app.tagline}"
                </p>

                <div class="flex flex-wrap justify-center gap-6 mb-20">
                    {
                        app.stores.googlePlay && (
                            <a
                                href={app.stores.googlePlay}
                                target="_blank"
                                class="premium-btn group"
                            >
                                <Icon
                                    name="mdi:google-play"
                                    class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform"
                                />
                                <span>Consíguelo en Google Play</span>
                            </a>
                        )
                    }
                </div>

                <div
                    class="relative w-full max-w-5xl aspect-video rounded-[3rem] overflow-hidden border border-white/5 shadow-2xl"
                >
                    <img src={app.media.hero} alt="Hero" class="w-full h-full object-cover" />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"
                    >
                    </div>
                </div>
            </div>
        </section>

        {}
        <section
            class="py-24 px-6 border-y border-white/5 bg-black/40 backdrop-blur-sm relative overflow-hidden"
        >
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-px h-24 bg-gradient-to-b from-[#BF9F5A] to-transparent"
            >
            </div>

            <div class="max-w-4xl mx-auto text-center">
                <span
                    class="text-[10px] font-black uppercase tracking-[0.5em] text-[#BF9F5A] mb-8 block"
                    >{app.concept.label}</span
                >
                <h2 class="text-4xl md:text-6xl font-serif italic mb-12 leading-tight">
                    {app.concept.main}
                    <span class="text-[#BF9F5A]">{app.concept.highlighted}</span>
                </h2>
                <div class="h-px w-20 bg-[#BF9F5A]/30 mx-auto mb-12"></div>
                <p
                    class="text-2xl md:text-4xl font-light leading-relaxed text-white/70 italic family-serif"
                >
                    {app.philosophy}
                </p>
            </div>
        </section>

        {}
        <section class="py-32 px-6">
            <div class="max-w-7xl mx-auto">
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-px bg-white/5 border border-white/5 rounded-[3rem] overflow-hidden"
                >
                    {
                        app.benefits.map((benefit, i) => (
                            <div class="p-12 md:p-20 bg-[#050505] group hover:bg-[#0A0A0A] transition-colors duration-700">
                                <div class="w-16 h-16 rounded-2xl bg-[#BF9F5A]/10 flex items-center justify-center mb-8 border border-[#BF9F5A]/20 group-hover:scale-110 transition-transform duration-500">
                                    <Icon name={benefit.icon} class="w-8 h-8 text-[#BF9F5A]" />
                                </div>
                                <h3 class="text-2xl md:text-3xl font-serif font-bold mb-6 text-[#F2E5BD]">
                                    {benefit.title}
                                </h3>
                                <p class="text-lg md:text-xl font-light text-white/50 leading-relaxed group-hover:text-white/70 transition-colors">
                                    {benefit.text}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        {}
        <section class="py-32 px-6 overflow-hidden">
            <div class="max-w-7xl mx-auto">
                <div class="flex flex-col lg:flex-row gap-20 items-center">
                    <div class="lg:w-1/2">
                        <h2 class="text-5xl md:text-7xl font-serif font-black mb-12 leading-none">
                            {app.benefitsTitle.main}<br />
                            <span class="text-[#BF9F5A]">{app.benefitsTitle.highlighted}</span>
                        </h2>
                        <p
                            class="text-xl md:text-2xl font-light text-white/60 leading-relaxed mb-12"
                        >
                            {app.description}
                        </p>

                        {
                            app.quote && (
                                <blockquote class="border-l-2 border-[#BF9F5A] pl-8 py-4 italic">
                                    <p class="text-2xl text-[#F2E5BD]/80 mb-4">
                                        "{app.quote.text}"
                                    </p>
                                    <cite class="text-[#BF9F5A] font-bold uppercase tracking-widest text-xs">
                                        — {app.quote.author}
                                    </cite>
                                </blockquote>
                            )
                        }
                    </div>

                    <div class="lg:w-1/2 flex justify-center">
                        <div class="relative group">
                            <div
                                class="absolute -inset-4 bg-[#BF9F5A] opacity-10 blur-2xl group-hover:opacity-20 transition-opacity"
                            >
                            </div>
                            <img
                                src={app.media.screenshots[0]}
                                alt="Screenshot"
                                class="w-full max-w-[400px] rounded-[3rem] shadow-[0_50px_100px_-20px_rgba(0,0,0,1)] border border-white/10 group-hover:scale-[1.02] transition-transform duration-1000"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {}
        <section class="py-40 px-6 text-center relative">
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-px h-40 bg-gradient-to-b from-white/10 to-transparent"
            >
            </div>

            <div class="max-w-4xl mx-auto relative z-10">
                <h2 class="text-6xl md:text-9xl font-serif italic mb-16 opacity-30">Destino.</h2>
                <p class="text-2xl md:text-3xl font-light mb-16 text-[#F2E5BD]/60">
                    Una sola galleta al día separa al afortunado del resto.
                </p>

                <div class="flex justify-center flex-wrap gap-8">
                    {
                        app.stores.googlePlay && (
                            <a
                                href={app.stores.googlePlay}
                                target="_blank"
                                class="premium-btn-large group"
                            >
                                <Icon name="mdi:google-play" class="w-8 h-8 mr-4" />
                                <div class="text-left">
                                    <span class="block text-[10px] font-bold uppercase tracking-widest opacity-50">
                                        Disponible en
                                    </span>
                                    <span class="text-xl font-bold">Google Play</span>
                                </div>
                            </a>
                        )
                    }
                </div>
            </div>
        </section>
    </div>
</AppLayout>

<style>
    .premium-btn {
        display: inline-flex;
        align-items: center;
        padding: 1rem 2rem;
        background: #bf9f5a;
        color: black;
        border-radius: 100px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
        box-shadow: 0 10px 30px -10px rgba(191, 159, 90, 0.5);
    }

    .premium-btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px -10px rgba(191, 159, 90, 0.7);
        filter: brightness(1.1);
    }

    .premium-btn-large {
        display: inline-flex;
        align-items: center;
        padding: 1.5rem 3rem;
        background: transparent;
        color: #f2e5bd;
        border: 1px solid #bf9f5a;
        border-radius: 100px;
        text-decoration: none;
        transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
    }

    .premium-btn-large:hover {
        background: #bf9f5a;
        color: black;
        transform: translateY(-5px);
        box-shadow: 0 20px 50px -15px rgba(191, 159, 90, 0.4);
    }

    h1,
    h2,
    h3,
    .family-serif {
        font-family: "Playfair Display", serif;
    }
</style>
