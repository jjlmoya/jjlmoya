---
export const prerender = true;
import AppLayout from "../../layouts/AppLayout.astro";
import { fortuneCookie as app } from "../../data/apps/fortune-cookie";
import Hero from "../../components/apps/fortune-cookie/Hero.astro";
import Challenge from "../../components/apps/fortune-cookie/Challenge.astro";
import Streak from "../../components/apps/fortune-cookie/Streak.astro";
import Showcase from "../../components/apps/fortune-cookie/Showcase.astro";
import Events from "../../components/apps/fortune-cookie/Events.astro";
import Roadmap from "../../components/apps/fortune-cookie/Roadmap.astro";
import Footer from "../../components/apps/fortune-cookie/Footer.astro";

const title = `${app.title} â€” ${app.tagline}`;
---

<AppLayout
    title={title}
    description={app.description}
    image={app.media.icon}
    color={app.theme.primary}
    favicon={app.media.icon}
    currentSlug={app.slug}
>
    <div
        class="min-h-screen bg-[#050505] text-white selection:bg-[#BF9F5A] selection:text-black overflow-x-hidden font-sans"
        style={`--primary: ${app.theme.primary}; --accent: ${app.theme.accent};`}
    >
        <Hero app={app} />
        <Challenge app={app} />
        <Streak app={app} />
        <Showcase app={app} />
        <Events />
        <Roadmap app={app} />
        <Footer app={app} />
    </div>

    <style is:global>
        h1,
        h2,
        h3,
        .font-serif {
            font-family: "Playfair Display", serif;
        }

        ::-webkit-scrollbar {
            width: 8px;
            background: #050505;
        }
        ::-webkit-scrollbar-thumb {
            background: #333;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #bf9f5a;
        }
    </style>
</AppLayout>
