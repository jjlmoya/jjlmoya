---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout
    title="Inicio"
    description="Portfolio de jjlmoya. Código, diseño y experiencias digitales ordenadas."
>
    <div
        class="relative min-h-screen flex flex-col justify-center px-4 overflow-hidden"
    >
        <!-- Abstract Background Elements -->
        <div
            class="absolute top-0 right-0 w-[800px] h-[800px] bg-[var(--color-primary-light)] rounded-full blur-[150px] opacity-10 animate-pulse mix-blend-screen"
        >
        </div>
        <div
            class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-purple-500 rounded-full blur-[120px] opacity-10 mix-blend-screen"
        >
        </div>

        <div class="relative z-10 max-w-5xl mx-auto w-full">
            <!-- Minimalist Status -->
            <div
                class="mb-12 animate-in fade-in slide-in-from-bottom-4 duration-1000"
            >
                <span
                    class="text-xs font-mono tracking-widest uppercase opacity-40"
                >
                    2025 &mdash; Mallorca
                </span>
            </div>

            <!-- Typographic Hero -->
            <h1
                class="text-7xl md:text-9xl font-black tracking-tighter leading-[0.85] mb-12 mix-blend-overlay"
            >
                <span
                    class="block animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-100 text-slate-900 dark:text-white opacity-90"
                    >código</span
                >
                <span
                    class="block animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-200 ml-8 md:ml-32 text-[var(--color-accent)] italic"
                    >visual</span
                >
                <span
                    class="block animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-300 text-right opacity-50"
                    >ordenado</span
                >
            </h1>

            <div
                class="flex flex-col md:flex-row justify-between items-end gap-12 animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-500"
            >
                <p
                    class="max-w-md text-lg md:text-xl leading-relaxed font-light text-slate-600 dark:text-slate-400 lowercase"
                >
                    experiencias digitales tangibles, alejadas del ruido y
                    centradas en la esencia
                </p>

                <div class="flex gap-8">
                    <a
                        href="/proyectos"
                        class="group flex items-center gap-2 text-lg font-medium hover:text-[var(--color-accent)] transition-colors"
                    >
                        proyectos
                        <Icon
                            name="mdi:arrow-top-right"
                            class="w-5 h-5 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"
                        />
                    </a>
                    <a
                        href="/conceptos"
                        class="group flex items-center gap-2 text-lg font-medium hover:text-[var(--color-accent)] transition-colors"
                    >
                        conceptos
                        <Icon
                            name="mdi:arrow-top-right"
                            class="w-5 h-5 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"
                        />
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>
