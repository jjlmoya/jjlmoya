---
import Layout from "../layouts/Layout.astro";
import projects from "../data/projects.json";
---

<Layout
    title="El Único Portfolio Que Mezcla Código y Cal"
    description="El único portfolio que mezcla código y cal. Proyectos reales de restauración, software, diseño de apps e historias. La ambición es el motor de todo."
    image="/images/projects/index.webp"
>
    <div class="projects-artspace">
        <section class="hero-brutalist">
            <h1 class="hero-title-brutalist">
                <span class="word-1" data-text="PROYECTOS.">PRO</span>
                <span class="word-2" data-text="CÓDIGO.">YEC</span>
                <span class="word-3" data-text="IMPACTO.">TOS</span>
            </h1>
        </section>

        <section class="projects-editorial">
            {
                projects.map((project, index) => (
                    <article class={`project-story story-${index + 1}`}>
                        <a
                            href={project.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="story-link"
                        >
                            <div class="story-number">0{index + 1}</div>

                            <h2 class="story-title" data-title={project.title}>
                                {project.title.split(" ").map((word) => (
                                    <span class="title-word">{word}</span>
                                ))}
                            </h2>

                            <div class="story-content">
                                <div class="story-visual">
                                    <div class={`visual-blob blob-${index + 1}`}>
                                        <img
                                            src={
                                                project.image
                                                    ? `/assets/icons/${project.image}.webp`
                                                    : `https://www.google.com/s2/favicons?domain=${project.url}&sz=128`
                                            }
                                            alt={project.title}
                                            class="story-icon"
                                        />
                                    </div>
                                </div>

                                <div class="story-text">
                                    <p class="story-description">{project.description}</p>
                                    <span class="story-cta">
                                        <span class="cta-text">Visitar</span>
                                        <svg
                                            class="cta-arrow"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                        >
                                            <path d="M5 12h14M12 5l7 7-7 7" />
                                        </svg>
                                    </span>
                                </div>
                            </div>
                            <div class="story-overlay" />
                        </a>
                    </article>
                ))
            }
        </section>
    </div>
</Layout>

<style>
    :root {
        --gradient-blob-1: linear-gradient(
            135deg,
            var(--color-p-accent-7) 0%,
            var(--color-p-accent-8) 100%
        );
        --gradient-blob-2: linear-gradient(
            135deg,
            var(--color-p-accent-3) 0%,
            var(--color-p-accent-4) 100%
        );
        --gradient-blob-3: linear-gradient(
            135deg,
            var(--color-p-accent-9) 0%,
            var(--color-p-accent-10) 100%
        );
        --gradient-blob-4: linear-gradient(
            135deg,
            var(--color-p-accent-11) 0%,
            var(--color-p-accent-12) 100%
        );

        --gradient-text: linear-gradient(
            135deg,
            var(--color-p-accent-1) 0%,
            var(--color-p-accent-2) 50%,
            var(--color-p-accent-3) 100%
        );

        --space-xs: 0.5rem;
        --space-sm: 1rem;
        --space-md: 2rem;
        --space-lg: 4rem;
        --space-xl: 8rem;

        --font-hero: clamp(4rem, 18vw, 16rem);
        --font-title: clamp(2rem, 7vw, 5rem);
        --font-number: clamp(4rem, 20vw, 15rem);

        --radius-card: 32px;
        --radius-pill: 100px;
        --shadow-card: 0 20px 60px rgba(0, 0, 0, 0.05), 0 0 0 1px rgba(0, 0, 0, 0.03);
        --shadow-card-hover: 0 40px 80px rgba(0, 0, 0, 0.12), 0 0 0 1px rgba(102, 126, 234, 0.2);

        --ease-elastic: cubic-bezier(0.34, 1.56, 0.64, 1);
        --ease-smooth: ease;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .projects-artspace {
        color: var(--color-p-text);
        overflow-x: hidden;
    }

    .hero-brutalist {
        height: 45vh;
        max-width: 75vw;
        position: relative;
        display: flex;
    }

    .hero-title-brutalist {
        font-weight: 900;
        font-size: var(--font-hero);
        line-height: 0.4;
        position: relative;
        width: 100%;
        text-align: center;
    }

    .hero-title-brutalist span {
        position: absolute;
        transition: transform 0.4s var(--ease-elastic);
        left: 50%;
        top: 50%;
    }

    .hero-title-brutalist .word-1 {
        transform: translate(-80%, -120%) rotate(-8deg);
        z-index: -1;
        color: var(--color-p-accent-3);
    }

    .hero-title-brutalist .word-2 {
        transform: translate(-50%, -50%) rotate(2deg);
        z-index: 1;
        color: var(--color-p-accent-2);
    }

    .hero-title-brutalist .word-3 {
        transform: translate(20%, 20%) rotate(-4deg);
        z-index: 0;
        color: var(--color-p-accent-1);
    }

    .hero-brutalist:hover .word-1 {
        transform: translate(-85%, -125%) rotate(-12deg) scale(1.05);
    }
    .hero-brutalist:hover .word-2 {
        transform: translate(-50%, -50%) rotate(0deg) scale(1.05);
    }
    .hero-brutalist:hover .word-3 {
        transform: translate(25%, 25%) rotate(-8deg) scale(1.05);
    }

    .projects-editorial {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 var(--space-lg);
        position: relative;
        z-index: 5;
    }

    .project-story {
        margin-bottom: var(--space-xl);
        position: relative;
    }

    .story-link {
        display: block;
        text-decoration: none;
        color: inherit;
        position: relative;
    }

    .story-number {
        font-size: var(--font-number);
        font-weight: 900;
        line-height: 0.8;
        color: rgba(255, 255, 255, 0.1);
        -webkit-text-stroke: 2px rgba(0, 0, 0, 0.02);
        position: absolute;
        top: -2rem;
        right: 2rem;
        z-index: 1;
        pointer-events: none;
        transition: all 0.6s var(--ease-elastic);
    }

    .story-link:hover .story-number {
        -webkit-text-stroke: 2px rgba(102, 126, 234, 0.3);
        transform: scale(1.1) rotate(-5deg);
    }

    .story-title {
        font-size: var(--font-title);
        font-weight: 800;
        line-height: 1.1;
        position: relative;
        z-index: 2;
        display: flex;
        flex-wrap: wrap;
        gap: 0 0.6rem;
        text-transform: lowercase;
        letter-spacing: -0.02em;
        margin-bottom: var(--space-md);
    }

    .title-word {
        display: inline-block;
        background: var(--gradient-text);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        background-size: 200% 200%;
        transition: all 0.6s var(--ease-smooth);
        position: relative;
    }

    .story-link:hover .title-word {
        background-position: 100% 50%;
        transform: translateY(-4px);
    }

    .title-word:nth-child(even) {
        transition-delay: 0.1s;
    }

    .story-content {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
        gap: var(--space-lg);
        align-items: center;
        padding: 3rem;
        background: var(--color-p-bg-card);
        border-radius: var(--radius-card);
        box-shadow: var(--shadow-card);
        position: relative;
        overflow: hidden;
        transition: all 0.5s var(--ease-elastic);
    }

    .story-link:hover .story-content {
        transform: translateY(-8px);
        box-shadow: var(--shadow-card-hover);
    }

    .story-visual {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .visual-blob {
        width: 280px;
        height: 280px;
        border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        animation: blob-morph 8s ease-in-out infinite;
        transition: all 0.6s var(--ease-smooth);
    }

    .blob-1 {
        background: var(--gradient-blob-1);
    }
    .blob-2 {
        background: var(--gradient-blob-2);
        animation-delay: -2s;
    }
    .blob-3 {
        background: var(--gradient-blob-3);
        animation-delay: -4s;
    }
    .blob-4 {
        background: var(--gradient-blob-4);
        animation-delay: -6s;
    }

    @keyframes blob-morph {
        0%,
        100% {
            border-radius: 63% 37% 54% 46% / 55% 48% 52% 45%;
        }
        25% {
            border-radius: 40% 60% 70% 30% / 40% 40% 60% 50%;
        }
        50% {
            border-radius: 70% 30% 50% 50% / 30% 30% 70% 70%;
        }
        75% {
            border-radius: 40% 60% 30% 70% / 60% 50% 60% 40%;
        }
    }

    .story-link:hover .visual-blob {
        transform: scale(1.1) rotate(10deg);
        filter: brightness(1.1);
    }

    .story-icon {
        width: 120px;
        height: 120px;
        object-fit: contain;
        filter: brightness(0) invert(1) drop-shadow(0 10px 30px rgba(0, 0, 0, 0.2));
        position: relative;
        z-index: 2;
        transition: all 0.6s var(--ease-smooth);
    }

    .story-link:hover .story-icon {
        transform: scale(1.15);
    }

    .story-text {
        display: flex;
        flex-direction: column;
        gap: var(--space-md);
    }

    .story-description {
        font-size: clamp(1rem, 2vw, 1.25rem);
        line-height: 1.7;
        color: var(--color-p-text-muted);
        font-weight: 400;
    }

    .story-cta {
        display: inline-flex;
        align-items: center;
        gap: var(--space-sm);
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--color-p-accent-1);
        padding: 1rem 2rem;
        background: rgba(102, 126, 234, 0.08);
        border-radius: var(--radius-pill);
        align-self: flex-start;
        transition: all 0.4s var(--ease-elastic);
    }

    .story-link:hover .story-cta {
        background: var(--color-p-accent-1);
        color: white;
        transform: translateX(8px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
    }

    .cta-arrow {
        width: 24px;
        height: 24px;
        transition: all 0.4s var(--ease-smooth);
    }

    .story-link:hover .cta-arrow {
        transform: translateX(4px);
    }

    .story-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), transparent);
        opacity: 0;
        transition: opacity 0.5s var(--ease-smooth);
        pointer-events: none;
        border-radius: var(--radius-card);
    }

    .story-link:hover .story-overlay {
        opacity: 1;
    }

    .story-2 .story-content,
    .story-4 .story-content {
        grid-template-columns: 1.5fr 1fr;
    }

    .story-2 .story-visual,
    .story-4 .story-visual {
        order: 2;
    }

    @media (min-width: 1025px) {
        .story-1,
        .story-3 {
            margin-right: var(--space-xl);
            margin-left: 0;
        }
        .story-2,
        .story-4 {
            margin-left: var(--space-xl);
            margin-right: 0;
        }
    }

    @media (max-width: 1024px) {
        .story-content {
            grid-template-columns: 1fr !important;
            gap: var(--space-md);
            text-align: center;
        }

        .story-visual {
            order: 1 !important;
            margin-bottom: var(--space-md);
        }

        .story-text {
            align-items: center;
        }

        .visual-blob {
            width: 220px;
            height: 220px;
        }

        .story-number {
            font-size: clamp(3rem, 15vw, 8rem);
            top: -1rem;
            right: 1rem;
        }

        .projects-editorial {
            padding: 0 var(--space-sm);
        }

        .project-story {
            margin-bottom: var(--space-lg);
        }
    }

    @media (max-width: 640px) {
        .hero-brutalist {
            height: 25vh;
        }

        .story-content {
            padding: var(--space-md);
        }

        .story-title {
            justify-content: center;
        }
    }
</style>
