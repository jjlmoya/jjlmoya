---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';

// Manual mapping for production projects
const productionProjects = [
    {
        name: 'la voz de los cuentos',
        description: 'Plataforma de cuentos interactivos narrados.',
        url: 'https://lavozdeloscuentos.es/',
        repo: 'la-voz-de-los-cuentos', // for fetching stars if needed later
        stars: 12, // Hardcoded for now or fetch if needed
        language: 'Astro'
    },
    {
        name: 'buboboo',
        description: 'Tienda online de ropa infantil sostenible.',
        url: 'https://buboboo.com/',
        repo: 'la-voz-de-los-cuentos', // user mentioned same repo? keeping as placeholder
        stars: 8,
        language: 'Next.js'
    },
    {
        name: 'plantas y flores',
        description: 'Enciclopedia botánica digital.',
        url: 'https://plantasyflores.online/',
        repo: 'plantas-y-flores',
        stars: 24,
        language: 'WordPress'
    }
];

---

<Layout title="proyectos | jjlmoya">
  <div class="max-w-6xl mx-auto">
    <header class="mb-16 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        proyectos
      </h1>
      <p class="text-lg text-slate-600 dark:text-slate-400 max-w-2xl mx-auto lowercase">
        selección de trabajos en producción. aplicaciones reales, usuarios reales.
      </p>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {productionProjects.map((project) => (
        <ProjectCard
          title={project.name}
          description={project.description}
          url={project.url}
          stars={project.stars}
          language={project.language}
        />
      ))}
    </div>
  </div>
</Layout>
