---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import BananaCare from "../../components/utilidades/banana-care/BananaCare.astro";
import BananaCareSEO from "../../components/utilidades/banana-care/BananaCareSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const bibliographyLinks = [
    {
        name: "Ethylene and Fruit Ripening: A Biological Review (Nature Research)",
        url: "https://www.researchgate.net/profile/Jean-Claude-Pech/publication/284632414_Ethylene_and_Fruit_Ripening/links/5aef0bcbaca2727bc006482c/Ethylene-and-Fruit-Ripening.pdf",
    },
    {
        name: "Biochemical Changes in Musa acuminata during Ripening (Journal of Food Science)",
        url: "https://www.foodsciencejournal.com/assets/archives/2017/vol2issue5/2-5-31-566.pdf",
    },
    {
        name: "The Role of Respiration in Climacteric Fruits (Scientific American)",
        url: "https://www.nature.com/articles/226976b0",
    },
];
---

<LayoutUtility
    title="Diagnóstico y Conservación de Plátanos: Guía Científica"
    description="Analiza el estado de maduración de tus plátanos con precisión científica. Aprende técnicas de conservación, bioquímica del etileno y optimización nutricional."
    image="/images/utilities/banana-care.webp"
    gradientFrom="from-yellow-50"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Plátanos"
            titleBase="Conservación de"
            description="Utiliza nuestro escáner visual y heurístico para determinar la etapa biológica de tus plátanos y maximizar su vida útil."
            gradientFrom="from-emerald-600"
            gradientTo="to-yellow-500"
            reverse={true}
        />
    </div>

    <div class="mb-20">
        <BananaCare />
    </div>

    <div slot="seo">
        <BananaCareSEO />
    </div>

    <div slot="bibliography">
        <Bibliography links={bibliographyLinks} />
    </div>
</LayoutUtility>
