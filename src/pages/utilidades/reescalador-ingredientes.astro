---
import Layout from "../../layouts/Layout.astro";
import BackToUtilities from "../../components/ui/BackToUtilities.astro";
import IngredientRescaler from "../../components/utilidades/ingredient-rescaler/IngredientRescaler.astro";
import IngredientRescalerSEO from "../../components/utilidades/ingredient-rescaler/IngredientRescalerSEO.astro";
---

<Layout
    title="Re-escalador de Ingredientes | Regla de Tres para Recetas"
    description="Adapta instantáneamente las cantidades de cualquier receta. Cambia el número de personas. Herramienta de cocina gratuita."
    image="/images/utilidades/ingredient_rescaler.png"
>
    <div class="relative min-h-screen pt-16 px-4 pb-20 overflow-x-hidden">
        <div
            class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-orange-100 via-white to-white dark:from-orange-950/40 dark:via-zinc-950 dark:to-black -z-10"
        >
        </div>

        <div class="max-w-4xl mx-auto">
            <div class="mb-12 text-center animate-in fade-in slide-in-from-bottom-8 duration-1000">
                <BackToUtilities class="mb-8" />
                <h1 class="text-5xl md:text-7xl font-black tracking-tighter mb-6">
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-br from-orange-500 to-amber-600 dark:from-orange-400 dark:to-amber-500 pr-2"
                    >
                        re-escalador
                    </span>
                    <span class="text-slate-800 dark:text-white">de ingredientes</span>
                </h1>
                <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto font-light">
                    Cocina con precisión.
                    <span class="font-medium text-slate-900 dark:text-white"
                        >Adapta cualquier receta a tus necesidades exactas.</span
                    >
                </p>
            </div>

            <IngredientRescaler />
            <IngredientRescalerSEO />
        </div>
    </div>
</Layout>
