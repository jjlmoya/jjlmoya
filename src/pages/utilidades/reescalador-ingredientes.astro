---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import IngredientRescaler from "../../components/utilidades/ingredient-rescaler/IngredientRescaler.astro";
import IngredientRescalerSEO from "../../components/utilidades/ingredient-rescaler/IngredientRescalerSEO.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
---

<LayoutUtility
    title="Re-escalador de Ingredientes | Regla de Tres para Recetas"
    description="Adapta instantáneamente las cantidades de cualquier receta. Cambia el número de personas. Herramienta de cocina gratuita."
    image="/images/utilidades/ingredient_rescaler.png"
    category="Cocina"
    gradientFrom="from-orange-100"
>
    <!-- Custom Header implementation -->
    <div slot="header">
        <UtilityHeader
            titleHighlight="re-escalador"
            titleBase="de ingredientes"
            description="Cocina con precisión. Adapta cualquier receta a tus necesidades exactas."
            gradientFrom="from-orange-500"
            gradientTo="to-amber-600"
        />
    </div>

    <!-- Tool -->
    <IngredientRescaler />

    <!-- SEO Text -->
    <div slot="seo">
        <IngredientRescalerSEO />
    </div>
</LayoutUtility>
