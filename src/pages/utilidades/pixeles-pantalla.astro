---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import PixelTester from "../../components/utilidades/screen-pixel/PixelTester.astro";
import PixelTesterSEO from "../../components/utilidades/screen-pixel/PixelTesterSEO.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
---

<LayoutUtility
    title="Test de Píxeles Muertos y Reparador de Pantalla"
    description="Comprueba si tu monitor tiene píxeles muertos o atascados y repáralos con nuestra herramienta de parpadeo (Strobe) online."
    image="/images/utilities/pixeles.png"
    category="Hardware y Periféricos"
    gradientFrom="from-blue-100"
>
    <!-- Custom Header -->
    <div slot="header">
        <UtilityHeader
            titleHighlight="píxeles"
            titleBase="pantalla"
            description="Diagnóstico y reparación de monitores. Detecta defectos y revive píxeles atascados."
            gradientFrom="from-blue-500"
            gradientTo="to-indigo-600"
        />
    </div>

    <!-- Tool -->
    <PixelTester />

    <!-- SEO -->
    <div slot="seo">
        <PixelTesterSEO />
    </div>
</LayoutUtility>
