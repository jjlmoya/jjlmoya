---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import RSVPReader from "../../components/utilidades/rsvp-reader/RSVPReader.astro";
import RSVPReaderSEO from "../../components/utilidades/rsvp-reader/RSVPReaderSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const TITLE = "Lector Rápido RSVP: Speed Reading";
const DESCRIPTION =
    "Entrena tu velocidad de lectura hasta 1000 palabras por minuto. Tecnología RSVP con alineación de punto focal. Dobla tu productividad.";

const bibliographyLinks = [
    {
        name: "Rayner, K., et al. (2016). So much to read, so little time: How do we read, and can speed reading help? Psychological Science in the Public Interest.",
        url: "https://journals.sagepub.com/doi/full/10.1177/1529100615623267",
    },
    {
        name: "Forster, K. I. (1970). Visual perception of rapidly presented word sequences of varying complexity. Perception & Psychophysics.",
        url: "https://link.springer.com/article/10.3758/BF03212522",
    },
    {
        name: "Öquist, G., & Goldstein, M. (2003). Towards an improved readability on mobile devices. In Proceedings of Mobile HCI.",
        url: "https://www.researchgate.net/publication/221063852_Towards_an_improved_readability_on_mobile_devices",
    },
    {
        name: "Juola, J. F., Ward, N. J., & McNamara, T. (1982). Visual search and reading of rapid serial visual presentations. Perception & Psychophysics.",
        url: "https://link.springer.com/article/10.3758/BF03202598",
    },
    {
        name: "Masson, M. E. J. (1983). Conceptual processing of text during rapid serial visual presentation. Journal of Educational Psychology.",
        url: "https://psycnet.apa.org/record/1984-08638-001",
    },
    {
        name: "Saldana, D., & Greene, R. (2022). Reading effectiveness with RSVP apps: Comprehension and eye movements. Reading Psychology.",
        url: "https://www.tandfonline.com/doi/abs/10.1080/02702711.2022.2030000",
    },
];
---

<LayoutUtility
    title={TITLE}
    description={DESCRIPTION}
    image="/images/utilities/lectura-rapida.png"
    gradientFrom="from-indigo-100"
    gradientTo="to-violet-300"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="RSVP"
            titleBase="Lector Rápido"
            description="Elimina el movimiento ocular y descarga información directamente a tu cerebro. La herramienta definitiva para la productividad intelectual."
            gradientFrom="from-indigo-600"
            gradientTo="to-violet-600"
        />
    </div>

    <RSVPReader />

    <div slot="seo">
        <RSVPReaderSEO />
        <Bibliography links={bibliographyLinks} />
    </div>
</LayoutUtility>
