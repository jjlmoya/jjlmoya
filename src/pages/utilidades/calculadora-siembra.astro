---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import BackToUtilities from "../../components/ui/BackToUtilities.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import SeedCalculator from "../../components/utilidades/seed-calculator/SeedCalculator.astro";
import SeedCalculatorSEO from "../../components/utilidades/seed-calculator/SeedCalculatorSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const title = "Calculadora de Siembra y Calibración";
const description =
    "Herramienta de precisión para agricultores. Calcula la distancia ideal entre semillas basándose en la población objetivo y el ancho de surco.";

const bibliographyLinks = [
    {
        name: "KWS España - Cultivo de Maíz",
        url: "https://www.kws.com/es/es/",
    },
    {
        name: "Ministerio de Agricultura (MAPA) - Cultivos Herbáceos",
        url: "https://www.mapa.gob.es/es/agricultura/temas/producciones-agricolas/cultivos-herbaceos/",
    },
    {
        name: "Yara España - Nutrición en Maíz",
        url: "https://www.yara.es/nutricion-vegetal/maiz/",
    },
];
---

<LayoutUtility
    title={title}
    description={description}
    image="/images/utilities/seed-calculator.png"
    gradientFrom="from-amber-100"
    gradientTo="to-emerald-50"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Calibración de Siembra"
            titleBase="Calculadora de"
            description="Ajusta tu sembradora para el rendimiento máximo. Convierte densidad de población (semillas/Ha) a espaciado en hilera (cm) instantáneamente."
            gradientFrom="from-amber-500"
            gradientTo="to-green-600"
        />
    </div>

    <SeedCalculator />

    <div slot="seo">
        <SeedCalculatorSEO />
    </div>

    <div slot="bibliography">
        <Bibliography links={bibliographyLinks} />
    </div>
</LayoutUtility>
