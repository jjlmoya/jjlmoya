---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import ClipboardPasteZone from "../../components/utilidades/clipboard/ClipboardPasteZone.astro";
import ClipboardPreview from "../../components/utilidades/clipboard/ClipboardPreview.astro";
import ClipboardControls from "../../components/utilidades/clipboard/ClipboardControls.astro";
import ClipboardSEO from "../../components/utilidades/clipboard/ClipboardSEO.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
---

<LayoutUtility
    title="Portapapeles a PNG: Descargar Capturas de Pantalla"
    description="Herramienta online para convertir el contenido del portapapeles (capturas, imágenes) en un archivo PNG descargable al instante. Proceso 100% privado y rápido."
    image="/images/utilities/clipboard.webp"
    category="Archivos y Texto"
    gradientFrom="from-blue-100"
>
    <!-- Custom Header -->
    <div slot="header">
        <UtilityHeader
            titleHighlight="Portapapeles"
            titleBase="Conversor de"
            description="Transforma tu portapapeles en archivos tangibles. Pega, previsualiza y descarga al instante."
            gradientFrom="from-slate-700"
            gradientTo="to-slate-500"
            reverse={true}
        />
    </div>

    <!-- Tool -->
    <div
        class="bg-white/50 dark:bg-slate-900/50 backdrop-blur-xl rounded-[2.5rem] p-8 md:p-12 border border-white/20 shadow-2xl animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-200"
    >
        <ClipboardPasteZone />
        <ClipboardPreview />
        <ClipboardControls />
    </div>

    <!-- SEO -->
    <div slot="seo">
        <ClipboardSEO />
    </div>
</LayoutUtility>
