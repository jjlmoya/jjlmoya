---
import Layout from "../../layouts/Layout.astro";
import ClipboardPasteZone from "../../components/utilidades/clipboard/ClipboardPasteZone.astro";
import ClipboardPreview from "../../components/utilidades/clipboard/ClipboardPreview.astro";
import ClipboardControls from "../../components/utilidades/clipboard/ClipboardControls.astro";
import ClipboardSEO from "../../components/utilidades/clipboard/ClipboardSEO.astro";
import { Icon } from "astro-icon/components";
---

<Layout
    title="Portapapeles a Imagen"
    description="Pega, visualiza y guarda imÃ¡genes directamente desde tu portapapeles."
>
    <div class="relative min-h-screen pt-16 px-4 pb-20">
        <div
            class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-100 via-white to-white dark:from-slate-900 dark:via-slate-950 dark:to-black -z-10"
        >
        </div>

        <div class="max-w-4xl mx-auto">
            <div class="mb-12 text-center animate-in fade-in slide-in-from-bottom-8 duration-1000">
                <a
                    href="/utilidades/"
                    class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-[var(--color-accent)] mb-8 transition-colors"
                >
                    <Icon name="mdi:arrow-left" class="w-4 h-4" />
                    volver a utilidades
                </a>
                <h1 class="text-5xl md:text-7xl font-black tracking-tighter mb-6">
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-slate-900 to-slate-500 dark:from-white dark:to-slate-500 pr-2"
                    >
                        portapapeles
                    </span>
                </h1>
                <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto font-light">
                    Transforma tu portapapeles en archivos tangibles. Pega, previsualiza y descarga
                    al instante.
                </p>
            </div>

            <div
                class="bg-white/50 dark:bg-slate-900/50 backdrop-blur-xl rounded-[2.5rem] p-8 md:p-12 border border-white/20 shadow-2xl animate-in fade-in slide-in-from-bottom-12 duration-1000 delay-200"
            >
                <ClipboardPasteZone />
                <ClipboardPreview />
                <ClipboardControls />
            </div>

            <ClipboardSEO />
        </div>
    </div>
</Layout>
