---
import Layout from "../../layouts/Layout.astro";
import KeyCodeVisualizer from "../../components/utilidades/keycode/KeyCodeVisualizer.astro";
import KeyCodeSEO from "../../components/utilidades/keycode/KeyCodeSEO.astro";
import BackToUtilities from "../../components/ui/BackToUtilities.astro";
import { Icon } from "astro-icon/components";
---

<Layout
    title="KeyCode Visualizer - Visualizador de Códigos de Teclas JavaScript Preciso"
    description="La guía definitiva de códigos de teclas. Muestra event.key, event.code y los modificadores en tiempo real. Resuelve tu key mapping en segundos."
>
    <div class="relative min-h-screen pt-16 px-4 pb-20">
        <div
            class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-100 via-white to-white dark:from-slate-900 dark:via-slate-950 dark:to-black -z-10"
        >
        </div>

        <div class="max-w-4xl mx-auto">
            <div class="mb-12 text-center animate-in fade-in slide-in-from-bottom-8 duration-1000">
                <BackToUtilities class="mb-8" />
                <h1 class="text-5xl md:text-7xl font-black tracking-tighter mb-6">
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-violet-600 to-indigo-600 dark:from-violet-400 dark:to-indigo-400 pr-2"
                    >
                        keycode
                    </span>
                    <span class="text-slate-800 dark:text-white">visualizer</span>
                </h1>
                <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto font-light">
                    Descubre los códigos de teclas JavaScript al instante.
                    <span class="font-medium text-slate-900 dark:text-white"
                        >Presiona cualquier tecla</span
                    > para empezar.
                </p>
            </div>

            <KeyCodeVisualizer />
            <KeyCodeSEO />
        </div>
    </div>
</Layout>
