---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import MeetingCostTicker from "../../components/utilidades/meeting-cost-ticker/MeetingCostTicker.astro";
import MeetingCostTickerSEO from "../../components/utilidades/meeting-cost-ticker/MeetingCostTickerSEO.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
---

<LayoutUtility
    title="Calculadora Coste de Reunión en Tiempo Real | Ticker"
    description="Visualiza cuánto cuesta cada segundo de tus reuniones. Herramienta de productividad para calcular el coste monetario de equipos en tiempo real."
    image="/images/utilities/meeting-ticker.png"
    gradientFrom="from-green-100"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="coste"
            titleBase="reunión"
            description="El tiempo es dinero. Visualiza en tiempo real cuánto os está costando esta reunión."
            gradientFrom="from-green-600"
            gradientTo="to-emerald-600"
        />
    </div>

    <MeetingCostTicker />

    <div slot="seo">
        <MeetingCostTickerSEO />
    </div>
</LayoutUtility>
