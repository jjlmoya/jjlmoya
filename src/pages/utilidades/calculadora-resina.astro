---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import EpoxyCalculator from "../../components/utilidades/epoxy-calculator/EpoxyCalculator.astro";
import EpoxyCalculatorSEO from "../../components/utilidades/epoxy-calculator/EpoxyCalculatorSEO.astro";
---

<LayoutUtility
    title="Calculadora de Resina Epoxi | Mezcla y Volumen Exacto"
    description="Calcula la cantidad exacta de resina epoxi y catalizador necesaria para tus proyectos. Evita desperdicios en mesas río, joyería y moldes."
    image="/images/utilities/calculadora-resina.png"
    gradientFrom="from-amber-100"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Resina Epoxi"
            titleBase="Calculadora"
            description="Dosifica con precisión milimétrica la resina y el catalizador para resultados cristalinos y sin desperdicios."
            gradientFrom="from-amber-500"
            gradientTo="to-orange-600"
            reverse={true}
        />
    </div>

    <EpoxyCalculator />

    <div slot="seo">
        <EpoxyCalculatorSEO />
    </div>
</LayoutUtility>
