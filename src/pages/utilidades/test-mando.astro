---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import GamepadTester from "../../components/utilidades/gamepad-test/GamepadTester.astro";
import GamepadTesterSEO from "../../components/utilidades/gamepad-test/GamepadTesterSEO.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
---

<LayoutUtility
    title="Test de Mando y Gamepad Online"
    description="Prueba tu controlador de Xbox, PlayStation o PC. Visualiza zonas muertas, drift de joysticks y botones."
    image="/images/utilities/gamepad.png"
    category="Hardware y Periféricos"
    gradientFrom="from-purple-100"
>
    
    <div slot="header">
        <UtilityHeader
            titleHighlight="gamepad"
            titleBase="test"
            description="¿Tu joystick se mueve solo? Verifica el drift y los botones de tu mando."
            gradientFrom="from-purple-500"
            gradientTo="to-indigo-600"
        />
    </div>

    
    <GamepadTester />

    
    <div slot="seo">
        <GamepadTesterSEO />
    </div>
</LayoutUtility>
