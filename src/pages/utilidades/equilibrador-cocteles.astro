---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import CocktailBalancer from "../../components/utilidades/cocktail-balancer/CocktailBalancer.astro";
import CocktailBalancerSEO from "../../components/utilidades/cocktail-balancer/CocktailBalancerSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";
import { Icon } from "astro-icon/components";
---

<LayoutUtility
    title="Equilibrador de Cócteles - La Ley del Sour"
    description="Calcula el equilibrio perfecto entre dulce y ácido para tus cócteles. Domina la proporción áurea de la mixología."
    image="/images/utilities/cocktail-balancer.webp"
    category="Alcohol & Party"
    gradientFrom="from-emerald-900"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Cócteles"
            titleBase="Equilibrador de"
            description="La herramienta definitiva para perfeccionar la Ley del Sour. ¿Tu mezcla está en armonía o es un desastre?"
            gradientFrom="from-emerald-400"
            gradientTo="to-lime-400"
            reverse={true}
        />
    </div>

    <CocktailBalancer />

    <div slot="seo">
        <div class="max-w-4xl mx-auto px-6 mb-16">
            <div
                class="bg-gradient-to-r from-slate-100 to-white dark:from-slate-800/50 dark:to-slate-900/50 p-6 rounded-2xl border border-slate-200 dark:border-slate-800 flex flex-col md:flex-row items-center justify-between gap-6 relative overflow-hidden group"
            >
                <div
                    class="absolute top-0 right-0 w-64 h-64 bg-indigo-500/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 group-hover:bg-indigo-500/10 transition-colors duration-700"
                >
                </div>

                <div class="relative z-10 flex-1">
                    <h3
                        class="flex items-center gap-2 font-bold text-slate-800 dark:text-white mb-2"
                    >
                        <Icon name="mdi:database-plus" class="text-indigo-500 text-xl" />
                        Base de Datos Comunitaria
                    </h3>
                    <p class="text-sm text-slate-600 dark:text-slate-400 leading-relaxed">
                        Esta herramienta se alimenta de datos de código abierto. ¿Falta tu licor
                        favorito? ¿Tienes un amargo artesanal que quieres compartir?
                        <strong class="text-slate-800 dark:text-slate-200"
                            >Contribuye al repositorio</strong
                        > y ayuda a miles de bartenders a perfeccionar sus recetas.
                    </p>
                </div>

                <a
                    href="https://github.com/jjlmoya/jjlmoya/blob/main/src/components/utilidades/cocktail-balancer/data/IngredientRepository.ts"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="relative z-10 flex items-center gap-2 bg-slate-900 dark:bg-white text-white dark:text-slate-900 px-5 py-2.5 rounded-xl font-bold text-sm hover:scale-105 hover:shadow-lg transition-all"
                >
                    <Icon name="mdi:github" class="text-lg" />
                    Sugerir Ingrediente
                </a>
            </div>
        </div>

        <CocktailBalancerSEO />
    </div>

    <Bibliography
        slot="bibliography"
        links={[
            {
                name: "Liquid Intelligence: The Art and Science of the Perfect Cocktail",
                url: "http://www.cookingissues.com/index.html%3Fp=4587.html",
            },
            {
                name: "The Bar Book: Elements of Cocktail Technique - Jeffrey Morgenthaler",
                url: "https://jeffreymorgenthaler.com/the-bar-book/",
            },
            {
                name: "Cocktail Balance - Difford's Guide",
                url: "https://www.diffordsguide.com/encyclopedia/1066/cocktails/cocktail-balance",
            },
            {
                name: "Acidity in Cocktails - Camper English",
                url: "https://www.alcademics.com/2014/06/acidity-in-cocktails.html",
            },
        ]}
    />
</LayoutUtility>
