---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import RainHarvester from "../../components/utilidades/rain-harvester/RainHarvester.astro";
import RainHarvesterSEO from "../../components/utilidades/rain-harvester/RainHarvesterSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";
---

<LayoutUtility
    title="Calculadora de Agua de Lluvia y Dimensionamiento de Tanques - Herramienta Off-Grid"
    description="Calcula agua de lluvia puedes recolectar desde tu techo. Herramienta esencial para autonomía hídrica, huertos y sostenibilidad."
    image="/images/utilities/recolector-lluvia.png"
    gradientFrom="from-cyan-100"
    gradientTo="to-blue-200"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Lluvia"
            titleBase="Cosechador de"
            description="Descubre el potencial oculto de tu techo. ¿Cuánta autonomía hídrica podrías tener?"
            gradientFrom="from-cyan-500"
            gradientTo="to-blue-600"
            reverse={true}
        />
    </div>

    <RainHarvester />

    <div slot="seo">
        <RainHarvesterSEO />
    </div>

    <div slot="bibliography">
        <Bibliography
            links={[
                {
                    name: "FAO - Captación y almacenamiento de agua de lluvia",
                    url: "https://www.fao.org/3/a1348s/a1348s.pdf",
                },
                {
                    name: "Texas A&M AgriLife Extension - Rainwater Harvesting",
                    url: "https://rainwaterharvesting.tamu.edu/",
                },
                {
                    name: "Brad Lancaster - Rainwater Harvesting for Drylands",
                    url: "https://www.harvestingrainwater.com/",
                },
                {
                    name: "European Environment Agency - Water Resources",
                    url: "https://www.eea.europa.eu/en/topics/in-depth/water",
                },
            ]}
        />
    </div>
</LayoutUtility>
