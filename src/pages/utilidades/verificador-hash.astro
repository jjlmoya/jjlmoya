---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import HashVerifier from "../../components/utilidades/hash-verifier/HashVerifier.astro";
import HashVerifierSEO from "../../components/utilidades/hash-verifier/HashVerifierSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const bibliographyLinks = [
    {
        name: "NIST FIPS 180-4: Secure Hash Standard (SHS)",
        url: "https://csrc.nist.gov/publications/detail/fips/180/4/final",
    },
    {
        name: "RFC 6234: US Secure Hash Algorithms (SHA and SHA-based HMAC and HKDF)",
        url: "https://datatracker.ietf.org/doc/html/rfc6234",
    },
    {
        name: "SHAttered: The first real-world collision attack on SHA-1 (Comparative Study)",
        url: "https://shattered.io/",
    },
];
---

<LayoutUtility
    title="Verificador de Hash SHA-256 Online - Seguridad Local"
    description="Verifica la integridad de tus archivos calculando su firma SHA-256 de forma 100% local y segura. Compara checksums de ISOs y descargas."
    image="/images/utilities/hash-verifier.webp"
    gradientFrom="from-emerald-50"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Hash"
            titleBase="Verificador"
            description="Seguridad criptográfica en tu navegador. Procesa archivos de cualquier tamaño sin que salgan de tu equipo."
            gradientFrom="from-emerald-500"
            gradientTo="to-indigo-600"
            reverse={true}
        />
    </div>

    <HashVerifier />

    <div slot="seo">
        <HashVerifierSEO />
    </div>

    <div slot="bibliography">
        <Bibliography links={bibliographyLinks} title="Fundamentos Científicos y Estándares" />
    </div>
</LayoutUtility>
