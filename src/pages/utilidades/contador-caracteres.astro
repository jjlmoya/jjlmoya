---
import Layout from "../../layouts/Layout.astro";
import CharacterCounterComponent from "../../components/utilidades/counter/CharacterCounter.astro";
import CharacterCounterSEO from "../../components/utilidades/counter/CharacterCounterSEO.astro";
import BackToUtilities from "../../components/ui/BackToUtilities.astro";
---

<Layout
    title="Contador de Caracteres y Palabras Online | Contador de Letras"
    description="Contador de caracteres, palabras, frases y pÃ¡rrafos online. Calcula tiempos de lectura y voz. Herramienta gratuita perfecta para SEO y redes sociales."
    image="/images/utilities/contador-caracteres.png"
>
    <div class="relative min-h-screen pt-16 px-4 pb-20 overflow-x-hidden">
        <div
            class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-100 via-white to-white dark:from-slate-900 dark:via-slate-950 dark:to-black -z-10"
        >
        </div>

        <div class="max-w-5xl mx-auto">
            <div class="mb-12 text-center animate-in fade-in slide-in-from-bottom-8 duration-1000">
                <BackToUtilities class="mb-8" />
                <h1 class="text-5xl md:text-7xl font-black tracking-tighter mb-6">
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-400 pr-2"
                    >
                        contador
                    </span>
                    <span class="text-slate-800 dark:text-white">caracteres</span>
                </h1>
                <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto font-light">
                    Analiza tu texto al instante.
                    <span class="font-medium text-slate-900 dark:text-white"
                        >Cuenta palabras, caracteres y tiempos.</span
                    >
                </p>
            </div>

            <CharacterCounterComponent />
            <CharacterCounterSEO />
        </div>
    </div>
</Layout>
