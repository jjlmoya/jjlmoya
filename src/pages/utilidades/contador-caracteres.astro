---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import CharacterCounterComponent from "../../components/utilidades/counter/CharacterCounter.astro";
import CharacterCounterSEO from "../../components/utilidades/counter/CharacterCounterSEO.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
---

<LayoutUtility
    title="Contador de Caracteres y Palabras Online | Contador de Letras"
    description="Contador de caracteres, palabras, frases y pÃ¡rrafos online. Calcula tiempos de lectura y voz. Herramienta gratuita perfecta para SEO y redes sociales."
    image="/images/utilities/contador-caracteres.png"
    category="Archivos y Texto"
    gradientFrom="from-indigo-100"
>
    <!-- Custom Header -->
    <div slot="header">
        <UtilityHeader
            titleHighlight="Caracteres"
            titleBase="Contador de"
            description="Analiza tu texto al instante. Cuenta palabras, caracteres y tiempos."
            gradientFrom="from-blue-600"
            gradientTo="to-indigo-600"
            reverse={true}
        />
    </div>

    <!-- Tool -->
    <CharacterCounterComponent />

    <!-- SEO -->
    <div slot="seo">
        <CharacterCounterSEO />
    </div>
</LayoutUtility>
