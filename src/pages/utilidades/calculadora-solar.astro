---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import SolarTilt from "../../components/utilidades/solar-tilt/SolarTilt.astro";
import SolarTiltSEO from "../../components/utilidades/solar-tilt/SolarTiltSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const bibliographyLinks = [
    {
        name: "National Renewable Energy Laboratory (NREL) - Solar Research",
        url: "https://www.nrel.gov/solar/",
    },
    {
        name: "Photovoltaic Geographical Information System (PVGIS)",
        url: "https://re.jrc.ec.europa.eu/pvg_tools/en/",
    },
    {
        name: "Solar Energy Industries Association (SEIA) - Solar Technologies",
        url: "https://www.seia.org/",
    },
];

const faqItems = [
    {
        question: "¿Cuál es el mejor ángulo para paneles solares?",
        answer: "El ángulo óptimo depende de tu latitud. Como regla general, la inclinación anual ideal es igual a tu latitud. Para verano, réstale 15 grados; para invierno, súmale 15 grados.",
    },
    {
        question: "¿Por qué cambia la inclinación entre estaciones?",
        answer: "Debido a la inclinación del eje terrestre, el sol está más alto en verano y más bajo en invierno. Ajustar el ángulo de los paneles permite que los rayos incidan de forma perpendicular, maximizando la captación de energía.",
    },
    {
        question: "¿Hacia dónde deben orientarse los paneles?",
        answer: "En el hemisferio norte, los paneles deben orientarse hacia el SUR geográfico. En el hemisferio sur, deben orientarse hacia el NORTE.",
    },
    {
        question: "¿Afecta mucho la suciedad a la producción?",
        answer: "Sí. Una capa de polvo o suciedad puede reducir la eficiencia entre un 10% y un 25%. Mantener los paneles limpios y con la inclinación adecuada ayuda a que la lluvia limpie parte de la suciedad acumulada.",
    },
];

const howToSteps = [
    {
        name: "Introducir ubicación",
        text: "Escribe tu latitud actual o utiliza el botón de ubicación para obtenerla automáticamente vía GPS.",
    },
    {
        name: "Elegir tipo de optimización",
        text: "Selecciona si prefieres maximizar la producción en invierno (sol bajo), verano (sol alto) o un equilibrio anual.",
    },
    {
        name: "Calcular ángulo",
        text: "Visualiza el ángulo resultante en el simulador 3D para entender cómo deben posicionarse las placas.",
    },
    {
        name: "Ajustar instalación",
        text: "Utiliza un nivelador o una app de inclinación para colocar tus paneles en el ángulo exacto calculado.",
    },
];
---

<LayoutUtility
    title="Calculadora de Inclinación Solar Óptima | Paneles Solares"
    description="Calcula el ángulo de inclinación ideal para tus placas solares y maximiza la producción de energía según tu ubicación (latitud)."
    image="/images/utilities/solar-tilt.png"
    gradientFrom="from-yellow-400"
    faqItems={faqItems}
    howToSteps={howToSteps}
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Inclinación"
            titleBase="Solar"
            description="Maximiza la eficiencia de tus placas calculando el ángulo perfecto según tu ubicación."
            gradientFrom="from-orange-500"
            gradientTo="to-yellow-500"
        />
    </div>

    <SolarTilt />

    <div slot="seo">
        <SolarTiltSEO />
        <Bibliography links={bibliographyLinks} />
    </div>
</LayoutUtility>
