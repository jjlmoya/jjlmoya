---
import Layout from "../../layouts/Layout.astro";
import UtilitySection from "../../components/utilidades/UtilitySection.astro";
import SearchInput from "../../components/utilidades/SearchInput.astro";
// Import data from the new location
import { sections } from "../../data/utilities";
---

<Layout
    title="Utilidades para la Vida y el Desarrollo Web"
    description="Herramientas esenciales para tareas específicas: cálculos de precisión, procesamiento de código y limpieza de texto. Utilidades online gratuitas y funcionales."
    image="/images/utilities/index.webp"
>
    <div class="relative min-h-screen pt-16 px-4 overflow-hidden">
        <!-- Background Elements -->
        <div
            class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-100 via-white to-white dark:from-slate-900 dark:via-slate-950 dark:to-black -z-10"
        >
        </div>

        <div class="max-w-6xl mx-auto">
            <!-- Header -->
            <div class="mb-12 animate-in fade-in slide-in-from-bottom-8 duration-1000">
                <h1 class="text-6xl md:text-8xl font-black tracking-tighter mb-6">
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-slate-900 to-slate-500 pr-6"
                    >
                        utilidades
                    </span>
                </h1>
                <p
                    class="text-xl md:text-2xl text-slate-600 dark:text-slate-400 max-w-2xl font-light leading-relaxed"
                >
                    Pequeñas herramientas digitales diseñadas con pureza para resolver problemas
                    reales.
                </p>
            </div>

            <!-- Search -->
            <SearchInput />

            <!-- Utilities Grid -->
            <div class="mb-20">
                {sections.map((section) => <UtilitySection {...section} />)}
            </div>
        </div>
    </div>
</Layout>
