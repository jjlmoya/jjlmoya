---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import KegCalculator from "../../components/utilidades/party-keg-calculator/KegCalculator.astro";
import KegCalculatorSEO from "../../components/utilidades/party-keg-calculator/KegCalculatorSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const bibliographyLinks = [
    {
        name: "Engineering Toolbox. Latent Heat of Melting - Ice",
        url: "https://www.engineeringtoolbox.com/latent-heat-melting-solids-d_96.html",
    },
    {
        name: "Event Manager Blog. Catering Quantities Guide",
        url: "https://www.eventmanagerblog.com/catering-quantities-guide",
    },
    {
        name: "Cengel, Y. A. (2014). Thermodynamics: An Engineering Approach",
        url: "https://www.mheducation.com/highered/product/thermodynamics-engineering-approach-cengel-boles/M9780073398174.html",
    },
];

const seoTitle = "Calculadora de Bebida y Hielo para Fiestas | Cantidad por Persona";
const seoDesc =
    "Calcula exactamente cuánta cerveza, alcohol y hielo necesitas para tu fiesta. Herramienta gratuita para organizar eventos: bodas, cumpleaños y reuniones.";
---

<LayoutUtility
    title={seoTitle}
    description={seoDesc}
    image="/images/utilities/calculadora-barriles-fiesta.webp"
    category="Alcohol & Party"
    gradientFrom="from-amber-600"
>
    
    <div slot="header">
        <UtilityHeader
            titleHighlight="Bebida y Hielo"
            titleBase="Calculadora de"
            description="Herramienta profesional para calcular litros de alcohol y bolsas de hielo según invitados y temperatura."
            gradientFrom="from-amber-400"
            gradientTo="to-orange-600"
            reverse={true}
        />
    </div>

    
    <KegCalculator />

    
    <div slot="seo">
        <div slot="seo">
            <KegCalculatorSEO />
        </div>

        
        <div slot="bibliography">
            <Bibliography
                links={bibliographyLinks}
                title="Referencias Termodinámicas y de Eventos"
            />
        </div>
    </div>
</LayoutUtility>
