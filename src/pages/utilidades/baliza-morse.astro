---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import MorseBeacon from "../../components/utilidades/morse-beacon/MorseBeacon.astro";
import MorseBeaconSEO from "../../components/utilidades/morse-beacon/MorseBeaconSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const TITLE = "Baliza Morse: Transmisor Táctico SOS";
const DESCRIPTION =
    "Convierte tu dispositivo en una estación de transmisión Morse. Utiliza flash y pantalla como señales de luz de emergencia y comunicación táctica.";
---

<LayoutUtility
    title={TITLE}
    description={DESCRIPTION}
    image="/images/utilities/baliza-morse.png"
    category="Herramientas Prácticas"
    gradientFrom="from-green-100"
    gradientTo="to-emerald-300"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Morse"
            titleBase="Baliza"
            description="Estación de transmisión óptica. Envía mensajes y señales SOS usando la luz de tu dispositivo."
            gradientFrom="from-green-500"
            gradientTo="to-emerald-600"
            reverse={true}
        />
    </div>

    <MorseBeacon />

    <div slot="seo">
        <MorseBeaconSEO />
    </div>

    <div slot="bibliography">
        <Bibliography
            links={[
                {
                    name: "ITU-R M.1677-1 - International Morse Code",
                    url: "https://www.itu.int/dms_pubrec/itu-r/rec/m/R-REC-M.1677-1-200910-I!!PDF-E.pdf",
                },
                {
                    name: "W3C Generic Sensor API (Torch)",
                    url: "https://w3c.github.io/mediacapture-image/#torch",
                },
            ]}
        />
    </div>
</LayoutUtility>
