---
import Layout from "../../layouts/Layout.astro";
import BackToUtilities from "../../components/ui/BackToUtilities.astro";
import PasswordGenerator from "../../components/utilidades/password/PasswordGenerator.astro";
import PasswordGeneratorSEO from "../../components/utilidades/password/PasswordGeneratorSEO.astro";
---

<Layout
    title="Generador de Contraseñas Seguras y Aleatorias"
    description="Crea contraseñas robustas e imposibles de hackear al instante. Herramienta gratuita de ciberseguridad para generar claves aleatorias y seguras."
    image="/images/utilities/password-generator.png"
>
    <div class="relative min-h-screen pt-16 px-4 pb-20 overflow-x-hidden">
        <div
            class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-100 via-white to-white dark:from-slate-900 dark:via-slate-950 dark:to-black -z-10"
        >
        </div>

        <div class="max-w-4xl mx-auto">
            <div class="mb-12 text-center animate-in fade-in slide-in-from-bottom-8 duration-1000">
                <BackToUtilities class="mb-8" />
                <h1 class="text-5xl md:text-7xl font-black tracking-tighter mb-6">
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-br from-emerald-500 to-teal-700 dark:from-emerald-400 dark:to-teal-500 pr-2"
                    >
                        generador de
                    </span>
                    <span class="text-slate-800 dark:text-white">contraseñas</span>
                </h1>
                <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto font-light">
                    Fortalece tu seguridad digital.
                    <span class="font-medium text-slate-900 dark:text-white"
                        >Genera claves aleatorias de alta entropía.</span
                    >
                </p>
            </div>

            <PasswordGenerator />
            <PasswordGeneratorSEO />
        </div>
    </div>
</Layout>
