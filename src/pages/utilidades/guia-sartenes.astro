---
import LayoutUtility from '../../layouts/LayoutUtility.astro';
import UtilityHeader from '../../components/utilidades/UtilityHeader.astro';
import CookwareSelector from '../../components/utilidades/cookware-guide/CookwareSelector.astro';
import CookwareSEO from '../../components/utilidades/cookware-guide/CookwareSEO.astro';

const seoData = {
    title: "Selector de Menaje y Materiales de Cocina",
    description: "Guía interactiva para elegir la mejor sartén u olla según tu estilo de cocina. Hierro vs Acero vs Teflón.",
    image: "/images/utilities/guia-sartenes.png",
    type: "website",
    category: "Cocina"
};
---

<LayoutUtility
    title={seoData.title}
    description={seoData.description}
    image={seoData.image}
    category={seoData.category}
    gradientFrom="from-slate-100"
>
    <!-- 1. Header Slot -->
    <div slot="header">
        <UtilityHeader
            titleHighlight="Ollas y Sartenes"
            titleBase="Selector de"
            description="¿Hierro, Acero, Cobre o Teflón? Deja de gastar dinero en sartenes que no duran. Encuentra la herramienta perfecta para tu forma de cocinar."
            gradientFrom="from-orange-500"
            gradientTo="to-red-600"
            reverse={true}
        />
    </div>

    <!-- 2. Main Slot (Calculator/Selector) -->
    <div>
        <CookwareSelector />
    </div>

    <!-- 3. SEO Content Slot -->
    <div slot="seo">
        <CookwareSEO />
    </div>
</LayoutUtility>
