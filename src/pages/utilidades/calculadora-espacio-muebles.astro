---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import FurnitureFit from "../../components/utilidades/furniture-fit/FurnitureFit.astro";
import FurnitureFitSEO from "../../components/utilidades/furniture-fit/FurnitureFitSEO.astro";
---

<LayoutUtility
    title="¿Cabe el Mueble? | Calculadora de Mudanzas y Espacio 3D"
    description="Comprueba si tu sofá, armario o mesa cabe en el ascensor o por la puerta. Usa el teorema de Pitágoras 3D para calcular inclinaciones."
    image="/images/utilities/calculadora-espacio-muebles.png"
    gradientFrom="from-slate-100"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Calculadora"
            titleBase="de Espacio"
            description="Evita desastres en tu mudanza. Calcula si tus muebles caben por puertas y ascensores."
            gradientFrom="from-indigo-500"
            gradientTo="to-emerald-600"
        />
    </div>

    <FurnitureFit />

    <div slot="seo">
        <FurnitureFitSEO />
    </div>
</LayoutUtility>
