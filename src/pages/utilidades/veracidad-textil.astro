---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import FabricTruth from "../../components/utilidades/fabric-truth/FabricTruth.astro";
import FabricTruthSEO from "../../components/utilidades/fabric-truth/FabricTruthSEO.astro";
---

<LayoutUtility
    title="Análisis de Calidad Textil | Veracidad Textil"
    description="Descubre la calidad real de tus prendas analizando su composición. ¿Es algodón real o plástico caro? Análisis científico de fibras."
    image="/images/utilities/veracidad-textil.png"
    gradientFrom="from-indigo-100"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Veracidad"
            titleBase="Textil"
            description="Analiza la etiqueta de tu ropa y descubre si estás pagando por calidad o por puro Petróleo."
            gradientFrom="from-indigo-500"
            gradientTo="to-emerald-600"
        />
    </div>

    <FabricTruth />

    <div slot="seo">
        <FabricTruthSEO />
    </div>
</LayoutUtility>
