---
import Layout from "../../layouts/Layout.astro";
import FormatStripperComponent from "../../components/utilidades/format-stripper/FormatStripper.astro";
import FormatStripperSEO from "../../components/utilidades/format-stripper/FormatStripperSEO.astro";
import BackToUtilities from "../../components/ui/BackToUtilities.astro";
import { Icon } from "astro-icon/components";
---

<Layout
    title="Limpiador de Texto y Formato - Format Stripper"
    description="Limpia saltos de línea, espacios extra y formatos raros de tus textos. Herramienta gratuita para formatear texto, convertir a CamelCase y más."
>
    <div class="relative min-h-screen pt-16 px-4 pb-20">
        <div
            class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-slate-100 via-white to-white dark:from-slate-900 dark:via-slate-950 dark:to-black -z-10"
        >
        </div>

        <div class="max-w-4xl mx-auto">
            <div class="mb-12 text-center animate-in fade-in slide-in-from-bottom-8 duration-1000">
                <BackToUtilities class="mb-8" />
                <h1 class="text-5xl md:text-7xl font-black tracking-tighter mb-6">
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-600 to-teal-600 dark:from-emerald-400 dark:to-teal-400 pr-2"
                    >
                        format
                    </span>
                    <span class="text-slate-800 dark:text-white">stripper</span>
                </h1>
                <p class="text-xl text-slate-600 dark:text-slate-400 max-w-2xl mx-auto font-light">
                    Elimina el formato basura, saltos de línea y espacios extra.
                    <span class="font-medium text-slate-900 dark:text-white"
                        >Copia, pega y limpia.</span
                    >
                </p>
            </div>

            <FormatStripperComponent />
            <FormatStripperSEO />
        </div>
    </div>
</Layout>
