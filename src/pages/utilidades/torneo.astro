---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import TournamentBracket from "../../components/utilidades/tournament-bracket/TournamentBracket.astro";
import TournamentBracketSEO from "../../components/utilidades/tournament-bracket/TournamentBracketSEO.astro";

const CONTENT = {
    title: "Generador de Brackets y Torneos Online Gratis",
    description:
        "Organiza torneos y crea brackets de eliminación directa gratis y sin registro. Ideal para FIFA, Pádel, eSports y juegos de mesa. 100% Mobile Friendly.",
    hero: {
        highlight: "Organizador",
        title: "de Torneos",
        description:
            "Genera cuadros de eliminación directa en segundos. Perfecto para FIFA, Pádel o cualquier competición entre amigos.",
    },
};
---

<LayoutUtility
    title={CONTENT.title}
    description={CONTENT.description}
    image="/images/utilities/torneo.webp"
    category="Utilidades"
    gradientFrom="from-indigo-100"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight={CONTENT.hero.highlight}
            titleBase={CONTENT.hero.title}
            description={CONTENT.hero.description}
            gradientFrom="from-indigo-600"
            gradientTo="to-violet-600"
        />
    </div>

    <TournamentBracket />

    <div slot="seo">
        <TournamentBracketSEO />
    </div>
</LayoutUtility>
