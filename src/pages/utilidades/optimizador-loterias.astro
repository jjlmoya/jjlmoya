---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import LotteryOptimizer from "../../components/utilidades/lottery-optimizer/LotteryOptimizer.astro";
import LotteryOptimizerSEO from "../../components/utilidades/lottery-optimizer/LotteryOptimizerSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const links = [
    {
        name: "Loterías y Apuestas del Estado (SELAE) - Transparencia y Datos",
        url: "https://www.selae.es/es/web-corporativa/responsabilidad-social/portal-de-transparencia/portal-de-transparencia",
    },
    {
        name: "Matemática de la Lotería de Navidad - Real Sociedad Matemática Española",
        url: "https://rsme.es/solucion-al-desafio-matematico-de-la-loteria-de-navidad-en-el-pais/",
    },
    {
        name: "El Criterio de Kelly y la Gestión de Riesgos - Investopedia",
        url: "https://www.investopedia.com/terms/k/kellycriterion.asp",
    },
];
---

<LayoutUtility
    title="Optimizador de Loterías y Probabilidades | Calculadora de Éxito"
    description="Analiza tus probabilidades en la Lotería de Navidad, Euromillones y Bonoloto. Calcula el número óptimo de décimos y el valor esperado de tu apuesta."
    image="/images/utilities/lottery_optimizer_og.webp"
    gradientFrom="from-emerald-100"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Probabilidad"
            titleBase="de Loterías"
            description="Compara sorteos, calcula tu esperanza matemática y descubre el número óptimo de décimos para jugar con cabeza."
            gradientFrom="from-emerald-500"
            gradientTo="to-blue-600"
        />
    </div>

    <LotteryOptimizer />

    <div slot="seo">
        <LotteryOptimizerSEO />
    </div>

    <div slot="bibliography">
        <Bibliography links={links} />
    </div>
</LayoutUtility>
