---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import TinnitusReliever from "../../components/utilidades/tinnitus-reliever/TinnitusReliever.astro";
import TinnitusRelieverSEO from "../../components/utilidades/tinnitus-reliever/TinnitusRelieverSEO.astro";

const title = "Alivio de Tinnitus | Terapia de Muesca Online Gratis";
const description =
    "Herramienta online gratuita para alivio de tinnitus mediante terapia de muesca (Notch Therapy). Generador de ruido blanco, rosa y marrón personalizable.";
---

<LayoutUtility
    title={title}
    description={description}
    image="/images/utilities/tinnitus-reliever.png"
    gradientFrom="from-teal-900"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Alivio"
            titleBase="Tinnitus"
            description="Generador de ruido terapéutico con filtro de frecuencia para enmascaramiento y terapia de muesca."
            gradientFrom="from-teal-400"
            gradientTo="to-slate-500"
        />
    </div>

    <TinnitusReliever />

    <div slot="seo">
        <TinnitusRelieverSEO />
    </div>
</LayoutUtility>
