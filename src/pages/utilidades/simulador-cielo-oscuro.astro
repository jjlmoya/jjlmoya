---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import BortleVisualizer from "../../components/utilidades/dark-sky-simulator/BortleVisualizer.astro";
import BortleVisualizerSEO from "../../components/utilidades/dark-sky-simulator/BortleVisualizerSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const title = "Simulador de Contaminación Lumínica (Escala Bortle)";
const description = "Visualiza interactivamente cómo la contaminación lumínica borra las estrellas. Compara los 9 niveles de la Escala de Bortle.";

const bibliographyLinks = [
    {
        name: "Light Pollution Map (Mapa Mundial)",
        url: "https://www.lightpollutionmap.info/"
    },
    {
        name: "Artículo Original de John E. Bortle (Sky & Telescope, 2001)",
        url: "https://skyandtelescope.org/astronomy-resources/light-pollution-and-astronomy-the-bortle-dark-sky-scale/"
    },
    {
        name: "Fundación Starlight",
        url: "https://fundacionstarlight.org/"
    }
];
---

<LayoutUtility
    title={title}
    description={description}
    category="nature"
    image="/images/utilities/dark-sky.png"
    gradientFrom="from-indigo-100"
    gradientTo="to-slate-50"
>
    
    <div slot="header">
        <UtilityHeader
            titleHighlight="Cielo Oscuro"
            titleBase="Simulador de"
            description="Experimenta cómo la luz artificial nos oculta el cosmos. Explora la Escala de Bortle nivel a nivel."
            gradientFrom="from-indigo-500"
            gradientTo="to-purple-600"
            reverse={true}
        />
    </div>

    <BortleVisualizer />

    <div slot="seo">
        <BortleVisualizerSEO />
    </div>

    <div slot="bibliography">
        <Bibliography links={bibliographyLinks} />
    </div>
</LayoutUtility>
