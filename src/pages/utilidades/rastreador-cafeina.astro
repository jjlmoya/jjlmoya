---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import CaffeineTracker from "../../components/utilidades/caffeine-tracker/CaffeineTracker.astro";
import CaffeineTrackerSEO from "../../components/utilidades/caffeine-tracker/CaffeineTrackerSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const bibliographyLinks = [
    {
        name: "Caffeine effects on sleep taken 0, 3, or 6 hours before going to bed (Journal of Clinical Sleep Medicine)",
        url: "https://jcsm.aasm.org/doi/10.5664/jcsm.3170",
    },
    {
        name: "Effect of smoking on caffeine elimination (Clinical Pharmacology & Therapeutics)",
        url: "https://pubmed.ncbi.nlm.nih.gov/2482799/",
    },
    {
        name: "Caffeine metabolism during pregnancy (British Journal of Clinical Pharmacology)",
        url: "https://www.bmj.com/content/313/7069/1358.short",
    },
    {
        name: "Common genetic variation in the CYP1A2 gene and caffeine metabolism (JAMA)",
        url: "https://pmc.ncbi.nlm.nih.gov/articles/PMC9880799/",
    },
];
---

<LayoutUtility
    title="Rastreador de Vida Media de la Cafeína - Simulador de Sueño"
    description="Calcula cuánta cafeína queda en tu sistema según tu metabolismo. Visualizador de degradación para evitar el insomnio y mejorar tu descanso."
    image="/images/utilities/rastreador-cafeina.png"
    gradientFrom="from-amber-50"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Cafeína"
            titleBase="Rastreador de"
            description="Visualiza el metabolismo del café en tu sangre. Evita el insomnio calculando el estado de tu sistema nervioso antes de dormir."
            gradientFrom="from-amber-600"
            gradientTo="to-indigo-600"
            reverse={true}
        />
    </div>

    <CaffeineTracker />

    <div slot="seo">
        <CaffeineTrackerSEO />
    </div>

    <div slot="bibliography">
        <Bibliography links={bibliographyLinks} title="Ciencia del Metabolismo y Farmacocinética" />
    </div>
</LayoutUtility>
