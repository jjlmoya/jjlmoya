---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import TebasCheckComponent from "../../components/utilidades/tebas-check/TebasCheck.astro";
import TebasCheckSEO from "../../components/utilidades/tebas-check/TebasCheckSEO.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";

const title = "Detector de Bloqueos Tebas";
const description =
    "Herramienta de diagnóstico para detectar bloqueos Ilegítimos de IPs de Cloudflare por parte de operadoras españolas.";
---

<LayoutUtility
    title={title}
    description={description}
    image="/images/utilities/tebas-check.png"
    gradientFrom="from-red-500/10"
    gradientTo="to-purple-600/10"
>
    <div slot="header" class="mb-12">
        <UtilityHeader
            titleHighlight="Detector"
            titleBase="Tebas-Check"
            description="Verifica si tu operadora está bloqueando IPs compartidas de Cloudflare e impidiendo tu acceso a servicios legítimos."
            gradientFrom="from-red-500"
            gradientTo="to-purple-600"
        />
    </div>

    <main class="max-w-4xl mx-auto">
        <TebasCheckComponent />
    </main>

    <div slot="seo">
        <TebasCheckSEO />
    </div>
</LayoutUtility>
