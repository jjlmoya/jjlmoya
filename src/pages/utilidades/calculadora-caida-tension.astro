---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import VoltageDropCalculator from "../../components/utilidades/voltage-drop-calculator/VoltageDropCalculator.astro";
import VoltageDropCalculatorSEO from "../../components/utilidades/voltage-drop-calculator/VoltageDropCalculatorSEO.astro";
---

<LayoutUtility
    title="Calculadora de Caída de Tensión (Sección de Cable)"
    description="Evita cables quemados y luces tenues. Calcula la sección de cable necesaria para tu instalación eléctrica (12V, 24V, 220V)."
    image="/images/utilities/voltage-drop-calculator.jpg"
    gradientFrom="from-amber-100"
>
    <div slot="header">
        <h1
            class="text-4xl lg:text-5xl font-black text-slate-900 dark:text-white mb-6 tracking-tight"
        >
            Calculadora de <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-amber-600 to-orange-600 dark:from-amber-400 dark:to-orange-400"
                >Caída de Tensión</span
            >
        </h1>
        <p class="text-xl text-slate-600 dark:text-slate-300 leading-relaxed max-w-2xl mx-auto">
            Dimensiona correctamente tus cables. Introduce el voltaje, la corriente y la distancia
            para asegurar que tu electricidad llega a destino sin pérdidas peligrosas.
        </p>
    </div>

    <VoltageDropCalculator />

    <VoltageDropCalculatorSEO />
</LayoutUtility>
