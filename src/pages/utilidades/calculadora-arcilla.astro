---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import ClayCalculator from "../../components/utilidades/clay-calculator/ClayCalculator.astro";
import ClayCalculatorSEO from "../../components/utilidades/clay-calculator/ClayCalculatorSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";
---

<LayoutUtility
    title="Calculadora de Contracción de Arcilla: Dimensiones Exactas para Cerámica"
    description="Calcula la contracción de arcilla en secado y cocción. Diseña piezas cerámicas con las dimensiones finales exactas."
    image="/images/utilities/calculadora-arcilla.png"
    category="DIY y Artesanía"
    gradientFrom="from-amber-100"
    gradientTo="to-orange-200"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Arcilla"
            titleBase="Calculadora de"
            description="Domina la contracción. Crea piezas cerámicas con las dimensiones exactas que necesitas."
            gradientFrom="from-amber-600"
            gradientTo="to-orange-600"
            reverse={false}
        />
    </div>

    <ClayCalculator />

    <div slot="seo">
        <ClayCalculatorSEO />
    </div>

    <div slot="bibliography">
        <Bibliography
            links={[
                {
                    name: "The Potter's Dictionary - Clay Shrinkage",
                    url: "https://digitalfire.com/glossary/firing+shrinkage",
                },
                {
                    name: "Ceramic Arts Network - Understanding Shrinkage",
                    url: "https://ceramicartsnetwork.org/daily/article/How-to-Determine-Clay-Shrinkage-and-Make-a-Shrink-Rule",
                },
            ]}
        />
    </div>
</LayoutUtility>
