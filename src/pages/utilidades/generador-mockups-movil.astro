---
export const prerender = true;
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import MobileMockupGenerator from "../../components/utilidades/mobile-mockup-generator/MobileMockupGenerator.astro";
import MobileMockupGeneratorSEO from "../../components/utilidades/mobile-mockup-generator/MobileMockupGeneratorSEO.astro";

const title = "Generador de Mockups Móviles App Store - iPhone y Pixel Pro";
const description =
    "Crea presentaciones profesionales para la App Store y Google Play. Mockups de iPhone y Pixel con fondos personalizados, layouts panorámicos y exportación masiva en alta resolución.";
const image = "/images/utilities/mobile-mockup-generator.webp";

const faqItems = [
    {
        question: "¿Son estas capturas válidas para la App Store y Google Play?",
        answer: "Sí, las imágenes generadas cumplen con las proporciones y calidades requeridas por las tiendas de aplicaciones. Solo tienes que elegir el dispositivo adecuado (iPhone para iOS, Pixel para Android) antes de exportar.",
    },
    {
        question: "¿Puedo usar mis propios fondos personalizados?",
        answer: "¡Claro! Además de nuestra biblioteca de gradientes premium, puedes subir cualquier imagen desde tu ordenador para que sirva de ambiente de fondo para tus mockups.",
    },
    {
        question: "¿Es gratis para uso comercial?",
        answer: "Sí, puedes usar los mockups generados para tus proyectos comerciales, portafolios o presentaciones sin coste alguno y sin marcas de agua.",
    },
    {
        question: "¿Se guardan mis capturas de pantalla en algún servidor?",
        answer: "No. Al igual que nuestras otras herramientas, el generador funciona 100% localmente en tu navegador. Tus imágenes privadas nunca salen de tu ordenador.",
    },
];

const howToSteps = [
    {
        name: "Subir capturas",
        text: "Arrastra o selecciona las capturas de pantalla de tu aplicación móvil que quieras presentar.",
    },
    {
        name: "Elegir dispositivo",
        text: "Selecciona el modelo de smartphone (ej. iPhone 15 Pro o Google Pixel) y el color del chasis.",
    },
    {
        name: "Personalizar entorno",
        text: "Ajusta el fondo, el ángulo del dispositivo, añade textos de marketing y elige el layout de la composición.",
    },
    {
        name: "Descargar en HD",
        text: "Exporta el resultado final en formato PNG de alta resolución listo para ser subido a la tienda de aplicaciones.",
    },
];
---

<LayoutUtility
    title={title}
    description={description}
    image={image}
    gradientFrom="from-slate-100"
    faqItems={faqItems}
    howToSteps={howToSteps}
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="App Store Mockups"
            titleBase="Generador"
            description="La herramienta definitiva para diseñadores y desarrolladores. Crea capturas de pantalla de impacto para tus fichas de tienda, presentaciones de pitch y portafolios en segundos. Control total sobre el layout, fondos premium y privacidad garantizada."
            gradientFrom="from-indigo-600"
            gradientTo="to-violet-600"
            reverse={true}
        />
    </div>

    <MobileMockupGenerator />

    <div slot="seo">
        <MobileMockupGeneratorSEO />
    </div>
</LayoutUtility>
