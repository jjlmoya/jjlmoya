---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import FiberPreparation from "../../components/utilidades/textiles/fiber-preparation/FiberPreparation.astro";
import FiberPreparationSEO from "../../components/utilidades/textiles/fiber-preparation/FiberPreparationSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const links = [
    {
        name: "La Escuela Artesana - Taller de Tintes Naturales sobre Lana",
        url: "https://laescuelaartesana.com/taller-de-tintes-naturales-sobre-lana/",
    },
    {
        name: "Tatiana Sarasa (@tatianasarasa) - Artista Textil y Tintes Naturales",
        url: "https://www.instagram.com/tatianasarasa/",
    },
];
---

<LayoutUtility
    title="Preparación de Fibras para Pigmentar y Mordentado | Guía Técnica Textil"
    description="Calculadora de WOF, protocolos de mordentado y rampas térmicas para preparar lana, seda y algodón antes del teñido natural."
    image="/images/utilities/textile_preparation_og.webp"
    gradientFrom="from-emerald-100"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Preparación"
            titleBase="de Fibras para Pigmentar"
            description="Guía técnica para asegurar que el pigmento se una permanentemente a la estructura molecular del tejido."
            gradientFrom="from-emerald-500"
            gradientTo="to-indigo-600"
        />
    </div>

    <FiberPreparation />

    <div slot="seo">
        <FiberPreparationSEO />
    </div>

    <div slot="bibliography">
        <Bibliography links={links} />
    </div>
</LayoutUtility>
