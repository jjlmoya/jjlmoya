---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import ColonyCounter from "../../components/utilidades/colony-counter/ColonyCounter.astro";
import ColonyCounterSEO from "../../components/utilidades/colony-counter/ColonyCounterSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";
---

<LayoutUtility
    title="Contador de Colonias: Conteo Digital de UFC en Placas de Petri"
    description="Herramienta digital para contar colonias bacterianas en placas de Petri. Diferencia tipos, evita errores y calcula UFC con precisión."
    image="/images/utilities/contador-colonias.png"
    category="Ciencia y Laboratorio"
    gradientFrom="from-teal-100"
    gradientTo="to-purple-300"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Colonias"
            titleBase="Contador de"
            description="Microbiología digital. Marca, cuenta y diferencia colonias sin perder la cuenta."
            gradientFrom="from-teal-500"
            gradientTo="to-purple-600"
            reverse={false}
        />
    </div>

    <ColonyCounter />

    <div slot="seo">
        <ColonyCounterSEO />
    </div>

    <div slot="bibliography">
        <Bibliography
            links={[
                {
                    name: "FDA - Bacteriological Analytical Manual",
                    url: "https://www.fda.gov/food/laboratory-methods-food/bacteriological-analytical-manual-bam",
                },
                {
                    name: "ISO 4833 - Colony Count Technique",
                    url: "https://www.iso.org/standard/53728.html",
                },
            ]}
        />
    </div>
</LayoutUtility>
