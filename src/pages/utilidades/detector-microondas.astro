---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import MicrowaveDetector from "../../components/utilidades/microwave-detector/MicrowaveDetector.astro";
import MicrowaveDetectorSEO from "../../components/utilidades/microwave-detector/MicrowaveDetectorSEO.astro";
---

<LayoutUtility
    title="Detector de Fugas de Microondas | WiFi Interference Visualizer"
    description="Analiza si tu microondas pierde radiación midiendo la interferencia en tiempo real sobre tu red WiFi. Herramienta científica de seguridad."
    image="/images/utilities/detector-microondas.png"
    gradientFrom="from-slate-900"
>
    
    <div slot="header">
        <UtilityHeader
            titleHighlight="Detector"
            titleBase="Microondas"
            description="Visualiza la interferencia electromagnética de tu cocina en tiempo real."
            gradientFrom="from-rose-500"
            gradientTo="to-indigo-600"
        />
    </div>

    <MicrowaveDetector />

    <div slot="seo">
        <MicrowaveDetectorSEO />
    </div>
</LayoutUtility>
