---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import CarbonationCalculator from "../../components/utilidades/carbonation-calculator/CarbonationCalculator.astro";
import CarbonationCalculatorSEO from "../../components/utilidades/carbonation-calculator/CarbonationCalculatorSEO.astro";

const title = "Calculadora de Carbonatación de Cerveza";
const description =
    "Calcula la cantidad exacta de azúcar para carbonatar tu cerveza casera. Soporte para Dextrosa, Azúcar de mesa y DME con visualización de burbujas en tiempo real.";
---

<LayoutUtility
    title={title}
    description={description}
    image="/images/utilities/carbonation-calculator.png"
>
    <div class="space-y-12">
        <CarbonationCalculator />
        <CarbonationCalculatorSEO />
    </div>
</LayoutUtility>
