---
import LayoutUtility from "../../layouts/LayoutUtility.astro";
import UtilityHeader from "../../components/utilidades/UtilityHeader.astro";
import AsteroidImpact from "../../components/utilidades/asteroid-impact/AsteroidImpact.astro";
import AsteroidImpactSEO from "../../components/utilidades/asteroid-impact/AsteroidImpactSEO.astro";
import Bibliography from "../../components/utilidades/Bibliography.astro";

const TITLE = "Simulador de Impacto de Asteroides: Calculadora de Apocalipsis";
const DESCRIPTION =
    "Simula el impacto de asteroides con física real. Calcula energía, cráter, radiación térmica y onda de choque. ¿Sobrevivirías a Chicxulub?";

const bibliographyLinks = [
    {
        name: "Collins, G. S., et al. (2005). Earth Impact Effects Program: A Web-based computer program for calculating the regional environmental consequences of a meteoroid impact on Earth. Meteoritics & Planetary Science.",
        url: "https://impact.ese.ic.ac.uk/ImpactEarth/",
    },
    {
        name: "Toon, O. B., et al. (1997). Environmental perturbations caused by the impacts of asteroids and comets. Reviews of Geophysics.",
        url: "https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/96RG03038",
    },
    {
        name: "Chapman, C. R., & Morrison, D. (1994). Impacts on the Earth by asteroids and comets: assessing the hazard. Nature.",
        url: "https://www.nature.com/articles/367033a0",
    },
    {
        name: "Schulte, P., et al. (2010). The Chicxulub Asteroid Impact and Mass Extinction at the Cretaceous-Paleogene Boundary. Science.",
        url: "https://www.science.org/doi/10.1126/science.1177265",
    },
    {
        name: "Brown, P., et al. (2013). A 500-kiloton airburst over Chelyabinsk and an enhanced hazard from small impactors. Nature.",
        url: "https://www.nature.com/articles/nature12741",
    },
];
---

<LayoutUtility
    title={TITLE}
    description={DESCRIPTION}
    image="/images/utilities/simulador-impacto-asteroide.png"
    category="Ciencia y Educación"
    gradientFrom="from-orange-100"
    gradientTo="to-red-300"
>
    <div slot="header">
        <UtilityHeader
            titleHighlight="Asteroide"
            titleBase="Simulador de Impacto"
            description="Traduce la física abstracta en consecuencias humanas. Calcula si sobrevivirías a una roca espacial viajando a 20 km/s."
            gradientFrom="from-orange-600"
            gradientTo="to-red-600"
        />
    </div>

    <AsteroidImpact />

    <div slot="seo">
        <AsteroidImpactSEO />
        <Bibliography links={bibliographyLinks} />
    </div>
</LayoutUtility>
