<div
    id="nuance-hud"
    class="fixed bottom-0 left-0 w-full z-50 p-4 md:p-8 flex flex-col items-center pointer-events-none"
>
    
    <div
        class="w-full max-w-xl flex justify-between text-[10px] md:text-xs font-bold uppercase tracking-widest mb-4 font-mono transition-colors duration-300 pointer-events-auto"
        id="hud-labels"
    >
        <span id="label-hud-left" class="transition-all duration-300 opacity-50">Izquierda</span>
        <span id="label-hud-right" class="transition-all duration-300 opacity-50">Derecha</span>
    </div>

    
    
    <div
        class="relative w-full max-w-xl h-24 md:h-20 flex items-center justify-center cursor-ew-resize touch-none pointer-events-auto z-50"
        id="balance-track"
    >
        
        <div
            id="visual-track"
            class="absolute left-0 right-0 h-14 bg-neutral-900/10 rounded-full border border-current shadow-2xl backdrop-blur-xl overflow-hidden transition-colors duration-500 pointer-events-none"
            style="border-color: rgba(255,255,255,0.2)"
        >
            
            <div
                class="absolute inset-y-0 left-0 w-1/2 bg-gradient-to-r from-white/10 to-transparent"
            >
            </div>
            <div
                class="absolute inset-y-0 right-0 w-1/2 bg-gradient-to-l from-black/10 to-transparent"
            >
            </div>

            
            <div class="absolute inset-y-0 left-1/2 w-0.5 bg-current opacity-20 -translate-x-1/2">
            </div>
        </div>

        
        
        <div
            id="balance-handle"
            class="absolute h-12 w-12 bg-white rounded-full shadow-[0_0_15px_rgba(0,0,0,0.2)] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 flex items-center justify-center transform active:scale-95 transition-transform duration-75 border border-black/10 pointer-events-none"
        >
            <div class="w-1 h-5 bg-black/20 rounded-full"></div>
        </div>
    </div>

    <div
        class="mt-4 text-[9px] uppercase tracking-widest opacity-50 animate-pulse transition-colors duration-300"
        id="hud-hint"
    >
        Desliza para descubrir
    </div>
</div>
