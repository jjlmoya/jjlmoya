<section class="relative min-h-screen py-24 px-6 overflow-hidden">
    <div class="absolute inset-0 pointer-events-none overflow-hidden">
        <div
            class="absolute -top-[10%] -left-[10%] w-[40%] h-[40%] bg-[var(--color-gamebob-primary)]/10 rounded-full blur-[120px] animate-pulse"
        >
        </div>
        <div
            class="absolute top-[20%] -right-[5%] w-[30%] h-[30%] bg-purple-500/10 rounded-full blur-[100px] animate-pulse"
            style="animation-delay: 2s;"
        >
        </div>
        <div
            class="absolute -bottom-[10%] left-[20%] w-[50%] h-[50%] bg-blue-500/5 rounded-full blur-[150px] animate-pulse"
            style="animation-delay: 4s;"
        >
        </div>
        <div
            class="absolute inset-0 opacity-[0.03]"
            style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 40px 40px;"
        >
        </div>
    </div>

    <div class="max-w-4xl mx-auto relative z-10">
        <div class="mb-16 text-center">
            <div
                class="inline-block px-4 py-1 rounded-full border border-[var(--color-gamebob-primary)]/30 bg-[var(--color-gamebob-primary)]/5 text-[var(--color-gamebob-primary)] text-xs font-bold tracking-[0.2em] uppercase mb-6"
            >
                Marco Legal
            </div>
            <h1 class="text-5xl md:text-7xl font-black text-white mb-8 tracking-tighter">
                Términos y <br />
