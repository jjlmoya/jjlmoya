---
import { Icon } from "astro-icon/components";

interface Props {
    title?: string;
    subtitle?: string;
    description?: string;
    class?: string;
}

const {
    title = "Ãšnete a la comunidad",
    subtitle = "Servidor Oficial",
    description,
    class: className = "",
} = Astro.props;
---

<div class={`discord-cta-wrapper w-full max-w-4xl mx-auto mb-24 overflow-hidden ${className}`}>
    <a
        href="https://discord.gg/uJ7NJEj7sf"
        target="_blank"
        class="group relative flex flex-row items-center gap-4 md:gap-6 p-4 md:p-8 rounded-2xl md:rounded-[2rem] bg-[#5865F2]/5 border border-[#5865F2]/20 hover:border-[#5865F2]/40 transition-all duration-500 overflow-hidden w-full"
    >
        {}
        <div
            class="absolute right-0 bottom-0 w-24 h-24 bg-[#5865F2]/20 blur-[50px] rounded-full pointer-events-none"
        >
        </div>

        {}
        <div class="relative flex-shrink-0">
            <div
                class="w-12 h-12 md:w-20 md:h-20 flex items-center justify-center bg-[#5865F2] rounded-xl md:rounded-2xl shadow-[0_10px_30px_rgba(88,101,242,0.3)]"
            >
                <Icon name="mdi:discord" class="w-7 h-7 md:w-12 md:h-12 text-white" />
            </div>
            {}
            <div
                class="absolute -top-1 -right-1 w-4 h-4 md:w-5 md:h-5 bg-[#23a55a] border-[3px] md:border-4 border-[#050505] rounded-full animate-pulse shadow-[0_0_10px_rgba(35,165,90,0.6)]"
            >
            </div>
        </div>

        {}
        <div class="relative flex-grow min-w-0">
            <div
                data-t="privacy.discord.subtitle"
                class="text-[9px] md:text-[10px] font-bold text-[#5865F2] uppercase tracking-[0.2em] mb-0.5 opacity-80"
            >
                {subtitle}
            </div>
            <h2
                data-t="privacy.discord.title"
                class="text-sm md:text-3xl font-black text-white tracking-tight leading-tight uppercase italic"
            >
                {title}
            </h2>
            {
                description && (
                    <p class="text-xs md:text-lg text-white/40 font-medium leading-relaxed lowercase mt-1 line-clamp-1 md:line-clamp-none">
                        {description}
                    </p>
                )
            }
        </div>

        {}
        <div class="relative flex-shrink-0 ml-auto hidden sm:block">
            <div
                class="w-10 h-10 md:w-12 md:h-12 flex items-center justify-center border border-[#5865F2]/30 rounded-full group-hover:bg-[#5865F2] group-hover:border-[#5865F2] group-hover:text-white text-[#5865F2] transition-all duration-300"
            >
                <Icon name="mdi:chevron-right" class="w-5 h-5 md:w-6 md:h-6" />
            </div>
        </div>
    </a>
</div>

<style>
    .discord-cta-wrapper {
        
    }

    a {
        backdrop-filter: blur(10px);
    }
</style>
