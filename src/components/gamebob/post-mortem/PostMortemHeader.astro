---
import { Icon } from "astro-icon/components";

interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<header class="mb-20 relative">
    <div class="flex items-center gap-4 mb-6">
        <div
            class="w-12 h-12 rounded-xl bg-red-500/10 flex items-center justify-center border border-red-500/20 shadow-inner"
        >
            <Icon name="mdi:skull-scan" class="w-7 h-7 text-red-500" />
        </div>
        <div class="h-px flex-1 bg-gradient-to-r from-red-500/30 to-transparent"></div>
    </div>

    <h1
        class="text-6xl md:text-8xl font-black text-white hover:text-red-500 transition-colors duration-500 cursor-default mb-4 inline-flex items-baseline"
    >
        {title}<span class="block w-[0.15em] h-[0.15em] bg-red-500 ml-[0.05em]"></span>
    </h1>

    <p class="text-lg text-gray-400 font-medium max-w-2xl leading-relaxed">
        {description}
    </p>
</header>

<style>
    h1 {
        text-transform: uppercase;
        letter-spacing: -0.05em;
    }
</style>
