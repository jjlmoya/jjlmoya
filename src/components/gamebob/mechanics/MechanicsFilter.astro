---
import { Icon } from "astro-icon/components";

interface Props {
    allTags: string[];
}

const { allTags } = Astro.props;
---

<div class="flex flex-col gap-4 md:gap-8 mb-6 md:mb-8">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <h1
            class="text-2xl md:text-4xl font-bold border-l-4 border-[var(--color-gamebob-accent)] pl-3 md:pl-4 lowercase text-[var(--color-gamebob-text)]"
        >
            mec√°nicas
        </h1>

        <div class="flex flex-wrap gap-2" id="filters">
            <button
                class="filter-btn active px-3 py-1 rounded-full text-xs md:text-sm transition-all"
                data-filter="all"
            >
                Todos
            </button>
            <button
                class="filter-btn px-3 py-1 rounded-full text-xs md:text-sm transition-colors"
                data-filter="mobile"
            >
                <Icon name="mdi:cellphone" class="inline w-3 h-3 md:w-4 md:h-4 mr-1" /> Mobile
            </button>
            <button
                class="filter-btn px-3 py-1 rounded-full text-xs md:text-sm transition-colors"
                data-filter="desktop"
            >
                <Icon name="mdi:monitor" class="inline w-3 h-3 md:w-4 md:h-4 mr-1" /> Desktop
            </button>
        </div>
    </div>

    <div class="flex overflow-x-auto pb-2 md:pb-0 -mx-4 px-4 md:mx-0 md:px-0 gap-2 no-scrollbar">
        {
            allTags.map((tag) => (
                <button
                    class="tag-filter-btn whitespace-nowrap px-2 py-1 rounded text-[10px] md:text-xs transition-colors flex-shrink-0"
                    data-tag={tag}
                >
                    #{tag}
                </button>
            ))
        }
    </div>
</div>

<style>
    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }
    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

    /* Button Styles */
    .filter-btn,
    .tag-filter-btn {
        background-color: var(--color-ui-surface);
        color: var(--color-ui-text-muted);
        border: 1px solid var(--color-ui-border);
    }

    .filter-btn:hover,
    .tag-filter-btn:hover {
        background-color: var(--color-ui-surface-hover);
        color: white;
    }

    /* Active State */
    .filter-btn.active,
    .tag-filter-btn.active {
        background-color: var(--color-gamebob-primary);
        color: black;
        box-shadow: 0 0 20px rgba(29, 218, 188, 0.3);
        border-color: transparent;
    }

    .filter-btn.active:hover,
    .tag-filter-btn.active:hover {
        background-color: rgba(29, 218, 188, 0.8);
    }
</style>
