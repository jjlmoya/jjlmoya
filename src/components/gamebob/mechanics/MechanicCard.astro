---
import { Icon } from "astro-icon/components";
import type { MechanicItem } from "../../../data/mechanics";

interface Props {
    mechanic: MechanicItem;
}

const { mechanic } = Astro.props;
---

<a
    href={mechanic.url}
    class="mechanic-card group relative overflow-hidden rounded-xl bg-gradient-to-br from-white/5 to-white/0 border border-white/10 hover:border-[var(--color-gamebob-accent)]/50 transition-all duration-300 hover:scale-105 hover:shadow-2xl hover:shadow-[var(--color-gamebob-accent)]/20"
    data-tags={mechanic.tags.join(",")}
    data-platforms={mechanic.platforms}
    data-category={mechanic.category}
>
    <div class="p-6 space-y-4">
        <div class="flex items-center gap-3">
            <div
                class="w-12 h-12 rounded-lg bg-[var(--color-gamebob-accent)]/10 flex items-center justify-center"
            >
                <Icon name={mechanic.icon} class="w-6 h-6 text-[var(--color-gamebob-accent)]" />
            </div>
            <h3
                class="text-xl font-bold text-[var(--color-gamebob-text)] group-hover:text-[var(--color-gamebob-accent)] transition-colors"
            >
                {mechanic.title}
            </h3>
        </div>
        <p class="text-gray-400 text-sm leading-relaxed lowercase">
            {mechanic.description}
        </p>
        <div class="flex flex-wrap gap-2 mt-2">
            {
                mechanic.tags
                    .slice(0, 3)
                    .map((tag) => (
                        <span class="text-[10px] px-2 py-0.5 rounded bg-white/5 text-zinc-400 border border-white/5">
                            {tag}
                        </span>
                    ))
            }
        </div>
        <div class="flex items-center gap-2 text-xs text-[var(--color-gamebob-accent)]/70 pt-2">
            <Icon name="mdi:play-circle-outline" class="w-4 h-4" />
            <span>demo interactiva</span>
        </div>
    </div>
    <div
        class="absolute inset-0 bg-gradient-to-t from-[var(--color-gamebob-accent)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none"
    >
    </div>
</a>
