---
interface Props {
    title: string;
    description: string;
    url: string;
    color: string; 
}

const { title, description, url, color } = Astro.props as Props;


const faviconUrl = `https://www.google.com/s2/favicons?domain=${url}&sz=64`;
---

<a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="block overflow-hidden rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 relative"
>
    <div class={`absolute inset-0 bg-gradient-to-br ${color} opacity-20`}></div>
    <div class="relative p-6 flex flex-col h-full">
        <div class="flex items-center gap-4 mb-4">
            <img
                src={faviconUrl}
                alt="favicon"
                class="w-10 h-10 rounded-full bg-white dark:bg-gray-700 p-1"
            />
            <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">{title}</h3>
        </div>
        <p class="text-sm text-gray-600 dark:text-gray-300 flex-grow mb-4">{description}</p>
        <span class="inline-block mt-auto text-sm font-medium text-[var(--color-accent)]"
            >Visitar sitio</span
        >
    </div>
</a>
