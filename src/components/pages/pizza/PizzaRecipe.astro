---
import { Icon } from "astro-icon/components";
---

<div class="bg-slate-900 text-white rounded-3xl p-8 md:p-12 shadow-2xl relative overflow-hidden">
    <div
        class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"
    >
    </div>

    <div class="relative z-10">
        <div class="flex items-center justify-between mb-12">
            <h2 class="text-3xl font-bold">Tu Receta</h2>
            <div class="flex gap-2">
                <button
                    id="btn-yeast-fresh"
                    class="px-4 py-2 rounded-lg bg-white/10 hover:bg-white/20 transition-colors text-sm font-medium active"
                    >Levadura Fresca</button
                >
                <button
                    id="btn-yeast-dry"
                    class="px-4 py-2 rounded-lg bg-transparent hover:bg-white/10 transition-colors text-sm font-medium text-slate-400"
                    >Seca</button
                >
            </div>
        </div>

        <div class="grid grid-cols-2 gap-x-8 gap-y-12">
            <div class="group">
                <div
                    class="flex items-center gap-3 mb-2 text-slate-400 group-hover:text-white transition-colors"
                >
                    <Icon name="mdi:barley" class="w-5 h-5" />
                    <span class="uppercase tracking-wider text-xs font-bold">Harina (W260-300)</span
                    >
                </div>
                <div class="text-5xl md:text-6xl font-black tracking-tighter tabular-nums">
                    <span id="result-flour">0</span>
                    <span class="text-lg font-normal text-slate-500 ml-1">g</span>
                </div>
                <div class="h-1 w-full bg-slate-800 mt-4 rounded-full overflow-hidden">
                    <div
                        class="h-full bg-white w-full origin-left transition-transform duration-1000"
                    >
                    </div>
                </div>
            </div>

            <div class="group">
                <div
                    class="flex items-center gap-3 mb-2 text-blue-400 group-hover:text-blue-300 transition-colors"
                >
                    <Icon name="mdi:water" class="w-5 h-5" />
                    <span class="uppercase tracking-wider text-xs font-bold">Agua</span>
                </div>
                <div
                    class="text-5xl md:text-6xl font-black tracking-tighter tabular-nums text-blue-100"
                >
                    <span id="result-water">0</span>
                    <span class="text-lg font-normal text-blue-500/50 ml-1">ml</span>
                </div>
                <div class="h-1 w-full bg-slate-800 mt-4 rounded-full overflow-hidden">
                    <div
                        id="bar-water"
                        class="h-full bg-blue-500 w-[65%] origin-left transition-transform duration-500"
                    >
                    </div>
                </div>
            </div>

            <div class="group">
                <div
                    class="flex items-center gap-3 mb-2 text-slate-400 group-hover:text-slate-300 transition-colors"
                >
                    <Icon name="mdi:grain" class="w-5 h-5" />
                    <span class="uppercase tracking-wider text-xs font-bold">Sal Marina</span>
                </div>
                <div class="text-4xl md:text-5xl font-black tracking-tighter tabular-nums">
                    <span id="result-salt">0</span>
                    <span class="text-lg font-normal text-slate-500 ml-1">g</span>
                </div>
            </div>

            <div class="group">
                <div
                    class="flex items-center gap-3 mb-2 text-orange-400 group-hover:text-orange-300 transition-colors"
                >
                    <Icon name="mdi:bacteria" class="w-5 h-5" />
                    <span class="uppercase tracking-wider text-xs font-bold">Levadura</span>
                </div>
                <div
                    class="text-4xl md:text-5xl font-black tracking-tighter tabular-nums text-orange-100"
                >
                    <span id="result-yeast">0</span>
                    <span class="text-lg font-normal text-orange-500/50 ml-1">g</span>
                </div>
                <p class="text-xs text-slate-500 mt-2">Para 8h a T.A. (20Â°C)</p>
            </div>
        </div>

        <div class="mt-12 pt-8 border-t border-white/10 flex justify-between items-end">
            <div class="text-slate-400 text-sm">Peso Total Masa</div>
            <div class="text-2xl font-bold">
                <span id="result-total">0</span>
                <span class="text-sm font-normal text-slate-500">g</span>
            </div>
        </div>
    </div>
</div>
