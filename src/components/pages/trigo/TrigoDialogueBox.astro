---
interface Props {
    farmerText: string;
    hunterText: string;
}

const { farmerText, hunterText } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-6 my-12 max-w-4xl mx-auto">
    <div
        class="relative bg-[#1c1917] p-6 rounded-lg border-l-4 border-amber-500/50 group hover:bg-[#292524] transition-colors"
    >
        <div
            class="absolute -top-3 left-4 bg-[#0c0a09] px-2 text-xs text-amber-500 font-bold uppercase tracking-widest border border-amber-900/30 rounded"
        >
            El Agricultor
        </div>
        <p class="text-[#d6d3d1] text-sm md:text-base italic leading-relaxed">
            "{farmerText}"
        </p>
    </div>

    <div
        class="relative bg-[#1c1917] p-6 rounded-lg border-r-4 md:border-r-4 md:border-l-0 border-l-4 border-stone-500/50 group hover:bg-[#292524] transition-colors md:text-right"
    >
        <div
            class="absolute -top-3 right-4 bg-[#0c0a09] px-2 text-xs text-stone-500 font-bold uppercase tracking-widest border border-stone-800 rounded"
        >
            El Cazador
        </div>
        <p class="text-[#a8a29e] text-sm md:text-base italic leading-relaxed">
            "{hunterText}"
        </p>
    </div>
</div>
