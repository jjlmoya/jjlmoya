---
interface Props {
    id?: string;
}

const { id = "dilema-final" } = Astro.props;
---

<section
    id={id}
    class="relative text-[#e7e5e4] font-serif min-h-[50vh] flex items-center justify-center py-12 md:py-24 bg-[#0c0a09] border-t border-amber-900/10"
>
    <div class="max-w-4xl mx-auto px-6 text-center w-full">
        <h2 class="text-3xl md:text-5xl font-bold text-[#e7e5e4] mb-12">Elige tu bando</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Team Sombra (Cazador/Freedom) -->
            <button
                type="button"
                data-share-btn
                data-share-text="He visto la trampa. El trigo nos domesticó. Elijo la libertad de la sombra. #HistoriaDelTrigo #TeamSombra"
                class="group relative overflow-hidden rounded-xl border border-stone-800 bg-stone-900/50 p-8 hover:border-stone-500/50 transition-all duration-300 hover:bg-stone-900 w-full text-left cursor-pointer"
            >
                <div
                    class="absolute inset-0 bg-gradient-to-br from-stone-900/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
                >
                </div>

                <div class="relative z-10 flex flex-col items-center gap-4">
                    <!-- Moon/Shadow Icon -->
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-12 h-12 text-stone-400 group-hover:text-stone-200 transition-colors"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z"
                        ></path>
                    </svg>
                    <h3 class="text-2xl font-bold text-stone-400 group-hover:text-stone-200">
                        Team Sombra
                    </h3>
                    <p class="text-stone-500 text-sm group-hover:text-stone-400">
                        "La agricultura fue una trampa. Prefiero la libertad."
                    </p>
                    <span
                        class="mt-4 px-4 py-2 bg-stone-500/10 text-stone-500 rounded-full text-xs font-bold uppercase tracking-widest group-hover:bg-stone-500 group-hover:text-black transition-colors"
                    >
                        Unirse a la Sombra
                    </span>
                </div>
            </button>

            <!-- Team Luz (Agricultor/Civilization) -->
            <button
                type="button"
                data-share-btn
                data-share-text="El coste fue alto, pero la civilización merece la pena. Elijo la luz del progreso. #HistoriaDelTrigo #TeamLuz"
                class="group relative overflow-hidden rounded-xl border border-stone-800 bg-stone-900/50 p-8 hover:border-amber-500/50 transition-all duration-300 hover:bg-stone-900 w-full text-left cursor-pointer"
            >
                <div
                    class="absolute inset-0 bg-gradient-to-br from-amber-900/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
                >
                </div>

                <div class="relative z-10 flex flex-col items-center gap-4">
                    <!-- Sun/Light Icon -->
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="w-12 h-12 text-amber-500 group-hover:text-amber-400 transition-colors"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
                        ></path>
                    </svg>
                    <h3 class="text-2xl font-bold text-amber-500 group-hover:text-amber-400">
                        Team Luz
                    </h3>
                    <p class="text-stone-500 text-sm group-hover:text-stone-400">
                        "La civilización merece la pena. Prefiero el progreso."
                    </p>
                    <span
                        class="mt-4 px-4 py-2 bg-amber-500/10 text-amber-500 rounded-full text-xs font-bold uppercase tracking-widest group-hover:bg-amber-500 group-hover:text-black transition-colors"
                    >
                        Unirse a la Luz
                    </span>
                </div>
            </button>
        </div>
    </div>
</section>

<script>
    import "../../../utils/share";
</script>
