---
import TrigoCharacterSVG from "./TrigoCharacterSVG.astro";

interface Props {
    role: "hunter" | "gatherer";
    title: string;
}

const { role, title } = Astro.props;

const isHunter = role === "hunter";
const alignment = isHunter ? "text-left" : "text-right";
const containerAlignment = isHunter ? "items-start" : "items-end";
const color = isHunter ? "text-stone-400" : "text-amber-500";
const label = isHunter ? "EL CAZADOR" : "EL RECOLECTOR";
---

<div class={`flex flex-col ${containerAlignment} mb-8 md:mb-12`}>
    <div class={`flex items-end gap-4 mb-4 ${isHunter ? "flex-row" : "flex-row-reverse"}`}>
        <div
            class="relative w-24 h-24 md:w-32 md:h-32 overflow-hidden rounded-full border-4 border-[#1c1917] bg-[#292524] shadow-xl"
        >
            <TrigoCharacterSVG role={role} />
        </div>

        <div class={`flex flex-col ${isHunter ? "items-start" : "items-end"} mb-2`}>
            <span class={`text-xs font-bold tracking-[0.3em] uppercase ${color} mb-1`}>{label}</span
            >
            <div class={`w-12 h-0.5 ${isHunter ? "bg-stone-700" : "bg-amber-600"}`}></div>
        </div>
    </div>

    <h2
        class={`text-2xl md:text-4xl font-bold text-[#e7e5e4] max-w-2xl ${alignment} leading-tight`}
    >
        "{title}"
    </h2>
</div>
