---
import { Icon } from "astro-icon/components";
---

<div
    class="w-full max-w-4xl mx-auto bg-white/80 dark:bg-slate-900/80 backdrop-blur-xl rounded-3xl shadow-2xl overflow-hidden border border-white/20 dark:border-slate-700/30 p-8 md:p-12"
>
    <div class="flex flex-col gap-8 md:gap-12">
        
        <div class="grid grid-cols-1 md:grid-cols-[1fr_auto_1fr] gap-6 items-center">
            
            <div
                class="relative group bg-slate-50 dark:bg-slate-800/50 p-6 rounded-2xl border-2 border-slate-100 dark:border-slate-700 hover:border-blue-200 dark:hover:border-blue-800 transition-colors"
            >
                <label
                    class="block text-sm font-bold text-slate-500 dark:text-slate-400 mb-2 uppercase tracking-wider"
                    >Si tengo...</label
                >
                <input
                    type="number"
                    id="val-a"
                    placeholder="A"
                    class="calc-input w-full text-center text-3xl font-bold bg-transparent outline-none text-slate-700 dark:text-slate-200 placeholder-slate-300"
                />
                <div class="text-xs text-center text-slate-400 mt-2">(Cantidad inicial)</div>
            </div>

            
            <div
                class="flex items-center justify-center gap-2 text-slate-300 dark:text-slate-600 py-2 md:py-0"
            >
                <div class="h-px w-4 bg-current hidden md:block"></div>
                <Icon name="mdi:arrow-down" class="w-6 h-6 md:hidden text-slate-300" />
                <span class="text-sm font-medium uppercase">Es a</span>
                <div class="h-px w-4 bg-current hidden md:block"></div>
            </div>

            
            <div
                class="relative group bg-slate-50 dark:bg-slate-800/50 p-6 rounded-2xl border-2 border-slate-100 dark:border-slate-700 hover:border-blue-200 dark:hover:border-blue-800 transition-colors"
            >
                <label
                    class="block text-sm font-bold text-slate-500 dark:text-slate-400 mb-2 uppercase tracking-wider"
                    >Equivale a...</label
                >
                <input
                    type="number"
                    id="val-b"
                    placeholder="B"
                    class="calc-input w-full text-center text-3xl font-bold bg-transparent outline-none text-slate-700 dark:text-slate-200 placeholder-slate-300"
                />
                <div class="text-xs text-center text-slate-400 mt-2">(Valor conocido)</div>
            </div>
        </div>

        
        <div class="grid grid-cols-1 md:grid-cols-[1fr_auto_1fr] gap-6 items-center">
            
            <div
                class="relative group bg-slate-50 dark:bg-slate-800/50 p-6 rounded-2xl border-2 border-slate-100 dark:border-slate-700 hover:border-purple-200 dark:hover:border-purple-800 transition-colors"
            >
                <label
                    class="block text-sm font-bold text-slate-500 dark:text-slate-400 mb-2 uppercase tracking-wider"
                    >Y ahora tengo...</label
                >
                <input
                    type="number"
                    id="val-c"
                    placeholder="C"
                    class="calc-input w-full text-center text-3xl font-bold bg-transparent outline-none text-slate-700 dark:text-slate-200 placeholder-slate-300"
                />
                <div class="text-xs text-center text-slate-400 mt-2">(Nueva cantidad)</div>
            </div>

            
            <div
                class="flex items-center justify-center gap-2 text-slate-300 dark:text-slate-600 py-2 md:py-0"
            >
                <div class="h-px w-4 bg-current hidden md:block"></div>
                <Icon name="mdi:arrow-down" class="w-6 h-6 md:hidden text-slate-300" />
                <span class="text-sm font-medium uppercase">Será a</span>
                <div class="h-px w-4 bg-current hidden md:block"></div>
            </div>

            
            <div
                class="relative group bg-blue-50 dark:bg-blue-900/20 p-6 rounded-2xl border-2 border-blue-200 dark:border-blue-500/30 shadow-lg shadow-blue-500/5"
            >
                <label
                    class="block text-sm font-bold text-blue-600 dark:text-blue-400 mb-2 uppercase tracking-wider"
                    >Resultado (X)</label
                >
                <div class="relative">
                    <input
                        type="text"
                        id="val-x"
                        readonly
                        placeholder="X"
                        class="w-full text-center text-4xl font-black bg-transparent outline-none text-blue-600 dark:text-blue-400 cursor-default"
                    />

                    <button
                        id="copy-btn"
                        class="absolute right-0 top-1/2 -translate-y-1/2 p-2 text-blue-400 hover:text-blue-600 transition-colors opacity-50 hover:opacity-100"
                        title="Copiar resultado"
                    >
                        <Icon name="mdi:content-copy" class="w-5 h-5" />
                    </button>
                </div>
                <div class="text-xs text-center text-blue-400/70 mt-2">(Valor calculado)</div>
            </div>
        </div>
    </div>

    
    <div class="mt-12 text-center">
        <div
            class="inline-block px-6 py-3 rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-500 dark:text-slate-400 font-mono text-sm"
        >
            (<span class="text-slate-900 dark:text-white font-bold" id="formula-b">B</span> × <span
                class="text-purple-600 dark:text-purple-400 font-bold"
                id="formula-c">C</span
            >) ÷ <span class="text-slate-900 dark:text-white font-bold" id="formula-a">A</span> = <span
                class="text-blue-600 dark:text-blue-400 font-bold">X</span
            >
        </div>
    </div>
</div>

<script>
    const inputs = document.querySelectorAll(".calc-input") as NodeListOf<HTMLInputElement>;
    const valA = document.getElementById("val-a") as HTMLInputElement;
    const valB = document.getElementById("val-b") as HTMLInputElement;
    const valC = document.getElementById("val-c") as HTMLInputElement;
    const valX = document.getElementById("val-x") as HTMLInputElement;

    const formulaA = document.getElementById("formula-a");
    const formulaB = document.getElementById("formula-b");
    const formulaC = document.getElementById("formula-c");

    function calculate() {
        const a = parseFloat(valA.value);
        const b = parseFloat(valB.value);
        const c = parseFloat(valC.value);

        
        if (formulaA) formulaA.textContent = valA.value || "A";
        if (formulaB) formulaB.textContent = valB.value || "B";
        if (formulaC) formulaC.textContent = valC.value || "C";

        if (!isNaN(a) && !isNaN(b) && !isNaN(c) && a !== 0) {
            const x = (b * c) / a;

            
            valX.value = parseFloat(x.toFixed(4)).toString();

            
            valX.parentElement?.classList.add("scale-105");
            setTimeout(() => valX.parentElement?.classList.remove("scale-105"), 200);
        } else {
            valX.value = "";
        }
    }

    inputs.forEach((input) => {
        input.addEventListener("input", calculate);
    });

    
    const copyBtn = document.getElementById("copy-btn");
    copyBtn?.addEventListener("click", () => {
        if (valX.value) {
            navigator.clipboard.writeText(valX.value);

            
            const originalIcon = copyBtn.innerHTML;
            copyBtn.innerHTML =
                '<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-green-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6L9 17l-5-5"/></svg>';
            setTimeout(() => {
                copyBtn.innerHTML = originalIcon;
            }, 1000);
        }
    });
</script>

<style>
    /* Remove arrows from number inputs */
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    input[type="number"] {
        -moz-appearance: textfield;
    }
</style>
