<div
    id="waiting-state"
    class="hidden absolute inset-0 w-full h-full flex flex-col items-center justify-center transition-opacity duration-1000 opacity-0 bg-[#f8f5f2]"
>
    <div class="absolute top-8 right-8 md:top-16 md:right-16 flex flex-col items-end opacity-50">
        <span class="text-[10px] font-sans uppercase tracking-widest text-[#666]">Su Turno</span>
        <span class="text-4xl md:text-5xl font-light text-[#1a1a1a]" id="ticket-display">001</span>
    </div>

    <div class="relative w-72 h-72 md:w-96 md:h-96 flex items-center justify-center">
        <svg
            class="absolute inset-0 w-full h-full transform -rotate-90 pointer-events-none overflow-visible"
        >
            <circle cx="50%" cy="50%" r="48%" fill="none" stroke="#e0dedb" stroke-width="1"
            ></circle>
            <circle
                id="progress-circle"
                cx="50%"
                cy="50%"
                r="48%"
                fill="none"
                stroke="#1a1a1a"
                stroke-width="1.5"
                stroke-dasharray="1000"
                stroke-dashoffset="1000"
                class="transition-all duration-1000 ease-linear"></circle>
        </svg>

        <div class="absolute inset-0 flex items-center justify-center p-12 text-center">
            <p
                id="fact-text"
                class="text-xl md:text-2xl italic text-[#444] leading-relaxed transition-opacity duration-700"
            >
            </p>
        </div>
    </div>

    <div class="absolute bottom-16 text-center w-full">
        <p
            id="system-msg"
            class="text-xs font-sans uppercase tracking-[0.3em] text-[#888] animate-pulse"
        >
            Respire
        </p>
    </div>
</div>
