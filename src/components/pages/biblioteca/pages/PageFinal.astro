---
interface Props {
    side: 'left' | 'right';
}
const { side } = Astro.props;
---

{side === 'left' ? (
    <div class="flex items-center justify-center h-full w-full relative overflow-hidden bg-[#0c0a09]">
        <!-- Final Visual: The Mirror / The Void -->
        <div class="relative w-full h-full flex items-center justify-center">
             <div class="w-48 h-64 border border-[#292524] bg-black shadow-2xl relative overflow-hidden flex items-center justify-center group">
                <!-- Reflection effect -->
                <div class="absolute inset-0 bg-gradient-to-tr from-white/5 to-transparent opacity-0 group-hover:opacity-20 transition-opacity duration-700"></div>
                
                <div class="text-[#292524] font-serif text-6xl opacity-20 select-none">
                    ?
                </div>
             </div>
        </div>
    </div>
) : (
    <div class="flex flex-col items-center justify-center h-full text-center space-y-8 max-w-md mx-auto">
        <h3 class="font-serif text-3xl text-[#e7e5e4] uppercase tracking-widest border-b border-[#292524] pb-4">
            El Final
        </h3>
        
        <p class="font-serif text-xl leading-relaxed text-[#a8a29e] italic">
            NO HAY MÁS PÁGINAS ESCRITAS.
        </p>

        <p class="font-serif text-lg leading-relaxed text-[#e7e5e4]">
            LA TINTA AÚN ESTÁ HÚMEDA. <br/>
            LA PLUMA ES VUESTRA.
        </p>
        
        <div class="pt-8">
            <p class="font-serif text-xs tracking-[0.2em] text-[#57534e] uppercase">
                Memento Vivere
            </p>
        </div>
    </div>
)}
