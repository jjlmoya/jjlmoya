---
interface Props {
    side: "left" | "right";
}
const { side } = Astro.props;
---

{
    side === "left" ? (
        <div class="flex flex-col items-center justify-center h-full text-center w-full border-4 border-double border-[#292524] p-4 m-2 md:p-8 md:m-4">
            <div class="mb-6 md:mb-12 opacity-50">
                <svg
                    width="40"
                    height="40"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="text-[#78716c] w-8 h-8 md:w-10 md:h-10"
                >
                    <path d="M12 2L15 8L21 9L16.5 13.5L18 19.5L12 16.5L6 19.5L7.5 13.5L3 9L9 8L12 2Z" />
                </svg>
            </div>

            <h1 class="font-serif text-3xl sm:text-4xl md:text-6xl text-[#e7e5e4] tracking-wider md:tracking-widest uppercase mb-4 font-bold">
                MEMENTO
                <br />
                VIVERE
            </h1>

            <div class="w-12 md:w-16 h-1 bg-[#78716c] my-4 md:my-8" />

            <p class="font-serif text-[#a8a29e] text-xs sm:text-sm md:text-lg tracking-widest md:tracking-[0.2em] uppercase">
                El Libro de Tu Vida
            </p>

            <div class="mt-auto mb-2 md:mb-4 font-serif text-[#57534e] text-[10px] md:text-xs uppercase tracking-widest">
                Edición Única &bull; Volumen I
            </div>
        </div>
    ) : (
        <div class="flex flex-col items-center justify-center h-full text-center space-y-8 md:space-y-12 max-w-md mx-auto relative z-10 break-normal hyphens-none">
            <p class="font-serif text-lg sm:text-xl md:text-2xl leading-relaxed text-[#e7e5e4] italic uppercase tracking-wider md:tracking-widest">
                UNA VIDA. CURIOSA COSA. UN PRINCIPIO, UN FINAL, Y MUCHO RUIDO EN MEDIO.
            </p>

            <div class="w-full border-t border-[#292524]" />

            <p class="font-serif text-xs sm:text-sm md:text-base text-[#a8a29e] leading-loose uppercase tracking-wide md:tracking-wider">
                AQUÍ ESTÁ TODO. CADA INSTANTE. CADA SUSPIRO.
                <br />
                NO FALTA NADA.
                <br />
                <span class="text-[#e7e5e4] font-bold mt-4 block">¿OS ATREVÉIS A MIRAR?</span>
            </p>

            <div class="animate-bounce mt-8 md:mt-12 text-[#78716c] font-serif text-[10px] md:text-sm tracking-widest uppercase">
                Usa las flechas para pasar página
            </div>
        </div>
    )
}
