---
interface Props {
    side: 'left' | 'right';
}
const { side } = Astro.props;
---

{side === 'left' ? (
    <div class="flex items-center justify-center h-full w-full relative overflow-hidden bg-[#0c0a09]">
        <!-- Water Visual: Premium Glass -->
        <div class="relative w-full h-full flex items-center justify-center">
             
             <!-- Ambient Glow -->
             <div class="absolute w-64 h-64 bg-blue-500/10 rounded-full blur-3xl animate-pulse-slow"></div>

             <!-- The Glass -->
             <div class="relative w-32 h-56 border-x-2 border-b-4 border-white/20 rounded-b-2xl backdrop-blur-sm overflow-hidden shadow-[0_0_15px_rgba(59,130,246,0.2)]">
                
                <!-- Glass Highlights -->
                <div class="absolute top-0 left-2 w-1 h-full bg-white/10 z-20 rounded-full blur-[1px]"></div>
                <div class="absolute top-0 right-2 w-2 h-full bg-white/5 z-20 rounded-full blur-[2px]"></div>

                <!-- Water Liquid -->
                <div class="absolute bottom-0 left-0 right-0 h-[85%] bg-gradient-to-t from-blue-600/60 to-blue-400/40 z-10 transition-all duration-1000">
                    
                    <!-- Surface Wave 1 -->
                    <div class="absolute -top-3 left-[-50%] w-[200%] h-6 bg-blue-400/40 rounded-[50%] animate-wave-1"></div>
                    <!-- Surface Wave 2 -->
                    <div class="absolute -top-3 left-[-50%] w-[200%] h-6 bg-blue-300/30 rounded-[50%] animate-wave-2"></div>

                    <!-- Bubbles -->
                    <div class="absolute bottom-0 w-full h-full overflow-hidden">
                        <div class="absolute bottom-[-10px] left-[20%] w-2 h-2 bg-white/30 rounded-full animate-bubble delay-0"></div>
                        <div class="absolute bottom-[-10px] left-[50%] w-1.5 h-1.5 bg-white/30 rounded-full animate-bubble delay-1000"></div>
                        <div class="absolute bottom-[-10px] left-[80%] w-2.5 h-2.5 bg-white/20 rounded-full animate-bubble delay-2000"></div>
                        <div class="absolute bottom-[-10px] left-[35%] w-1 h-1 bg-white/40 rounded-full animate-bubble delay-500"></div>
                        <div class="absolute bottom-[-10px] left-[65%] w-2 h-2 bg-white/20 rounded-full animate-bubble delay-1500"></div>
                    </div>
                </div>

                <!-- Ice Cubes (Optional, adds detail) -->
                <div class="absolute bottom-10 left-4 w-10 h-10 bg-white/10 border border-white/20 rounded-lg backdrop-blur-md rotate-12 z-10 animate-float-ice"></div>
                <div class="absolute bottom-20 right-6 w-8 h-8 bg-white/10 border border-white/20 rounded-lg backdrop-blur-md -rotate-6 z-10 animate-float-ice" style="animation-delay: 1s;"></div>

             </div>
             
             <!-- Condensation Drops (Outside Glass) -->
             <div class="absolute w-34 h-56 pointer-events-none">
                 <!-- Just a few drops for effect -->
             </div>

        </div>
    </div>
) : (
    <div class="flex flex-col items-center justify-center h-full text-center space-y-6 max-w-md mx-auto">
        <h3 class="font-serif text-3xl text-blue-400/60 uppercase tracking-widest">La Sed</h3>
        
        <div class="space-y-2">
            <div class="font-variant-numeric tabular-nums text-4xl md:text-5xl font-bold text-[#e7e5e4]" id="water-count">
                0
            </div>
            <div class="text-sm text-[#e7e5e4]/40 uppercase tracking-wider">Litros Bebidos</div>
        </div>
        
        <p class="font-serif text-xl leading-relaxed text-[#e7e5e4]">
            SOMOS AGUA QUE APRENDIÓ A CAMINAR. <span id="water-bottles" class="text-blue-400">0 BOTELLAS</span> HAN PASADO POR VOSOTROS PARA MANTENER EL BARRO HÚMEDO.
        </p>
    </div>
)}

<style>
    @keyframes wave-1 {
        0% { transform: translateX(0) rotate(0deg); }
        50% { transform: translateX(-25%) rotate(2deg); }
        100% { transform: translateX(0) rotate(0deg); }
    }
    @keyframes wave-2 {
        0% { transform: translateX(-25%) rotate(0deg); }
        50% { transform: translateX(0) rotate(-2deg); }
        100% { transform: translateX(-25%) rotate(0deg); }
    }
    @keyframes bubble {
        0% { transform: translateY(0) scale(1); opacity: 0; }
        20% { opacity: 1; }
        100% { transform: translateY(-200px) scale(1.2); opacity: 0; }
    }
    @keyframes float-ice {
        0%, 100% { transform: translateY(0) rotate(var(--r, 0deg)); }
        50% { transform: translateY(-5px) rotate(calc(var(--r, 0deg) + 5deg)); }
    }
    @keyframes pulse-slow {
        0%, 100% { opacity: 0.1; transform: scale(1); }
        50% { opacity: 0.2; transform: scale(1.1); }
    }

    .animate-wave-1 { animation: wave-1 6s ease-in-out infinite; }
    .animate-wave-2 { animation: wave-2 5s ease-in-out infinite; }
    .animate-bubble { animation: bubble 4s linear infinite; }
    .animate-float-ice { animation: float-ice 6s ease-in-out infinite; --r: 12deg; }
    .animate-pulse-slow { animation: pulse-slow 8s ease-in-out infinite; }
    
    .delay-0 { animation-delay: 0s; }
    .delay-500 { animation-delay: 0.5s; }
    .delay-1000 { animation-delay: 1s; }
    .delay-1500 { animation-delay: 1.5s; }
    .delay-2000 { animation-delay: 2s; }
</style>

<script>
    import { calculateWaterStats } from "../../../../utils/libraryLogic";

    const countEl = document.getElementById('water-count');
    const bottlesEl = document.getElementById('water-bottles');

    document.addEventListener('update-life-stats', (e: any) => {
        const { stats } = e.detail;
        if (!countEl || !stats) return;

        const { litersDrunk } = calculateWaterStats(stats.daysAlive);
        
        // Recalculate real bottles for display
        const realBottles = Math.floor(litersDrunk / 0.5);

        countEl.innerText = litersDrunk.toLocaleString();
        if (bottlesEl) bottlesEl.innerText = `${realBottles.toLocaleString()} BOTELLAS`;
    });
</script>
