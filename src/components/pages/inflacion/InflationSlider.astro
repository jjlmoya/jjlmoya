<div class="relative px-4 max-w-xl mx-auto mb-12 mt-8">
    <input
        type="range"
        min="1970"
        max="2025"
        value="2025"
        class="w-full h-2 bg-amber-200 rounded-lg appearance-none cursor-pointer z-10 relative focus:outline-none"
        id="year-slider"
    />

    <div
        class="flex justify-between text-xs font-mono mt-4 text-amber-900/60 font-bold uppercase tracking-widest"
    >
        <span>1970</span>
        <span>2025</span>
    </div>
</div>

<style>
    
    input[type="range"]::-webkit-slider-thumb {
        -webkit-appearance: none;
        height: 24px;
        width: 24px;
        border-radius: 50%;
        background: #78350f;
        cursor: pointer;
        margin-top: -8px;
        box-shadow: 0 0 0 4px rgba(251, 191, 36, 0.5);
        transition: transform 0.1s;
    }
    input[type="range"]::-webkit-slider-thumb:hover {
        transform: scale(1.1);
        box-shadow: 0 0 0 6px rgba(251, 191, 36, 0.3);
    }
    input[type="range"]::-webkit-slider-runnable-track {
        width: 100%;
        height: 8px;
        cursor: pointer;
        background: #fde68a; 
        border-radius: 4px;
    }
    
    input[type="range"]::-moz-range-thumb {
        height: 24px;
        width: 24px;
        border: none;
        border-radius: 50%;
        background: #78350f;
        cursor: pointer;
        box-shadow: 0 0 0 4px rgba(251, 191, 36, 0.5);
    }
</style>
