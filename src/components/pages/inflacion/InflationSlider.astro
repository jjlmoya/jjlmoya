<div class="relative px-4 max-w-xl mx-auto">
    <input
        type="range"
        min="1970"
        max="2025"
        value="2025"
        class="w-full h-4 bg-gray-200 rounded-lg appearance-none cursor-pointer border-2 border-black accent-black"
        id="year-slider"
    />
    <div class="flex justify-between text-xs font-mono mt-2 opacity-50">
        <span>1970</span>
        <span>2025</span>
    </div>
</div>

<style>
    /* Custom Range Slider Styling */
    input[type="range"]::-webkit-slider-thumb {
        -webkit-appearance: none;
        height: 24px;
        width: 24px;
        border-radius: 50%;
        background: #000;
        cursor: pointer;
        margin-top: -10px;
        box-shadow: 0 0 0 4px rgba(0, 0, 0, 0.1);
        transition: transform 0.1s;
    }
    input[type="range"]::-webkit-slider-thumb:hover {
        transform: scale(1.2);
    }
    input[type="range"]::-webkit-slider-runnable-track {
        width: 100%;
        height: 4px;
        cursor: pointer;
        background: #000;
        border-radius: 2px;
    }
</style>
