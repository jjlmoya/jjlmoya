<section class="w-full bg-[#f0f0f0] text-[#0a0a0a] py-32 px-4 md:px-12">
    <div class="max-w-4xl mx-auto">
        <div class="text-center mb-20">
            <h2 class="text-6xl md:text-9xl font-black tracking-tighter uppercase mb-4">
                Contacto
            </h2>
            <p class="text-xl md:text-2xl font-light text-[#666]">
                ¿Tienes un evento en mente? Hablemos.
            </p>
        </div>

        <form id="contact-form" class="space-y-12">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                <div class="relative group">
                    <input
                        type="text"
                        name="name"
                        id="name"
                        required
                        class="block w-full bg-transparent border-b-2 border-[#ccc] py-4 text-xl font-bold text-[#0a0a0a] focus:outline-none focus:border-[#0a0a0a] transition-colors peer placeholder-transparent"
                        placeholder="Nombre"
                    />
                    <label
                        for="name"
                        class="absolute left-0 -top-3.5 text-sm text-[#999] transition-all peer-placeholder-shown:text-xl peer-placeholder-shown:text-[#999] peer-placeholder-shown:top-4 peer-focus:-top-3.5 peer-focus:text-sm peer-focus:text-[#0a0a0a]"
                    >
                        NOMBRE / ORGANIZACIÓN
                    </label>
                </div>

                <div class="relative group">
                    <input
                        type="email"
                        name="email"
                        id="email"
                        required
                        class="block w-full bg-transparent border-b-2 border-[#ccc] py-4 text-xl font-bold text-[#0a0a0a] focus:outline-none focus:border-[#0a0a0a] transition-colors peer placeholder-transparent"
                        placeholder="Email"
                    />
                    <label
                        for="email"
                        class="absolute left-0 -top-3.5 text-sm text-[#999] transition-all peer-placeholder-shown:text-xl peer-placeholder-shown:text-[#999] peer-placeholder-shown:top-4 peer-focus:-top-3.5 peer-focus:text-sm peer-focus:text-[#0a0a0a]"
                    >
                        EMAIL DE CONTACTO
                    </label>
                </div>
            </div>

            <div class="relative group">
                <textarea
                    name="message"
                    id="message"
                    rows="4"
                    required
                    class="block w-full bg-transparent border-b-2 border-[#ccc] py-4 text-xl font-medium text-[#0a0a0a] focus:outline-none focus:border-[#0a0a0a] transition-colors peer placeholder-transparent resize-none"
                    placeholder="Mensaje"></textarea>
                <label
                    for="message"
                    class="absolute left-0 -top-3.5 text-sm text-[#999] transition-all peer-placeholder-shown:text-xl peer-placeholder-shown:text-[#999] peer-placeholder-shown:top-4 peer-focus:-top-3.5 peer-focus:text-sm peer-focus:text-[#0a0a0a]"
                >
                    DETALLES DEL EVENTO
                </label>
            </div>

            <div class="flex flex-col items-center pt-12">
                <button
                    type="submit"
                    id="submit-btn"
                    class="group relative px-12 py-6 bg-[#0a0a0a] text-white overflow-hidden transition-all hover:bg-[#000] disabled:opacity-50 disabled:cursor-not-allowed"
                >
                    <span
                        id="btn-text"
                        class="relative z-10 uppercase tracking-widest text-sm group-hover:tracking-[0.3em] transition-all duration-300"
                        >Enviar Propuesta</span
                    >
                </button>
                <p id="form-status" class="mt-4 text-lg font-medium hidden"></p>
            </div>
        </form>

        <script>
            const _k =
                "aHR0cHM6Ly9zY3JpcHQuZ29vZ2xlLmNvbS9tYWNyb3Mvcy9BS2Z5Y2J6MTNwcmZyaWRzN2J1OHZTd3hFdzB6RXZOSGp3T2pBVGhMaGQ5MExGUkdqWk1ycUt0VTZnMk5zazVndHVVbE5uTEI5QS9leGVj";

            const form = document.getElementById("contact-form") as HTMLFormElement;
            const submitBtn = document.getElementById("submit-btn") as HTMLButtonElement;
            const btnText = document.getElementById("btn-text") as HTMLSpanElement;
            const status = document.getElementById("form-status") as HTMLParagraphElement;

            if (form) {
                form.addEventListener("submit", async (e) => {
                    e.preventDefault();

                    submitBtn.disabled = true;
                    const originalText = btnText.innerText;
                    btnText.innerText = "ENVIANDO...";
                    status.classList.add("hidden");
                    status.className = "mt-4 text-lg font-medium hidden";

                    const formData = new FormData(form);

                    try {
                        await fetch(atob(_k), {
                            method: "POST",
                            body: formData,
                            mode: "no-cors",
                        });

                        form.reset();
                        status.innerText = "¡Mensaje enviado correctamente!";
                        status.classList.remove("hidden");
                        status.classList.add("text-green-600");
                    } catch (error) {
                        console.error("Error:", error);
                        status.innerText =
                            "Hubo un error al enviar el mensaje. Por favor, inténtalo de nuevo.";
                        status.classList.remove("hidden");
                        status.classList.add("text-red-600");
                    } finally {
                        submitBtn.disabled = false;
                        btnText.innerText = originalText;
                    }
                });
            }
        </script>
    </div>
</section>
