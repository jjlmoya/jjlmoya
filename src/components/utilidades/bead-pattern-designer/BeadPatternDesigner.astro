---
import { Icon } from "astro-icon/components";
---

<section class="max-w-7xl mx-auto px-4 py-12 relative print:py-0">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        
        <div class="lg:col-span-4 space-y-6 print:hidden">
            <div
                class="bg-white/90 dark:bg-zinc-900/90 backdrop-blur-xl border border-slate-200 dark:border-zinc-800 rounded-3xl p-8 shadow-xl"
            >
                <h3
                    class="text-xl font-black text-slate-900 dark:text-white mb-6 flex items-center gap-2"
                >
                    <Icon name="mdi:palette-outline" class="w-6 h-6 text-orange-500" />
                    Configuración
                </h3>

                
                <div id="setup-view" class="space-y-6">
                    <div>
                        <label
                            class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-2"
                            >Ancho de la Pieza (Cuentas)</label
                        >
                        <input
                            type="number"
                            id="grid-width"
                            value="30"
                            min="5"
                            max="100"
                            class="w-full bg-slate-50 dark:bg-zinc-950 border border-slate-200 dark:border-zinc-800 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-orange-500 outline-none transition-all dark:text-white"
                        />
                    </div>

                    <div>
                        <label
                            class="block text-xs font-bold uppercase tracking-widest text-slate-500 mb-2"
                            >Máximo de Colores</label
                        >
                        <select
                            id="max-colors"
                            class="w-full bg-slate-50 dark:bg-zinc-950 border border-slate-200 dark:border-zinc-800 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-orange-500 outline-none transition-all dark:text-white"
                        >
                            <option value="4">4 colores (Mínimo)</option>
                            <option value="8" selected>8 colores (Estándar)</option>
                            <option value="12">12 colores (Avanzado)</option>
                            <option value="16">16 colores (Máximo)</option>
                        </select>
                    </div>

                    <div class="pt-4">
                        <label
                            for="image-upload"
                            class="flex flex-col items-center justify-center w-full min-h-[160px] border-2 border-dashed border-slate-200 dark:border-zinc-800 rounded-2xl cursor-pointer hover:border-orange-500 dark:hover:border-orange-500 transition-colors bg-slate-50/50 dark:bg-zinc-950/50 group"
                        >
                            <div class="text-center p-4">
                                <Icon
                                    name="mdi:upload"
                                    class="w-10 h-10 text-slate-300 group-hover:text-orange-500 mb-2 mx-auto transition-colors"
                                />
                                <span
                                    class="block text-sm font-bold text-slate-600 dark:text-zinc-400 group-hover:text-orange-600 transition-colors"
                                    >Cargar Imagen</span
                                >
                                <span
                                    class="block text-[10px] text-slate-400 uppercase tracking-widest mt-1"
                                    >PNG, JPG o SVG</span
                                >
                            </div>
                            <input id="image-upload" type="file" accept="image/*" class="hidden" />
                        </label>
                    </div>
                </div>

                
                <div id="info-view" class="hidden space-y-8 animate-in fade-in duration-500">
                    <div class="space-y-4">
                        <p class="text-xs font-bold uppercase tracking-widest text-slate-500">
                            Paleta de Cuentas
                        </p>
                        <div id="palette-container" class="grid grid-cols-4 gap-2">
                            
                        </div>
                    </div>

                    <div class="space-y-4">
                        <p class="text-xs font-bold uppercase tracking-widest text-slate-500">
                            Controles de Trabajo
                        </p>
                        <div class="grid grid-cols-1 gap-2">
                            <button
                                id="focus-mode-btn"
                                class="flex items-center gap-3 w-full p-3 rounded-xl border border-slate-200 dark:border-zinc-800 hover:border-orange-500 transition-all text-left group"
                            >
                                <Icon
                                    name="mdi:eye-outline"
                                    class="w-5 h-5 text-slate-400 group-hover:text-orange-500"
                                />
                                <span class="text-sm font-bold text-slate-700 dark:text-zinc-300"
                                    >Modo Enfoque</span
                                >
                            </button>
                            <button
                                id="print-btn"
                                class="flex items-center gap-3 w-full p-3 rounded-xl border border-slate-200 dark:border-zinc-800 hover:border-orange-500 transition-all text-left group"
                            >
                                <Icon
                                    name="mdi:printer"
                                    class="w-5 h-5 text-slate-400 group-hover:text-orange-500"
                                />
                                <span class="text-sm font-bold text-slate-700 dark:text-zinc-300"
                                    >Imprimir Patrón</span
                                >
                            </button>
                            <button
                                id="restart-btn"
                                class="flex items-center gap-3 w-full p-3 rounded-xl border border-slate-200 dark:border-zinc-800 hover:border-red-500 transition-all text-left group"
                            >
                                <Icon
                                    name="mdi:refresh"
                                    class="w-5 h-5 text-slate-400 group-hover:text-red-500"
                                />
                                <span class="text-sm font-bold text-slate-700 dark:text-zinc-300"
                                    >Nuevo Diseño</span
                                >
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="lg:col-span-8 space-y-4">
            <div
                id="pattern-workspace"
                class="bg-white dark:bg-zinc-950 rounded-[2.5rem] border border-slate-200 dark:border-zinc-800 shadow-inner relative min-h-[600px] flex items-center justify-center overflow-auto p-4 md:p-12 overflow-x-auto"
            >
                
                <div id="workspace-placeholder" class="text-center space-y-6 max-w-sm">
                    <div
                        class="w-20 h-20 bg-orange-50 dark:bg-orange-950/20 rounded-2xl flex items-center justify-center mx-auto mb-8 border border-orange-100 dark:border-orange-900/30"
                    >
                        <Icon name="mdi:grid" class="w-10 h-10 text-orange-500" />
                    </div>
                    <h4
                        class="text-2xl font-black text-slate-900 dark:text-white uppercase tracking-tighter"
                    >
                        Papel Milimetrado
                    </h4>
                    <p class="text-slate-500 text-sm">
                        Sube una imagen para transformarla en un esquema técnico de cuentas paso a
                        paso.
                    </p>
                </div>

                
                <div id="bead-grid-container" class="hidden relative">
                    
                    <div
                        id="grid-content"
                        class="shadow-2xl ring-1 ring-slate-200 dark:ring-zinc-800 bg-white dark:bg-zinc-900 border-separate border-spacing-0"
                    >
                        
                    </div>
                </div>
            </div>

            
            <div
                id="focus-info"
                class="hidden flex justify-between items-center px-6 py-4 bg-orange-50 dark:bg-orange-900/20 rounded-2xl border border-orange-100 dark:border-orange-900/30 print:hidden"
            >
                <div class="flex items-center gap-3">
                    <div class="w-2 h-10 bg-orange-500 rounded-full animate-pulse"></div>
                    <div>
                        <p
                            id="current-row-text"
                            class="text-sm font-black text-slate-900 dark:text-white uppercase tracking-tight"
                        >
                            Fila actual: 1
                        </p>
                        <p class="text-[10px] text-orange-600 font-bold uppercase tracking-widest">
                            Usa las flechas del teclado para navegar
                        </p>
                    </div>
                </div>
                <div class="flex gap-2">
                    <button
                        id="row-up"
                        class="p-2 bg-white dark:bg-zinc-800 rounded-lg shadow-sm border border-slate-200 dark:border-zinc-700 hover:bg-slate-50 transition-colors"
                    >
                        <Icon
                            name="mdi:chevron-up"
                            class="w-5 h-5 text-slate-600 dark:text-zinc-400"
                        />
                    </button>
                    <button
                        id="row-down"
                        class="p-2 bg-white dark:bg-zinc-800 rounded-lg shadow-sm border border-slate-200 dark:border-zinc-700 hover:bg-slate-50 transition-colors"
                    >
                        <Icon
                            name="mdi:chevron-down"
                            class="w-5 h-5 text-slate-600 dark:text-zinc-400"
                        />
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    #grid-content {
        display: grid;
        background: #f8fafc;
        border: 1px solid #cbd5e1;
    }
    .dark #grid-content {
        background: #09090b;
        border: 1px solid #27272a;
    }
    .bead-cell {
        aspect-ratio: 1;
        width: 14px;
        height: 14px;
        border: 0.5px solid rgba(0, 0, 0, 0.05);
        transition: transform 0.1s ease;
        position: relative;
    }
    .dark .bead-cell {
        border-color: rgba(255, 255, 255, 0.05);
    }
    .bead-row.active {
        background: rgba(249, 115, 22, 0.1) !important;
        position: relative;
        z-index: 10;
        outline: 2px solid #f97316;
    }
    @media print {
        #pattern-workspace {
            overflow: visible;
            border: none;
            padding: 0;
            background: white !important;
        }
        .bead-cell {
            border: 0.1px solid #ddd !important;
            width: 8px !important;
            height: 8px !important;
        }
    }
</style>

<script>
    import { BeadEngine } from "../../../lib/utilidades/bead-pattern/BeadEngine";

    const setupView = document.getElementById("setup-view");
    const infoView = document.getElementById("info-view");
    const imageUpload = document.getElementById("image-upload") as HTMLInputElement;
    const gridWidthInput = document.getElementById("grid-width") as HTMLInputElement;
    const maxColorsInput = document.getElementById("max-colors") as HTMLSelectElement;
    const gridContent = document.getElementById("grid-content");
    const beadContainer = document.getElementById("bead-grid-container");
    const placeholder = document.getElementById("workspace-placeholder");
    const paletteContainer = document.getElementById("palette-container");
    const focusBtn = document.getElementById("focus-mode-btn");
    const focusInfo = document.getElementById("focus-info");
    const currentRowText = document.getElementById("current-row-text");
    const restartBtn = document.getElementById("restart-btn");
    const printBtn = document.getElementById("print-btn");

    let currentPattern: any = null;
    let activeRowIndex = -1;
    let isFocusMode = false;

    async function processImage(file: File) {
        if (!file.type.startsWith("image/")) return;
        const img = new Image();
        img.onload = async () => {
            const width = parseInt(gridWidthInput.value) || 30;
            const maxColors = parseInt(maxColorsInput.value) || 8;
            currentPattern = await BeadEngine.processImage(img, width, maxColors);
            renderPattern();
            setupView?.classList.add("hidden");
            infoView?.classList.remove("hidden");
            placeholder?.classList.add("hidden");
            beadContainer?.classList.remove("hidden");
        };
        img.src = URL.createObjectURL(file);
    }

    function renderPattern() {
        if (!gridContent || !currentPattern || !paletteContainer) return;
        paletteContainer.innerHTML = "";
        currentPattern.palette.forEach((color: any) => {
            const swatch = document.createElement("div");
            swatch.className = "group relative";
            swatch.innerHTML =
                '<div class="w-full aspect-square rounded-lg shadow-sm border border-slate-200 dark:border-zinc-800" style="background-color: ' +
                color.hex +
                '"></div>';
            paletteContainer.appendChild(swatch);
        });
        gridContent.innerHTML = "";
        gridContent.style.gridTemplateColumns =
            "repeat(" + currentPattern.width + ", minmax(0, 1fr))";
        currentPattern.grid.forEach((row: any[], y: number) => {
            row.forEach((color, x) => {
                const cell = document.createElement("div");
                cell.className = "bead-cell";
                cell.style.backgroundColor = color.hex;
                cell.dataset.x = x.toString();
                cell.dataset.y = y.toString();
                gridContent.appendChild(cell);
            });
        });
    }

    imageUpload?.addEventListener("change", (e) => {
        const file = (e.target as HTMLInputElement).files?.[0];
        if (file) processImage(file);
    });

    focusBtn?.addEventListener("click", () => {
        isFocusMode = !isFocusMode;
        focusBtn.classList.toggle("border-orange-500", isFocusMode);
        focusInfo?.classList.toggle("hidden", !isFocusMode);
        if (isFocusMode) updateActiveRow(0);
        else clearActiveRow();
    });

    function updateActiveRow(index: number) {
        if (!gridContent) return;
        clearActiveRow();
        activeRowIndex = Math.max(0, Math.min(index, currentPattern.height - 1));
        const cells = gridContent.querySelectorAll('[data-y="' + activeRowIndex + '"]');
        cells.forEach((c) =>
            c.classList.add("active-row-cell", "ring-1", "ring-orange-500", "z-10")
        );
        if (currentRowText) currentRowText.textContent = "Fila actual: " + (activeRowIndex + 1);
    }

    function clearActiveRow() {
        const activeCells = gridContent?.querySelectorAll(".active-row-cell");
        activeCells?.forEach((c) =>
            c.classList.remove("active-row-cell", "ring-1", "ring-orange-500", "z-10")
        );
    }

    window.addEventListener("keydown", (e) => {
        if (!isFocusMode) return;
        if (e.key === "ArrowDown") {
            e.preventDefault();
            updateActiveRow(activeRowIndex + 1);
        }
        if (e.key === "ArrowUp") {
            e.preventDefault();
            updateActiveRow(activeRowIndex - 1);
        }
    });

    restartBtn?.addEventListener("click", () => {
        setupView?.classList.remove("hidden");
        infoView?.classList.add("hidden");
        placeholder?.classList.remove("hidden");
        beadContainer?.classList.add("hidden");
        focusInfo?.classList.add("hidden");
        isFocusMode = false;
        imageUpload.value = "";
    });

    printBtn?.addEventListener("click", () => window.print());
</script>
