---
import { Icon } from "astro-icon/components";

interface Props {
    index: number;
    defaultName: string;
}

const { index, defaultName } = Astro.props;
---

<div
    class="timer-card bg-white dark:bg-slate-900 rounded-3xl p-6 shadow-sm border border-slate-200 dark:border-slate-800 flex flex-col items-center justify-between h-full relative overflow-hidden group"
    data-index={index}
>
    <div class="absolute inset-0 opacity-5 pointer-events-none">
        <div
            class="progress-bg w-full h-full bg-slate-200 dark:bg-slate-800 origin-bottom transform scale-y-0 transition-transform duration-1000 ease-linear"
        >
        </div>
    </div>

    <div class="w-full relative z-10 flex justify-between items-start mb-4">
        <div class="flex-1">
            <div class="relative group/name">
                <input
                    type="text"
                    value={defaultName}
                    class="timer-name text-xl font-bold bg-transparent border-b border-transparent group-hover/name:border-slate-300 focus:border-orange-500 focus:outline-none w-full text-slate-800 dark:text-slate-100 transition-colors pr-8"
                    placeholder="Nombre"
                />
                <Icon
                    name="mdi:pencil"
                    class="absolute right-0 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-300 opacity-0 group-hover/name:opacity-100 transition-opacity pointer-events-none"
                />
            </div>
            <div
                class="text-xs text-orange-500 font-medium tracking-wider uppercase mt-1 status-text"
            >
                Listo
            </div>
        </div>
    </div>

    <div class="relative z-10 flex flex-col items-center mb-8 w-full">
        <div
            class="flex items-center gap-1 text-5xl md:text-6xl font-mono font-black text-slate-900 dark:text-white tracking-tighter tabular-nums"
        >
            <div class="flex flex-col items-center">
                <input
                    type="number"
                    min="0"
                    max="99"
                    value="00"
                    class="time-input hours w-[1.2em] bg-transparent text-center focus:outline-none focus:text-orange-500 placeholder-slate-300"
                    placeholder="00"
                />
                <span class="text-xs font-sans font-normal text-slate-400 mt-1">h</span>
            </div>
            <span class="pb-6">:</span>
            <div class="flex flex-col items-center">
                <input
                    type="number"
                    min="0"
                    max="59"
                    value="00"
                    class="time-input minutes w-[1.2em] bg-transparent text-center focus:outline-none focus:text-orange-500 placeholder-slate-300"
                    placeholder="00"
                />
                <span class="text-xs font-sans font-normal text-slate-400 mt-1">m</span>
            </div>
            <span class="pb-6">:</span>
            <div class="flex flex-col items-center">
                <input
                    type="number"
                    min="0"
                    max="59"
                    value="00"
                    class="time-input seconds w-[1.2em] bg-transparent text-center focus:outline-none focus:text-orange-500 placeholder-slate-300"
                    placeholder="00"
                />
                <span class="text-xs font-sans font-normal text-slate-400 mt-1">s</span>
            </div>
        </div>
    </div>

    <div class="relative z-10 w-full grid grid-cols-2 gap-3">
        <button
            disabled
            class="btn-toggle flex items-center justify-center gap-2 py-4 rounded-xl bg-orange-500 hover:bg-orange-600 text-white font-bold transition-all active:scale-95 shadow-lg shadow-orange-500/30 opacity-50 cursor-not-allowed"
        >
            <span class="icon-play block"><Icon name="mdi:play" class="w-6 h-6" /></span>
            <span class="icon-pause hidden"><Icon name="mdi:pause" class="w-6 h-6" /></span>
            <span class="btn-text">Iniciar</span>
        </button>

        <button
            class="btn-reset flex items-center justify-center gap-2 py-4 rounded-xl bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 font-bold hover:bg-slate-200 dark:hover:bg-slate-700 transition-all active:scale-95"
        >
            <Icon name="mdi:refresh" class="w-6 h-6" />
            Reiniciar
        </button>
    </div>

    <div class="relative z-10 mt-4 flex gap-2 w-full justify-center">
        <button
            class="btn-add-1m px-3 py-1 rounded-full text-xs font-bold bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-500 hover:border-orange-500 hover:text-orange-500 transition-colors"
        >
            +1 min
        </button>
        <button
            class="btn-add-5m px-3 py-1 rounded-full text-xs font-bold bg-slate-50 dark:bg-slate-800 border border-slate-200 dark:border-slate-700 text-slate-500 hover:border-orange-500 hover:text-orange-500 transition-colors"
        >
            +5 min
        </button>
    </div>
</div>

<style>
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    input[type="number"] {
        -moz-appearance: textfield;
    }

    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }

    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
