---
import { Icon } from "astro-icon/components";

interface Props {
    index: number;
    defaultName: string;
}

const { index, defaultName } = Astro.props;
---

<div
    class="timer-card bg-white dark:bg-zinc-900 rounded-[2.5rem] p-8 shadow-2xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-zinc-800 flex flex-col items-center h-full relative overflow-hidden group transition-all duration-500 hover:border-orange-500/30"
    data-index={index}
>
    
    <div class="absolute inset-x-0 bottom-0 h-1.5 bg-slate-100 dark:bg-zinc-800 overflow-hidden">
        <div
            class="progress-bg w-full h-full bg-gradient-to-r from-orange-500 to-amber-500 origin-left transform scale-x-0 transition-transform duration-1000 ease-linear"
        >
        </div>
    </div>

    <div class="w-full relative z-10 space-y-6">
        
        <div class="flex flex-col items-center text-center">
            <div class="relative w-full group/name max-w-[200px]">
                <input
                    type="text"
                    value={defaultName}
                    class="timer-name text-center text-lg font-black bg-transparent border-b-2 border-transparent hover:border-slate-200 focus:border-orange-500 focus:outline-none w-full text-slate-900 dark:text-white transition-all px-2 py-1"
                    placeholder="Etiqueta"
                />
            </div>
            <div
                class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-orange-50 dark:bg-orange-950/30 text-[10px] font-black uppercase tracking-[0.1em] text-orange-600 dark:text-orange-400 mt-2 status-text shadow-sm border border-orange-100/50 dark:border-orange-500/20"
            >
                Listo
            </div>
        </div>

        
        <div class="flex items-center justify-center py-4">
            <div
                class="flex items-center gap-2 text-5xl md:text-6xl font-mono font-black text-slate-900 dark:text-white tracking-tighter tabular-nums"
            >
                <div class="flex flex-col items-center group/input">
                    <div
                        class="px-2 py-1.5 rounded-2xl bg-slate-50 dark:bg-zinc-800/50 border border-slate-100 dark:border-zinc-800 group-focus-within/input:border-orange-500/50 group-focus-within/input:bg-white dark:group-focus-within/input:bg-zinc-900 transition-all shadow-sm"
                    >
                        <input
                            type="number"
                            min="0"
                            max="99"
                            value="00"
                            class="time-input hours w-[1.2em] bg-transparent text-center focus:outline-none focus:text-orange-500 transition-colors"
                            placeholder="00"
                        />
                    </div>
                    <span
                        class="text-[9px] font-black uppercase tracking-widest text-slate-400 dark:text-zinc-500 group-focus-within/input:text-orange-500 transition-colors mt-2"
                        >Horas</span
                    >
                </div>

                <span class="text-slate-200 dark:text-zinc-800 mb-6">:</span>

                <div class="flex flex-col items-center group/input">
                    <div
                        class="px-2 py-1.5 rounded-2xl bg-slate-50 dark:bg-zinc-800/50 border border-slate-100 dark:border-zinc-800 group-focus-within/input:border-orange-500/50 group-focus-within/input:bg-white dark:group-focus-within/input:bg-zinc-900 transition-all shadow-sm"
                    >
                        <input
                            type="number"
                            min="0"
                            max="59"
                            value="00"
                            class="time-input minutes w-[1.2em] bg-transparent text-center focus:outline-none focus:text-orange-500 transition-colors"
                            placeholder="00"
                        />
                    </div>
                    <span
                        class="text-[9px] font-black uppercase tracking-widest text-slate-400 dark:text-zinc-500 group-focus-within/input:text-orange-500 transition-colors mt-2"
                        >Min</span
                    >
                </div>

                <span class="text-slate-200 dark:text-zinc-800 mb-6">:</span>

                <div class="flex flex-col items-center group/input">
                    <div
                        class="px-2 py-1.5 rounded-2xl bg-slate-50 dark:bg-zinc-800/50 border border-slate-100 dark:border-zinc-800 group-focus-within/input:border-orange-500/50 group-focus-within/input:bg-white dark:group-focus-within/input:bg-zinc-900 transition-all shadow-sm"
                    >
                        <input
                            type="number"
                            min="0"
                            max="59"
                            value="00"
                            class="time-input seconds w-[1.2em] bg-transparent text-center focus:outline-none focus:text-orange-500 transition-colors"
                            placeholder="00"
                        />
                    </div>
                    <span
                        class="text-[9px] font-black uppercase tracking-widest text-slate-400 dark:text-zinc-500 group-focus-within/input:text-orange-500 transition-colors mt-2"
                        >Seg</span
                    >
                </div>
            </div>
        </div>

        
        <div class="space-y-4">
            <div class="grid grid-cols-2 gap-3">
                <button
                    disabled
                    class="btn-toggle group flex items-center justify-center gap-2 py-4 rounded-2xl bg-slate-900 dark:bg-white text-white dark:text-slate-900 font-black text-sm transition-all active:scale-95 shadow-xl shadow-slate-200 dark:shadow-none opacity-50 cursor-not-allowed hover:bg-slate-800 dark:hover:bg-slate-100"
                >
                    <span class="icon-play block transition-transform group-hover:scale-110"
                        ><Icon name="mdi:play" class="w-5 h-5" /></span
                    >
                    <span class="icon-pause hidden animate-pulse"
                        ><Icon name="mdi:pause" class="w-5 h-5" /></span
                    >
                    <span class="btn-text">Iniciar</span>
                </button>

                <button
                    class="btn-reset flex items-center justify-center gap-2 py-4 rounded-2xl bg-slate-50 dark:bg-zinc-800/50 text-slate-500 dark:text-zinc-400 font-bold text-sm hover:bg-slate-100 dark:hover:bg-zinc-800 transition-all border border-slate-200/50 dark:border-zinc-700/50"
                >
                    <Icon name="mdi:refresh" class="w-5 h-5" />
                    Reset
                </button>
            </div>

            <div class="flex gap-2 justify-center">
                <button
                    class="btn-add-1m flex-1 py-2 rounded-xl text-[10px] font-black uppercase tracking-wider bg-white dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 text-slate-500 dark:text-zinc-400 hover:border-orange-500 hover:text-orange-500 dark:hover:border-orange-500 dark:hover:text-orange-400 transition-all"
                >
                    +1 min
                </button>
                <button
                    class="btn-add-5m flex-1 py-2 rounded-xl text-[10px] font-black uppercase tracking-wider bg-white dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 text-slate-500 dark:text-zinc-400 hover:border-orange-500 hover:text-orange-500 dark:hover:border-orange-500 dark:hover:text-orange-400 transition-all"
                >
                    +5 min
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    input[type="number"] {
        -moz-appearance: textfield;
    }

    .no-scrollbar::-webkit-scrollbar {
        display: none;
    }

    .no-scrollbar {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }
</style>
