---
import { Icon } from "astro-icon/components";

interface Props {
    title: string;
    url: string;
}

const { title, url } = Astro.props;


const toolSlug = url.split("/").filter(Boolean).pop() || "";
const studioUrl = `/widgets/?utilidad=${toolSlug}`;
---

<section class="mt-12 no-widget-hidden">
    <div class="max-w-4xl mx-auto px-4">
        <div
            class="group relative bg-white dark:bg-zinc-900 rounded-3xl p-6 md:p-8 border border-slate-200 dark:border-slate-800 shadow-2xl shadow-indigo-500/5 overflow-hidden transition-all duration-500 hover:border-indigo-500/30"
        >
            
            <div
                class="absolute -right-20 -top-20 w-48 h-48 bg-indigo-500/5 rounded-full blur-[60px] group-hover:bg-indigo-500/10 transition-colors duration-700"
            >
            </div>

            <div
                class="relative z-10 flex flex-col md:flex-row items-center justify-between gap-6 text-center md:text-left"
            >
                <div class="space-y-2 max-w-lg">
                    <div
                        class="inline-flex items-center gap-2 px-2 py-0.5 bg-indigo-50 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-400 rounded-full text-[9px] font-black uppercase tracking-widest"
                    >
                        <Icon name="mdi:widgets-outline" class="w-3 h-3" />
                        Estudio de Utilidades
                    </div>
                    <h2
                        class="text-2xl font-black tracking-tighter text-slate-900 dark:text-white leading-tight"
                    >
                        Â¿Quieres tener esta <span class="text-indigo-600 dark:text-indigo-400"
                            >utilidad</span
                        > en tu web?
                    </h2>
                    <p class="text-slate-500 dark:text-slate-400 text-sm font-light leading-snug">
                        Personaliza colores y modo oscuro para WordPress, Notion o tu propio sitio.
                    </p>
                </div>

                <div class="shrink-0">
                    <a
                        href={studioUrl}
                        class="inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-xl text-sm font-extrabold shadow-lg shadow-indigo-600/20 transition-all active:scale-95 group/btn"
                    >
                        Adelante
                        <Icon
                            name="mdi:arrow-right"
                            class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform"
                        />
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
