<div class="w-full max-w-xl mx-auto animate-in fade-in slide-in-from-bottom-8 duration-700">
    <div
        class="bg-white dark:bg-slate-900 rounded-2xl shadow-xl border border-slate-200 dark:border-slate-800 overflow-hidden relative"
    >
        <div class="absolute top-0 right-0 p-4 opacity-5">
            <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24"
                ><path d="M3 6h18v12H3V6m2 2v8h14V8H5m4 2h6v4H9v-4z"></path></svg
            >
        </div>

        <div class="p-8 space-y-8 relative z-10">
            <div class="space-y-6">
                <div>
                    <label
                        class="block text-sm font-bold text-slate-500 uppercase tracking-wide mb-2"
                        >Importe Total (Con IVA)</label
                    >
                    <div class="relative group">
                        <span
                            class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-xl"
                            >€</span
                        >
                        <input
                            type="number"
                            id="total-amount"
                            placeholder="121.00"
                            class="w-full pl-10 pr-4 py-4 text-2xl font-bold bg-slate-50 dark:bg-slate-800 border-2 border-transparent focus:border-blue-500 rounded-xl outline-none transition-all placeholder:text-slate-300 dark:placeholder:text-slate-600 dark:text-white"
                        />
                    </div>
                </div>

                <div>
                    <label
                        class="block text-sm font-bold text-slate-500 uppercase tracking-wide mb-3"
                        >Tipo de IVA</label
                    >
                    <div class="grid grid-cols-4 gap-2">
                        <button
                            class="vat-btn active px-4 py-2 rounded-lg font-bold border-2 border-blue-500 bg-blue-500 text-white transition-all hover:scale-105"
                            data-val="21">21%</button
                        >
                        <button
                            class="vat-btn px-4 py-2 rounded-lg font-bold border-2 border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-400 hover:border-blue-400 dark:hover:border-blue-400 transition-all hover:scale-105"
                            data-val="10">10%</button
                        >
                        <button
                            class="vat-btn px-4 py-2 rounded-lg font-bold border-2 border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-400 hover:border-blue-400 dark:hover:border-blue-400 transition-all hover:scale-105"
                            data-val="4">4%</button
                        >
                        <button
                            class="vat-btn px-4 py-2 rounded-lg font-bold border-2 border-slate-200 dark:border-slate-700 text-slate-600 dark:text-slate-400 hover:border-blue-400 dark:hover:border-blue-400 transition-all hover:scale-105"
                            data-val="0">0%</button
                        >
                    </div>
                </div>
            </div>

            <div
                class="bg-slate-50 dark:bg-slate-800/50 rounded-xl p-6 space-y-4 border border-slate-100 dark:border-slate-700"
            >
                <div
                    class="flex justify-between items-end pb-4 border-b border-dashed border-slate-200 dark:border-slate-700"
                >
                    <span class="text-slate-500 dark:text-slate-400 font-medium"
                        >Base Imponible</span
                    >
                    <span id="base-amount" class="text-3xl font-bold text-slate-800 dark:text-white"
                        >0.00 €</span
                    >
                </div>
                <div class="flex justify-between items-end pt-2">
                    <span class="text-slate-500 dark:text-slate-400 font-medium"
                        >IVA (<span id="vat-rate-display">21</span>%)</span
                    >
                    <span
                        id="vat-amount"
                        class="text-2xl font-bold text-blue-600 dark:text-blue-400">0.00 €</span
                    >
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const totalInput = document.getElementById("total-amount") as HTMLInputElement;
    const baseOutput = document.getElementById("base-amount");
    const vatOutput = document.getElementById("vat-amount");
    const vatRateDisplay = document.getElementById("vat-rate-display");
    const vatBtns = document.querySelectorAll(".vat-btn");

    let currentRate = 21;

    function calculate() {
        const total = parseFloat(totalInput.value);
        if (isNaN(total)) {
            if (baseOutput) baseOutput.textContent = "0.00 €";
            if (vatOutput) vatOutput.textContent = "0.00 €";
            return;
        }

        const base = total / (1 + currentRate / 100);
        const vat = total - base;

        if (baseOutput)
            baseOutput.textContent = new Intl.NumberFormat("es-ES", {
                style: "currency",
                currency: "EUR",
            }).format(base);
        if (vatOutput)
            vatOutput.textContent = new Intl.NumberFormat("es-ES", {
                style: "currency",
                currency: "EUR",
            }).format(vat);
    }

    totalInput.addEventListener("input", calculate);

    vatBtns.forEach((btn) => {
        btn.addEventListener("click", (e) => {
            vatBtns.forEach((b) => {
                b.classList.remove("bg-blue-500", "text-white", "border-blue-500");
                b.classList.add(
                    "border-slate-200",
                    "dark:border-slate-700",
                    "text-slate-600",
                    "dark:text-slate-400"
                );
            });
            const target = e.target as HTMLElement;
            target.classList.remove(
                "border-slate-200",
                "dark:border-slate-700",
                "text-slate-600",
                "dark:text-slate-400"
            );
            target.classList.add("bg-blue-500", "text-white", "border-blue-500");

            currentRate = parseFloat(target.dataset.val || "21");
            if (vatRateDisplay) vatRateDisplay.textContent = currentRate.toString();
            calculate();
        });
    });
</script>

<style>
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>
