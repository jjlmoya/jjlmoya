    "ruptured-eardrums": {
        text: "Tímpanos Rotos",
        description: "Onda de choque destructiva. Lesiones graves, edificios colapsados.",
        gradient: "from-blue-400 to-indigo-400",
        iconBg: "bg-blue-500",
        icon: "M13,14H11V10H13M13,18H11V16H13M1,21H23L12,2L1,21Z",
    },
    safe: {
        text: "A Salvo",
        description:
            "A esta distancia, solo presenciarás un hermoso espectáculo de luz en el cielo.",
        gradient: "from-emerald-400 to-green-400",
        iconBg: "bg-emerald-500",
        icon: "M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9M12,1L3,5V11C3,16.55 6.84,21.74 12,23C17.16,21.74 21,16.55 21,11V5L12,1Z",
