const config = verdicts[verdict];
---

<div
    class={`bg-gradient-to-br ${config.gradient} rounded-3xl p-8 shadow-2xl border border-white/20 transition-all duration-500`}
>
    <div class="flex items-center gap-4 mb-4">
        <div
            class={`w-16 h-16 rounded-2xl ${config.iconBg} flex items-center justify-center transition-all duration-500`}
        >
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d={config.icon}></path>
            </svg>
        </div>
        <div>
            <h3 class="text-sm font-bold text-white/80 uppercase tracking-wider">
                Veredicto de Supervivencia
            </h3>
            <p class="text-3xl font-black text-white">{config.text}</p>
        </div>
    </div>
    <p class="text-white/90 leading-relaxed">
        {config.description}
    </p>
</div>
