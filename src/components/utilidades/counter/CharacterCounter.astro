<div
    class="w-full max-w-4xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-8 duration-700"
>
    <!-- Stats Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div
            class="group relative p-6 bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 hover:border-blue-500/50 dark:hover:border-blue-500/50 transition-all duration-300 shadow-sm hover:shadow-md"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>
            <p class="text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Caracteres</p>
            <p
                id="char-count"
                class="text-4xl font-bold text-slate-900 dark:text-white group-hover:scale-110 transition-transform origin-left"
            >
                0
            </p>
        </div>

        <div
            class="group relative p-6 bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 hover:border-emerald-500/50 dark:hover:border-emerald-500/50 transition-all duration-300 shadow-sm hover:shadow-md"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-emerald-500/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>
            <p class="text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Palabras</p>
            <p
                id="word-count"
                class="text-4xl font-bold text-slate-900 dark:text-white group-hover:scale-110 transition-transform origin-left"
            >
                0
            </p>
        </div>

        <div
            class="group relative p-6 bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 hover:border-purple-500/50 dark:hover:border-purple-500/50 transition-all duration-300 shadow-sm hover:shadow-md"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>
            <p class="text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Líneas</p>
            <p
                id="line-count"
                class="text-4xl font-bold text-slate-900 dark:text-white group-hover:scale-110 transition-transform origin-left"
            >
                0
            </p>
        </div>

        <div
            class="group relative p-6 bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 hover:border-amber-500/50 dark:hover:border-amber-500/50 transition-all duration-300 shadow-sm hover:shadow-md"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-amber-500/5 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"
            >
            </div>
            <p class="text-sm font-medium text-slate-500 dark:text-slate-400 mb-1">Párrafos</p>
            <p
                id="paragraph-count"
                class="text-4xl font-bold text-slate-900 dark:text-white group-hover:scale-110 transition-transform origin-left"
            >
                0
            </p>
        </div>
    </div>

    <!-- Detailed Stats (Hidden by default, shown when there is text) -->
    <div
        id="detailed-stats"
        class="grid grid-cols-2 md:grid-cols-4 gap-4 opacity-50 transition-opacity duration-300"
    >
        <div class="p-3 bg-slate-50 dark:bg-slate-800/50 rounded-lg text-center">
            <span class="block text-xs uppercase tracking-wider text-slate-500">Sin Espacios</span>
            <span
                id="char-no-spaces"
                class="text-lg font-semibold text-slate-700 dark:text-slate-300">0</span
            >
        </div>
        <div class="p-3 bg-slate-50 dark:bg-slate-800/50 rounded-lg text-center">
            <span class="block text-xs uppercase tracking-wider text-slate-500">Bytes</span>
            <span id="byte-size" class="text-lg font-semibold text-slate-700 dark:text-slate-300"
                >0 B</span
            >
        </div>
        <div class="p-3 bg-slate-50 dark:bg-slate-800/50 rounded-lg text-center">
            <span class="block text-xs uppercase tracking-wider text-slate-500">Tiempo Lectura</span
            >
            <span id="reading-time" class="text-lg font-semibold text-slate-700 dark:text-slate-300"
                >0 min</span
            >
        </div>
        <div class="p-3 bg-slate-50 dark:bg-slate-800/50 rounded-lg text-center">
            <span class="block text-xs uppercase tracking-wider text-slate-500">Tiempo Voz</span>
            <span
                id="speaking-time"
                class="text-lg font-semibold text-slate-700 dark:text-slate-300">0 min</span
            >
        </div>
    </div>

    <!-- Main Input Area -->
    <div class="relative group">
        <div
            class="absolute -inset-1 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl opacity-10 group-focus-within:opacity-20 transition-opacity duration-500 blur-lg"
        >
        </div>
        <div
            class="relative bg-white dark:bg-slate-900 rounded-xl shadow-xl overflow-hidden border border-slate-200 dark:border-slate-800"
        >
            <!-- Toolbar -->
            <div
                class="flex items-center justify-between px-4 py-3 border-b border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-900/50 backdrop-blur-sm"
            >
                <label
                    class="cursor-pointer group flex items-center gap-2 px-3 py-1.5 rounded-lg hover:bg-white dark:hover:bg-slate-800 border border-transparent hover:border-slate-200 dark:hover:border-slate-700 transition-all text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400"
                >
                    <svg
                        class="w-4 h-4"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"
                        ></path></svg
                    >
                    Subir Archivo
                    <input
                        type="file"
                        id="file-input"
                        class="hidden"
                        accept=".txt,.md,.json,.csv,.js,.ts,.html,.css"
                    />
                </label>

                <div class="flex items-center gap-2">
                    <button
                        id="copy-btn"
                        class="p-2 rounded-lg hover:bg-white dark:hover:bg-slate-800 text-slate-400 hover:text-emerald-500 transition-colors"
                        title="Copiar texto"
                    >
                        <svg
                            class="w-4 h-4"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184"
                            ></path></svg
                        >
                    </button>
                    <button
                        id="clear-btn"
                        class="p-2 rounded-lg hover:bg-white dark:hover:bg-slate-800 text-slate-400 hover:text-red-500 transition-colors"
                        title="Borrar todo"
                    >
                        <svg
                            class="w-4 h-4"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0"
                            ></path></svg
                        >
                    </button>
                </div>
            </div>

            <textarea
                id="text-input"
                class="w-full h-96 p-6 bg-transparent resize-y outline-none font-mono text-sm leading-relaxed text-slate-700 dark:text-slate-300 placeholder:text-slate-400/50"
                placeholder="Escribe, pega algo aquí o arrastra un archivo..."></textarea>
        </div>
    </div>
</div>

<script>
    const textInput = document.getElementById("text-input") as HTMLTextAreaElement;
    const fileInput = document.getElementById("file-input") as HTMLInputElement;
    const clearBtn = document.getElementById("clear-btn");
    const copyBtn = document.getElementById("copy-btn");
    const detailedStats = document.getElementById("detailed-stats");

    // Stats Elements
    const stats = {
        chars: document.getElementById("char-count"),
        words: document.getElementById("word-count"),
        lines: document.getElementById("line-count"),
        paragraphs: document.getElementById("paragraph-count"),
        charsNoSpaces: document.getElementById("char-no-spaces"),
        bytes: document.getElementById("byte-size"),
        readingTime: document.getElementById("reading-time"),
        speakingTime: document.getElementById("speaking-time"),
    };

    function updateStats() {
        const text = textInput.value;

        // Basic Counts
        const charCount = text.length;
        const wordCount = text.trim() === "" ? 0 : text.trim().split(/\s+/).length;
        const lineCount = text === "" ? 0 : text.split(/\r\n|\r|\n/).length;

        // Paragraphs (double newline as separator mainly)
        const paragraphCount =
            text === "" ? 0 : text.split(/\n\s*\n/).filter((p) => p.trim().length > 0).length;

        // Detailed
        const charNoSpacesCount = text.replace(/\s/g, "").length;
        const blob = new Blob([text]); // Gets accurate byte size including multibyte chars
        const byteSize = blob.size;

        // Estimations
        const wordsPerMinuteReading = 200;
        const wordsPerMinuteSpeaking = 130;
        const readTimeMinutes = wordCount / wordsPerMinuteReading;
        const speakTimeMinutes = wordCount / wordsPerMinuteSpeaking;

        // Formatting outputs
        if (stats.chars) stats.chars.textContent = new Intl.NumberFormat("es-ES").format(charCount);
        if (stats.words) stats.words.textContent = new Intl.NumberFormat("es-ES").format(wordCount);
        if (stats.lines) stats.lines.textContent = new Intl.NumberFormat("es-ES").format(lineCount);
        if (stats.paragraphs)
            stats.paragraphs.textContent = new Intl.NumberFormat("es-ES").format(paragraphCount);

        if (stats.charsNoSpaces)
            stats.charsNoSpaces.textContent = new Intl.NumberFormat("es-ES").format(
                charNoSpacesCount
            );
        if (stats.bytes) stats.bytes.textContent = formatBytes(byteSize);
        if (stats.readingTime) stats.readingTime.textContent = formatTime(readTimeMinutes);
        if (stats.speakingTime) stats.speakingTime.textContent = formatTime(speakTimeMinutes);

        // Opacity toggle for detailed stats
        if (detailedStats) {
            detailedStats.style.opacity = text.length > 0 ? "1" : "0.5";
        }
    }

    function formatBytes(bytes: number, decimals = 2) {
        if (bytes === 0) return "0 B";
        const k = 1024;
        const dm = decimals < 0 ? 0 : decimals;
        const sizes = ["B", "KB", "MB", "GB"];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(dm)) + " " + sizes[i];
    }

    function formatTime(minutes: number) {
        if (minutes < 1) {
            const seconds = Math.round(minutes * 60);
            return `${seconds} seg`;
        }
        return `${Math.round(minutes)} min`;
    }

    // Event Listeners
    textInput.addEventListener("input", updateStats);

    // File Upload
    fileInput.addEventListener("change", (e) => {
        const file = (e.target as HTMLInputElement).files?.[0];
        if (!file) return;

        const reader = new FileReader();
        reader.onload = (e) => {
            textInput.value = e.target?.result as string;
            updateStats();
        };
        reader.readAsText(file);
    });

    // Drag and Drop
    const dropZone = textInput.closest(".group") as HTMLElement;

    if (dropZone) {
        ["dragenter", "dragover", "dragleave", "drop"].forEach((eventName) => {
            dropZone.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e: Event) {
            e.preventDefault();
            e.stopPropagation();
        }

        dropZone.addEventListener("drop", (e: DragEvent) => {
            const dt = e.dataTransfer;
            const files = dt?.files;
            if (files && files[0]) {
                const file = files[0];
                const reader = new FileReader();
                reader.onload = (e) => {
                    textInput.value = e.target?.result as string;
                    updateStats();
                };
                reader.readAsText(file);
            }
        });
    }

    // Clear
    clearBtn?.addEventListener("click", () => {
        textInput.value = "";
        updateStats();
        textInput.focus();
    });

    // Copy
    copyBtn?.addEventListener("click", () => {
        textInput.select();
        navigator.clipboard.writeText(textInput.value);

        // Visual feedback
        const originalIcon = copyBtn.innerHTML;
        copyBtn.innerHTML = `<svg class="w-4 h-4 text-emerald-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>`;

        setTimeout(() => {
            copyBtn.innerHTML = originalIcon;
        }, 2000);
    });
</script>
