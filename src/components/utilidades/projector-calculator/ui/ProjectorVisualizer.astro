<div
    class="lg:col-span-7 bg-slate-950 relative overflow-hidden flex items-center justify-center min-h-[400px]"
>
    <div
        class="absolute inset-0 opacity-20 pointer-events-none"
        style="background-image: radial-gradient(#334155 1px, transparent 1px); background-size: 30px 30px;"
    >
    </div>

    <div
        class="absolute inset-0 bg-gradient-to-t from-slate-900 via-transparent to-transparent pointer-events-none"
    >
    </div>

    <svg
        id="projector-viz"
        viewBox="0 0 800 600"
        preserveAspectRatio="xMidYMid meet"
        class="w-full h-full relative z-10"
    >
        <defs>
            <linearGradient id="beam-grad" x1="1" y1="0.5" x2="0" y2="0.5">
                <stop offset="0%" stop-color="#06b6d4" stop-opacity="0.5"></stop>
                <stop offset="100%" stop-color="#06b6d4" stop-opacity="0.0"></stop>
            </linearGradient>
            <filter id="glow-beam">
                <feGaussianBlur stdDeviation="4" result="coloredBlur"></feGaussianBlur>
                <feMerge>
                    <feMergeNode in="coloredBlur"></feMergeNode>
                    <feMergeNode in="SourceGraphic"></feMergeNode>
                </feMerge>
            </filter>
        </defs>

        <line x1="50" y1="550" x2="750" y2="550" stroke="#334155" stroke-width="2"></line>

        <g id="screen-group">
            <line
                x1="60"
                y1="550"
                x2="60"
                y2="100"
                stroke="#475569"
                stroke-width="4"
                stroke-linecap="round"></line>
            <line
                id="viz-screen"
                x1="60"
                y1="200"
                x2="60"
                y2="400"
                stroke="#e2e8f0"
                stroke-width="6"
                stroke-linecap="round"
            >
            </line>
        </g>

        <path
            id="viz-beam"
            d="M400,300 L60,250 L60,350 Z"
            fill="url(#beam-grad)"
            filter="url(#glow-beam)"
            class="transition-all duration-300 ease-out"></path>

        <g
            id="viz-projector"
            transform="translate(400, 300)"
            class="transition-transform duration-500 ease-out text-slate-300"
        >
            <line x1="0" y1="-300" x2="0" y2="-20" stroke="#475569" stroke-width="2"></line>

            <rect
                x="-30"
                y="-20"
                width="60"
                height="40"
                rx="4"
                fill="#1e293b"
                stroke="#475569"
                stroke-width="2"></rect>
            <circle cx="-30" cy="0" r="10" fill="#06b6d4"></circle>
            <circle cx="-30" cy="0" r="4" fill="#cffafe" class="animate-pulse"></circle>
        </g>

        <text
            id="viz-dist-text"
            x="230"
            y="540"
            fill="#94a3b8"
            font-family="monospace"
            font-size="14"
            text-anchor="middle">--m</text
        >
        <line
            x1="60"
            y1="520"
            x2="750"
            y2="520"
            stroke="#334155"
            stroke-width="1"
            stroke-dasharray="4 4"></line>
    </svg>
</div>
