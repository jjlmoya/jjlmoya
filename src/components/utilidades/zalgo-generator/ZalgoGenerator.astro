---
import { Icon } from "astro-icon/components";
---

<section class="max-w-5xl mx-auto px-4 py-12 relative">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
        <div class="lg:col-span-4 space-y-6">
            <div
                class="bg-white/80 dark:bg-zinc-900/80 backdrop-blur-xl border border-slate-200 dark:border-zinc-800 rounded-3xl p-6 shadow-xl relative overflow-hidden group"
            >
                <div
                    class="absolute inset-0 bg-gradient-to-br from-purple-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
                >
                </div>

                <h3
                    class="text-lg font-bold text-slate-900 dark:text-white mb-6 flex items-center gap-2"
                >
                    <Icon
                        name="mdi:tune-variant"
                        class="w-5 h-5 text-purple-600 dark:text-purple-400"
                    />
                    Configuración
                </h3>

                <div class="space-y-8">
                    <div class="space-y-4">
                        <div class="flex justify-between items-center">
                            <label
                                class="text-xs font-bold uppercase tracking-widest text-slate-500 dark:text-zinc-400"
                                >Intensidad</label
                            >
                            <span
                                id="intensity-value"
                                class="text-sm font-mono font-bold text-purple-600 dark:text-purple-400"
                                >50%</span
                            >
                        </div>
                        <input
                            type="range"
                            id="intensity-slider"
                            min="0.1"
                            max="1.5"
                            step="0.1"
                            value="0.5"
                            class="w-full h-1.5 bg-slate-200 dark:bg-zinc-800 rounded-full appearance-none cursor-pointer accent-purple-600"
                        />
                    </div>

                    <div class="space-y-3">
                        <label
                            class="flex items-center justify-between p-3 bg-slate-50 dark:bg-zinc-950/50 rounded-2xl cursor-pointer hover:bg-slate-100 dark:hover:bg-zinc-800 transition-colors border border-transparent hover:border-purple-500/20"
                        >
                            <span class="text-sm font-medium text-slate-700 dark:text-zinc-300"
                                >Corrupción Superior</span
                            >
                            <div class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" id="opt-up" checked class="sr-only peer" />
                                <div
                                    class="w-10 h-5 bg-slate-300 dark:bg-zinc-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-purple-600"
                                >
                                </div>
                            </div>
                        </label>

                        <label
                            class="flex items-center justify-between p-3 bg-slate-50 dark:bg-zinc-950/50 rounded-2xl cursor-pointer hover:bg-slate-100 dark:hover:bg-zinc-800 transition-colors border border-transparent hover:border-purple-500/20"
                        >
                            <span class="text-sm font-medium text-slate-700 dark:text-zinc-300"
                                >Ruido Central</span
                            >
                            <div class="relative inline-flex items-center cursor-pointer">
                                <input
                                    type="checkbox"
                                    id="opt-middle"
                                    checked
                                    class="sr-only peer"
                                />
                                <div
                                    class="w-10 h-5 bg-slate-300 dark:bg-zinc-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-purple-600"
                                >
                                </div>
                            </div>
                        </label>

                        <label
                            class="flex items-center justify-between p-3 bg-slate-50 dark:bg-zinc-950/50 rounded-2xl cursor-pointer hover:bg-slate-100 dark:hover:bg-zinc-800 transition-colors border border-transparent hover:border-purple-500/20"
                        >
                            <span class="text-sm font-medium text-slate-700 dark:text-zinc-300"
                                >Corrupción Inferior</span
                            >
                            <div class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" id="opt-down" checked class="sr-only peer" />
                                <div
                                    class="w-10 h-5 bg-slate-300 dark:bg-zinc-700 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-purple-600"
                                >
                                </div>
                            </div>
                        </label>
                    </div>

                    <button
                        id="reset-options"
                        class="w-full py-3 text-xs font-bold uppercase tracking-widest text-slate-400 hover:text-purple-600 dark:text-zinc-500 dark:hover:text-purple-400 transition-colors flex items-center justify-center gap-2"
                    >
                        <Icon name="mdi:history" class="w-4 h-4" />
                        Restablecer Valores
                    </button>
                </div>
            </div>

            <div class="p-4 bg-indigo-500/5 border border-indigo-500/10 rounded-2xl">
                <p
                    class="text-[10px] leading-relaxed text-indigo-700 dark:text-indigo-400/80 font-medium"
                >
                    ADVERTENCIA: El texto Zalgo utiliza caracteres combinados de Unicode que pueden
                    desbordar visualmente su contenedor y afectar a la legibilidad de elementos
                    adyacentes. Úsese con precaución en redes sociales.
                </p>
            </div>
        </div>

        <div class="lg:col-span-8 space-y-8">
            <div
                class="bg-white dark:bg-zinc-950 border border-slate-200 dark:border-zinc-800 rounded-3xl overflow-hidden shadow-2xl flex flex-col"
            >
                <div
                    class="flex items-center justify-between px-6 py-4 border-b border-slate-100 dark:border-zinc-900 bg-slate-50/50 dark:bg-zinc-900/30"
                >
                    <div class="flex items-center gap-3">
                        <Icon
                            name="mdi:code-tags"
                            class="w-4 h-4 text-purple-600 dark:text-purple-400 opacity-50"
                        />
                        <span
                            class="text-xs font-mono text-slate-400 dark:text-zinc-500 uppercase tracking-tighter"
                            >Zalgo_Editor.sh</span
                        >
                    </div>
                </div>

                <div class="p-0 flex flex-col">
                    <textarea
                        id="input-text"
                        placeholder="Escribe aquí el mensaje que deseas corromper..."
                        class="w-full p-8 bg-transparent text-slate-800 dark:text-zinc-200 text-lg md:text-xl font-medium focus:outline-none resize-none min-h-[160px] placeholder:text-slate-300 dark:placeholder:text-zinc-700"
                    ></textarea>
                </div>

                <div class="px-8 pb-8 flex justify-end items-center gap-4">
                    <span
                        id="char-count"
                        class="text-[10px] font-mono text-slate-400 dark:text-zinc-600"
                        >0 CARACTERES</span
                    >
                    <div class="h-4 w-px bg-slate-200 dark:bg-zinc-800"></div>
                    <button
                        id="copy-btn"
                        class="flex items-center gap-2 px-6 py-3 bg-purple-600 hover:bg-purple-500 text-white font-bold rounded-xl shadow-lg shadow-purple-600/20 transition-all active:scale-95 group"
                    >
                        <Icon
                            name="mdi:content-copy"
                            class="w-5 h-5 group-active:scale-110 transition-transform"
                        />
                        Copiar Resultado
                    </button>
                    <button
                        id="clear-btn"
                        class="p-3 bg-slate-100 dark:bg-zinc-900 text-slate-500 dark:text-zinc-400 rounded-xl hover:bg-slate-200 dark:hover:bg-zinc-800 transition-colors"
                    >
                        <Icon name="mdi:trash-can-outline" class="w-5 h-5" />
                    </button>
                </div>
            </div>

            <div id="fake-ui-container" class="relative">
                <div
                    class="absolute -top-4 -left-2 z-10 bg-purple-600 text-[10px] font-black text-white px-2 py-0.5 rounded tracking-widest uppercase shadow-lg"
                >
                    Vista Previa en Tiempo Real
                </div>

                <div
                    id="fake-ui-body"
                    class="bg-white dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 rounded-3xl p-8 shadow-inner transition-all duration-500 overflow-visible min-h-[250px] flex items-center justify-center relative group"
                >
                    <div
                        class="absolute inset-0 opacity-[0.03] dark:opacity-[0.05] pointer-events-none"
                        style="background-image: radial-gradient(circle at 2px 2px, currentColor 1px, transparent 0); background-size: 24px 24px;"
                    >
                    </div>

                    <div
                        id="zalgo-output"
                        class="text-3xl md:text-5xl font-bold text-center break-words max-w-full leading-relaxed z-10 transition-all selection:bg-purple-500 selection:text-white"
                        style="overflow-wrap: anywhere;"
                    >
                        <span
                            class="text-slate-200 dark:text-zinc-800 transition-colors duration-500 italic font-medium"
                            >Vacío</span
                        >
                    </div>

                    <div
                        id="glitch-overlay"
                        class="absolute inset-0 pointer-events-none opacity-0 transition-opacity duration-300"
                    >
                        <div
                            class="absolute top-1/4 left-0 w-full h-px bg-purple-500/20 animate-pulse"
                        >
                        </div>
                        <div
                            class="absolute top-2/3 left-0 w-full h-px bg-indigo-500/20 animate-pulse"
                            style="animation-delay: 1s"
                        >
                        </div>
                    </div>
                </div>

                <p
                    class="mt-4 text-center text-[10px] font-mono text-slate-400 dark:text-zinc-500 uppercase tracking-widest"
                >
                    Nota: Algunos navegadores pueden limitar el renderizado de caracteres combinados
                </p>
            </div>
        </div>
    </div>
</section>

<style>
    input[type="range"]::-webkit-slider-thumb {
        -webkit-appearance: none;
        appearance: none;
        width: 18px;
        height: 18px;
        background: #9333ea;
        border-radius: 50%;
        cursor: pointer;
        border: 3px solid white;
        box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
    }

    .dark input[type="range"]::-webkit-slider-thumb {
        border-color: #18181b;
    }

    #zalgo-output {
        font-family: inherit;
        color: var(--zalgo-color, inherit);
    }
</style>

<script>
    import { ZalgoEngine } from "../../../lib/utilidades/zalgo/ZalgoEngine";

    const input = document.getElementById("input-text") as HTMLTextAreaElement;
    const output = document.getElementById("zalgo-output") as HTMLDivElement;
    const intensitySlider = document.getElementById("intensity-slider") as HTMLInputElement;
    const intensityValue = document.getElementById("intensity-value");
    const optUp = document.getElementById("opt-up") as HTMLInputElement;
    const optMiddle = document.getElementById("opt-middle") as HTMLInputElement;
    const optDown = document.getElementById("opt-down") as HTMLInputElement;
    const copyBtn = document.getElementById("copy-btn");
    const clearBtn = document.getElementById("clear-btn");
    const charCount = document.getElementById("char-count");
    const resetBtn = document.getElementById("reset-options");
    const glitchOverlay = document.getElementById("glitch-overlay");
    const fakeUiBody = document.getElementById("fake-ui-body");

    function update() {
        const text = input.value;
        const intensity = parseFloat(intensitySlider.value);

        if (charCount) charCount.textContent = `${text.length} CARACTERES`;
        if (intensityValue) intensityValue.textContent = `${Math.round(intensity * 100)}%`;

        if (text.trim().length === 0) {
            output.innerHTML =
                '<span class="text-slate-200 dark:text-zinc-800 italic font-medium">Vacío</span>';
            if (glitchOverlay) glitchOverlay.style.opacity = "0";
            if (fakeUiBody) {
                fakeUiBody.style.borderColor = "";
                fakeUiBody.style.boxShadow = "";
            }
            return;
        }

        const zalgoText = ZalgoEngine.process(text, {
            up: optUp.checked,
            middle: optMiddle.checked,
            down: optDown.checked,
            intensity: intensity,
        });

        output.textContent = zalgoText;

        if (intensity > 1.0) {
            if (glitchOverlay) glitchOverlay.style.opacity = "1";
            if (fakeUiBody) {
                fakeUiBody.style.borderColor = intensity > 1.3 ? "#9333ea50" : "";
                fakeUiBody.style.boxShadow = `inset 0 0 ${intensity * 10}px rgba(147, 51, 234, 0.1)`;
            }
        } else {
            if (glitchOverlay) glitchOverlay.style.opacity = "0";
            if (fakeUiBody) {
                fakeUiBody.style.borderColor = "";
                fakeUiBody.style.boxShadow = "";
            }
        }

        if (intensity > 1.2) {
            output.style.setProperty("--zalgo-color", "#9333ea");
        } else {
            output.style.setProperty("--zalgo-color", "inherit");
        }
    }

    input?.addEventListener("input", update);
    intensitySlider?.addEventListener("input", update);
    optUp?.addEventListener("change", update);
    optMiddle?.addEventListener("change", update);
    optDown?.addEventListener("change", update);

    copyBtn?.addEventListener("click", () => {
        const textToCopy = output.textContent || "";
        if (textToCopy && textToCopy !== "Vacío") {
            navigator.clipboard.writeText(textToCopy);
            const originalContent = copyBtn.innerHTML;
            copyBtn.innerHTML = "¡Copiado!";
            setTimeout(() => {
                copyBtn.innerHTML = originalContent;
            }, 2000);
        }
    });

    clearBtn?.addEventListener("click", () => {
        input.value = "";
        update();
    });

    resetBtn?.addEventListener("click", () => {
        intensitySlider.value = "0.5";
        optUp.checked = true;
        optMiddle.checked = true;
        optDown.checked = true;
        update();
    });

    update();
</script>
