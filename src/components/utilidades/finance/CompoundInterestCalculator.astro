<script>
    import { CompoundInterestCalculator } from "../../../lib/finance/CompoundInterestCalculator";
    import Chart from "chart.js/auto";

    let chart: Chart | null = null;
    const ctx = document.getElementById("ci-chart") as HTMLCanvasElement;

    // Inputs
    const initialEl = document.getElementById("ci-initial") as HTMLInputElement;
    const monthlyEl = document.getElementById("ci-monthly") as HTMLInputElement;
    const rateEl = document.getElementById("ci-rate") as HTMLInputElement;
    const yearsEl = document.getElementById("ci-years") as HTMLInputElement;

    // Outputs
    const investedOut = document.getElementById("ci-total-invested");
    const interestOut = document.getElementById("ci-total-interest");
    const finalOut = document.getElementById("ci-final-amount");
    const insightBox = document.getElementById("ci-insight");

    const formatMoney = (val: number) =>
        new Intl.NumberFormat("es-ES", {
            style: "currency",
            currency: "EUR",
            maximumFractionDigits: 0,
        }).format(val);

    const update = () => {
        const input = {
            initialPrincipal: Number(initialEl.value) || 0,
            monthlyContribution: Number(monthlyEl.value) || 0,
            annualInterestRate: Number(rateEl.value) || 0,
            years: Number(yearsEl.value) || 0,
        };

        const data = CompoundInterestCalculator.calculate(input);

        if (data.length === 0) return;

        const last = data[data.length - 1];
        if (investedOut) investedOut.innerText = formatMoney(last.invested);
        if (interestOut) interestOut.innerText = formatMoney(last.interest);
        if (finalOut) finalOut.innerText = formatMoney(last.total);

        // Chart Logic
        const labels = data.map((d) => `A√±o ${d.year}`);
        const investedData = data.map((d) => d.invested);
        const interestData = data.map((d) => d.interest); // Stacked approach: Interest on top of Invested? No, Chart.js stacked bar or area.
        // Let's do stacked area chart. Total = Invested + Interest.
        // So Dataset 1 = Invested, Dataset 2 = Interest. Stacked: true.

        if (chart) {
            chart.data.labels = labels;
            chart.data.datasets[0].data = investedData;
            chart.data.datasets[1].data = interestData;
            chart.update();
        } else {
            chart = new Chart(ctx, {
                type: "line",
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: "Tu Dinero (Principal)",
                            data: investedData,
                            borderColor: "#94a3b8", // slate-400
                            backgroundColor: "rgba(148, 163, 184, 0.2)", // slate-400 transparent
                            fill: true,
                            tension: 0.4,
                            pointRadius: 0,
                            pointHoverRadius: 6,
                        },
                        {
                            label: "Intereses Generados",
                            data: interestData,
                            borderColor: "#10b981", // emerald-500
                            backgroundColor: "rgba(16, 185, 129, 0.2)", // emerald-500 transparent
                            fill: true,
                            tension: 0.4,
                            pointRadius: 0,
                            pointHoverRadius: 6,
                        },
                    ],
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: "index",
                        intersect: false,
                    },
                    plugins: {
                        legend: { position: "bottom" },
                        tooltip: {
                            callbacks: {
                                label: function (context) {
                                    let label = context.dataset.label || "";
                                    if (label) {
                                        label += ": ";
                                    }
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat("es-ES", {
                                            style: "currency",
                                            currency: "EUR",
                                            maximumFractionDigits: 0,
                                        }).format(context.parsed.y);
                                    }
                                    return label;
                                },
                            },
                        },
                    },
                    scales: {
                        y: {
                            stacked: true, // Key for stacking areas
                            beginAtZero: true,
                            grid: { color: "rgba(0, 0, 0, 0.05)" },
                            ticks: {
                                callback: function (value) {
                                    return (
                                        new Intl.NumberFormat("es-ES", {
                                            notation: "compact",
                                            compactDisplay: "short",
                                        }).format(Number(value)) + " ‚Ç¨"
                                    );
                                },
                            },
                        },
                        x: {
                            grid: { display: false },
                        },
                    },
                },
            });
        }

        // Find Insight: When does Interest > Annual Contribution?
        // Annual contribution = monthly * 12
        const annualContrib = input.monthlyContribution * 12;
        // In the data, "interest" is cumulative total interest.
        // We need annual interest generated.
        // Approx: (Total Interest year N) - (Total Interest year N-1)

        let crossYear = -1;
        for (let i = 1; i < data.length; i++) {
            const interestYearly = data[i].interest - data[i - 1].interest;
            if (interestYearly > annualContrib) {
                crossYear = data[i].year;
                break;
            }
        }

        if (crossYear > 0 && insightBox) {
            insightBox.innerHTML = `üí° En el a√±o <span class="font-bold text-emerald-600 dark:text-white">${crossYear}</span>, tus intereses generados anuales superar√°n a tus aportaciones. ¬°El dinero ya trabaja m√°s que t√∫!`;
            insightBox.classList.remove("opacity-0");
        } else if (insightBox) {
            insightBox.classList.add("opacity-0");
        }
    };

    [initialEl, monthlyEl, rateEl, yearsEl].forEach((el) => el?.addEventListener("input", update));
    // Small delay to ensure chartjs loads? No, import handles it.
    update();
</script>
