<div
    class="w-full max-w-2xl mx-auto space-y-8 animate-in fade-in slide-in-from-bottom-8 duration-700"
>
    <!-- Password Display -->
    <div class="relative group">
        <div
            class="absolute -inset-1 bg-gradient-to-r from-emerald-500 to-teal-500 rounded-2xl opacity-20 group-hover:opacity-40 blur-lg transition-opacity duration-500"
        >
        </div>
        <div
            class="relative flex items-center bg-white dark:bg-slate-900 rounded-xl border border-slate-200 dark:border-slate-800 p-2 shadow-xl"
        >
            <div
                id="password-output"
                class="flex-1 font-mono text-2xl md:text-3xl font-bold text-center tracking-wider text-slate-800 dark:text-slate-100 break-all px-4 py-6 min-h-[5rem] flex items-center justify-center"
            >
                Generando...
            </div>

            <div class="flex flex-col gap-1 border-l border-slate-100 dark:border-slate-800 pl-2">
                <button
                    id="copy-btn"
                    class="p-3 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg text-slate-400 hover:text-emerald-500 transition-colors"
                    title="Copiar"
                >
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3"
                        ></path></svg
                    >
                </button>
                <button
                    id="regenerate-btn"
                    class="p-3 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-lg text-slate-400 hover:text-blue-500 transition-colors"
                    title="Generar Nueva"
                >
                    <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                        ></path></svg
                    >
                </button>
            </div>
        </div>
    </div>

    <!-- Strength Meter -->
    <div class="space-y-2">
        <div class="flex justify-between text-sm font-medium">
            <span class="text-slate-500 dark:text-slate-400">Seguridad</span>
            <span id="strength-text" class="text-emerald-600 dark:text-emerald-400">Excelente</span>
        </div>
        <div class="h-2 w-full bg-slate-100 dark:bg-slate-800 rounded-full overflow-hidden">
            <div
                id="strength-bar"
                class="h-full bg-gradient-to-r from-red-500 via-yellow-500 to-emerald-500 w-full transition-all duration-500"
            >
            </div>
        </div>
    </div>

    <!-- Controls -->
    <div
        class="bg-white dark:bg-slate-900 rounded-2xl border border-slate-200 dark:border-slate-800 p-6 md:p-8 space-y-8 shadow-sm"
    >
        <!-- Length Slider -->
        <div class="space-y-4">
            <div class="flex justify-between items-center">
                <label
                    for="length-range"
                    class="text-base font-semibold text-slate-700 dark:text-slate-200"
                    >Longitud</label
                >
                <span
                    id="length-val"
                    class="text-2xl font-bold text-blue-600 dark:text-blue-400 font-mono">16</span
                >
            </div>
            <input
                type="range"
                id="length-range"
                min="6"
                max="64"
                value="16"
                class="w-full h-2 bg-slate-200 dark:bg-slate-700 rounded-lg appearance-none cursor-pointer accent-blue-600 dark:accent-blue-500"
            />
        </div>

        <!-- Options Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <!-- Checkbox Component like -->
            <label
                class="flex items-center gap-4 p-4 rounded-xl border border-slate-200 dark:border-slate-800 hover:border-blue-500 dark:hover:border-blue-500 cursor-pointer transition-colors group"
            >
                <div class="relative flex items-center justify-center w-6 h-6">
                    <input
                        type="checkbox"
                        id="uppercase"
                        checked
                        class="peer appearance-none w-6 h-6 border-2 border-slate-300 dark:border-slate-600 rounded-md checked:bg-blue-600 checked:border-blue-600 transition-colors"
                    />
                    <svg
                        class="absolute w-4 h-4 text-white opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="3"
                        stroke-linecap="round"
                        stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg
                    >
                </div>
                <div class="flex flex-col">
                    <span
                        class="font-medium text-slate-700 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
                        >Mayúsculas</span
                    >
                    <span class="text-xs text-slate-500">A-Z</span>
                </div>
            </label>

            <label
                class="flex items-center gap-4 p-4 rounded-xl border border-slate-200 dark:border-slate-800 hover:border-blue-500 dark:hover:border-blue-500 cursor-pointer transition-colors group"
            >
                <div class="relative flex items-center justify-center w-6 h-6">
                    <input
                        type="checkbox"
                        id="lowercase"
                        checked
                        class="peer appearance-none w-6 h-6 border-2 border-slate-300 dark:border-slate-600 rounded-md checked:bg-blue-600 checked:border-blue-600 transition-colors"
                    />
                    <svg
                        class="absolute w-4 h-4 text-white opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="3"
                        stroke-linecap="round"
                        stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg
                    >
                </div>
                <div class="flex flex-col">
                    <span
                        class="font-medium text-slate-700 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
                        >Minúsculas</span
                    >
                    <span class="text-xs text-slate-500">a-z</span>
                </div>
            </label>

            <label
                class="flex items-center gap-4 p-4 rounded-xl border border-slate-200 dark:border-slate-800 hover:border-blue-500 dark:hover:border-blue-500 cursor-pointer transition-colors group"
            >
                <div class="relative flex items-center justify-center w-6 h-6">
                    <input
                        type="checkbox"
                        id="numbers"
                        checked
                        class="peer appearance-none w-6 h-6 border-2 border-slate-300 dark:border-slate-600 rounded-md checked:bg-blue-600 checked:border-blue-600 transition-colors"
                    />
                    <svg
                        class="absolute w-4 h-4 text-white opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="3"
                        stroke-linecap="round"
                        stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg
                    >
                </div>
                <div class="flex flex-col">
                    <span
                        class="font-medium text-slate-700 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
                        >Números</span
                    >
                    <span class="text-xs text-slate-500">0-9</span>
                </div>
            </label>

            <label
                class="flex items-center gap-4 p-4 rounded-xl border border-slate-200 dark:border-slate-800 hover:border-blue-500 dark:hover:border-blue-500 cursor-pointer transition-colors group"
            >
                <div class="relative flex items-center justify-center w-6 h-6">
                    <input
                        type="checkbox"
                        id="symbols"
                        checked
                        class="peer appearance-none w-6 h-6 border-2 border-slate-300 dark:border-slate-600 rounded-md checked:bg-blue-600 checked:border-blue-600 transition-colors"
                    />
                    <svg
                        class="absolute w-4 h-4 text-white opacity-0 peer-checked:opacity-100 transition-opacity pointer-events-none"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="3"
                        stroke-linecap="round"
                        stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg
                    >
                </div>
                <div class="flex flex-col">
                    <span
                        class="font-medium text-slate-700 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
                        >Símbolos</span
                    >
                    <span class="text-xs text-slate-500">!@#$%^&*</span>
                </div>
            </label>
        </div>
    </div>
</div>

<script>
    const output = document.getElementById("password-output");
    const lengthRange = document.getElementById("length-range") as HTMLInputElement;
    const lengthVal = document.getElementById("length-val");
    const copyBtn = document.getElementById("copy-btn");
    const regenerateBtn = document.getElementById("regenerate-btn");
    const strengthBar = document.getElementById("strength-bar");
    const strengthText = document.getElementById("strength-text");

    const options = {
        uppercase: document.getElementById("uppercase") as HTMLInputElement,
        lowercase: document.getElementById("lowercase") as HTMLInputElement,
        numbers: document.getElementById("numbers") as HTMLInputElement,
        symbols: document.getElementById("symbols") as HTMLInputElement,
    };

    const CHARS = {
        uppercase: "ABCDEFGHIJKLMNOPQRSTUVWXYZ",
        lowercase: "abcdefghijklmnopqrstuvwxyz",
        numbers: "0123456789",
        symbols: "!@#$%^&*()_+-=[]{}|;:,.<>?",
    };

    function generatePassword() {
        let charset = "";
        if (options.uppercase.checked) charset += CHARS.uppercase;
        if (options.lowercase.checked) charset += CHARS.lowercase;
        if (options.numbers.checked) charset += CHARS.numbers;
        if (options.symbols.checked) charset += CHARS.symbols;

        // Fallback if nothing checked
        if (charset === "") {
            charset = CHARS.lowercase;
            options.lowercase.checked = true;
        }

        const length = parseInt(lengthRange.value);
        let password = "";
        const array = new Uint32Array(length);
        crypto.getRandomValues(array);

        for (let i = 0; i < length; i++) {
            password += charset[array[i] % charset.length];
        }

        if (output) output.textContent = password;
        updateStrength(password);
    }

    function updateStrength(password: string) {
        // Simple entropy calculation logic
        let score = 0;
        if (password.length > 8) score += 10;
        if (password.length > 12) score += 20;
        if (password.length >= 16) score += 30;
        if (/[A-Z]/.test(password)) score += 10;
        if (/[a-z]/.test(password)) score += 10;
        if (/[0-9]/.test(password)) score += 10;
        if (/[^A-Za-z0-9]/.test(password)) score += 10;

        let width = "20%";
        let color = "bg-red-500";
        let text = "Débil";

        if (score > 90) {
            width = "100%";
            color = "bg-emerald-500";
            text = "Impenetrable";
        } else if (score > 70) {
            width = "80%";
            color = "bg-emerald-400";
            text = "Excelente";
        } else if (score > 50) {
            width = "60%";
            color = "bg-yellow-400";
            text = "Buena";
        } else if (score > 30) {
            width = "40%";
            color = "bg-orange-400";
            text = "Media";
        }

        if (strengthBar) {
            strengthBar.style.width = width;
            // Remove old color classes and add new one.
            // Note: This simple approach assumes only one color class is present or we reset.
            strengthBar.className = `h-full w-full transition-all duration-500 ${color}`;
        }
        if (strengthText) strengthText.textContent = text;
    }

    // Event Listeners
    lengthRange.addEventListener("input", (e) => {
        if (lengthVal) lengthVal.textContent = (e.target as HTMLInputElement).value;
        generatePassword();
    });

    Object.values(options).forEach((opt) => opt.addEventListener("change", generatePassword));
    regenerateBtn?.addEventListener("click", generatePassword);

    copyBtn?.addEventListener("click", () => {
        if (output && output.textContent) {
            navigator.clipboard.writeText(output.textContent);

            // Visual feedback
            const originalIcon = copyBtn.innerHTML;
            copyBtn.innerHTML = `<svg class="w-6 h-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>`;
            setTimeout(() => {
                copyBtn.innerHTML = originalIcon;
            }, 1000);
        }
    });

    // Initial run
    generatePassword();
</script>
