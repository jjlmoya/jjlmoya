---
interface Props {
    items: Array<{
        question: string;
        answer: string;
    }>;
}

const { items } = Astro.props;
---

<section class="max-w-3xl mx-auto mt-16 mb-12">
    <h2 class="text-3xl font-bold text-slate-900 dark:text-white mb-8">Preguntas Frecuentes</h2>
    <div class="space-y-6">
        {
            items.map((item) => (
                <details class="group bg-white dark:bg-slate-800/50 rounded-2xl border border-slate-200 dark:border-slate-700 overflow-hidden transition-all hover:shadow-md">
                    <summary class="cursor-pointer px-6 py-4 font-semibold text-lg text-slate-900 dark:text-white list-none flex items-center justify-between group-open:border-b group-open:border-slate-200 dark:group-open:border-slate-700">
                        <span>{item.question}</span>
                        <svg
                            class="w-5 h-5 text-slate-400 transition-transform group-open:rotate-180"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 9l-7 7-7-7"
                            />
                        </svg>
                    </summary>
                    <div class="px-6 py-4 text-slate-600 dark:text-slate-300 leading-relaxed">
                        {item.answer}
                    </div>
                </details>
            ))
        }
    </div>
</section>
