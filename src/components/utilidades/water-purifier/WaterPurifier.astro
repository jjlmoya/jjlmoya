---
import { Icon } from "astro-icon/components";
---

<section class="max-w-4xl mx-auto px-4 relative">
    <div
        id="disclaimer-modal"
        class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/80 backdrop-blur-sm"
    >
        <div
            class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl max-w-md w-full p-8 border border-red-100 dark:border-red-900/50"
        >
            <div
                class="w-16 h-16 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mx-auto mb-6 text-red-600 dark:text-red-400"
            >
                <Icon name="mdi:alert-octagon" class="w-8 h-8" />
            </div>
            <h3 class="text-2xl font-bold text-center text-gray-900 dark:text-white mb-4">
                ADVERTENCIA CRÍTICA
            </h3>
            <p class="text-gray-600 dark:text-gray-300 text-center mb-8 leading-relaxed">
                Esta herramienta calcula dosis para <strong class="text-gray-900 dark:text-white"
                    >LEJÍA COMÚN (Hipoclorito de Sodio al 5-6%)</strong
                >.
                <br /><br />
                Nunca utilices lejía con perfumes, jabones, ni la etiqueta "No salpica". Solo lejía pura
                apta para desinfección.
            </p>
            <button
                id="accept-disclaimer"
                class="w-full py-3.5 px-6 rounded-xl bg-red-600 hover:bg-red-700 text-white font-bold text-lg shadow-lg shadow-red-500/30 transition-all hover:scale-[1.02] active:scale-[0.98]"
            >
                Entiendo y Acepto
            </button>
        </div>
    </div>

    <div class="grid md:grid-cols-2 gap-8 mb-12">
        <div
            class="bg-white dark:bg-gray-800 rounded-2xl shadow-xl border border-gray-100 dark:border-gray-700 p-6 md:p-8"
        >
            <div class="flex items-center gap-3 mb-8">
                <div
                    class="p-2.5 bg-cyan-50 dark:bg-cyan-900/30 rounded-xl text-cyan-600 dark:text-cyan-400"
                >
                    <Icon name="mdi:water-plus" class="w-6 h-6" />
                </div>
                <h2 class="text-xl font-bold text-gray-900 dark:text-white">Parámetros del Agua</h2>
            </div>

            <div class="space-y-8">
                <div>
                    <span class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-3"
                        >Estado del Agua</span
                    >
                    <div class="grid grid-cols-2 gap-4">
                        <label class="relative cursor-pointer group">
                            <input
                                type="radio"
                                name="condition"
                                value="clear"
                                checked
                                class="peer sr-only"
                            />
                            <div
                                class="p-4 rounded-xl border-2 border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50 peer-checked:border-cyan-500 peer-checked:bg-cyan-50 dark:peer-checked:bg-cyan-900/20 transition-all text-center"
                            >
                                <Icon
                                    name="mdi:water"
                                    class="w-8 h-8 mx-auto mb-2 text-gray-400 peer-checked:text-cyan-600 dark:peer-checked:text-cyan-400 transition-colors"
                                />
                                <span
                                    class="block text-sm font-medium text-gray-500 peer-checked:text-cyan-700 dark:peer-checked:text-cyan-300"
                                    >Clara / Tibia</span
                                >
                            </div>
                        </label>

                        <label class="relative cursor-pointer group">
                            <input
                                type="radio"
                                name="condition"
                                value="cloudy"
                                class="peer sr-only"
                            />
                            <div
                                class="p-4 rounded-xl border-2 border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50 peer-checked:border-blue-500 peer-checked:bg-blue-50 dark:peer-checked:bg-blue-900/20 transition-all text-center"
                            >
                                <Icon
                                    name="mdi:weather-cloudy"
                                    class="w-8 h-8 mx-auto mb-2 text-gray-400 peer-checked:text-blue-600 dark:peer-checked:text-blue-400 transition-colors"
                                />
                                <span
                                    class="block text-sm font-medium text-gray-500 peer-checked:text-blue-700 dark:peer-checked:text-blue-300"
                                    >Turbia / Fría</span
                                >
                            </div>
                        </label>
                    </div>
                </div>

                <div>
                    <label
                        for="liters"
                        class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2"
                    >
                        Cantidad de Agua (Litros)
                    </label>
                    <div class="relative">
                        <input
                            type="number"
                            id="liters"
                            value="1"
                            min="0.1"
                            step="0.1"
                            class="block w-full rounded-xl border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-900/50 p-4 text-lg font-bold text-gray-900 dark:text-white focus:border-cyan-500 focus:ring-cyan-500 transition-all"
                        />
                        <span
                            class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 font-medium"
                            >L</span
                        >
                    </div>
                </div>
            </div>
        </div>

        <div
            class="bg-cyan-600 rounded-2xl shadow-xl overflow-hidden relative flex flex-col items-center justify-center p-8 text-white"
        >
            <div class="absolute inset-0 opacity-10 mix-blend-overlay"></div>

            <div class="relative w-24 h-40 mb-8">
                <div class="absolute top-0 left-1/2 -translate-x-1/2 w-8 h-20 text-white/90">
                    <Icon name="mdi:eyedropper" class="w-full h-full rotate-180" />
                </div>

                <div
                    id="drop-anim"
                    class="hidden absolute top-16 left-1/2 -translate-x-1/2 w-4 h-4 bg-white rounded-full rounded-tl-none -rotate-45 shadow-[0_0_10px_rgba(255,255,255,0.5)]"
                >
                </div>

                <div class="absolute bottom-0 w-full h-2 bg-white/20 rounded-full blur-sm"></div>
            </div>

            <div class="text-center relative z-10">
                <p class="text-cyan-100 text-sm font-medium uppercase tracking-wider mb-2">
                    Dosis Recomendada
                </p>
                <div class="flex items-baseline justify-center gap-2 mb-2">
                    <span id="result-drops" class="text-6xl font-black tracking-tighter">2</span>
                    <span class="text-xl font-bold opacity-80">gotas</span>
                </div>
                <p id="result-ml" class="text-cyan-100 text-sm opacity-80 mb-6">~ 0.1 ml</p>

                <div class="bg-black/20 rounded-lg p-4 text-sm leading-relaxed backdrop-blur-sm">
                    <div class="flex items-center justify-center gap-2 mb-1 font-bold">
                        <Icon name="mdi:clock-outline" class="w-4 h-4" />
                        <span>Tiempo de Espera</span>
                    </div>
                    Debes esperar <strong class="text-white">30 minutos</strong> antes de beber.
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    const modal = document.getElementById("disclaimer-modal");
    const acceptBtn = document.getElementById("accept-disclaimer");
    const litersInput = document.getElementById("liters") as HTMLInputElement;
    const conditionInputs = document.querySelectorAll('input[name="condition"]');
    const resultDrops = document.getElementById("result-drops");
    const resultMl = document.getElementById("result-ml");
    const dropAnim = document.getElementById("drop-anim");

    const DROPS_PER_ML = 20;
    const BL_CLEAR = 2;
    const BL_CLOUDY = 4;

    const hasAccepted = localStorage.getItem("water-purifier-accepted");
    if (!hasAccepted) {
        if (modal) modal.classList.remove("hidden");
    } else {
        if (modal) modal.classList.add("hidden");
    }

    acceptBtn?.addEventListener("click", () => {
        if (modal) {
            modal.style.opacity = "0";
            setTimeout(() => modal.classList.add("hidden"), 300);
            localStorage.setItem("water-purifier-accepted", "true");
        }
    });

    function calculate() {
        if (!litersInput || !resultDrops || !resultMl) return;

        const liters = parseFloat(litersInput.value) || 0;
        let factor = BL_CLEAR;

        conditionInputs.forEach((input: any) => {
            if (input.checked && input.value === "cloudy") {
                factor = BL_CLOUDY;
            }
        });

        const drops = Math.ceil(liters * factor);
        const ml = drops / DROPS_PER_ML;

        resultDrops.textContent = drops.toString();
        resultMl.textContent = `~ ${ml.toFixed(2)} ml`;

        triggerAnimation();
    }

    function triggerAnimation() {
        if (!dropAnim) return;

        dropAnim.classList.remove("animate-drop");
        dropAnim.classList.add("hidden");

        void dropAnim.offsetWidth;

        dropAnim.classList.remove("hidden");
        dropAnim.classList.add("animate-drop");
    }

    litersInput?.addEventListener("input", calculate);
    conditionInputs.forEach((input) => input.addEventListener("change", calculate));

    calculate();
</script>

<style>
    @keyframes drop {
        0% {
            top: 4rem;
            opacity: 1;
            transform: translateX(-50%) rotate(-45deg) scale(0.5);
        }
        60% {
            top: 8rem;
            opacity: 1;
            transform: translateX(-50%) rotate(-45deg) scale(1);
        }
        90% {
            top: 9rem;
            opacity: 0;
            transform: translateX(-50%) rotate(-45deg) scale(0.2);
        }
        100% {
            opacity: 0;
        }
    }

    .animate-drop {
        animation: drop 1.5s infinite ease-in;
    }
</style>
