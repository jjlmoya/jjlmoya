        <defs>
            <pattern
                id="brick-pattern"
                x="0"
                y="0"
                width="40"
                height="20"
                patternUnits="userSpaceOnUse"
            >
                <rect width="40" height="20" fill="#8b7355"></rect>
                <rect
                    x="0"
                    y="0"
                    width="19"
                    height="9"
                    fill="#a0826d"
                    stroke="#6b5d4f"
                    stroke-width="0.5"></rect>
                <rect
                    x="20"
                    y="0"
                    width="19"
                    height="9"
                    fill="#a0826d"
                    stroke="#6b5d4f"
                    stroke-width="0.5"></rect>
                <rect
                    x="10"
                    y="10"
                    width="19"
                    height="9"
                    fill="#a0826d"
                    stroke="#6b5d4f"
                    stroke-width="0.5"></rect>
            </pattern>
        </defs>

        
        <rect
            x="10"
            y="50"
            width="180"
            height="400"
            fill="url(#brick-pattern)"
            stroke="#333"
            stroke-width="2"></rect>

        
