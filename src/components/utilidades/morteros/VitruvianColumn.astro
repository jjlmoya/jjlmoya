        </g>

        
        <rect x="5" y="375" width="190" height="75" fill="#78716c" stroke="#333" stroke-width="2"
        ></rect>
        <line x1="5" y1="390" x2="195" y2="390" stroke="#333" stroke-width="0.5" opacity="0.3"
        ></line>
        <line x1="5" y1="405" x2="195" y2="405" stroke="#333" stroke-width="0.5" opacity="0.3"
