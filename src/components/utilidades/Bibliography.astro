---
import { Icon } from "astro-icon/components";

interface Link {
    name: string;
    url: string;
}

interface Props {
    links: Link[];
    title?: string;
}

const { links = [], title = "Referencias Bibliogr√°ficas" } = Astro.props;
---

<div class="not-prose mt-16 mb-12 animate-in fade-in slide-in-from-bottom-4 duration-700">
    <div
        class="relative rounded-r-lg border-l-4 border-indigo-900 dark:border-indigo-500 bg-slate-50 dark:bg-slate-900/30 p-6 md:p-8"
    >
        <div
            class="flex items-center gap-3 mb-6 pb-4 border-b border-slate-200 dark:border-slate-800"
        >
            <Icon
                name="mdi:format-quote-open"
                class="w-8 h-8 text-indigo-900 dark:text-indigo-400 opacity-20"
            />
            <h3 class="font-serif text-2xl font-bold text-slate-900 dark:text-white tracking-tight">
                {title}
            </h3>
        </div>

        <ul class="space-y-5">
            {
                links.map((link, index) => (
                    <li class="flex gap-4 items-baseline group">
                        <span class="font-mono text-xs text-slate-400 select-none">
                            [{index + 1}]
                        </span>
                        <div class="flex-1">
                            <a
                                href={link.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-base font-medium text-slate-900 dark:text-slate-100 hover:text-indigo-700 dark:hover:text-indigo-400 transition-colors inline-flex items-center gap-2 hover:underline decoration-1 underline-offset-4"
                            >
                                {link.name}
                                <Icon
                                    name="mdi:open-in-new"
                                    class="w-3 h-3 opacity-30 group-hover:opacity-100 transition-opacity"
                                />
                            </a>
                            <p class="text-xs text-slate-500 dark:text-slate-500 mt-1 font-mono break-all leading-relaxed">
                                {link.url}
                            </p>
                        </div>
                    </li>
                ))
            }
        </ul>
    </div>
</div>
