---
import { Icon } from "astro-icon/components";

interface Props {
    android?: string;
    ios?: string;
}

const { android, ios } = Astro.props;

if (!android && !ios) {
    return null;
}
---

<div
    class="w-full bg-gradient-to-r from-slate-900 to-slate-800 text-white py-3 px-4 shadow-lg mb-8 rounded-xl overflow-hidden relative group"
>
    <div
        class="absolute top-0 left-0 w-full h-full bg-white/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"
    >
    </div>

    <div
        class="max-w-4xl mx-auto flex flex-col sm:flex-row items-center justify-between gap-4 relative z-10"
    >
        <div class="flex items-center gap-3">
            <div class="p-2 bg-white/10 rounded-lg backdrop-blur-sm">
                <Icon name="mdi:cellphone" class="w-6 h-6 text-emerald-400" />
            </div>
            <div class="text-center sm:text-left">
                <h3 class="font-bold text-sm sm:text-base text-slate-100">
                    ¿Prefieres la versión App?
                </h3>
                <p class="text-xs text-slate-400">
                    Disfruta de una experiencia nativa, sin conexión y con más funciones.
                </p>
            </div>
        </div>

        <div class="flex items-center gap-3">
            {
                android && (
                    <a
                        href={android}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-2 px-4 py-2 bg-emerald-600 hover:bg-emerald-500 text-white rounded-lg transition-all duration-300 shadow-lg shadow-emerald-900/20 hover:scale-105 hover:shadow-emerald-900/40 text-xs sm:text-sm font-medium group/btn"
                    >
                        <Icon
                            name="mdi:google-play"
                            class="w-5 h-5 group-hover/btn:animate-bounce"
                        />
                        <span>Google Play</span>
                    </a>
                )
            }
            {
                ios && (
                    <a
                        href={ios}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex items-center gap-2 px-4 py-2 bg-slate-100 hover:bg-white text-slate-900 rounded-lg transition-all duration-300 shadow-lg shadow-white/10 hover:scale-105 hover:shadow-white/20 text-xs sm:text-sm font-medium"
                    >
                        <Icon name="mdi:apple" class="w-5 h-5" />
                        <span>App Store</span>
                    </a>
                )
            }
            {
                !ios && (
                    <button
                        disabled
                        class="flex items-center gap-2 px-4 py-2 bg-slate-700/50 text-slate-500 rounded-lg cursor-not-allowed text-xs sm:text-sm font-medium border border-slate-700"
                        title="Próximamente en iOS"
                    >
                        <Icon name="mdi:apple" class="w-5 h-5 opacity-50" />
                        <span>Próximamente</span>
                    </button>
                )
            }
        </div>
    </div>
</div>
