---
import { Icon } from "astro-icon/components";
---

<div
    class="digestion-container p-8 md:p-12 rounded-[3rem] bg-zinc-950 border border-white/5 shadow-2xl overflow-hidden relative"
>
    <div
        class="absolute -top-24 -left-24 w-64 h-64 bg-emerald-500/5 rounded-full blur-[100px] pointer-events-none"
    >
    </div>
    <div
        class="absolute -bottom-24 -right-24 w-64 h-64 bg-cyan-500/5 rounded-full blur-[100px] pointer-events-none"
    >
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 relative z-10">
        <div class="space-y-10">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <label
                        class="block text-[10px] font-black uppercase tracking-[0.2em] text-zinc-600"
                        >Día de la Ingesta</label
                    >
                    <div class="flex p-1 bg-zinc-900 rounded-2xl border border-white/5">
                        <button
                            class="flex-1 py-3 rounded-xl text-sm font-bold transition-all day-btn active"
                            data-offset="0">Hoy</button
                        >
                        <button
                            class="flex-1 py-3 rounded-xl text-sm font-bold transition-all day-btn"
                            data-offset="1">Ayer</button
                        >
                    </div>
                </div>

                <div class="space-y-4">
                    <label
                        class="block text-[10px] font-black uppercase tracking-[0.2em] text-zinc-600"
                        >Hora Exacta</label
                    >
                    <div class="relative group">
                        <input
                            type="time"
                            id="ingestion-hour"
                            class="w-full bg-zinc-900 border border-white/5 rounded-2xl px-5 py-3 text-xl font-mono text-white focus:outline-none focus:ring-2 focus:ring-emerald-500/40 transition-all appearance-none"
                        />
                        <Icon
                            name="mdi:clock-outline"
                            class="absolute right-5 top-1/2 -translate-y-1/2 text-zinc-700 w-5 h-5 pointer-events-none"
                        />
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <label class="block text-[10px] font-black uppercase tracking-[0.2em] text-zinc-600"
                    >Composición Nutricional</label
                >
                <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
                    <button class="macro-btn group" data-type="liquid">
                        <div
                            class="w-10 h-10 rounded-full bg-zinc-900 border border-white/5 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                        >
                            <Icon name="mdi:water" class="w-5 h-5 text-cyan-400" />
                        </div>
                        <span
                            class="text-xs font-bold text-zinc-500 group-[.active]:text-white transition-colors"
                            >Líquidos</span
                        >
                    </button>
                    <button class="macro-btn group" data-type="carbs">
                        <div
                            class="w-10 h-10 rounded-full bg-zinc-900 border border-white/5 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                        >
                            <Icon name="mdi:bread-slice" class="w-5 h-5 text-amber-400" />
                        </div>
                        <span
                            class="text-xs font-bold text-zinc-500 group-[.active]:text-white transition-colors"
                            >Carbs</span
                        >
                    </button>
                    <button class="macro-btn group" data-type="protein">
                        <div
                            class="w-10 h-10 rounded-full bg-zinc-900 border border-white/5 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                        >
                            <Icon name="mdi:food-steak" class="w-5 h-5 text-rose-400" />
                        </div>
                        <span
                            class="text-xs font-bold text-zinc-500 group-[.active]:text-white transition-colors"
                            >Proteína</span
                        >
                    </button>
                    <button class="macro-btn group" data-type="fat">
                        <div
                            class="w-10 h-10 rounded-full bg-zinc-900 border border-white/5 flex items-center justify-center mb-2 group-hover:scale-110 transition-transform"
                        >
                            <Icon name="mdi:cheese" class="w-5 h-5 text-yellow-400" />
                        </div>
                        <span
                            class="text-xs font-bold text-zinc-500 group-[.active]:text-white transition-colors"
                            >Grasas</span
                        >
                    </button>
                </div>
            </div>
        </div>

        <div class="bg-zinc-900/40 rounded-[2.5rem] border border-white/5 p-8 md:p-12 space-y-12">
            <h3
                class="text-sm font-black uppercase tracking-widest text-zinc-500 flex items-center gap-3"
            >
                <Icon name="mdi:pulse" class="text-emerald-500 animate-pulse" />
                Estado del Tránsito
            </h3>

            <div class="space-y-10">
                <div
                    class="stage-entry opacity-40 transition-all duration-700"
                    data-stage="stomach"
                >
                    <div class="flex justify-between items-center mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-2 h-2 rounded-full bg-rose-500"></div>
                            <span class="text-sm font-bold text-white uppercase tracking-wider"
                                >Estómago</span
                            >
                        </div>
                        <span
                            class="text-[10px] font-mono text-zinc-500 bg-white/5 px-2 py-0.5 rounded"
                            >pH 2.0</span
                        >
                    </div>
                    <div class="w-full h-1.5 bg-white/5 rounded-full overflow-hidden">
                        <div
                            class="h-full bg-rose-500 progress-bar shadow-[0_0_10px_rgba(244,63,94,0.4)]"
                            style="width: 0%"
                        >
                        </div>
                    </div>
                    <p class="status-label text-[11px] text-zinc-500 mt-3 font-medium italic"></p>
                </div>

                <div
                    class="stage-entry opacity-40 transition-all duration-700"
                    data-stage="small_intestine"
                >
                    <div class="flex justify-between items-center mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-2 h-2 rounded-full bg-cyan-500"></div>
                            <span class="text-sm font-bold text-white uppercase tracking-wider"
                                >Intestino Delgado</span
                            >
                        </div>
                        <span
                            class="text-[10px] font-mono text-zinc-500 bg-white/5 px-2 py-0.5 rounded"
                            >pH 6.5</span
                        >
                    </div>
                    <div class="w-full h-1.5 bg-white/5 rounded-full overflow-hidden">
                        <div
                            class="h-full bg-cyan-500 progress-bar shadow-[0_0_10px_rgba(6,182,212,0.4)]"
                            style="width: 0%"
                        >
                        </div>
                    </div>
                    <p class="status-label text-[11px] text-zinc-500 mt-3 font-medium italic"></p>
                </div>

                <div
                    class="stage-entry opacity-40 transition-all duration-700"
                    data-stage="large_intestine"
                >
                    <div class="flex justify-between items-center mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-2 h-2 rounded-full bg-emerald-500"></div>
                            <span class="text-sm font-bold text-white uppercase tracking-wider"
                                >Intestino Grueso</span
                            >
                        </div>
                        <span
                            class="text-[10px] font-mono text-zinc-500 bg-white/5 px-2 py-0.5 rounded"
                            >pH 6.0</span
                        >
                    </div>
                    <div class="w-full h-1.5 bg-white/5 rounded-full overflow-hidden">
                        <div
                            class="h-full bg-emerald-500 progress-bar shadow-[0_0_10px_rgba(16,185,129,0.4)]"
                            style="width: 0%"
                        >
                        </div>
                    </div>
                    <p class="status-label text-[11px] text-zinc-500 mt-3 font-medium italic"></p>
                </div>
            </div>
        </div>
    </div>

    <style>
        .day-btn {
            color: rgb(113, 113, 122);
        }
        .day-btn.active {
            background-color: white;
            color: black;
            box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);
        }
        .macro-btn {
            @apply flex flex-col items-center transition-all;
        }
        .macro-btn.active {
            background-color: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.2);
            box-shadow: 0 0 30px rgba(52, 211, 153, 0.1);
            border-radius: 1.5rem;
        }
        .macro-btn.active div {
            background-color: rgb(52, 211, 153);
            border-color: rgb(52, 211, 153);
            box-shadow: 0 0 20px rgba(52, 211, 153, 0.4);
            transform: scale(1.15);
        }
        .macro-btn.active span {
            color: white !important;
            font-weight: 900;
        }
        .macro-btn.active div :global(svg) {
            color: black !important;
        }
        #ingestion-hour::-webkit-calendar-picker-indicator {
            filter: invert(1);
            cursor: pointer;
            opacity: 0;
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
        }
    </style>

    <script>
        import {
            DigestionCalculator,
            type MacronutrientType,
        } from "../../../lib/utilidades/digestion-stopwatch/Digestion";

        const calculator = new DigestionCalculator();
        const hourInput = document.getElementById("ingestion-hour") as HTMLInputElement;
        const dayButtons = document.querySelectorAll(".day-btn");
        const macroButtons = document.querySelectorAll(".macro-btn");
        const stagesUI = document.querySelectorAll(".stage-entry");

        const now = new Date();
        hourInput.value = `${String(now.getHours()).padStart(2, "0")}:${String(now.getMinutes()).padStart(2, "0")}`;

        let selectedDayOffset = 0;
        let selectedMacros: MacronutrientType[] = [];

        const updateUI = () => {
            const [hours, minutes] = hourInput.value.split(":").map(Number);
            const ingestionDate = new Date();
            ingestionDate.setDate(ingestionDate.getDate() - selectedDayOffset);
            ingestionDate.setHours(hours, minutes, 0, 0);

            if (isNaN(ingestionDate.getTime())) return;

            const stages = calculator.calculateStages(ingestionDate, selectedMacros);

            stages.forEach((stage, index) => {
                const entry = stagesUI[index] as HTMLElement;
                if (entry) {
                    const bar = entry.querySelector(".progress-bar") as HTMLElement;
                    const label = entry.querySelector(".status-label") as HTMLElement;

                    bar.style.width = `${stage.percentage}%`;
                    label.textContent = stage.description;

                    if (stage.percentage > 0 && stage.percentage < 100) {
                        entry.classList.remove("opacity-40", "grayscale");
                        entry.classList.add("opacity-100", "scale-[1.03]");
                    } else if (stage.percentage === 0) {
                        entry.classList.remove("opacity-100", "scale-[1.03]");
                        entry.classList.add("opacity-40", "grayscale");
                    } else {
                        entry.classList.remove("scale-[1.03]", "opacity-40");
                        entry.classList.add("opacity-100", "grayscale");
                    }
                }
            });
        };

        dayButtons.forEach((btn) => {
            btn.addEventListener("click", () => {
                dayButtons.forEach((b) => b.classList.remove("active"));
                btn.classList.add("active");
                selectedDayOffset = parseInt(btn.getAttribute("data-offset") || "0");
                updateUI();
            });
        });

        macroButtons.forEach((btn) => {
            btn.addEventListener("click", () => {
                const type = btn.getAttribute("data-type") as MacronutrientType;
                if (btn.classList.contains("active")) {
                    btn.classList.remove("active");
                    selectedMacros = selectedMacros.filter((m) => m !== type);
                } else {
                    btn.classList.add("active");
                    selectedMacros.push(type);
                }
                updateUI();
            });
        });

        hourInput.addEventListener("input", updateUI);

        updateUI();
        setInterval(updateUI, 60000);
    </script>
</div>
