<script>
    console.log("BeadPatternGenerator script started");

    const SYMBOLS = "123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ".split("");

    function simpleQuantize(imageData: ImageData, colorCount: number): number[][] {
        const pixels = imageData.data;
        const pixelArray: number[][] = [];

        for (let i = 0; i < pixels.length; i += 4 * 10) {
            if (pixels[i + 3] > 128) {
                pixelArray.push([pixels[i], pixels[i + 1], pixels[i + 2]]);
            }
        }

        if (pixelArray.length === 0) return [];

        const centers: number[][] = [];
        for (let i = 0; i < colorCount; i++) {
            centers.push(pixelArray[Math.floor(Math.random() * pixelArray.length)]);
        }

        for (let iter = 0; iter < 5; iter++) {
            const clusters: number[][][] = Array(colorCount)
                .fill(null)
                .map(() => []);

            for (const p of pixelArray) {
                let minDist = Infinity;
                let idx = 0;
                for (let c = 0; c < centers.length; c++) {
                    const d =
                        (p[0] - centers[c][0]) ** 2 +
                        (p[1] - centers[c][1]) ** 2 +
                        (p[2] - centers[c][2]) ** 2;
                    if (d < minDist) {
                        minDist = d;
                        idx = c;
                    }
                }
                clusters[idx].push(p);
            }

            for (let c = 0; c < colorCount; c++) {
                if (clusters[c].length > 0) {
                    let r = 0,
                        g = 0,
                        b = 0;
                    for (const p of clusters[c]) {
                        r += p[0];
                        g += p[1];
                        b += p[2];
                    }
                    centers[c] = [
                        Math.floor(r / clusters[c].length),
                        Math.floor(g / clusters[c].length),
                        Math.floor(b / clusters[c].length),
                    ];
                }
            }
        }
        return centers;
    }

    function findClosestColorIndex(r: number, g: number, b: number, palette: number[][]): number {
        let minDist = Infinity;
        let closestIdx = 0;
        for (let i = 0; i < palette.length; i++) {
            const c = palette[i];
            const d = (r - c[0]) ** 2 + (g - c[1]) ** 2 + (b - c[2]) ** 2;
            if (d < minDist) {
                minDist = d;
                closestIdx = i;
            }
        }
        return closestIdx;
    }

    const dropZone = document.getElementById("drop-zone") as HTMLDivElement;
    const imageInput = document.getElementById("image-upload") as HTMLInputElement;
    const resultArea = document.getElementById("result-area") as HTMLDivElement;
    const reuploadBtn = document.getElementById("reupload-btn") as HTMLButtonElement;

    const gridWidthInput = document.getElementById("grid-width") as HTMLInputElement;
    const gridWidthValue = document.getElementById("grid-width-value") as HTMLSpanElement;
    const colorCountInput = document.getElementById("color-count") as HTMLInputElement;
    const colorCountValue = document.getElementById("color-count-value") as HTMLSpanElement;

    const rulersToggle = document.getElementById("show-rulers") as HTMLInputElement;
    const symbolsToggle = document.getElementById("show-symbols") as HTMLInputElement;

    const downloadBtn = document.getElementById("download-btn") as HTMLButtonElement;

    const patternCanvas = document.getElementById("pattern-canvas") as HTMLCanvasElement;
    const paletteGrid = document.getElementById("palette-grid") as HTMLDivElement;

    const focusPrevBtn = document.getElementById("focus-prev") as HTMLButtonElement;
    const focusNextBtn = document.getElementById("focus-next") as HTMLButtonElement;
    const focusDisplay = document.getElementById("focus-row-display") as HTMLSpanElement;

    let currentImage: HTMLImageElement | null = null;
    let currentFileName = "patron";
    let currentRow = -1;
    let totalRows = 0;

    interface LastData {
        grid: number[];
        palette: number[][];
        cols: number;
        rows: number;
    }
    let lastData: LastData = { grid: [], palette: [], cols: 0, rows: 0 };
    let debounceTimer: ReturnType<typeof setTimeout>;

    if (dropZone) {
        const h3 = dropZone.querySelector("h3");
        if (h3) h3.textContent = "Carga tu Visión (Listo)";
    }

    if (imageInput) {
        imageInput.addEventListener("change", (e) => {
            console.log("Image input changed");
            const target = e.target as HTMLInputElement;
            if (target.files && target.files.length) {
                handleFile(target.files[0]);
            }
        });
    }

    if (dropZone) {
        ["dragover", "dragenter"].forEach((evt) => {
            dropZone.addEventListener(evt, (e) => {
                e.preventDefault();
                dropZone.classList.add("border-pink-500", "scale-[1.02]");
            });
        });

        ["dragleave", "drop"].forEach((evt) => {
            dropZone.addEventListener(evt, (e) => {
                e.preventDefault();
                dropZone.classList.remove("border-pink-500", "scale-[1.02]");
            });
        });

        dropZone.addEventListener("drop", (e) => {
            if (e.dataTransfer && e.dataTransfer.files.length) {
                handleFile(e.dataTransfer.files[0]);
            }
        });
    }

    if (reuploadBtn) {
        reuploadBtn.addEventListener("click", () => {
            showUploadState();
        });
    }

    function showUploadState() {
        if (dropZone) dropZone.classList.remove("hidden");
        if (resultArea) resultArea.classList.add("hidden");
        currentImage = null;
        if (downloadBtn) downloadBtn.disabled = true;

        if (imageInput) imageInput.value = "";
    }

    function showResultState() {
        if (dropZone) dropZone.classList.add("hidden");
        if (resultArea) resultArea.classList.remove("hidden");
    }

    function handleFile(file: File) {
        console.log("Handling file:", file.name);
        currentFileName = file.name.split(".").slice(0, -1).join(".") || "patron";

        const reader = new FileReader();
        reader.onload = (e) => {
            if (e.target && e.target.result) {
                const img = new Image();
                img.onload = () => {
                    console.log("Image loaded");
                    currentImage = img;
                    showResultState();
                    generatePattern();
                };
                img.src = e.target.result as string;
            }
        };
        reader.readAsDataURL(file);
    }

    if (gridWidthInput) {
        gridWidthInput.addEventListener("input", (e) => {
            const target = e.target as HTMLInputElement;
            if (gridWidthValue) gridWidthValue.textContent = target.value;
            debounceGenerate();
        });
    }

    if (colorCountInput) {
        colorCountInput.addEventListener("input", (e) => {
            const target = e.target as HTMLInputElement;
            if (colorCountValue) colorCountValue.textContent = target.value;
            debounceGenerate();
        });
    }

    if (rulersToggle) {
        rulersToggle.addEventListener("change", () => {
            drawGrid();
        });
    }

    if (symbolsToggle) {
        symbolsToggle.addEventListener("change", () => {
            drawGrid();
        });
    }

    function debounceGenerate() {
        if (debounceTimer) clearTimeout(debounceTimer);
        debounceTimer = setTimeout(() => {
            generatePattern();
        }, 300);
    }

    function generatePattern() {
        if (!currentImage || !patternCanvas) return;

        const width = parseInt(gridWidthInput?.value || "40");
        const colors = parseInt(colorCountInput?.value || "12");

        const ratio = currentImage.height / currentImage.width;
        const height = Math.round(width * ratio);
        totalRows = height;

        const tempCanvas = document.createElement("canvas");
        tempCanvas.width = width;
        tempCanvas.height = height;
        const ctx = tempCanvas.getContext("2d");
        if (!ctx) return;

        ctx.drawImage(currentImage, 0, 0, width, height);
        const imageData = ctx.getImageData(0, 0, width, height);

        const palette = simpleQuantize(imageData, colors);
        if (palette.length === 0) return;

        const grid: number[] = [];
        for (let i = 0; i < imageData.data.length; i += 4) {
            const r = imageData.data[i];
            const g = imageData.data[i + 1];
            const b = imageData.data[i + 2];
            grid.push(findClosestColorIndex(r, g, b, palette));
        }

        lastData = { grid, palette, cols: width, rows: height };
        currentRow = -1;
        updateFocusDisplay();

        drawGrid();
        displayPalette(palette);

        patternCanvas.dataset.ready = "true";
        if (downloadBtn) downloadBtn.disabled = false;
    }

    function drawGrid() {
        if (!patternCanvas) return;
        const { grid, cols, rows, palette } = lastData;
        if (!grid || grid.length === 0) return;

        const beadSize = 25;
        const gap = 2;
        const showRulers = rulersToggle?.checked || false;
        const showSymbols = symbolsToggle?.checked || false;

        const rulerSize = showRulers ? 25 : 0;
        const leftPadding = rulerSize;
        const topPadding = rulerSize;

        patternCanvas.width = cols * (beadSize + gap) + gap + leftPadding;
        patternCanvas.height = rows * (beadSize + gap) + gap + topPadding;

        const ctx = patternCanvas.getContext("2d");
        if (!ctx) return;

        ctx.fillStyle = "#ffffff";
        ctx.fillRect(0, 0, patternCanvas.width, patternCanvas.height);

        if (showRulers) {
            ctx.fillStyle = "#64748b";
            ctx.font = "10px monospace";
            ctx.textAlign = "center";
            ctx.textBaseline = "middle";

            for (let i = 0; i < cols; i++) {
                if ((i + 1) % 5 === 0 || i === 0) {
                    const px = leftPadding + gap + i * (beadSize + gap) + beadSize / 2;
                    ctx.fillText((i + 1).toString(), px, topPadding / 2);
                }
            }

            for (let j = 0; j < rows; j++) {
                if ((j + 1) % 5 === 0 || j === 0) {
                    const py = topPadding + gap + j * (beadSize + gap) + beadSize / 2;
                    ctx.fillText((j + 1).toString(), leftPadding / 2, py);
                }
            }

            ctx.strokeStyle = "#e2e8f0";
            ctx.lineWidth = 1;
            ctx.beginPath();
            ctx.moveTo(leftPadding, 0);
            ctx.lineTo(leftPadding, patternCanvas.height);
            ctx.moveTo(0, topPadding);
            ctx.lineTo(patternCanvas.width, topPadding);
            ctx.stroke();
        }

        grid.forEach((colorIdx, idx) => {
            const x = idx % cols;
            const y = Math.floor(idx / cols);

            const px = leftPadding + gap + x * (beadSize + gap);
            const py = topPadding + gap + y * (beadSize + gap);

            const color = palette[colorIdx];

            if (showSymbols) {
                ctx.fillStyle = "#ffffff";
                ctx.strokeStyle = "#cbd5e1";
                ctx.lineWidth = 1;
            } else {
                ctx.fillStyle = `rgb(${color[0]}, ${color[1]}, ${color[2]})`;
            }

            ctx.beginPath();
            if ("roundRect" in ctx) {
                (ctx as any).roundRect(px, py, beadSize, beadSize, 4);
            } else {
                (ctx as CanvasRenderingContext2D).rect(px, py, beadSize, beadSize);
            }
            ctx.fill();

            if (showSymbols) {
                ctx.stroke();
            }

            if (showSymbols) {
                const symbol = SYMBOLS[colorIdx % SYMBOLS.length];
                ctx.fillStyle = "#000000";
                ctx.font = "bold 14px sans-serif";
                ctx.textAlign = "center";
                ctx.textBaseline = "middle";
                ctx.fillText(symbol, px + beadSize / 2, py + beadSize / 2 + 1);
            }

            if (currentRow !== -1) {
                if (y === currentRow) {
                    ctx.strokeStyle = "#db2777";
                    ctx.lineWidth = 3;
                    ctx.stroke();
                } else {
                    ctx.fillStyle = "rgba(255,255,255,0.75)";
                    ctx.fillRect(px, py, beadSize, beadSize);
                }
            }
        });
    }

    function displayPalette(palette: number[][]) {
        if (!paletteGrid) return;
        paletteGrid.innerHTML = "";

        palette.forEach((color, idx) => {
            const rgb = `rgb(${color[0]}, ${color[1]}, ${color[2]})`;
            const symbol = SYMBOLS[idx % SYMBOLS.length];

            const wrapper = document.createElement("div");
            wrapper.className = "flex flex-col items-center gap-1";

            const div = document.createElement("div");
            div.className =
                "w-full aspect-square rounded-full shadow-md border-2 border-white dark:border-gray-800 ring-1 ring-gray-200 dark:ring-gray-700 flex items-center justify-center relative group";
            div.style.backgroundColor = rgb;
            div.title = `Color ${idx + 1}: ${rgb}`;

            const span = document.createElement("span");
            const brightness = (color[0] * 299 + color[1] * 587 + color[2] * 114) / 1000;
            span.className = `font-bold font-mono text-sm ${brightness > 128 ? "text-black" : "text-white"} drop-shadow-md select-none`;
            span.textContent = symbol;

            div.appendChild(span);
            wrapper.appendChild(div);
            paletteGrid.appendChild(wrapper);
        });
    }

    if (downloadBtn) {
        downloadBtn.addEventListener("click", async () => {
            if (!patternCanvas || !currentImage) return;

            let JSZip;
            try {
                const module = await import("jszip");
                JSZip = module.default;
            } catch (e) {
                console.warn("Local JSZip failed, trying CDN...", e);
                try {
                    const cdnUrl = "https://cdn.jsdelivr.net/npm/jszip@3.10.1/+esm";
                    const module = await import(cdnUrl);
                    JSZip = module.default;
                } catch (e2) {
                    console.error("All JSZip imports failed", e2);
                    alert(
                        "Error al cargar la librería de compresión. Por favor recarga la página."
                    );
                    return;
                }
            }

            const zip = new JSZip();

            const patternDataUrl = patternCanvas.toDataURL("image/png");
            const patternBlob = await (await fetch(patternDataUrl)).blob();

            const legendCanvas = generateLegendCanvas();
            const legendDataUrl = legendCanvas.toDataURL("image/png");
            const legendBlob = await (await fetch(legendDataUrl)).blob();

            const baseName = currentFileName
                ? `${currentFileName}_patron_jjlmoya`
                : "patron_jjlmoya";

            zip.file(`${baseName}_pattern.png`, patternBlob);
            zip.file(`${baseName}_guia.png`, legendBlob);

            const content = await zip.generateAsync({ type: "blob" });

            const link = document.createElement("a");
            link.href = URL.createObjectURL(content);
            link.download = `${baseName}.zip`;
            link.click();
        });
    }

    function generateLegendCanvas(): HTMLCanvasElement {
        const { palette } = lastData;
        const canvas = document.createElement("canvas");
        const ctx = canvas.getContext("2d");
        if (!ctx) return canvas;

        const rowHeight = 40;
        const padding = 20;
        const headerHeight = 60;
        const width = 400;
        const height = headerHeight + palette.length * rowHeight + padding;

        canvas.width = width;
        canvas.height = height;

        ctx.fillStyle = "#ffffff";
        ctx.fillRect(0, 0, width, height);

        ctx.fillStyle = "#1e293b";
        ctx.font = "bold 20px sans-serif";
        ctx.textAlign = "center";
        ctx.textBaseline = "middle";
        ctx.fillText("Guía Maestra de Ejecución", width / 2, 30);

        ctx.font = "14px sans-serif";
        ctx.fillStyle = "#64748b";
        ctx.fillText(currentFileName || "Sin título", width / 2, 50);

        ctx.textAlign = "left";
        const startY = headerHeight;

        palette.forEach((color, idx) => {
            const y = startY + idx * rowHeight + rowHeight / 2;
            const x = padding;

            const symbol = SYMBOLS[idx % SYMBOLS.length];
            const rgbString = `RGB(${color[0]}, ${color[1]}, ${color[2]})`;

            ctx.fillStyle = `rgb(${color[0]}, ${color[1]}, ${color[2]})`;
            ctx.beginPath();
            if ("roundRect" in ctx) {
                (ctx as any).roundRect(x, startY + idx * rowHeight + 5, 30, 30, 8);
            } else {
                (ctx as CanvasRenderingContext2D).rect(x, startY + idx * rowHeight + 5, 30, 30);
            }
            ctx.fill();
            ctx.strokeStyle = "#e2e8f0";
            ctx.lineWidth = 1;
            ctx.stroke();

            const brightness = (color[0] * 299 + color[1] * 587 + color[2] * 114) / 1000;
            ctx.fillStyle = brightness > 128 ? "#000000" : "#ffffff";
            ctx.font = "bold 16px monospace";
            ctx.textAlign = "center";
            ctx.fillText(symbol, x + 15, y + 2);

            ctx.fillStyle = "#334155";
            ctx.font = "bold 16px sans-serif";
            ctx.textAlign = "left";
            ctx.fillText(`Color ${idx + 1}`, x + 45, y);

            ctx.fillStyle = "#64748b";
            ctx.font = "14px monospace";
            ctx.fillText(rgbString, x + 120, y);
        });

        return canvas;
    }

    function updateFocusDisplay() {
        if (focusDisplay) {
            focusDisplay.textContent = currentRow === -1 ? "--" : (currentRow + 1).toString();
        }
    }

    if (focusPrevBtn) {
        focusPrevBtn.addEventListener("click", () => {
            if (currentRow > -1) currentRow--;
            else currentRow = totalRows - 1;
            updateFocusDisplay();
            drawGrid();
        });
    }

    if (focusNextBtn) {
        focusNextBtn.addEventListener("click", () => {
            if (currentRow < totalRows - 1) currentRow++;
            else currentRow = -1;
            updateFocusDisplay();
            drawGrid();
        });
    }
</script>

