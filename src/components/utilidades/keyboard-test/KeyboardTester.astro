---
import { Icon } from "astro-icon/components";

const keyClass =
    "h-12 bg-white dark:bg-slate-700 rounded-lg flex items-center justify-center font-bold text-[10px] md:text-xs text-slate-600 dark:text-slate-300 shadow-[0_2px_0_0_rgba(0,0,0,0.2)] dark:shadow-[0_2px_0_0_rgba(0,0,0,0.5)] transition-all duration-75 border-t border-white/50 dark:border-white/10 select-none";
const activeClass = "!bg-indigo-500 !text-white !shadow-none translate-y-[2px] !border-indigo-400";
const testedClass =
    "!bg-emerald-100 dark:!bg-emerald-900/30 !text-emerald-600 dark:!text-emerald-400 !border-emerald-200 dark:!border-emerald-800";
---

<div
    id="keyboard-tester-root"
    class="w-full max-w-7xl mx-auto p-4 font-sans text-slate-900 dark:text-slate-100"
    data-active-class={activeClass}
    data-tested-class={testedClass}
>
    <div
        class="bg-white dark:bg-slate-900 rounded-3xl p-8 shadow-xl border border-slate-200 dark:border-slate-800"
    >
        <div
            class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4"
        >
            <div>
                <div
                    class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-indigo-100 dark:bg-indigo-900/30 text-indigo-600 dark:text-indigo-400 text-xs font-bold uppercase tracking-wider mb-2"
                >
                    <Icon name="mdi:keyboard-outline" class="w-4 h-4" />
                    Input Test
                </div>
                <h2 class="text-3xl font-black tracking-tight">Test de Teclado y Ghosting</h2>
                <p class="text-slate-500 dark:text-slate-400">
                    Verifica el N-Key Rollover y detecta teclas fallidas.
                </p>
            </div>

            <div class="flex gap-4">
                <div
                    class="bg-slate-100 dark:bg-slate-800 p-4 rounded-2xl text-center min-w-[120px]"
                >
                    <div class="text-xs font-bold text-slate-500 uppercase tracking-wider">
                        Simultáneas
                    </div>
                    <div
                        class="text-4xl font-black text-indigo-600 dark:text-indigo-400"
                        id="max-kro"
                    >
                        0
                    </div>
                </div>
                <button
                    id="reset-btn"
                    class="p-4 rounded-2xl bg-slate-100 dark:bg-slate-800 hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors text-slate-500"
                >
                    <Icon name="mdi:refresh" class="w-6 h-6" />
                </button>
            </div>
        </div>

        <div class="relative w-full overflow-x-auto pb-4">
            <div
                class="keyboard-base mx-auto bg-slate-200 dark:bg-slate-800 p-2 rounded-xl inline-flex flex-col gap-1 select-none min-w-[900px]"
            >
                <div class="flex gap-1">
                    <div class={`${keyClass} w-12`} data-code="Escape">ESC</div>
                    <div class="w-8"></div>

                    <div class={`${keyClass} w-12`} data-code="F1">F1</div>
                    <div class={`${keyClass} w-12`} data-code="F2">F2</div>
                    <div class={`${keyClass} w-12`} data-code="F3">F3</div>
                    <div class={`${keyClass} w-12`} data-code="F4">F4</div>
                    <div class="w-4"></div>
                    <div class={`${keyClass} w-12`} data-code="F5">F5</div>
                    <div class={`${keyClass} w-12`} data-code="F6">F6</div>
                    <div class={`${keyClass} w-12`} data-code="F7">F7</div>
                    <div class={`${keyClass} w-12`} data-code="F8">F8</div>
                    <div class="w-4"></div>
                    <div class={`${keyClass} w-12`} data-code="F9">F9</div>
                    <div class={`${keyClass} w-12`} data-code="F10">F10</div>
                    <div class={`${keyClass} w-12`} data-code="F11">F11</div>
                    <div class={`${keyClass} w-12`} data-code="F12">F12</div>
                    <div class="w-4"></div>

                    <div class={`${keyClass} w-12`} data-code="PrintScreen">PRT</div>
                    <div class={`${keyClass} w-12`} data-code="ScrollLock">SCR</div>
                    <div class={`${keyClass} w-12`} data-code="Pause">PAU</div>
                </div>

                <div class="flex gap-1 mt-2">
                    <div class={`${keyClass} w-12`} data-code="Backquote">`</div>
                    <div class={`${keyClass} w-12`} data-code="Digit1">1</div>
                    <div class={`${keyClass} w-12`} data-code="Digit2">2</div>
                    <div class={`${keyClass} w-12`} data-code="Digit3">3</div>
                    <div class={`${keyClass} w-12`} data-code="Digit4">4</div>
                    <div class={`${keyClass} w-12`} data-code="Digit5">5</div>
                    <div class={`${keyClass} w-12`} data-code="Digit6">6</div>
                    <div class={`${keyClass} w-12`} data-code="Digit7">7</div>
                    <div class={`${keyClass} w-12`} data-code="Digit8">8</div>
                    <div class={`${keyClass} w-12`} data-code="Digit9">9</div>
                    <div class={`${keyClass} w-12`} data-code="Digit0">0</div>
                    <div class={`${keyClass} w-12`} data-code="Minus">-</div>
                    <div class={`${keyClass} w-12`} data-code="Equal">=</div>
                    <div class={`${keyClass} w-20`} data-code="Backspace">BACK</div>
                    <div class="w-4"></div>
                    <div class={`${keyClass} w-12`} data-code="Insert">INS</div>
                    <div class={`${keyClass} w-12`} data-code="Home">HOM</div>
                    <div class={`${keyClass} w-12`} data-code="PageUp">PGU</div>
                </div>

                <div class="flex gap-1">
                    <div class={`${keyClass} w-16`} data-code="Tab">TAB</div>
                    <div class={`${keyClass} w-12`} data-code="KeyQ">Q</div>
                    <div class={`${keyClass} w-12`} data-code="KeyW">W</div>
                    <div class={`${keyClass} w-12`} data-code="KeyE">E</div>
                    <div class={`${keyClass} w-12`} data-code="KeyR">R</div>
                    <div class={`${keyClass} w-12`} data-code="KeyT">T</div>
                    <div class={`${keyClass} w-12`} data-code="KeyY">Y</div>
                    <div class={`${keyClass} w-12`} data-code="KeyU">U</div>
                    <div class={`${keyClass} w-12`} data-code="KeyI">I</div>
                    <div class={`${keyClass} w-12`} data-code="KeyO">O</div>
                    <div class={`${keyClass} w-12`} data-code="KeyP">P</div>
                    <div class={`${keyClass} w-12`} data-code="BracketLeft">[</div>
                    <div class={`${keyClass} w-12`} data-code="BracketRight">]</div>
                    <div class={`${keyClass} w-16`} data-code="Backslash">\</div>
                    <div class="w-4"></div>
                    <div class={`${keyClass} w-12`} data-code="Delete">DEL</div>
                    <div class={`${keyClass} w-12`} data-code="End">END</div>
                    <div class={`${keyClass} w-12`} data-code="PageDown">PGD</div>
                </div>

                <div class="flex gap-1">
                    <div class={`${keyClass} w-20`} data-code="CapsLock">CAPS</div>
                    <div class={`${keyClass} w-12`} data-code="KeyA">A</div>
                    <div class={`${keyClass} w-12`} data-code="KeyS">S</div>
                    <div class={`${keyClass} w-12`} data-code="KeyD">D</div>
                    <div class={`${keyClass} w-12`} data-code="KeyF">F</div>
                    <div class={`${keyClass} w-12`} data-code="KeyG">G</div>
                    <div class={`${keyClass} w-12`} data-code="KeyH">H</div>
                    <div class={`${keyClass} w-12`} data-code="KeyJ">J</div>
                    <div class={`${keyClass} w-12`} data-code="KeyK">K</div>
                    <div class={`${keyClass} w-12`} data-code="KeyL">L</div>
                    <div class={`${keyClass} w-12`} data-code="Semicolon">;</div>
                    <div class={`${keyClass} w-12`} data-code="Quote">'</div>
                    <div class={`${keyClass} w-24`} data-code="Enter">ENTER</div>
                    <div class="w-[108px]"></div>
                </div>

                <div class="flex gap-1">
                    <div class={`${keyClass} w-24`} data-code="ShiftLeft">SHIFT</div>
                    <div class={`${keyClass} w-12`} data-code="KeyZ">Z</div>
                    <div class={`${keyClass} w-12`} data-code="KeyX">X</div>
                    <div class={`${keyClass} w-12`} data-code="KeyC">C</div>
                    <div class={`${keyClass} w-12`} data-code="KeyV">V</div>
                    <div class={`${keyClass} w-12`} data-code="KeyB">B</div>
                    <div class={`${keyClass} w-12`} data-code="KeyN">N</div>
                    <div class={`${keyClass} w-12`} data-code="KeyM">M</div>
                    <div class={`${keyClass} w-12`} data-code="Comma">,</div>
                    <div class={`${keyClass} w-12`} data-code="Period">.</div>
                    <div class={`${keyClass} w-12`} data-code="Slash">/</div>
                    <div class={`${keyClass} w-32`} data-code="ShiftRight">SHIFT</div>
                    <div class="w-4"></div>
                    <div class="w-12"></div>
                    <div class={`${keyClass} w-12`} data-code="ArrowUp">↑</div>
                    <div class="w-12"></div>
                </div>

                <div class="flex gap-1">
                    <div class={`${keyClass} w-16`} data-code="ControlLeft">CTRL</div>
                    <div class={`${keyClass} w-12`} data-code="MetaLeft">WIN</div>
                    <div class={`${keyClass} w-16`} data-code="AltLeft">ALT</div>
                    <div class={`${keyClass} w-72`} data-code="Space">SPACE</div>
                    <div class={`${keyClass} w-16`} data-code="AltRight">ALT</div>
                    <div class={`${keyClass} w-12`} data-code="MetaRight">WIN</div>
                    <div class={`${keyClass} w-12`} data-code="ContextMenu">CTX</div>
                    <div class={`${keyClass} w-16`} data-code="ControlRight">CTRL</div>
                    <div class="w-4"></div>
                    <div class={`${keyClass} w-12`} data-code="ArrowLeft">←</div>
                    <div class={`${keyClass} w-12`} data-code="ArrowDown">↓</div>
                    <div class={`${keyClass} w-12`} data-code="ArrowRight">→</div>
                </div>
            </div>
        </div>

        <div
            class="mt-8 p-4 rounded-xl bg-slate-50 dark:bg-black/20 border border-slate-100 dark:border-slate-800"
        >
            <div class="flex items-center gap-2 mb-2">
                <Icon name="mdi:history" class="w-4 h-4 text-slate-400" />
                <h3 class="text-xs font-bold uppercase text-slate-500">Log de Eventos</h3>
            </div>
            <div
                id="event-log"
                class="font-mono text-xs text-slate-600 dark:text-slate-400 h-24 overflow-y-auto bg-white dark:bg-slate-900 p-2 rounded border border-slate-200 dark:border-slate-700"
            >
            </div>
        </div>
    </div>
</div>

<script>
    const root = document.getElementById("keyboard-tester-root");
    const activeClass = root?.dataset.activeClass || "";
    const testedClass = root?.dataset.testedClass || "";

    const activeClasses = activeClass.split(" ");
    const testedClasses = testedClass.split(" ");

    const keys = document.querySelectorAll("[data-code]");
    const maxKroDisplay = document.getElementById("max-kro");
    const eventLog = document.getElementById("event-log");
    const resetBtn = document.getElementById("reset-btn");

    const activeKeys = new Set<string>();
    let maxSimultaneous = 0;

    const keyMap = new Map<string, Element>();
    keys.forEach((k) => {
        const code = k.getAttribute("data-code");
        if (code) keyMap.set(code, k);
    });

    function log(msg: string) {
        if (!eventLog) return;
        const div = document.createElement("div");
        div.textContent = `> ${msg}`;
        eventLog.prepend(div);
        if (eventLog.children.length > 20) eventLog.lastElementChild?.remove();
    }

    function handleDown(e: KeyboardEvent) {
        e.preventDefault();
        const code = e.code;

        if (!activeKeys.has(code)) {
            activeKeys.add(code);

            const el = keyMap.get(code) as HTMLElement | undefined;
            if (el) {
                el.classList.add(...activeClasses);
                el.classList.add("is-tested");

                if (!el.dataset.tested) {
                    el.classList.add(...testedClasses);
                    el.dataset.tested = "true";
                }
            } else {
                log(`Tecla desconocida: ${code}`);
            }

            if (activeKeys.size > maxSimultaneous) {
                maxSimultaneous = activeKeys.size;
                if (maxKroDisplay) maxKroDisplay.textContent = maxSimultaneous.toString();
            }
        }
    }

    function handleUp(e: KeyboardEvent) {
        e.preventDefault();
        const code = e.code;
        activeKeys.delete(code);

        const el = keyMap.get(code);
        if (el) {
            el.classList.remove(...activeClasses);
        }
    }

    function reset() {
        activeKeys.clear();
        maxSimultaneous = 0;
        if (maxKroDisplay) maxKroDisplay.textContent = "0";
        if (eventLog) eventLog.innerHTML = "";

        keys.forEach((k) => {
            k.classList.remove(...activeClasses);
            k.classList.remove(...testedClasses);
            (k as HTMLElement).removeAttribute("data-tested");
            k.classList.remove("is-tested");
        });
        log("Test reiniciado.");
    }

    window.addEventListener("keydown", handleDown);
    window.addEventListener("keyup", handleUp);
    resetBtn?.addEventListener("click", reset);

    window.focus();
</script>
