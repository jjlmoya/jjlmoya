---
import { TEXTILE_DATA, STAIN_DATA, CHEMICAL_AGENTS } from "../../../../data/utilities/textiles";
import { Icon } from "astro-icon/components";

const fibers = Object.values(TEXTILE_DATA);
---

<div class="max-w-4xl mx-auto p-4 md:p-8">
    <div
        class="bg-white dark:bg-slate-900 rounded-[3rem] border border-slate-200 dark:border-slate-800 shadow-2xl overflow-hidden transition-all"
    >
        <!-- Input Section -->
        <div
            class="p-8 md:p-12 border-b border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-950/20"
        >
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
                <!-- Selector de Fibra -->
                <div class="space-y-4">
                    <label
                        class="flex items-center gap-2 text-[11px] font-black text-indigo-600 dark:text-indigo-400 uppercase tracking-[0.2em] ml-1"
                    >
                        <Icon name="mdi:tshirt-v-outline" class="text-lg" />
                        1. Fibra de la prenda
                    </label>
                    <div class="relative group">
                        <select
                            id="fiber-select"
                            class="w-full h-16 pl-6 pr-12 bg-white dark:bg-slate-900 border-2 border-slate-200 dark:border-slate-800 rounded-2xl appearance-none focus:border-indigo-500 focus:ring-8 focus:ring-indigo-500/5 transition-all font-bold text-slate-900 dark:text-white outline-none cursor-pointer"
                        >
                            <option value="" disabled selected>Selecciona el tejido...</option>
                            {
                                fibers.map((fiber) => (
                                    <option
                                        value={fiber.id}
                                        data-fiber-type={
                                            fiber.type === "synthetic"
                                                ? "synthetic"
                                                : fiber.isNoble
                                                  ? "delicate"
                                                  : "natural"
                                        }
                                    >
                                        {fiber.name}
                                    </option>
                                ))
                            }
                        </select>
                        <div
                            class="absolute right-5 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none group-hover:text-indigo-500 transition-colors"
                        >
                            <Icon name="mdi:chevron-down" class="text-xl" />
                        </div>
                    </div>
                </div>

                <!-- Selector de Mancha -->
                <div class="space-y-4">
                    <label
                        class="flex items-center gap-2 text-[11px] font-black text-indigo-600 dark:text-indigo-400 uppercase tracking-[0.2em] ml-1"
                    >
                        <Icon name="mdi:shimmer" class="text-lg" />
                        2. Origen de la Mancha
                    </label>
                    <div class="relative group">
                        <select
                            id="stain-select"
                            class="w-full h-16 pl-6 pr-12 bg-white dark:bg-slate-900 border-2 border-slate-200 dark:border-slate-800 rounded-2xl appearance-none focus:border-indigo-500 focus:ring-8 focus:ring-indigo-500/5 transition-all font-bold text-slate-900 dark:text-white outline-none cursor-pointer"
                        >
                            <option value="" disabled selected>¿Qué ha ocurrido?</option>
                            {
                                STAIN_DATA.map((stain) => (
                                    <option value={stain.id}>{stain.name}</option>
                                ))
                            }
                        </select>
                        <div
                            class="absolute right-5 top-1/2 -translate-y-1/2 text-slate-400 pointer-events-none group-hover:text-indigo-500 transition-colors"
                        >
                            <Icon name="mdi:chevron-down" class="text-xl" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Protocolo Resultante -->
        <div
            id="protocol-display"
            class="hidden p-8 md:p-12 animate-in fade-in slide-in-from-bottom-8 duration-700"
        >
            <div
                class="bg-indigo-50 dark:bg-indigo-950/30 rounded-[2.5rem] p-8 md:p-12 border border-indigo-100 dark:border-indigo-900/50"
            >
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-12">
                    <!-- Title Column -->
                    <div
                        class="lg:col-span-12 flex flex-col md:flex-row md:items-center gap-6 pb-8 border-b border-indigo-200/30 dark:border-indigo-800/30"
                    >
                        <div
                            class="w-20 h-20 rounded-3xl bg-indigo-600 text-white flex items-center justify-center text-4xl shadow-2xl shadow-indigo-500/30 shrink-0"
                        >
                            <Icon name="mdi:texture" />
                        </div>
                        <div class="space-y-1">
                            <h3
                                class="text-xs uppercase font-black tracking-[0.4em] text-indigo-500 dark:text-indigo-400 opacity-80"
                            >
                                Protocolo de Rescate
                            </h3>
                            <p
                                class="text-4xl font-black text-slate-900 dark:text-white tracking-tight"
                                id="protocol-title"
                            >
                                Tratamiento
                            </p>
                        </div>
                    </div>

                    <!-- Details Grid -->
                    <div class="lg:col-span-8 grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div class="space-y-3">
                            <div
                                class="flex items-center gap-2 text-indigo-600 dark:text-indigo-400"
                            >
                                <Icon name="mdi:flask-empty-outline" class="text-xl" />
                                <span class="text-[10px] uppercase font-black tracking-widest"
                                    >Agente Reactivo</span
                                >
                            </div>
                            <p
                                class="text-2xl font-black text-slate-900 dark:text-white"
                                id="protocol-agent"
                            >
                                -
                            </p>
                            <p
                                class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed font-medium"
                                id="protocol-agent-desc"
                            >
                            </p>
                        </div>

                        <div class="space-y-3">
                            <div
                                class="flex items-center gap-2 text-indigo-600 dark:text-indigo-400"
                            >
                                <Icon name="mdi:water-thermometer-outline" class="text-xl" />
                                <span class="text-[10px] uppercase font-black tracking-widest"
                                    >Temperatura</span
                                >
                            </div>
                            <p
                                class="text-3xl font-black text-slate-900 dark:text-white"
                                id="protocol-temp"
                            >
                                -
                            </p>
                        </div>

                        <div class="md:col-span-2 pt-4 space-y-4">
                            <div
                                class="flex items-center gap-2 text-indigo-600 dark:text-indigo-400"
                            >
                                <Icon name="mdi:washing-machine" class="text-xl" />
                                <span class="text-[10px] uppercase font-black tracking-widest"
                                    >Procedimiento Técnico</span
                                >
                            </div>
                            <div
                                class="bg-white/50 dark:bg-slate-900/50 p-6 rounded-2xl border border-indigo-100/50 dark:border-indigo-900/50 shadow-sm leading-relaxed text-slate-700 dark:text-slate-300 font-medium"
                                id="protocol-method"
                            >
                                -
                            </div>
                        </div>
                    </div>

                    <!-- Warnings & Tips -->
                    <div class="lg:col-span-4 space-y-6">
                        <div
                            id="protocol-warning"
                            class="hidden p-6 rounded-3xl bg-red-50 dark:bg-red-950/30 border-2 border-red-100 dark:border-red-900/50 animate-pulse-slow"
                        >
                            <div class="flex flex-col gap-4">
                                <div
                                    class="w-12 h-12 rounded-2xl bg-red-100 dark:bg-red-900/50 flex items-center justify-center text-2xl text-red-600 dark:text-red-400"
                                >
                                    <Icon name="mdi:alert-decagram-outline" />
                                </div>
                                <div class="space-y-1">
                                    <p
                                        class="text-[10px] uppercase font-black text-red-600 dark:text-red-400 tracking-wider"
                                    >
                                        Alerta de Integridad
                                    </p>
                                    <p
                                        class="text-sm font-bold text-red-900 dark:text-red-100 leading-relaxed"
                                        id="warning-text"
                                    >
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="p-6 rounded-3xl bg-indigo-500/5 border border-indigo-500/10">
                            <Icon
                                name="mdi:lightbulb-on-outline"
                                class="text-2xl text-indigo-400 mb-3"
                            />
                            <p
                                class="text-xs font-bold text-slate-600 dark:text-slate-400 leading-relaxed"
                            >
                                Recuerda realizar siempre una prueba en una zona oculta de la prenda
                                antes de aplicar el protocolo completo.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="empty-state" class="p-16 text-center transition-all">
            <div
                class="w-24 h-24 bg-slate-50 dark:bg-slate-800/50 rounded-full flex items-center justify-center mx-auto mb-8 shadow-inner"
            >
                <Icon name="mdi:hanger" class="text-5xl text-slate-200 dark:text-slate-700" />
            </div>
            <h4 class="text-slate-900 dark:text-white font-black text-xl mb-3 tracking-tight">
                Sistema de Diagnóstico
            </h4>
            <p
                class="text-slate-400 dark:text-slate-500 font-medium max-w-[280px] mx-auto leading-relaxed"
            >
                Configura los parámetros textiles para obtener la hoja de ruta científica de
                limpieza
            </p>
        </div>
    </div>
</div>

<script>
    import { STAIN_DATA, CHEMICAL_AGENTS } from "../../../../data/utilities/textiles";

    const fiberSelect = document.getElementById("fiber-select") as HTMLSelectElement;
    const stainSelect = document.getElementById("stain-select") as HTMLSelectElement;
    const display = document.getElementById("protocol-display");
    const emptyState = document.getElementById("empty-state");

    function updateProtocol() {
        const fiberId = fiberSelect.value;
        const stainId = stainSelect.value;

        if (!fiberId || !stainId || !display || !emptyState) return;

        const fiberOption = fiberSelect.options[fiberSelect.selectedIndex];
        const fiberType = (fiberOption.dataset.fiberType as string) || "natural";

        const stain = STAIN_DATA.find((s) => s.id === stainId);
        if (!stain) return;

        const protocol = stain.protocols[fiberType] || stain.protocols.natural;
        if (!protocol) return;

        const agent = CHEMICAL_AGENTS[protocol.agentId];
        if (!agent) return;

        // UI Updates
        emptyState.classList.add("hidden");
        display.classList.remove("hidden");

        const titleEl = document.getElementById("protocol-title");
        const agentEl = document.getElementById("protocol-agent");
        const agentDescEl = document.getElementById("protocol-agent-desc");
        const tempEl = document.getElementById("protocol-temp");
        const methodEl = document.getElementById("protocol-method");

        if (titleEl) titleEl.textContent = stain.name;
        if (agentEl) agentEl.textContent = agent.name;
        if (agentDescEl) agentDescEl.textContent = agent.description;
        if (tempEl) tempEl.textContent = protocol.temperature;
        if (methodEl) methodEl.textContent = protocol.method;

        // Warning Logic
        const warningDiv = document.getElementById("protocol-warning");
        const warningText = document.getElementById("warning-text");

        if (!warningDiv || !warningText) return;

        let warning = agent.warning || "";

        if (fiberType === "delicate" && protocol.agentId === "percarbonate") {
            warning =
                "RIESGO DE DEGRADACIÓN MOLECULAR. Fibras animales altamente sensibles al percarbonato. Realizar test en zona no visible.";
        }

        if (warning) {
            warningDiv.classList.remove("hidden");
            warningText.textContent = warning;
        } else {
            warningDiv.classList.add("hidden");
        }
    }

    fiberSelect.addEventListener("change", updateProtocol);
    stainSelect.addEventListener("change", updateProtocol);
</script>

<style>
    .animate-pulse-slow {
        animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    @keyframes pulse {
        0%,
        100% {
            opacity: 1;
        }
        50% {
            opacity: 0.8;
        }
    }
</style>
