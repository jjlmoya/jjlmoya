---
import { Icon } from "astro-icon/components";
import { TEXTILE_DATA } from "../../../../data/utilities/textiles";

const fibers = Object.entries(TEXTILE_DATA).map(([id, data]) => ({
    id,
    icon: data.icon.includes(":") ? data.icon : `mdi:${data.icon}`,
}));
---

<div class="max-w-5xl mx-auto p-4 md:p-6" id="burn-wizard-root">
    <div class="hidden">
        {
            fibers.map((f) => (
                <div id={`icon-cache-${f.id}`} data-icon-html>
                    <Icon name={f.icon} />
                </div>
            ))
        }
    </div>

    <div
        class="group relative bg-white dark:bg-slate-900 rounded-3xl shadow-[0_10px_40px_-10px_rgba(0,0,0,0.1)] dark:shadow-[0_10px_40px_-10px_rgba(0,0,0,0.5)] overflow-hidden min-h-[400px] flex flex-col transition-all duration-500 hover:shadow-[0_20px_50px_-10px_rgba(99,102,241,0.15)] dark:hover:shadow-[0_20px_50px_-10px_rgba(99,102,241,0.2)] border border-slate-100 dark:border-slate-800"
    >
        <div
            class="absolute top-0 right-0 w-[400px] h-[400px] bg-gradient-to-b from-indigo-50/50 to-transparent dark:from-indigo-950/20 dark:to-transparent rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 pointer-events-none"
        >
        </div>
        <div
            class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-gradient-to-t from-orange-50/50 to-transparent dark:from-orange-950/20 dark:to-transparent rounded-full blur-3xl translate-y-1/2 -translate-x-1/2 pointer-events-none"
        >
        </div>

        <div
            class="relative z-10 px-6 py-4 flex justify-between items-center backdrop-blur-sm bg-white/50 dark:bg-slate-900/50 border-b border-slate-100 dark:border-slate-800"
        >
            <div class="flex items-center gap-3">
                <div
                    class="w-8 h-8 rounded-lg bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white shadow-lg shadow-indigo-500/30"
                >
                    <Icon name="mdi:test-tube" class="text-lg" />
                </div>
                <div class="flex flex-col">
                    <span
                        class="text-[9px] font-black uppercase tracking-widest text-slate-400 dark:text-slate-500"
                        >INVESTIGACIÓN</span
                    >
                    <span
                        class="text-[10px] font-bold text-slate-900 dark:text-white"
                        id="step-indicator">PASO 1 DE 3</span
                    >
                </div>
            </div>
            <button
                id="reset-btn"
                class="hidden group/reset px-3 py-1.5 rounded-full bg-slate-100 dark:bg-slate-800 text-[10px] font-bold text-slate-500 dark:text-slate-400 hover:bg-orange-50 dark:hover:bg-orange-900/30 hover:text-orange-600 dark:hover:text-orange-400 transition-all flex items-center gap-2"
            >
                <Icon
                    name="mdi:refresh"
                    class="group-hover/reset:rotate-180 transition-transform duration-500"
                />
                REINICIAR
            </button>
        </div>

        <div class="relative z-10 flex-1 p-6 flex flex-col justify-center">
            <div
                id="question-view"
                class="space-y-6 animate-in fade-in slide-in-from-right-8 duration-500"
            >
                <div class="space-y-2 text-center md:text-left">
                    <h3
                        class="text-xl md:text-2xl font-black text-slate-900 dark:text-white leading-tight tracking-tight"
                        id="question-title"
                    >
                        ...
                    </h3>
                    <div
                        class="h-1 w-12 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-full mx-auto md:mx-0"
                    >
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-3" id="options-grid"></div>
            </div>

            <div
                id="result-view"
                class="hidden text-center flex flex-col items-center justify-center h-full animate-in zoom-in-95 duration-700 py-8"
            >
                <div
                    class="relative mb-6 transform hover:scale-105 transition-transform duration-500"
                >
                    <div
                        class="w-24 h-24 rounded-[1.5rem] bg-gradient-to-br from-indigo-500 via-purple-500 to-pink-500 text-white flex items-center justify-center text-4xl shadow-2xl shadow-indigo-500/40 relative z-10 ring-4 ring-white dark:ring-slate-900"
                        id="result-icon-container"
                    >
                        <Icon name="mdi:microscope" />
                    </div>
                    <div
                        class="absolute -inset-12 bg-gradient-to-br from-indigo-500/30 to-purple-500/30 blur-3xl rounded-full animate-pulse-slow"
                    >
                    </div>
                </div>

                <div class="space-y-2 mb-8">
                    <p
                        class="inline-block px-3 py-1 rounded-full bg-emerald-50 dark:bg-emerald-900/30 text-emerald-600 dark:text-emerald-400 text-[9px] font-black uppercase tracking-[0.2em] border border-emerald-100 dark:border-emerald-800"
                    >
                        IDENTIFICACIÓN POSITIVA
                    </p>
                    <h2
                        class="text-3xl md:text-5xl font-black text-transparent bg-clip-text bg-gradient-to-br from-slate-900 via-slate-700 to-slate-900 dark:from-white dark:via-slate-200 dark:to-slate-400 tracking-tight leading-tight"
                        id="result-name"
                    >
                        ...
                    </h2>
                </div>

                <div
                    class="bg-slate-50 dark:bg-slate-800/50 p-6 rounded-2xl border border-slate-200 dark:border-slate-700 shadow-sm w-full max-w-lg mx-auto"
                    id="result-desc"
                >
                </div>
            </div>
        </div>

        <div class="absolute top-0 left-0 w-full h-1 bg-slate-50 dark:bg-slate-800/50">
            <div
                class="h-full bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 transition-all duration-700 ease-out shadow-[0_0_10px_rgba(99,102,241,0.5)]"
                style="width: 0%"
                id="progress-bar"
            >
            </div>
        </div>
    </div>

    <div
        class="mt-6 p-4 bg-white dark:bg-slate-900 rounded-xl border-l-4 border-red-500 shadow-sm flex gap-4 items-center relative overflow-hidden group"
    >
        <div
            class="absolute inset-0 bg-red-500/5 dark:bg-red-500/10 opacity-0 group-hover:opacity-100 transition-opacity"
        >
        </div>
        <div class="p-2 bg-red-50 dark:bg-red-900/30 rounded-lg text-red-500 shrink-0">
            <Icon name="mdi:shield-alert" class="text-lg" />
        </div>
        <div class="space-y-0.5 relative z-10">
            <h5
                class="text-[10px] font-black text-red-600 dark:text-red-400 uppercase tracking-widest"
            >
                Protocolo de Seguridad
            </h5>
            <p class="text-xs font-medium text-slate-600 dark:text-slate-300 leading-relaxed">
                Realiza esta prueba en un lugar ventilado, sobre una superficie ignífuga. Usa pinzas
                metálicas y mantén agua cerca.
            </p>
        </div>
    </div>
</div>

<script>
    import { BURN_TEST_DATA, TEXTILE_DATA } from "../../../../data/utilities/textiles";

    let currentCandidates = [...BURN_TEST_DATA];
    const steps = ["flame", "odor", "residue", "smoke"];

    const questionView = document.getElementById("question-view");
    const resultView = document.getElementById("result-view");
    const questionTitle = document.getElementById("question-title");
    const optionsGrid = document.getElementById("options-grid");
    const stepIndicator = document.getElementById("step-indicator");
    const progressBar = document.getElementById("progress-bar");
    const resetBtn = document.getElementById("reset-btn");
    const resultName = document.getElementById("result-name");
    const resultIconContainer = document.getElementById("result-icon-container");
    const resultDesc = document.getElementById("result-desc");

    const questionText = {
        flame: "¿Comportamiento ante la llama?",
        odor: "¿Olor característico?",
        residue: "¿Residuo final?",
        smoke: "¿Tipo de humo?",
    };

    function init() {
        currentCandidates = [...BURN_TEST_DATA];

        if (resetBtn) resetBtn.classList.add("hidden");
        if (resultView) resultView.classList.add("hidden");
        if (questionView) questionView.classList.remove("hidden");

        renderStep();
        updateProgress(0);
    }

    function getNextDiscriminator() {
        if (currentCandidates.length === BURN_TEST_DATA.length) {
            return steps[0];
        }

        for (let i = 0; i < steps.length; i++) {
            const attr = steps[i];
            const uniqueValues = new Set(currentCandidates.map((c) => (c as any)[attr]));
            if (uniqueValues.size > 1) {
                return attr;
            }
        }
        return null;
    }

    function renderStep() {
        if (currentCandidates.length === 1) {
            showResult(currentCandidates[0]);
            return;
        }

        const discriminator = getNextDiscriminator();

        if (!discriminator) {
            showResult(currentCandidates[0]);
            return;
        }

        if (questionTitle) {
            questionTitle.style.opacity = "0";
            setTimeout(() => {
                questionTitle.textContent = (questionText as any)[discriminator];
                questionTitle.style.opacity = "1";
            }, 300);
        }

        const currentStepIndex = steps.indexOf(discriminator);
        if (stepIndicator) stepIndicator.textContent = `PASO ${currentStepIndex + 1}`;

        if (optionsGrid) {
            optionsGrid.innerHTML = "";
            const options = [...new Set(currentCandidates.map((c) => (c as any)[discriminator]))];

            options.forEach((opt, index) => {
                const btn = document.createElement("button");
                btn.className =
                    "group relative w-full text-left p-4 rounded-2xl bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5 hover:border-indigo-500/50 dark:hover:border-indigo-500/50 overflow-hidden flex items-center md:items-start gap-4 active:scale-[0.98] transform cursor-pointer";
                btn.style.animation = `fade-in-up 0.5s ease-out forwards ${index * 0.1}s`;
                btn.style.opacity = "0";

                btn.innerHTML = `
                    <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/0 via-indigo-500/0 to-indigo-500/0 group-hover:from-indigo-500/5 group-hover:via-purple-500/5 group-hover:to-pink-500/5 transition-all duration-500 pointer-events-none"></div>
                    <div class="mt-0.5 w-6 h-6 rounded-full border-2 border-slate-300 dark:border-slate-600 group-hover:border-indigo-500 flex items-center justify-center shrink-0 transition-colors bg-white dark:bg-slate-800">
                        <div class="w-3 h-3 rounded-full bg-indigo-500 opacity-0 transition-opacity duration-200 check-dot"></div>
                    </div>
                    <span class="text-sm font-medium text-slate-700 dark:text-slate-200 group-hover:text-indigo-900 dark:group-hover:text-white leading-snug transition-colors pointer-events-none text-left flex-1">${opt}</span>
                `;

                btn.onclick = () => {
                    const allDots = optionsGrid.querySelectorAll(".check-dot");
                    allDots.forEach((d) => d.classList.remove("opacity-100"));

                    const dot = btn.querySelector(".check-dot");
                    if (dot) dot.classList.add("opacity-100");

                    setTimeout(() => selectOption(discriminator, opt as string), 250);
                };

                optionsGrid.appendChild(btn);
            });
        }

        if (currentCandidates.length < BURN_TEST_DATA.length) {
            resetBtn?.classList.remove("hidden");
        } else {
            resetBtn?.classList.add("hidden");
        }

        const totalOptions = steps.indexOf(discriminator);
        updateProgress((totalOptions / steps.length) * 100);
    }

    function selectOption(attr: string, value: string) {
        currentCandidates = currentCandidates.filter((c) => (c as any)[attr] === value);
        renderStep();
    }

    function showResult(result: any) {
        const fiber = TEXTILE_DATA[result.fiberId];
        if (!fiber) return;

        questionView?.classList.add("hidden");
        resultView?.classList.remove("hidden");
        resetBtn?.classList.remove("hidden");
        updateProgress(100);
        stepIndicator!.textContent = "ANÁLISIS COMPLETADO";

        if (resultName) resultName.textContent = fiber.name;

        if (resultDesc) {
            resultDesc.innerHTML = `
                <div class="flex flex-col gap-6 text-left">
                    <p class="text-base text-slate-600 dark:text-slate-300 leading-relaxed font-medium border-b border-slate-200 dark:border-slate-700 pb-4">
                        Muestra identificada positivamente como <strong class="text-indigo-600 dark:text-indigo-400">${fiber.name}</strong>.
                    </p>
                    
                    <div class="space-y-4">
                        <div class="relative pl-4 border-l-2 border-orange-400">
                            <span class="block text-[10px] uppercase font-black text-slate-400 mb-1 tracking-wider">Comportamiento Llama</span>
                            <span class="text-sm font-semibold text-slate-700 dark:text-slate-200 leading-snug block">${result.flame}</span>
                        </div>
                        
                        <div class="relative pl-4 border-l-2 border-indigo-400">
                            <span class="block text-[10px] uppercase font-black text-slate-400 mb-1 tracking-wider">Rastro Olfativo</span>
                            <span class="text-sm font-semibold text-slate-700 dark:text-slate-200 leading-snug block">${result.odor}</span>
                        </div>
                         <div class="relative pl-4 border-l-2 border-slate-400">
                            <span class="block text-[10px] uppercase font-black text-slate-400 mb-1 tracking-wider">Residuo</span>
                            <span class="text-sm font-semibold text-slate-700 dark:text-slate-200 leading-snug block">${result.residue}</span>
                        </div>
                    </div>
                </div>
            `;
        }

        const cachedIconDiv = document.getElementById(`icon-cache-${result.fiberId}`);
        if (cachedIconDiv && resultIconContainer) {
            resultIconContainer.innerHTML = cachedIconDiv.innerHTML;

            const svg = resultIconContainer.querySelector("svg");
            if (svg) {
                svg.style.width = "1em";
                svg.style.height = "1em";
            }
        }
    }

    function updateProgress(percent: number) {
        if (progressBar) progressBar.style.width = `${percent}%`;
    }

    resetBtn?.addEventListener("click", init);
    setTimeout(init, 100);
</script>

<style>
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-pulse-slow {
        animation: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>
