<div
    class="recipe-rescaler-container w-full max-w-4xl mx-auto p-6 bg-white dark:bg-zinc-900/50 backdrop-blur-xl border border-zinc-200 dark:border-white/10 rounded-3xl shadow-2xl"
>
    <style is:global>
        body.is-widget .recipe-rescaler-container {
            max-width: 100% !important;
            padding: 0 !important;
            border-radius: 0 !important;
            border: none !important;
            box-shadow: none !important;
            background: transparent !important;
            backdrop-filter: none !important;
        }

        body.is-widget .recipe-rescaler-container .p-6,
        body.is-widget .recipe-rescaler-container .p-8 {
            padding: 1.25rem !important;
        }
    </style>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8" id="calculator-interface">
        <div class="space-y-6">
            <div
                class="bg-orange-50/50 dark:bg-white/5 p-6 rounded-2xl border border-orange-100 dark:border-white/5"
            >
                <h3
                    class="text-orange-600 dark:text-orange-400 font-bold mb-4 flex items-center gap-2"
                >
                    <span class="icon-[mdi--account-group] text-xl"></span> 1. Raciones
                </h3>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label
                            for="original-servings"
                            class="block text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2"
                            >Original</label
                        >
                        <input
                            type="number"
                            id="original-servings"
                            value="4"
                            min="1"
                            class="w-full bg-white dark:bg-black/40 border border-gray-200 dark:border-white/20 rounded-xl px-4 py-3 text-gray-900 dark:text-white text-center font-bold text-xl focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all placeholder-gray-300"
                        />
                    </div>
                    <div>
                        <label
                            for="target-servings"
                            class="block text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2"
                            >Deseado</label
                        >
                        <input
                            type="number"
                            id="target-servings"
                            value="7"
                            min="1"
                            class="w-full bg-white dark:bg-black/40 border border-gray-200 dark:border-white/20 rounded-xl px-4 py-3 text-gray-900 dark:text-white text-center font-bold text-xl focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all placeholder-gray-300"
                        />
                    </div>
                </div>

                <div
                    class="mt-6 flex items-center justify-between p-4 bg-orange-100 dark:bg-orange-500/10 rounded-xl border border-orange-200 dark:border-orange-500/20"
                >
                    <span class="text-sm font-medium text-orange-900 dark:text-orange-200"
                        >Factor Multiplicador</span
                    >
                    <span
                        id="multiplier-display"
                        class="text-2xl font-black text-orange-600 dark:text-orange-400 font-mono"
                        >1.75x</span
                    >
                </div>
            </div>
        </div>

        <div class="flex flex-col h-full">
            <div
                class="bg-gray-50 dark:bg-white/5 p-6 rounded-2xl border border-gray-200 dark:border-white/5 flex-grow flex flex-col h-full"
            >
                <h3 class="text-gray-900 dark:text-gray-200 font-bold mb-2 flex items-center gap-2">
                    <span class="icon-[mdi--format-list-bulleted] text-xl text-gray-400"></span> 2. Lista
                    de Ingredientes
                </h3>

                <textarea
                    id="ingredients-input"
                    placeholder="Pega aquí tu lista.
Ej:
500g Harina
300ml Agua
10g Sal"
                    class="w-full flex-grow min-h-[220px] bg-white dark:bg-black/40 border border-gray-200 dark:border-white/20 rounded-xl p-4 text-gray-900 dark:text-white placeholder-gray-400 focus:border-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-500/20 transition-all font-mono text-sm resize-none leading-relaxed"
                    spellcheck="false"></textarea>
            </div>
        </div>
    </div>

    <div
        class="bg-gray-900 dark:bg-black rounded-2xl border border-gray-800 dark:border-zinc-800 overflow-hidden shadow-lg"
    >
        <div
            class="px-6 py-4 bg-gray-800 dark:bg-zinc-900 border-b border-gray-700 dark:border-zinc-800 flex justify-between items-center"
        >
            <h3 class="text-white font-bold flex items-center gap-2">
                <span class="icon-[mdi--chef-hat] text-xl text-orange-500"></span> Resultado
            </h3>
            <button
                id="copy-btn"
                class="text-xs bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors flex items-center gap-2 font-medium"
            >
                <span class="icon-[mdi--content-copy]"></span> Copiar
            </button>
        </div>

        <div id="results-container" class="p-8 font-mono text-base space-y-3 min-h-[200px]">
            <div
                class="h-full flex flex-col items-center justify-center text-gray-500 space-y-4 opacity-50"
            >
                <span class="icon-[mdi--pot-steam] text-4xl"></span>
                <p>Tus ingredientes ajustados aparecerán aquí...</p>
            </div>
        </div>
    </div>
</div>

<script>
    import { initRescaler } from "./ingredient-rescaler.logic";
    initRescaler();
</script>
