---
interface Props {
    quote: string;
    hashtag?: string;
    className?: string;
}

const { quote, hashtag = "HistoriaDelTrigo", className = "" } = Astro.props;

const shareText = `"${quote}" #${hashtag}`;
---

<span class={`relative group cursor-pointer inline-block ${className}`}>
    <span
        class="relative z-10 decoration-amber-500/50 underline decoration-2 underline-offset-4 group-hover:decoration-amber-500 group-hover:bg-amber-500/10 transition-all rounded px-1 -mx-1"
    >
        {quote}
    </span>

    <!-- Tooltip Button -->
    <button
        type="button"
        data-share-btn
        data-share-text={shareText}
        class="absolute bottom-full left-1/2 -translate-x-1/2 pb-2 opacity-0 group-hover:opacity-100 transition-all duration-300 pointer-events-none group-hover:pointer-events-auto z-50 whitespace-nowrap"
        aria-label="Compartir esta cita"
    >
        <div
            class="bg-black text-white text-xs font-bold py-1.5 px-3 rounded-full flex items-center gap-2 shadow-xl border border-stone-800 transform translate-y-2 group-hover:translate-y-0 transition-transform"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-3 h-3"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z"
                ></path>
            </svg>
            Compartir idea
        </div>
        <!-- Arrow -->
        <div
            class="w-2 h-2 bg-black border-r border-b border-stone-800 transform rotate-45 absolute -bottom-1 left-1/2 -translate-x-1/2"
        >
        </div>
    </button>
</span>

<script>
    import "../utils/share";
</script>
