---
import { Icon } from "astro-icon/components";

interface Props {
    title?: string;
    twitter?: string;
}

const { title = "Nota del Autor", twitter = "jjlmoya" } = Astro.props;
---

<section class="bg-stone-950 py-24 relative overflow-hidden border-t border-stone-900">
    <div class="absolute inset-0 opacity-30 mix-blend-overlay pointer-events-none"></div>
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-4xl h-64 bg-amber-500/5 blur-[100px] pointer-events-none"
    >
    </div>

    <div class="max-w-3xl mx-auto px-4 md:px-6 relative z-10">
        <div
            class="group relative bg-stone-900/40 backdrop-blur-md border border-stone-800 p-6 md:p-14 rounded-lg overflow-hidden transition-all duration-500 hover:border-amber-900/50 hover:shadow-2xl hover:shadow-amber-900/10"
        >
            <div
                class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-amber-700/50 to-transparent opacity-50"
            >
            </div>
            <Icon
                name="mdi:format-quote-open"
                class="absolute top-4 left-4 md:top-8 md:left-8 text-stone-800 w-12 h-12 md:w-16 md:h-16 -z-10 opacity-50 group-hover:text-amber-900/20 transition-colors duration-500"
            />

            <div class="relative z-10 flex flex-col items-center text-center">
                <div
                    class="w-12 h-12 bg-stone-800 rounded-full flex items-center justify-center mb-6 shadow-inner border border-stone-700 group-hover:border-amber-500/30 group-hover:bg-stone-800/80 transition-all duration-500"
                >
                    <Icon name="mdi:feather" class="w-5 h-5 text-amber-500/80" />
                </div>

                <h3
                    class="font-serif text-2xl md:text-3xl text-stone-200 mb-8 tracking-wide flex items-center gap-3"
                >
                    {title}
                </h3>

                <div
                    class="space-y-6 font-serif text-lg md:text-xl leading-relaxed text-stone-400 italic max-w-2xl"
                >
                    <slot />
                </div>

                <div
                    class="mt-10 pt-8 border-t border-stone-800 w-full max-w-xs mx-auto flex flex-col items-center gap-3"
                >
                    <a
                        href={`https://twitter.com/${twitter}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-stone-500 hover:text-amber-500 transition-colors duration-300 flex items-center gap-2 text-sm font-mono tracking-wider uppercase group/link"
                    >
                        <Icon
                            name="mdi:twitter"
                            class="w-4 h-4 group-hover/link:scale-110 transition-transform"
                        />
                        @{twitter}
                    </a>
                    <p
                        class="text-stone-600 text-xs font-mono tracking-wider uppercase flex items-center justify-center gap-2"
                    >
                        <span class="w-1.5 h-1.5 bg-amber-500 rounded-full animate-pulse"></span>
                        Hecho por diversi√≥n
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
