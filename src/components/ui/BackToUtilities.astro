---
import { Icon } from "astro-icon/components";

interface Props {
    class?: string;
}

const { class: className } = Astro.props;
---

<a
    href="/utilidades/"
    class:list={[
        "inline-flex items-center gap-2 text-sm text-slate-500 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white transition-colors group",
        className,
    ]}
>
    <Icon name="mdi:arrow-left" class="w-4 h-4 group-hover:-translate-x-1 transition-transform" />
    <span>volver a utilidades</span>
</a>
