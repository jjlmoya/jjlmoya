<div class="fixed inset-0 pointer-events-none overflow-hidden z-[-1] bg-[#02060A]">
    <div
        class="absolute top-[-10%] left-[-10%] w-[70%] h-[70%] bg-[#00D9FF] opacity-[0.08] blur-[150px] rounded-full animate-pulse-slow"
    >
    </div>
    <div
        class="absolute bottom-[-10%] right-[-10%] w-[60%] h-[60%] bg-[#FF4500] opacity-[0.05] blur-[150px] rounded-full animate-pulse-slower"
    >
    </div>

    <div class="falling-letters-container">
        {
            [...Array(100)].map((_, i) => {
                const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
                const letter = letters[Math.floor(Math.random() * letters.length)];
                const x = Math.floor(Math.random() * 100);
                const delay = (Math.random() * 20).toFixed(1);
                const duration = (8 + Math.random() * 10).toFixed(1);
                const size = (0.8 + Math.random() * 2.5).toFixed(1);
                const opacity = (0.03 + Math.random() * 0.07).toFixed(2);

                return (
                    <span
                        class={i % 3 !== 0 ? "mobile-hide" : ""}
                        style={`--delay: ${delay}s; --x: ${x}%; --duration: ${duration}s; --size: ${size}rem; --opacity: ${opacity};`}
                    >
                        {letter}
                    </span>
                );
            })
        }
    </div>

    <div class="absolute inset-0 opacity-[0.03] grid-bg"></div>
</div>

<style>
    .grid-bg {
        background-image:
            linear-gradient(rgba(0, 217, 255, 0.2) 1px, transparent 1px),
            linear-gradient(90deg, rgba(0, 217, 255, 0.2) 1px, transparent 1px);
        background-size: 60px 60px;
        perspective: 1000px;
        transform: rotateX(20deg);
        will-change: transform;
    }

    .falling-letters-container span {
        position: absolute;
        top: -10%;
        left: var(--x);
        font-size: var(--size);
        font-weight: 900;
        color: rgba(0, 217, 255, var(--opacity));
        animation: fall var(--duration) linear infinite;
        animation-delay: var(--delay);
        filter: blur(1px) drop-shadow(0 0 10px rgba(0, 217, 255, 0.3));
        user-select: none;
        will-change: transform, opacity;
        transform: translate3d(0, 0, 0);
    }

    @media (max-width: 768px) {
        .mobile-hide {
            display: none;
        }
        .falling-letters-container span {
            filter: none !important;
            text-shadow: 0 0 5px rgba(0, 217, 255, 0.3);
            will-change: transform; 
        }
        .grid-bg {
            transform: none; 
            perspective: none;
        }
        .animate-pulse-slow,
        .animate-pulse-slower {
            animation: none !important; 
            opacity: 0.05;
            blur: 80px; 
        }
    }

    @keyframes fall {
        0% {
            transform: translate3d(0, 0, 0) rotate(0deg);
            opacity: 0;
        }
        10% {
            opacity: 1;
        }
        90% {
            opacity: 1;
        }
        100% {
            transform: translate3d(0, 120vh, 0) rotate(360deg);
            opacity: 0;
        }
    }

    .animate-pulse-slow {
        animation: pulse 12s ease-in-out infinite;
    }

    .animate-pulse-slower {
        animation: pulse 15s ease-in-out infinite;
    }

    @keyframes pulse {
        0%,
        100% {
            transform: translate3d(0, 0, 0) scale(1);
            opacity: 0.05;
        }
        50% {
            transform: translate3d(0, 0, 0) scale(1.1);
            opacity: 0.1;
        }
    }
</style>
