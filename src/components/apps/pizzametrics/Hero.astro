---
import { Icon } from "astro-icon/components";
interface Props {
    icon: string;
    stores: {
        appStore?: string;
        googlePlay?: string;
    };
}
const { icon, stores } = Astro.props;
---

<header class="relative pt-32 pb-20 px-6 overflow-hidden">
    <div
        class="max-w-7xl mx-auto flex flex-col lg:flex-row items-center lg:items-start justify-between gap-12 text-center lg:text-left"
    >
        <div class="flex-1 flex flex-col items-center lg:items-start">
            <img
                src={icon}
                alt="Pizzametrics Logo"
                class="w-24 h-24 mb-12 shadow-xl rounded-3xl"
                id="logo"
            />

            <h1
                class="text-5xl md:text-8xl font-black tracking-tighter leading-[0.9] mb-8 max-w-5xl"
            >
                Calculadora de Pizza Napolitana: <br />
                <span class="text-[#E63946]">Precisión de Maestro</span>
                <br />
                en tu Bolsillo.
            </h1>

            <h2
                class="text-xl md:text-2xl font-light text-slate-500 max-w-3xl mb-12 leading-relaxed"
            >
                Ajusta hidratación, levadura y tiempos de fermentación según la temperatura real de
                tu cocina. Compatible con Biga, Poolish y masa directa.
            </h2>

            <div class="flex flex-wrap justify-center lg:justify-start gap-4 mb-8">
                {
                    stores.appStore && (
                        <a href={stores.appStore} class="store-btn group" target="_blank">
                            <Icon name="mdi:apple" class="w-8 h-8 mr-2" />
                            <div class="text-left">
                                <span class="block text-[10px] uppercase font-bold opacity-60">
                                    Descargar en
                                </span>
                                <span class="text-lg font-black leading-none">App Store</span>
                            </div>
                        </a>
                    )
                }
                {
                    stores.googlePlay && (
                        <a href={stores.googlePlay} class="store-btn group" target="_blank">
                            <Icon name="mdi:google-play" class="w-8 h-8 mr-2" />
                            <div class="text-left">
                                <span class="block text-[10px] uppercase font-bold opacity-60">
                                    Disponible en
                                </span>
                                <span class="text-lg font-black leading-none">Google Play</span>
                            </div>
                        </a>
                    )
                }
            </div>

            <p class="text-xs font-black uppercase tracking-[0.3em] text-[#E63946] opacity-60">
                Diseñada para entusiastas de la técnica
            </p>
        </div>

        <div
            class="w-full max-w-[200px] lg:max-w-[240px] p-6 bg-white rounded-3xl shadow-2xl border border-slate-100 text-center hidden sm:block transform lg:rotate-3 hover:rotate-0 transition-transform duration-500"
        >
            <div
                class="aspect-square bg-slate-50 rounded-2xl flex items-center justify-center border-2 border-dashed border-slate-200 mb-4 overflow-hidden p-3"
            >
                <img
                    src="/assets/apps/pizzametrics/qr_download.webp"
                    alt="Código QR Pizzametrics"
                    class="w-full h-full opacity-90"
                />
            </div>
            <p class="text-[10px] font-black uppercase tracking-widest opacity-40 leading-tight">
                Escanea para <br />instalar ahora
            </p>
        </div>
    </div>
</header>

<style>
    .store-btn {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.5rem;
        background: #1a1c2c;
        color: white;
        border-radius: 1.25rem;
        transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
        border: 2px solid transparent;
    }
    .store-btn:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: 0 15px 30px rgba(26, 28, 44, 0.2);
    }
</style>
