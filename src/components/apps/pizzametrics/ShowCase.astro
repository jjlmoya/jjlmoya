---
import { Icon } from "astro-icon/components";
interface Props {
    youtubeId: string;
}
const { youtubeId } = Astro.props;
---

<section class="py-24 px-6 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto">
        <div class="relative w-full max-w-[320px] lg:w-[400px]">
            <div class="absolute -inset-10 bg-[#E63946]/10 blur-[100px] rounded-full"></div>
            <div
                class="relative rounded-[3rem] overflow-hidden border-[12px] border-[#1A1C2C] shadow-[0_0_80px_rgba(0,0,0,0.15)] aspect-[9/19] bg-black"
            >
                <iframe
                    src={`https://www.youtube.com/embed/${youtubeId}?rel=0&modestbranding=1&autohide=1&muted=1&controls=0&autoplay=1&loop=1&playlist=${youtubeId}`}
                    title="Pizzametrics en Acción"
                    class="absolute inset-0 w-full h-full border-none"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </div>
        </div>

        <div class="flex-1 space-y-12">
            <div class="feature-card">
                <div
                    class="w-16 h-16 rounded-2xl bg-[#E63946]/5 flex items-center justify-center mb-6"
                >
                    <Icon name="mdi:weather-partly-cloudy" class="w-8 h-8 text-[#E63946]" />
                </div>
                <h3 class="text-3xl font-black mb-4 uppercase tracking-tighter">
                    Ajuste por Clima
                </h3>
                <p class="text-xl text-slate-500 font-light leading-relaxed">
                    Calcula la levadura exacta según si hace frío o calor.
                </p>
            </div>

            <div class="feature-card">
                <div
                    class="w-16 h-16 rounded-2xl bg-[#2D6A4F]/5 flex items-center justify-center mb-6"
                >
                    <Icon name="mdi:flask-outline" class="w-8 h-8 text-[#2D6A4F]" />
                </div>
                <h3 class="text-3xl font-black mb-4 uppercase tracking-tighter">
                    Gestión de Prefermentos
                </h3>
                <p class="text-xl text-slate-500 font-light leading-relaxed">
                    Controla Biga y Poolish sin cálculos manuales complejos.
                </p>
            </div>

            <div class="feature-card">
                <div
                    class="w-16 h-16 rounded-2xl bg-[#1A1C2C]/5 flex items-center justify-center mb-6"
                >
                    <Icon name="mdi:book-open-variant" class="w-8 h-8 text-[#1A1C2C]" />
                </div>
                <h3 class="text-3xl font-black mb-4 uppercase tracking-tighter">
                    Registro de Amasados
                </h3>
                <p class="text-xl text-slate-500 font-light leading-relaxed">
                    Guarda tus recetas y fotos para aprender de cada horneado.
                </p>
            </div>
        </div>
    </div>
</section>

<style>
    .feature-card {
        padding: 2rem;
        border-radius: 2.5rem;
        background: white;
        border: 1px solid #f1f5f9;
        transition: all 0.5s ease;
    }
    .feature-card:hover {
        border-color: #e63946;
        box-shadow: 0 30px 60px -20px rgba(0, 0, 0, 0.05);
        transform: translateX(10px);
    }
</style>
