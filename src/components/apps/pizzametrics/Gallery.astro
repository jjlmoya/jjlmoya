---
interface Props {
    images: string[];
}
const { images } = Astro.props;
---

<section class="py-32 px-6 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto">
        <h2
            class="text-4xl md:text-6xl font-black text-center mb-20 tracking-tighter uppercase italic"
        >
            Interfaz <span class="text-[#E63946]">Pro</span> para Pizzaiolos
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                images.map((img, index) => (
                    <div
                        class={`relative group overflow-hidden rounded-[2.5rem] shadow-xl border-4 border-white ${index === 1 ? "lg:translate-y-12" : ""}`}
                    >
                        <img
                            src={img}
                            alt={`Captura de Pizzametrics ${index + 1}`}
                            class="w-full h-auto transition-transform duration-700 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-[#1A1C2C]/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 flex items-end p-8">
                            <p class="text-white text-sm font-black uppercase tracking-widest">
                                Vista Real de la App
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
