---
import { Icon } from "astro-icon/components";
interface Props {
    stores: {
        appStore?: string;
        googlePlay?: string;
    };
}
const { stores } = Astro.props;
---

<footer class="py-24 px-6 bg-[#FDFBF7]">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col lg:flex-row justify-between items-center gap-20">
            <div class="flex-1 text-center lg:text-left">
                <h2 class="text-4xl font-black mb-12 uppercase italic tracking-tighter">
                    Únete a la<br /><span class="text-[#E63946]">Revolución Científica</span>
                </h2>
                <div class="flex flex-wrap justify-center lg:justify-start gap-4">
                    {
                        stores.appStore && (
                            <a href={stores.appStore} class="store-btn-dark group" target="_blank">
                                <Icon name="mdi:apple" class="w-6 h-6 mr-3" />
                                <span>Apple App Store</span>
                            </a>
                        )
                    }
                    {
                        stores.googlePlay && (
                            <a
                                href={stores.googlePlay}
                                class="store-btn-dark group"
                                target="_blank"
                            >
                                <Icon name="mdi:google-play" class="w-6 h-6 mr-3" />
                                <span>Google Play</span>
                            </a>
                        )
                    }
                </div>

                <div
                    class="mt-20 flex flex-wrap justify-center lg:justify-start gap-8 text-[10px] font-black uppercase tracking-widest opacity-40"
                >
                    <a
                        href="https://www.jjlmoya.es/gamebob/privacidad/"
                        target="_blank"
                        class="hover:text-[#E63946] transition-colors">Política de Privacidad</a
                    >
                    <a
                        href="https://www.jjlmoya.es/gamebob/terminos-y-condiciones/"
                        target="_blank"
                        class="hover:text-[#E63946] transition-colors">Términos y Condiciones</a
                    >
                    <span>© {new Date().getFullYear()} Pizzametrics</span>
                </div>
            </div>

            <div
                class="w-full max-w-[280px] p-8 bg-white rounded-[3rem] shadow-xl border border-slate-100 text-center"
            >
                <div
                    class="aspect-square bg-slate-50 rounded-2xl flex items-center justify-center border-2 border-dashed border-slate-200 mb-6 overflow-hidden p-4"
                >
                    <img
                        src="/assets/apps/pizzametrics/qr_download.webp"
                        alt="Código QR de descarga"
                        class="w-full h-full opacity-80"
                    />
                </div>
                <p class="text-xs font-black uppercase tracking-widest opacity-40">
                    Escanea para descargar
                </p>
            </div>
        </div>
    </div>
</footer>

<style>
    .store-btn-dark {
        display: inline-flex;
        align-items: center;
        padding: 1rem 2rem;
        background: transparent;
        color: #1a1c2c;
        border: 2px solid #1a1c2c;
        border-radius: 1rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-size: 0.75rem;
        transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    }
    .store-btn-dark:hover {
        background: #1a1c2c;
        color: white;
        transform: translateY(-4px);
    }
</style>
