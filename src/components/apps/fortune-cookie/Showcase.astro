---
import type { Application } from "../../../types/apps";

interface Props {
    app: Application;
}

const { app } = Astro.props;
---

<section class="relative py-32 px-6 bg-black overflow-hidden">
    <div class="max-w-7xl mx-auto flex flex-col md:flex-row items-center gap-12">
        <div class="w-full md:w-1/2 relative z-10">
            <h2 class="text-4xl md:text-6xl font-serif font-bold text-white mb-8 leading-none">
                El <span class="text-[#BF9F5A]">Brillo</span> del Destino.
            </h2>
            <p class="text-xl md:text-2xl font-light text-white/60 mb-8 leading-relaxed">
                Papeles de Oro, Jade y Negro. No son simples mensajes; son los trofeos de tu
                constancia y tu intuici√≥n.
            </p>
        </div>

        <div class="w-full md:w-1/2 relative group flex justify-center">
            <div
                class="absolute -inset-4 bg-[#BF9F5A] opacity-20 blur-3xl group-hover:opacity-30 transition-opacity"
            >
            </div>

            <div
                class="relative w-full max-w-[320px] aspect-[9/16] rounded-3xl overflow-hidden border border-white/10 shadow-2xl"
            >
                <iframe
                    width="100%"
                    height="100%"
                    src={`https://www.youtube.com/embed/Toe9oMcfArg?autoplay=1&mute=1&loop=1&playlist=Toe9oMcfArg&controls=0&showinfo=0&rel=0&modestbranding=1`}
                    title="Showcase Video"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    class="w-full h-full object-cover pointer-events-none opacity-80 group-hover:opacity-100 transition-opacity"
                ></iframe>
            </div>
        </div>
    </div>
</section>
