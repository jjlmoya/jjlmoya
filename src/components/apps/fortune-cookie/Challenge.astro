---
import { Icon } from "astro-icon/components";
import type { Application } from "../../../types/apps";

interface Props {
    app: Application;
}

const { app } = Astro.props;
---

<section class="relative py-20 px-6 overflow-hidden bg-[#0A0A0A]">
    <div class="max-w-4xl mx-auto text-center relative z-10">
        <h2 class="text-3xl md:text-5xl font-serif font-bold mb-12 text-[#F2E5BD]">
            <span class="opacity-50">El Desafío Diario.</span>
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 justify-items-center mb-12">
            <div
                class="group relative w-full max-w-[200px] aspect-square flex items-center justify-center p-4 bg-white/5 rounded-3xl border border-white/5 hover:border-[#BF9F5A]/30 transition-all duration-500 overflow-hidden"
            >
                <div
                    class="absolute inset-0 bg-black opacity-60 z-10 group-hover:opacity-40 transition-opacity"
                >
                </div>
                <img
                    src="/assets/apps/galleta-de-la-fortuna/cookie-crystal.webp"
                    alt="Galleta de Cristal"
                    class="w-32 h-32 object-contain grayscale brightness-50 contrast-150 group-hover:scale-110 transition-transform duration-700"
                />
                <div
                    class="absolute bottom-4 left-0 right-0 text-xs text-white/30 uppercase tracking-[0.2em]"
                >
                    Cristal
                </div>
            </div>

            <div
                class="group relative w-full max-w-[240px] aspect-square flex items-center justify-center p-4 bg-white/10 rounded-3xl border border-[#BF9F5A]/30 shadow-[0_0_50px_-10px_rgba(191,159,90,0.2)] transition-all duration-500"
            >
                <div class="absolute inset-0 bg-[#BF9F5A] opacity-5 blur-xl rounded-full"></div>
                <img
                    src="/assets/apps/galleta-de-la-fortuna/cookie-closed.webp"
                    alt="Galleta Estándar"
                    class="w-40 h-40 object-contain drop-shadow-[0_0_15px_rgba(191,159,90,0.5)] animate-float"
                />
                <div
                    class="absolute bottom-6 left-0 right-0 text-sm text-[#F2E5BD] font-bold uppercase tracking-[0.2em] animate-pulse"
                >
                    Estándar
                </div>
            </div>

            <div
                class="group relative w-full max-w-[200px] aspect-square flex items-center justify-center p-4 bg-white/5 rounded-3xl border border-white/5 hover:border-[#BF9F5A]/30 transition-all duration-500 overflow-hidden"
            >
                <div
                    class="absolute inset-0 bg-black opacity-60 z-10 group-hover:opacity-40 transition-opacity"
                >
                </div>
                <img
                    src="/assets/apps/galleta-de-la-fortuna/cookie-moon.webp"
                    alt="Galleta Lunar"
                    class="w-32 h-32 object-contain sepia brightness-110 saturate-200 contrast-125 group-hover:scale-110 transition-transform duration-700"
                />
                <div
                    class="absolute bottom-4 left-0 right-0 text-xs text-[#BF9F5A]/50 uppercase tracking-[0.2em]"
                >
                    Lunar
                </div>
            </div>
        </div>

        <div
            class="bg-[#1A1A1A] border border-[#BF9F5A]/20 p-8 rounded-2xl max-w-2xl mx-auto shadow-2xl relative overflow-hidden"
        >
            <div class="absolute top-0 left-0 w-1 h-full bg-[#BF9F5A]"></div>
            <p class="text-xl md:text-2xl font-light italic text-[#F2E5BD]/90 mb-4">
                "Hoy el mundo digital ha liberado una nueva oportunidad."
            </p>
            <p class="text-sm text-white/40 uppercase tracking-widest font-bold">
                Solo disponible en la app durante las próximas <span class="text-white"
                    >24 horas</span
                >
            </p>
        </div>
    </div>
</section>

<style>
    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
</style>
