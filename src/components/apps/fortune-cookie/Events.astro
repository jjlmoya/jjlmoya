---
interface Event {
    name: string;
    description: string;
    image: string;
    colors: {
        primary: string;
        accent: string;
        bgFrom: string;
        bgTo: string;
    };
    date: string;
}

const events: Event[] = [
    {
        name: "San Valentín",
        description:
            "El amor está en el aire... y en tu suerte. Encuentra las galletas románticas.",
        image: "/assets/apps/galleta-de-la-fortuna/cookie-valentine.webp",
        colors: {
            primary: "#FB7185",
            accent: "#FECDD3",
            bgFrom: "#881337",
            bgTo: "#4C0519",
        },
        date: "14 Feb",
    },
    {
        name: "Año del Caballo",
        description:
            "Celebra la fortuna con el dragón dorado. Galletas especiales para un año próspero.",
        image: "/assets/apps/galleta-de-la-fortuna/cookie-lunar-cracked.webp",
        colors: {
            primary: "#FBBF24",
            accent: "#FEF3C7",
            bgFrom: "#7F1D1D",
            bgTo: "#450A0A",
        },
        date: "17 Feb",
    },
];
---

<section class="relative py-24 px-6 bg-[#050505] overflow-hidden">
    <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16 relative z-10">
            <h2 class="text-3xl md:text-5xl font-serif font-bold text-white mb-4">
                Eventos Temporales.
            </h2>
            <div class="h-px w-20 bg-[#BF9F5A]/30 mx-auto mb-6"></div>
            <p class="text-xl font-light text-white/50 max-w-2xl mx-auto">
                El destino cambia con las estaciones. Nuevas galletas, nuevos mensajes, nueva
                suerte.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
            {
                events.map((event) => (
                    <div class="group relative rounded-[2.5rem] overflow-hidden border border-white/10 hover:border-white/20 transition-all duration-500 shadow-2xl">
                        <div
                            class="absolute inset-0 transition-opacity duration-500"
                            style={`background-image: linear-gradient(135deg, ${event.colors.bgFrom} 0%, ${event.colors.bgTo} 100%); opacity: 0.6;`}
                        />

                        <div class="absolute -inset-full bg-gradient-to-r from-transparent via-white/10 to-transparent rotate-45 translate-y-full group-hover:translate-y-[-200%] transition-transform duration-1000 ease-in-out pointer-events-none" />

                        <div class="relative z-10 p-8 md:p-12 flex flex-col items-center text-center h-full">
                            <div class="mb-2">
                                <span
                                    class="inline-block px-4 py-1 rounded-full text-xs font-bold uppercase tracking-widest bg-black/30 backdrop-blur-md border border-white/10"
                                    style={`color: ${event.colors.primary}`}
                                >
                                    {event.date}
                                </span>
                            </div>

                            <h3
                                class="text-3xl md:text-4xl font-serif font-bold mb-4"
                                style={`color: ${event.colors.accent}`}
                            >
                                {event.name}
                            </h3>

                            <p class="text-lg text-white/70 font-light mb-8 max-w-sm leading-relaxed">
                                {event.description}
                            </p>

                            <div class="relative mt-auto group-hover:scale-110 transition-transform duration-700">
                                <div
                                    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-48 h-48 rounded-full blur-[60px] opacity-40 animate-pulse-slow"
                                    style={`background-color: ${event.colors.primary}`}
                                />
                                <img
                                    src={event.image}
                                    alt={event.name}
                                    class="w-48 h-48 md:w-56 md:h-56 object-contain relative z-10 drop-shadow-2xl animate-float-slow"
                                />
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .animate-float-slow {
        animation: float 8s ease-in-out infinite;
    }

    .animate-pulse-slow {
        animation: pulse 6s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-15px) rotate(2deg);
        }
    }
</style>
